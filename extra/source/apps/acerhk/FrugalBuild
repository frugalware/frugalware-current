pkgname=acerhk
pkgver=0.5.33
pkgrel=9
pkgdesc="Acer Hotkey driver for Linux"
url="http://www.informatik.hu-berlin.de/~tauber/acerhk/"
Finclude kernel-module
groups=('apps-extra')
archs=('i686')
up2date="lynx -dump $url |grep tgz$|sed 's/.*-\(.*\)\.t.*/\1/'"
source=($url/archives/$pkgname-$pkgver.tgz)
sha1sums=('cd58e07d0dc115e3c34c3d31c4732fb727ec8149')

build()
{
	# no Fcheckkernel, crosscompilation verified
	KERNELSRC=/usr/src/linux Fmake
	Ffilerel /lib/modules/`uname -r`/kernel/drivers/char/acerhk.ko
}
