# Compiling Time: ~1 min
# Maintainer: Szabó Péter László <pete@teamlupus.hu>

pkgname=bwidget
pkgver=1.7.0
pkgrel=1
pkgdesc="BWidget is a Tcl/Tk script-only set of megawidgets designed to provide the developer additional tools."
url="http://wiki.tcl.tk/2251"
depends=('tk')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=12883'|grep -o -m 1 'BWidget-[0-9\.]\+[0-9]'|sed 's|BWidget-||'"
source=(http://dl.sourceforge.net/sourceforge/tcllib/BWidget-$pkgver.tar.gz)
md5sums=('d28c6b781dd06f09e55bbb3fccb1ee3c')

build() {
    mkdir -p $startdir/pkg/usr/lib/tcl8.4/bwidget$pkgver
    cp -r $startdir/src/BWidget-$pkgver/* $startdir/pkg/usr/lib/tcl8.4/bwidget$pkgver
}

# vim: ft=sh
