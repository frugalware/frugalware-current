pkgname=perl-glib
pkgver=1.104
pkgrel=1
pkgdesc="Perl wrappers for the GLib utility and Object libraries"
depends=('perl' 'glib2')
makedepends=('perl-extutils-depends' 'perl-extutils-pkgconfig')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://search.cpan.org/search?query=Glib&mode=all'|grep \"Glib-\"|sed -n 's/.*lib-\([^ ]*\) -.*/\1/;1 p'"
source=(http://search.cpan.org/CPAN/authors/id/T/TS/TSCH/Glib-$pkgver.tar.gz)
sha1sums=('d6f4143f970eb2de6ef38dd24387adcd414ad5c5')

build() {
	cd $startdir/src/Glib-$pkgver
#	perl Makefile.PL
	Fconf
	
	make test
	make || return 1
		
	Fmakeinstall
#	make install DESTDIR=$startdir/pkg || return 1
#	mv $startdir/pkg/usr/lib/perl5/site_perl/?.?.? $startdir/pkg/usr/lib/perl5/site_perl/current
#	rm -rf $startdir/pkg/usr/lib/perl5/?.?.?
#	find $startdir/pkg/usr/lib/perl5/site_perl/current/ -name .packlist -exec rm {} \;
}

