# Last Modified: Mon, 22 Aug 2005 16:25:14 +0200
# Compiling Time: ~0.01 SBU
# Maintainer: CSÉCSY László <boobaa@ajrg.hu>

pkgname=perl-test-manifest
pkgver=1.14
pkgrel=1
pkgdesc="A perl module to interact with a t/test_manifest file"
url="http://search.cpan.org/dist/Test-Manifest/"
depends=('perl')
makedepends=('perl-libwww')
groups=('devel-extra')
archs=('i686')
up2date="pud -s 'http://search.cpan.org/dist/Test-Manifest/' -e 'Test-Manifest-([0-9.]*)\/'"
source=(http://search.cpan.org/CPAN/authors/id/B/BD/BDFOY/Test-Manifest-$pkgver.tar.gz)
sha1sums=('0449e03372c9f1b57d849b891872858888ac0ef4')

build() {
	cd $startdir/src/Test-Manifest-$pkgver
	perl Makefile.PL
	make || return 1
	make test
	make install DESTDIR=$startdir/pkg
	mv $startdir/pkg/usr/lib/perl5/site_perl/?.?.? \
		$startdir/pkg/usr/lib/perl5/site_perl/current
	rm -rf $startdir/pkg/usr/lib/perl5/?.?.?
	find $startdir/pkg/usr/lib/perl5/ -name perllocal.pod -exec rm {} \;
	find $startdir/pkg/usr/lib/perl5/ -name .packlist -exec rm {} \;
}
# vim: ft=sh
