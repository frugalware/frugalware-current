pkgname=poedit
pkgver=1.3.3
pkgrel=1
pkgdesc="cross-platform gettext catalogs (.po files) editor"
url="http://www.poedit.org/"
license="MIT"
up2date="lynx -dump http://www.poedit.org/download.php | grep 'Latest version' | sed 's/.*is \([0-9\.]\+\), .*/\1/'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
groups=('devel-extra')
archs=('i686' 'x86_64')
depends=('wxgtk>=2.4.1' 'gtkspell>=2.0' 'db' 'zip')
sha1sums=('23ff64e32bde5e6790f57b4c5d0f1ae04f5180f4')

build() {
	Fsed '-ldb"' '-ldb -lpthread"' admin/berkeley_db.m4
	./autogen.sh
	Fbuild
}

