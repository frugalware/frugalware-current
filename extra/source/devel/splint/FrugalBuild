pkgrel=1
pkgdesc="Check C programs for vulnerabilities and programming mistakes"
url="http://www.splint.org"
depends=('glibc')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump '$url/downloads/?M=D'|grep splint-[0-9\.]*tar\.gz$|sed -n -e 's/.*t-\(.*\)\.tar\.gz$/\1/' -e '1 p'"
source=($url/downloads/$pkgname-$pkgver.tar.gz)
sha1sums=('1192e8f18e8ef63fdc7a0b0fa26c35b46d59e4e6')

