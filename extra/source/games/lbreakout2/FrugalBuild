# Last Modified: Wed, 06 Jul 2005 02:42:34 +0200
# Compiling Time: ~2 minutes
# Maintainer: CSÉCSY László <boobaa@ajrg.hu>

pkgname=lbreakout2
pkgver=2.6beta
pkgrel=2
pkgdesc="A breakout-style arcade game."
url="http://lgames.sourceforge.net/index.php?project=LBreakout2"
depends=('sdl_mixer' 'sdl_net')
groups=('games-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://lgames.sourceforge.net/downloads.php | grep 'http.*lbreakout2.*\.tar\.gz' | sed -e 's/.*lbreakout2-\(.*\)\.tar\.gz.*/\1/'"
source=(http://dl.sourceforge.net/sourceforge/lgames/$pkgname-$pkgver.tar.gz)
# could not find official md5sum, made it myself
md5sums=('41d6e0be4654b1716b1b3f5b53abf014')

build()
{
	Fbuild --localstatedir=/var/games/$pkgname --enable-sdl-net
	Fmkdir /usr/share/doc/$pkgname-$pkgver/html
	Fmv /usr/doc/$pkgname/* /usr/share/doc/$pkgname-$pkgver/html/
}

# vim: ft=sh

# optimalization OK
