pkgname=xmoto
pkgver=0.1.16
pkgrel=2
pkgdesc="A challenging 2D motocross platform game."
url="http://xmoto.sourceforge.net/"
depends=('sdl' 'libogg' 'libvorbis' 'libjpeg' 'ode' 'sdl_mixer' 'libpng' 'freeglut' 'curl')
groups=('games-extra')
archs=('i686')
_F_sourceforge_ext="-src.tar.gz"
Finclude sourceforge
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=139914|grep -m1 '.src.tar.gz'|sed 's/.*o-\(.*\).src.*/\1/'"
sha1sums=('2616854c846a62cc6fc00702a0aec94d96f1ed7c')

build()
{
	Fbuild
	Fdesktop "$pkgname" x.png "Game;ArcadeGame;"
}

# optimization OK
