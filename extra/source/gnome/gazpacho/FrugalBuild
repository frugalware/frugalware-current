pkgname=gazpacho
pkgver=0.6.5
pkgrel=1
pkgdesc="Gazpacho is a fresh new GUI builder for the GTK+ toolkit designed to be ultra easy to use."
url="http://gazpacho.sicem.biz/"
makedepends=('python')
rodepends=('pygtk')
up2date="lynx -dump $url/downloads | grep 'Linux tarball' | cut -d ' ' -f 10"
source=(http://ftp.acc.umu.se/pub/GNOME/sources/$pkgname/`echo $pkgver | cut -d . -f 1,2`/$pkgname-$pkgver.tar.bz2)
sha1sums=('316f92335d4faf36b45ae00dd2ad3a843b454e18')
license="LGPL 2.1"
groups=('gnome-extra')
install=$pkgname.install
archs=('i686')

build()
{
	Fbuild
	Fmv /usr/share/doc/$pkgname /usr/share/doc/$pkgname-$pkgver
}

# optimalization OK - noarch

