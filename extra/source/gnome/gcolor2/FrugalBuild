# Last Modified: Tue, 11 Jul 2006 14:57:35 +0200
# Compiling Time: 0.06 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=gcolor2
pkgver=0.4
pkgrel=1
pkgdesc="gcolor2 is a simple color selector."
url="http://gcolor2.sourceforge.net/"
depends=('gtk+2' 'atk' 'libsm' 'freetype2' 'pango' 'cairo')
makedepends=('perl-xml')
options=('scriptlet')
groups=('gnome-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
sha1sums=('7cfa173825d486c54a5358b6f41e679d8a2cd5b6')

build()
{
	if [ "$CARCH" == "x86_64" ]; then
		export CFLAGS="$CFLAGS -fPIC"
	fi
	Fbuild
	Fdesktop "/usr/bin/$pkgname" "/usr/share/pixmaps/gcolor2/icon.png" "GNOME;KDE;GTK;Graphics;Viewer;"
}

# optimization OK
