pkgname=gnome-clipboard-daemon
pkgver=1.0
pkgrel=1
pkgdesc="A daemon that keeps the content of your X clipboard in memory."
url="http://members.chello.nl/~h.lai/gnome-clipboard-daemon/"
depends=('gtk+2')
groups=('gnome-extra')
archs=('i686')
up2date="lynx -dump http://members.chello.nl/~h.lai/gnome-clipboard-daemon/ | grep gnome-clipboard-daemon-[0-9\.]*.tar.bz2 | sed 's/.*-//;s/.tar.bz2//'"
source=(http://members.chello.nl/~h.lai/gnome-clipboard-daemon/$pkgname-$pkgver.tar.bz2)
sha1sums=('5df30c8c5252a2d21aa1abf2ef72f511a88d51b5')

build()
{
	Fsed "CFLAGS=" "CFLAGS=$CFLAGS " Makefile
	Fmake
	Fexerel usr/bin/gnome-clipboard-daemon
}

# optimalization ok
