pkgname=notification-daemon
pkgver=0.3.4
pkgrel=2
pkgdesc="Galago Desktop Presence Framework - Desktop Notification Daemon"
url="http://www.galago-project.org"
depends=('libnotify' 'libwnck' 'libsexy' 'gconf')
makedepends=('gnome-doc-utils' 'intltool')
groups=('gnome-extra')
archs=('i686')
source=($url/files/releases/source/$pkgname/$pkgname-$pkgver.tar.gz)
up2date="lynx -dump http://www.galago-project.org/files/releases/source/$pkgname | Flasttar"
options=('scriptlet')
sha1sums=('249205579d4efedb301c47ddd9716c67af707fcc')

build() {
	Fmake --disable-schemas-install
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}

# optimalization OK
