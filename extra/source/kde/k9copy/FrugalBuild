pkgname=k9copy
pkgver=1.0.3b
pkgrel=1
pkgdesc="K9Copy is a small utility which allows the copy of DVD under Linux."
url="http://k9copy.free.fr"
depends=('kdelibs' 'dvdauthor' 'mjpegtools' 'libdvdread' 'dvd+rw-tools' 'toolame' 'vamps')
groups=('kde-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/downloads.php |Flasttar"
source=($url/file.php?file=$pkgname-$pkgver.tar.gz)
sha1sums=('251d48837841a2941324c4c4e0def68d9ce00376')

build()
{
	Fpatchall
	Fmake
	make DESTDIR=$Fdestdir install
}

# optimalization OK
