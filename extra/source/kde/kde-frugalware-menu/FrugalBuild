pkgname=kde-frugalware-menu
pkgver=0.1
pkgrel=1
pkgdesc="KDE Menu for Frugalware Linux."
url="http://ftp.frugalware.org/pub/other/kde/kde-frugalware-menu/"
rodepends=('kdebase' 'xterm')
groups=('kde-extra')
archs=('i686' 'x86_64')
up2date="$pkgver"
source=($url/$pkgname-$pkgver.tar.gz)
sha1sums=('ecc3c399a903cfc6d5c0be7607cdc1a921c6e1f3')

build()
{
 	cp -Rad usr $Fdestdir
}
