# Last Modified: Sun, 23 Apr 2006 13:11:05 +0530
# Compiling Time: 1.30 SBU
# Maintainer: Priyank <priyankmg@gmail.com>

pkgname=lapack
pkgver=3.0
pkgrel=1
pkgdesc="Linear algebra PACKage"
url="http://www.netlib.org/lapack"
makedepends=('gcc-gfortran')
depends=()
groups=('lib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.netlib.org/lapack/ | grep -m1 Version | sed 's/.*n \(.*\).\[1].*/\1/'"
source=(http://netlib.org/$pkgname/$pkgname.tgz make.inc.diff)
sha1sums=('47d85508d87d60e32b613ef0c951d0be4bf10e72' '8f291f3a8893ded7c20377e1b58a98479d059a9e')

build() {
	Fcd LAPACK
	cp INSTALL/make.inc.LINUX make.inc
	patch <$Fsrcdir/make.inc.diff
	make lapacklib "FORTRAN = /usr/bin/gfortran" || return 1
	Fmkdir usr/lib
	Fcpr LAPACK/liblapack.a usr/lib
}

# optimization OK
