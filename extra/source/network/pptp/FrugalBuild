# Last Modified: Sat, 24 Sep 2005 23:27:41 +0200
# Compiling Time: 0.01 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=pptp
pkgver=1.7.0
pkgrel=1
pkgdesc="Linux client for PPTP"
url="http://pptpclient.sourceforge.net/"
depends=('ppp' 'perl')
groups=('network-extra')
backup=(etc/ppp/options.$pkgname)
archs=('i686')
up2date="lynx -dump $url |grep tar.gz|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/pptpclient/$pkgname-$pkgver.tar.gz options.$pkgname ${pkgname}_fe.pl $pkgname-command)
sha1sums=('fc96e8a765bf17eb02ce1584d8e9d024b68ab5a7' \
	  'c4a729264a3ddd9534725ef43c2a8204b7120f1f' \
	  'ec6102be37a7a2107f796bee974feadb7a3bd7a1' \
	  '63cddfa89fdc9fc813199674b59b1f11699b1e8a')

build()
{
	Fcd
	make OPTIMISE= DEBUG= CFLAGS="${CFLAGS}" || return 1
	Fexerel /usr/bin/pptp
	Ffile /etc/ppp/options.$pkgname
	Fexe /usr/sbin/${pkgname}_fe.pl
	Fexe /usr/sbin/$pkgname-command
	Fmkdir /usr/share/doc/$pkgname-$pkgver
	cp -av Documentation/* Reference/* \
		$Fdestdir/usr/share/doc/$pkgname-$pkgver
}

# vim: ft=sh

# optimalization OK
