pkgname=pure-ftpd
pkgver=1.0.20
pkgrel=4
pkgdesc="A free, secure, production-quality and standard-conformant FTP server"
url="http://www.pureftpd.org/"
depends=('libcap' 'perl' 'mysql')
backup=('etc/pure-ftpd.conf')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url |grep Version|sed 's/.*n \(.*\) r.*/\1/'"
source=(ftp://ftp.pureftpd.org/pub/$pkgname/releases/$pkgname-$pkgver.tar.bz2 \
	pure-config.pl pure-ftpd.conf rc.$pkgname)
sha1sums=('fbda2b666ee0ebcbe93d0bf477af0bc74c3448c9' \
	  '274bf6399afa4fbb6cb8593181c103e3ff7f1070' \
	  '7c6b89a0dcefdd96e2da943ec4b21a9d952d86eb' \
	  '6c475bc4764c1f6c4cc40fe8be88f789f64993a8')

build()
{
	Fbuild --with-mysql --with-largefile --with-ftpwho
	Frcd
	Ffile /etc/pure-ftpd.conf
	Fexe /usr/sbin/pure-config.pl
}

# vim: ft=sh

# optimalization OK
