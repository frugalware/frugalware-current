. /etc/rc.d/rc.functions

# chkconfig: 2345 50 50
# description: Start/stop sendmail MTA daemon and MSP queue runner

if [ "$1" = "stop" ]; then
	stop "$stopsendmail"
	killall sendmail
	ok $?
elif [ "$1" = "restart" ]; then
	"$0" stop
	sleep 1
	"$0" start
else # start
	start "$startsendmail"
	sendmail -L sm-mta -bd -q25m
	sendmail -L sm-msp-queue -Ac -q25m
	ok $?
fi
