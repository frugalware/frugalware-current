# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=rox-clock
pkgver=2.1.7
pkgrel=1
pkgdesc="This is a panel clock, with support for setting alarms."
url="http://www.kerofin.demon.co.uk/rox/clock.html"
license="GPL2"
up2date="lynx -dump $url|grep 'Clock [0-9\.]\+[0-9]'|tail -n 1|cut -d ' ' -f 8"
source=(http://www.kerofin.demon.co.uk/rox/Clock-$pkgver.tar.gz $pkgname)
sha1sums=('fd41d4839077c4909535c736953e8484b216b343' \
          '5deb420851aaf0f8d82b6f8e06649527f7aad8e6')
groups=('rox-extra')
archs=('i686')
depends=('python' 'rox-clib')

build()
{
	Fcd Clock
	./AppRun --compile || Fdie
	Fmkdir /usr/bin /usr/share/{Apps,doc}
	Fsed '/usr/apps' '/usr/share/Apps' libdir
	Fcpr Clock /usr/share/Apps/
	Frm /usr/share/Apps/Clock/{.cvsignore,src}
	Fln /usr/share/Apps/Clock/Help /usr/share/doc/$pkgname-$pkgver
	Fexe /usr/bin/$pkgname
}

# optimalization ok - noarch

