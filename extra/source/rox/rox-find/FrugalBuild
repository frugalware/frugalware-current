pkgname=rox-find
pkgver=007
pkgrel=1
pkgdesc="A Find in Files Utility for ROX."
url="http://www.hayber.us/rox/Find"
license="GPL2"
up2date="lynx -dump $url|grep -o '[0-9]\+\.tgz'|sed 's|.tgz||'"
source=(http://www.hayber.us/rox/find/Find-$pkgver.tgz)
sha1sums=('3d3b88844659f115873eccad2a9930b90fdcb715')
groups=('rox-extra')
archs=('i686')
rodepends=('rox-lib')

build()
{
	Fmkdir /usr/bin /usr/share/{Apps,doc}
	Fcpr Find /usr/share/Apps/
	Fmv /usr/share/Apps/Find/Help /usr/share/doc/$pkgname-$pkgver
	Fln /usr/share/doc/$pkgname-$pkgver /usr/share/Apps/Find/Help
	Frm /usr/share/Apps/Find/messages.pot
	Fln /usr/share/Apps/Find/AppRun /usr/bin/$pkgname
}

# optimalization OK - noarch

# vim: ft=sh
