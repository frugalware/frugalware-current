# Last Modified: Sun, 07 Aug 2005 17:02:56 +0200
# Compiling Time: ~0.02 SBU
# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=rox-lib
pkgver=2.0.2
pkgrel=1
pkgdesc="ROX-Lib contains shared code which can be used by other ROX applications."
url="http://rox.sourceforge.net/"
license="LGPL2.1"
up2date="lynx -dump $url/phpwiki/index.php/ROX-Lib | grep Current | grep -o [0-9].*"
source=(http://dl.sourceforge.net/sourceforge/rox/$pkgname-$pkgver.tgz)
sha1sums=('89cc98a09b294d9756ae6bca80a5287fd053e1df')
groups=('rox-extra')
archs=('i686')
depends=('pygtk')

build()
{
	Fcd
	ROX-Lib2/AppRun --compile || return 1
	Fmkdir /usr/lib/ /usr/share/doc
	cp -rav ROX-Lib2 $Fdestdir/usr/lib/ || return 1
	Fmv /usr/lib/ROX-Lib2/Help /usr/share/doc/$pkgname-$pkgver
	Fln /usr/share/doc/$pkgname-$pkgver /usr/lib/ROX-Lib2/Help
	Frm /usr/lib/ROX-Lib2/tests
}

# optimalization ok - noarch

# vim: ft=sh
