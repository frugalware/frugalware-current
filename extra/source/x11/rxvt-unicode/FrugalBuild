# Last Modified: Wed, 26 Oct 2005 08:12:38 +0200
# Compiling Time: ~0.18 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=rxvt-unicode
pkgver=5.8
pkgrel=1
pkgdesc="rxvt-unicode is a clone of the well known terminal emulator rxvt"
url="http://software.schmorp.de/"
makedepends=('autoconf')
depends=('x')
groups=('x11-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://dist.schmorp.de/rxvt-unicode/ |grep rxvt-unicode.*.tar.bz2 |sed -n -e 's/.*e-\([0-9\.]\+\)\.t.*/\1/;1 p'"
source=(http://dist.schmorp.de/rxvt-unicode/$pkgname-$pkgver.tar.bz2)
sha1sums=('ed7e938dff9d2913253a43ca607762573bedde99')

build() {
	Fcd
	./genac
	Fconf --enable-xft \
		--enable-font-styles \
		--enable-xim \
		--enable-utmp \
		--enable-wtmp \
		--enable-transparency \
		--enable-fading \
		--enable-tinting \
		--enable-xrvt-scroll \
		--enable-next-scroll \
		--enable-xterm-scroll \
		--enable-plain-scroll \
		--enable-half-shadow \
		--enable-frills \
		--enable-keepscrolling \
		--enable-mousewheel \
		--enable-slipwheeling \
		--enable-smart-resize \
		--enable-pointer-blank || return 1
	Fsed "CFLAGS = -g -O3" "CFLAGS = $CFLAGS" Makefile
	Fsed "CPPFLAGS = " "CPPFLAGS = $CFLAGS" Makefile
	Fsed "CFLAGS = -g -O3" "CFLAGS = $CFLAGS" src/Makefile
        Fsed "CPPFLAGS = " "CPPFLAGS = $CFLAGS" src/Makefile
	Fsed "CFLAGS = -g -O3" "CFLAGS = $CFLAGS" doc/Makefile
        Fsed "CPPFLAGS = " "CPPFLAGS = $CFLAGS" doc/Makefile
	make || return 1
	Fmakeinstall
}

# optimalization OK

# vim: ft=sh
