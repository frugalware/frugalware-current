# Last Modified: Sat, 11 Feb 2006 15:56:18 +0100
# Compiling Time: ~0.02 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=bittorrent
pkgver=4.4.0
pkgrel=1
pkgdesc="A tool for distributing files."
license="BitTorrent OpenSource License"
url="http://www.bittorrent.com/"
depends=('pygtk' 'pycrypto')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url |grep Latest|sed -n 's/.*(\(.*\)).*/\1/;$ p'"
source=($url/dl/BitTorrent-$pkgver.tar.gz)
sha1sums=('8ca3e52c8049ff29a6785da410d6aa80c6726882')

build()
{
	Fcd BitTorrent-$pkgver
	Fbuild
	Fmv /usr/share/doc/BitTorrent-$pkgver /usr/share/doc/$pkgname-$pkgver
}

# optimalization OK - noarch

# vim: ft=sh
