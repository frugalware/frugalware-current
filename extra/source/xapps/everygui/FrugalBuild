pkgname=everygui
pkgver=0.99.b
pkgrel=1
pkgdesc="EveryGui is an attempt at being a GTK+ Graphical User Interface for 'Everything'"
url="http://everygui.sourceforge.net/"
license="GPL2/LGPL2.1"
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=156541'|grep -o -m 1 '[0-9a-z\.]\+\.tar\.gz'|sed 's/\.tar\.gz//'"
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('e67094bb6993059aba5e5de01c8b43f20742e787')
groups=('xapps-extra')
archs=('i686')
depends=('pygtk')

build()
{
	Fcd $pkgname
	Fsed "/usr/share/everygui/egconfig" "$Fdestdir&" setup.py
	Fmakeinstall
}

