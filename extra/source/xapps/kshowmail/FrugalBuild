pkgname=kshowmail
pkgver=3.1.0
pkgrel=2
pkgdesc="KShowmail is a POP3 mail checker for the KDE."
url="http://kshowmail.sourceforge.net/"
makedepends=('kdepim')
depends=('kdepim' 'qt' 'kdelibs')
groups=('kde-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://sourceforge.net/project/showfiles.php?group_id=45904 |grep kshowmail-3.*t |sed -n 's/.*l-\(.*\)\.t.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/kshowmail/$pkgname-$pkgver.tar.gz \
	showrecordelem.cpp.patch1)
md5sums=('4607bd38538e92b0d5c6a0b187d0fb7e' \
	'688504e0df03d79d33c8356e3d25935e')

build() {
	Fpatch showrecordelem.cpp.patch1
	Fconf
	make clean || Fdie
	make || Fdie
	Fmakeinstall
}

# optimalization OK

