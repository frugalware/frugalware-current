pkgname=maxima
pkgver=5.9.3
pkgrel=1
pkgdesc="A sophisticated computer algebra system"
url="http://maxima.sourceforge.net/"
license="GPL"
depends=('readline' 'bash' 'cmucl' 'glibc')
groups=('xapps-extra')
archs=('i686' '!x86_64')
up2date="lynx -dump http://prdownloads.sourceforge.net/maxima | grep 'maxima-[0-9\.]\+.tar.gz$'| sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
source=(http://heanet.dl.sourceforge.net/sourceforge/maxima/$pkgname-$pkgver.tar.gz \
	maxima.desktop maxima.png README.Frugalware)
sha1sums=('b602dc1145c0521939b9a3b69d8e82a9606e689e' \
          '07b089e468510e7061f64d1a0ac29faea3a58f76' \
          'c1ec0d97d8479c7ad0f4d13c640f5fef402eff35' \
          '204ceb9a3a3ba7ff2418566730326692ce4a0385')
build()
{
	Fbuild
	Ffile $pkgname.desktop usr/share/applications/$pkgname.desktop
	Fdoc README.Frugalware
	Ficon maxima.png
}

