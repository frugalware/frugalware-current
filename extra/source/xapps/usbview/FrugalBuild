# Last modified: Wed, 19 Oct 2005 22:21:18 +0200
# Compiling time: ~1 minutes
# Maintainer: Janny <janny@vnet.hu>
# Contributor: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=usbview
pkgver=1.0
pkgrel=3
pkgdesc="USB topology and device viewer"
url="http://www.kroah.com/linux-usb/"
depends=('gtk+2')
archs=('i686' 'x86_64')
groups=('xapps-extra')
up2date="lynx -dump $url/|grep $pkgname-[0-9\.]*\.tar.gz$|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=($url/$pkgname-$pkgver.tar.gz usbview-1.0-gtk2.patch)
md5sums=('2ac1bdae03a858b965e895b211a75ad7' '6724b9666ca27172ba3e39f521c0fd55')
license="GPL"

build () {
	Fcd
	Fpatchall || return 1
	Fautoconfize || return 1
	Fmake || return 1
	Fmakeinstall || return 1
	Ffilerel /usr/man/man8/usbview.8 || return 1
}

# vim: ft=sh

# optimalization OK
