# Compiling Time: 0.34 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=xdvik
pkgver=22.84.10
pkgrel=1
pkgdesc="Xdvik is a program for displaying DVI files."
url="http://xdvi.sourceforge.net/"
depends=('glibc' 'libxmu' 'lesstif' 'libxpm' 't1lib')
makedepends=('tetex')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump http://xdvi.sourceforge.net/releases.html|grep -m1 ^[0-9]|sed 's/://'"
source=(http://mesh.dl.sourceforge.net/sourceforge/xdvi/$pkgname-$pkgver.tar.gz xdvik.desktop xdvik.png)
sha1sums=('971924d849ba68f9d98599926d5cb0e03707dbd1' \
          '71f79eb345314cb6f3e3b0d2632d9358c5ce8496' \
          '820ccc3807167abb206719b7726e7a9f2ee031fd')


build()
{
	Fbuild --with-system-t1lib
	Fmv usr/bin/*-linux-gnu/* usr/bin/
	Frm usr/bin/*-linux-gnu
	Fmv usr/share/texmf/release-tetex-src.txt \
	    usr/share/texmf/$pkgname-release-tetex-src.txt
	Ffilerel ../xdvik.desktop /usr/share/applications/xdvik.desktop
	Ffilerel ../xdvik.png /usr/share/icons/hicolor/48x48/apps/xdvik.png
}

# optimalization OK
