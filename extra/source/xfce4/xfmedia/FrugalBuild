pkgname=xfmedia
pkgver=0.9.1
pkgrel=2
pkgdesc="Xfmedia is a simple, easy-to-use media player based on the xine engine."
url="http://spuriousinterrupt.org/projects/xfmedia/"
license="GPL2"
up2date="lynx -dump $url|grep -i 'current release'|grep -o '[0-9][0-9\.]\+'|sed 's|.$||'"
source=(http://spuriousinterrupt.org/files/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('92eff43fb180b07039d243d1cc720aed0e4163ad')
groups=('xfce4-extra')
archs=('i686')
depends=('cairo' 'pango' 'atk' 'xine-lib' 'libexo')

build()
{
	Fbuild --disable-dbus
}

