pkgname=sdl_net
realname=SDL_net
pkgver=1.2.5
pkgrel=2
pkgdesc="A small sample cross-platform networking library"
url="http://www.libsdl.org/projects/SDL_net/"
depends=('sdl')
groups=('xlib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://www.libsdl.org/projects/$realname/release/?sort=modified'|grep $realname-[0-9\.]*.tar.gz|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://www.libsdl.org/projects/$realname/release/$realname-$pkgver.tar.gz)
sha1sums=('60b59682fa010d20b91643005229752174f07ae1')

build() {
	Fcd $realname-$pkgver
	Fbuild
}

