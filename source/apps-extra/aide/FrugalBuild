# Compiling Time: 0.04 SBU
# Maintainer: jercel <jercel16@gmail.com>
# Contributor: Tim Groeneveld <tim@timg.ws>

pkgname=aide
pkgver=0.16.1
pkgrel=1
pkgdesc="AIDE (Advanced Intrusion Detection Environment) is a replacement for Tripwire"
url="https://aide.github.io"
up2date="Flasttar $url"
source=(https://github.com/$pkgname/$pkgname/releases/download/v$pkgver/$pkgname-$pkgver.tar.gz)
depends=('pcre' 'mhash')
groups=('apps-extra')
archs=('x86_64')
backup=('etc/aide/aide.conf')
options=('force')
sha1sums=('b2ef8cbdb8b0e759ddcf46fc1fd52e6874224cc5')

build()
{
        Fbuild --with-mhash
        Fmkdir /etc/aide
        Fcprel doc/aide.conf /etc/aide
}

# optimization OK
