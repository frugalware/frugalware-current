# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=catcodec
pkgver=1.0.5
pkgextraver="-source"
pkgrel=1
pkgdesc="A utility for encoding and decoding the catalog files used by openttd."
url="http://www.openttd.org/en"
depends=('libstdc++')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url/download-$pkgname"
source=(http://binaries.openttd.org/extra/$pkgname/$pkgver/$pkgname-$pkgver$pkgextraver.tar.xz)
sha1sums=('43edee779a5d3976ee0c578cee6a27f0a6a8f70c')
_F_cd_path="$pkgname-$pkgver"

build() {
	Fmake
	Fexerel /usr/bin/$pkgname
	Fmanrel docs/$pkgname.1
	Fdocrel docs/readme.txt
}

# optimization OK
