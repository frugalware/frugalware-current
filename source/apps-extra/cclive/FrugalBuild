pkgname=cclive
pkgver=0.9.3
pkgrel=8
pkgdesc="A command line video download tool for Youtube and similar websites."
depends=('libquvi>=0.9.4-6' 'glibmm>=2.50.0' 'libboost>=1.72.0')
makedepends=('boost>=1.72.0')
groups=('apps-extra')
archs=('x86_64')
_F_sourceforge_ext=".tar.xz"
Finclude sourceforge
source+=(iostream.patch boost.m4 boost-1.70.patch)
sha1sums=('bdcc87b3f03ed24dfe39a06159b565df7fdce875' \
          'e98a351f41617dd7c7097b1b4c9b81398ec38395' \
          'aacdd315dbe18897fc1e3f70fe04ac180a636741' \
          '0e00774a37796420a84510e946227c26650e55ea')

build() {
	Fcd
	Fexec cp ../boost.m4 m4/ || Fdie
	CXXFLAGS+=' -std=c++11'
	Fexec autoconf || Fdie
	Fbuild
}

# optimization OK
