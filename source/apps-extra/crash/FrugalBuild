pkgrel=1
pkgdesc="Linux kernel crashdump analysis tool"
license=('GPL')
depends=('zlib' 'ncurses>=6.0-3')
makedepends=('flex' 'bison')
groups=('apps-extra')
archs=('x86_64')
source=(http://people.redhat.com/~anderson/$pkgname-$pkgver.tar.gz)
