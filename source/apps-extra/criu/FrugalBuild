pkgdesc="Checkpoint/Restore in Userspace tool"
url="http://criu.org"
license=("GPL2")
groups=('apps-extra')
archs=("x86_64")
depends=("libpthread-stubs" "protobuf-c" "libnl" "libnet" 'python3>=3.11')
makedepends=("xmlto" "asciidoc" 'docbook-xml' 'docbook-xsl' 'groff')
sha1sums=('373afa0afee46172a9a3002c8dc3c56a9e964aad' \
          '3a65b5b138dae5ead3505c07f50ebf7a3f9bcbde')
_F_make_opts="PREFIX=/usr LIBEXECDIR=/usr/lib/$pkgname"
_F_systemd_units=criu.service=
_F_github_author="checkpoint-restore"
_F_github_tag_v=y
Finclude systemd github
source+=(fix-build.patch)
options=('scriptlet' 'genscriptlet')

build() {
	Fcd
	unset LDFLAGS
	unset CXXFLAGS
	unset CFLAGS
	Fsed 'lib64' 'lib' Makefile.install
	Fbuild
}


