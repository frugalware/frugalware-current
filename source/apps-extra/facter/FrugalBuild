# Compiling Time: 1.54 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=facter
pkgver=3.13.2
pkgrel=2
pkgdesc="Collect and display system facts"
archs=('x86_64')
groups=('apps-extra')
url="http://puppetlabs.com/facter"
license=('APACHE')
depends=('ruby>=2.3.1-3' 'yaml-cpp>=0.5.3-4' 'libboost>=1.70.0' 'curl>=7.50.3-2' 'openssl>=1.1.1')
makedepends=('boost>=1.70.0' 'leatherman>=0.9.1-2' 'cpp-hocon' 'libboost-static>=1.70.0')
source=(http://downloads.puppetlabs.com/$pkgname/$pkgname-$pkgver.tar.gz)
up2date="Flasttar http://downloads.puppetlabs.com/$pkgname"
sha1sums=('72b531ea7ed648ccdacbcaddb7b143dcea27a276')
_F_cmake_confopts="	-DBoost_NO_BOOST_CMAKE=ON \
			-DBoost_USE_STATIC_LIBS=OFF"
Finclude cmake openjava

build() {
	Fcd
	local i
	for i in $(grep -rl rb_data_object_alloc lib/src/ruby)
	do
		Fsed rb_data_object_alloc rb_data_object_wrap $i
	done

	CMake_build
}

# optimization OK
