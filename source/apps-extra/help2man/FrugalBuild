pkgname=help2man
pkgver=1.47.9
pkgrel=1
pkgdesc="A script to create simple man pages from the --help and --version output of programs."
url="http://www.gnu.org/software/help2man/"
depends=('perl-gettext>=1.07-4')
groups=('apps-extra')
archs=('x86_64')
Fup2gnugz
source=(ftp://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.xz \
	README.Frugalware)
sha1sums=('1891e6f9483a6209af4d33256c656ea4b03f885b' \
          '6e20b0bcda1f87ddc8522178ce0187543419f39f')

build()
{
	Fcd
	# fix broken symlink
	Fexec rm ChangeLog
	Fexec cat debian/changelog > ChangeLog

	Fmkdir /usr/lib
	Fbuild
	Fdoc README.Frugalware
}

# optimization OK
