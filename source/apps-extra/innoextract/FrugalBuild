# Compiling Time: 0.06 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=innoextract
pkgver=1.7
pkgrel=3
pkgdesc="A tool to unpack installers created by Inno Setup"
url="http://constexpr.org/innoextract/"
depends=('xz' 'libboost>=1.70.0')
makedepends+=('boost>=1.71.0')
groups=('apps-extra')
archs=('x86_64')
up2date="lynx -dump http://constexpr.org/innoextract/#download | grep 'tar.gz' | Flasttar"
source=($url/files/$pkgname-$pkgver.tar.gz)
_F_cmake_confopts="	-DBoost_NO_BOOST_CMAKE=ON \
			-DBoost_USE_STATIC_LIBS=OFF"
Finclude cmake
sha1sums=('e29c478de7a7b221764abf13376d68a8e33bcbe3')

# optimization OK
