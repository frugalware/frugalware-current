# Compiling Time: 0.04 SBU
# Maintainer: Miklos Vajna <vmiklos@frugalware.org>

pkgname=kexec-tools
pkgver=2.0.1
pkgrel=2
pkgdesc="Loads a kernel in memory and reboot into it using the kexec system call."
url="http://www.kernel.org/pub/linux/kernel/people/horms/kexec-tools/"
depends=('zlib')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
source=($url/kexec-tools-$pkgver.tar.gz  README.Frugalware)
sha1sums=('cf7c1aab1d128522d6e078b19167e4ea4eefb738' \
          'a3e91fa42a01b28e637e0a56f23b5aa23cd5b36d')

build()
{
	unset LDFLAGS
	Fbuild
	Ffilerel kexec/kexec.8 /usr/share/man/man8/kexec.8
	Fdocrel doc/*
	Fdoc README.Frugalware
}

# optimization OK
