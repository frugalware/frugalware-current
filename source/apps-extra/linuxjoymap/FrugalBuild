pkgname=linuxjoymap
pkgver=0.4.2
pkgrel=1
pkgdesc="userspace device driver that allows joystick events to be remapped."
groups=('apps-extra')
archs=('x86_64')
depends=('glibc')
_F_github_author="timemaster5"
_F_github_tag="y"
Finclude github
sha1sums=('76787dd360f4d8c5134bb031904be5fe8c7f1c88')

build() {
	Fcd
	Fmake
	Fmanrel man/loadmap.1
	Fexerel usr/sbin/loadmap
	Fexerel usr/sbin/reserve_js
}


# optimization OK
