# Compiling Time: 14.20 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=mongodb
pkgver=4.2.3
pkgrel=1
pkgdesc="A scalable, high-performance, open source NoSQL database"
url="https://www.mongodb.org"
Fpkgversep="-src-r"
up2date="Flasttar $url/download-center/community"
groups=('apps-extra')
archs=('x86_64')
depends=('typing' 'yaml-cpp' 'pyyaml3' 'snappy' 'libboost>=1.72.0'  'libpcap' \
	'libstemmer' 'python3-cheetah3' 'curl' 'openssl>=1.1.1')
makedepends+=('python3-scons' 'boost>=1.72.0' 'python3-setuptools' \
	'python3-psutil')
source=(http://downloads.mongodb.org/src/mongodb-src-r$pkgver.tar.gz)
sha1sums=('89c9f46a350d3149c2d9b486618f6c8fd62529e2')
options+=('static')

## TODO: - some default conf ?
##       - init service some sort ?
##       - fix C/CXX system flags

build()
{
		### F*** this scons
		Fcd $pkgname-src-r$pkgver
		Fpatchall
		Fsed '-std=c++11' '-std=gnu++11' SConstruct

		export SCONSFLAGS="$MAKEFLAGS"
		OPT="	--disable-warnings-as-errors \
			--ssl \
			--use-system-zlib \
			--use-system-pcre \
			--use-system-yaml \
			--use-system-snappy \
			--use-system-stemmer \
			--use-system-boost"

		Fexec scons core tools $OPT || Fdie
		Fexec scons --prefix $Fdestdir/usr $OPT --nostrip install || Fdie
}

# optimization OK
