# Compiling Time: 26.46 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=puppet
pkgver=4.5.3
pkgrel=1
pkgdesc="Server automation framework and application"
archs=('x86_64' 'i686')
url="http://puppetlabs.com/puppet/puppet-open-source"
license=('Apache')
groups=('apps-extra')
depends=('facter' 'ruby-hiera')
backup=('etc/puppetlabs/puppet/auth.conf'
        'etc/puppetlabs/puppet/puppet.conf')
source=(https://downloads.puppetlabs.com/$pkgname/$pkgname-$pkgver.tar.gz)
up2date="Flastarchive https://downloads.puppetlabs.com/$pkgname .tar.gz"
sha1sums=('5e46fb2e4ab8379d68a551cfcb08564a8d3a6bc2')

build() {

	Fsed '/opt/puppetlabs/puppet' '/usr' ext/systemd/puppet.service

	Fexec ruby install.rb --destdir="$Fdestdir" --sitelibdir="$( ruby -e \
		'puts RbConfig::CONFIG["vendorlibdir"]' )" || Fdie

	Fmkdir usr/lib/tmpfiles.d
	Fmkdir var/lib/puppet
	Fexec echo "d /run/puppetlabs 0755 $pkgname $pkgname -" > \
		"$Fdestdir/usr/lib/tmpfiles.d/$pkgname.conf"

	# systemd
	Finstallrel 644 ext/systemd/$pkgname.service \
		lib/systemd/system/$pkgname.service

	# vim and emacs
	Finstallrel 644 ext/vim/ftdetect/$pkgname.vim \
		usr/share/vim/vimfiles/ftdetect/$pkgname.vim

	Finstallrel 644 ext/vim/syntax/$pkgname.vim \
		usr/share/vim/vimfiles/syntax/$pkgname.vim

	Finstallrel 644 ext/emacs/$pkgname-mode.el \
		usr/share/emacs/site-lisp/$pkgname-mode.el

	Finstallrel 644 ext/emacs/$pkgname-mode-init.el \
		usr/share/emacs/site-lisp/site-start.d/$pkgname-mode-init.el

	# Match permissions that puppet sets when running
  	Fdirschmod var/lib/puppet 775
	Fdirschmod var/log/puppetlabs/puppet 750

	Frm var/run
}
