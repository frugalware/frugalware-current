pkgname=sshcode
pkgver=0.10.0
pkgrel=1
pkgdesc='A CLI to automatically install and run code-server over SSH.'
archs=('x86_64')
groups=('apps-extra')
makedepends=('go')
depends=('openssh' 'rsync')
_F_github_author=cdr
_F_github_tag_v=y
Finclude github
sha1sums=('af441820f3aa87bf8c08c41125e4fdc2eba6c7cc')

build() {
	Fcd
	Fexec go build || Fdie
	Fexerel usr/bin/$pkgname
}


# optimization OK
