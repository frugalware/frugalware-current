# Compiling Time: 2.46 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=sysdig
pkgver=0.26.1
pkgrel=15
pkgdesc="Open source system-level exploration and troubleshooting tool"
archs=('x86_64')
groups=('apps-extra')
url="https://www.sysdig.com/"
depends=('jsoncpp' 'luajit2' 'curl' 'jq' 'libb64' 'intel-tbb' 'protobuf' 'grpc')
_F_github_author="draios"
_F_github_grepv="agent\|falco"
_F_github_tag=y
Finclude github cmake kernel-module
source+=("bashcomp-location.patch" \
	polymorphic-type.patch \
	sysmacros.patch \
	linker-flags.patch)
_F_cmake_confopts+=" \
	-DCMAKE_BUILD_TYPE=Release \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DSYSDIG_VERSION=$pkgver \
	-DUSE_BUNDLED_DEPS=OFF \
	-DBUILD_DRIVER=OFF \
	-DENABLE_DKMS=OFF \
	-DBUILD_LIBSCAP_EXAMPLES=OFF \
	-DPROBE_NAME=sysdig-probe"
sha1sums=('5f12016a04b32ebdafdb6e712ce9445cb8ad2133' \
          'e14fe66d3a44ceb191a6932e379b05352ecdfe8e' \
          '336f020a42eaa0cb4a7681f59303a823ab311112' \
          '73a0bbfca636653db614517b68cc58a6f46a6078' \
          'e70875b294da35e49d3f50ba1db5cb56c1f5f598')

build(){

	CXXFLAGS+=" -Wno-deprecated-declarations"
	## that one is weird..
	CMake_build

	## without that -> sysdig_probe: can't allocate device class
	# is because the Makefile there is broken .. we need move the configured one over first
	Fexec mv driver/Makefile.dkms $Fsrcdir/$_F_cd_path/driver/Makefile || Fdie
	Fexec cd $Fsrcdir/$_F_cd_path/driver || Fdie
	Fexec make V=1 KERNELDIR=${_F_kernelmod_dir}/build || Fdie
	Fexec make V=1 KERNELDIR=${_F_kernelmod_dir}/build INSTALL_MOD_DIR=kernel/misc INSTALL_MOD_PATH=${Fdestdir} install || Fdie

	## now we have some weird stuff
	# drop , not working on FW , nor it is needed
	Frm usr/bin/sysdig-probe-loader
	## broken, we do not use anyway but bpf depends on driver/* files which are not
	## installed when you set DKMS=OFF -.-
	Frm usr/src
	## all is dropped in /bin/ but all is *root* only
	## mv to /sbin/ for now .. Another option would be
	## udev rule with special group for these
	Fmkdir usr/sbin
	Fmv usr/bin/* usr/sbin/
	Frm usr/bin

	Fbuild_kernelmod_scriptlet

}

# optimization OK
