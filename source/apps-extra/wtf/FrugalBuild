# Compiling Time: 0.01 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=wtf
pkgver=20051104
pkgrel=1
pkgdesc="wtf is an ancronym dictionary"
url="http://www.mu.org/~mux/wtf/"
depends=('bash')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.mu.org/~mux/wtf/ | grep tar.gz$ | Flasttar"
source=(http://www.mu.org/~mux/wtf/$pkgname-$pkgver.tar.gz acronyms acronyms.comp)
sha1sums=('15ebea8a8ef90fd45f5fe8ea6f076db795ec406c' \
	'e14a36bd7b368498325b261abff7a9618b9cf815' \
	'b4af863c936fc6480d33a2cfeec5159ddf077ada')

build() {
	Fcd
	# Copy the man pages
	Fmkdir usr/man/man6
	Ffilerel wtf.6 usr/man/man6

	# Copy the binary
	Fmkdir usr/bin
	Fexerel wtf usr/bin
	
	# Copy acronym files
	cd ..
	Fmkdir usr/share/misc/
	Ffilerel acronyms acronyms.comp usr/share/misc/
}

# optimalization OK
