pkgname=enchant
pkgver=2.2.3
pkgrel=1
pkgdesc="Generic spell checking library"
url="https://abiword.github.io/enchant/"
depends=('glib2>=2.50.0' 'libstdc++>=7.3.0-7' 'hunspell' 'aspell' 'hspell')
groups=('apps')
license=('LGPL')
archs=("x86_64")
#up2date="lynx -dump http://www.abisource.com/projects/enchant/|grep tar.gz$|sed 's/.*-\(.*\)\.t.*/\1/'"
_F_github_author="AbiWord"
_F_github_tag_v="y"
Finclude github
source+=( https://github.com/AbiWord/enchant/releases/download/v$pkgver/$pkgname-$pkgver.tar.gz enchant.ordering)
sha1sums=('7ac67b90b95004471fbc7992263bdc70613ad591' \
          '181d5563d282af0f30c7ab68c5d432271b6fd11e' \
          '9e8694a69705a12ff2e94e60b8b4031a2c9a9f95')

Fconfopts+="	--disable-ispell \
                --with-myspell-dir=/usr/share/myspell \
                --with-aspell-prefix=/usr \
                --with-hspell-prefix=/usr"

build() {
	Fbuild
	Ffile /usr/share/enchant/enchant.ordering
}

# optimization OK
