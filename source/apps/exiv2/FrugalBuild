pkgname=exiv2
pkgver=0.27.7
pkgrel=1
pkgdesc="Exiv2 is a C++ library and a command line utility to access image metadata."
url="http://www.exiv2.org"
depends=('libstdc++>=11.2' 'zlib>=1.2.12' 'expat>=2.1.0-6' \
	'curl>=7.50.3-2' 'libssh>=0.7.4-2')
makedepends=('gcc>=11.2')
groups=('apps')
archs=("x86_64")
_F_github_tag_v=y
_F_github_grepv=nightly
Finclude github
sha1sums=('f497f58c6cdba2448f67edbce2eda270f74b9979')
_F_cmake_confopts="	-DEXIV2_ENABLE_WEBREADY=TRUE \
			-DEXIV2_BUILD_PO=TRUE \
			-DEXIV2_ENABLE_VIDEO=TRUE"
Finclude cmake
options+=('static')

subpkgs+=("${pkgname}-static")
subdescs+=("Static files for $pkgname")
subdepends+=('')
subgroups+=('devel-extra')
subarchs+=('x86_64')
suboptions+=('')

build() {

    CMake_build
    Fsplit $pkgname-static usr/lib/*.a
}


# optimization OK
