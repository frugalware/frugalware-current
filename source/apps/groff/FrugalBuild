pkgname=groff
pkgver=1.19.1
pkgrel=1
pkgdesc="GNU troff text-formatting system"
url="http://www.gnu.org/software/groff/groff.html"
depends=('perl' 'gcc')
up2date=`lynx -dump http://www.gnu.org/software/groff/groff.html|grep -i 'news v'|sed -n -e 's/.* \(.*$\)/\1/' -e '1 p'`
source=(ftp://ftp.gnu.org/gnu/groff/groff-$pkgver.tar.gz)
md5sums=('57d155378640c12a80642664dfdfc892')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	mkdir -p $startdir/pkg/usr

	make || return 1

	make prefix=$startdir/pkg/usr install
	cd $startdir/pkg/usr/bin # for xman
	ln -s eqn geqn && ln -s tbl gtbl && ln -s soelim zsoelim
	rm -rf $startdir/pkg/usr/lib
}
