pkgname=hunspell
pkgver=1.7.1
pkgrel=1
pkgdesc="An interactive Hungarian spell checker"
depends=('libstdc++>=11.2' 'readline>=8.0' 'ncurses>=6.1-2')
makedepends=('hd2u')
groups=('apps')
archs=("x86_64")
_F_github_author=hunspell
_F_github_tag_v=1
Finclude github
sha1sums=('5d607d2e018a4fafadd000e07a89c13c94b6feb9')
Fconfopts="	--with-ui \
		--with-readline"
_Fbuild_autoreconf=yes

build() {
	Fbuild

	Fmv usr/bin/analyze usr/bin/analyze-hunspell
}

# optimization OK
