# Compiling Time: 0.03 SBU
# Maintainer: Marius Cirsta <mcirsta@frugalware.org>
# Contributor: Zsolt Szalai <xbit@frugalware.org>

pkgname=lmsensors
_F_archive_name=lm_sensors
pkgver=3.4.0
pkgrel=3
pkgdesc="Linux System Hardware Monitor"
url="http://www.lm-sensors.org/"
groups=('apps')
archs=('i686' 'x86_64')
depends=('glibc>=2.24-4')
makedepends=('kernel-source')
options=('force')
#up2date="Flasttar http://www.lm-sensors.org/wiki/Download"
## site is down use tricky up2date.. nothing is lost in internet :D
up2date="Flasttar https://web.archive.org/web/20150628233244/http://www.lm-sensors.org/wiki/Download"
## use sources from BLFS
#source=(http://dl.lm-sensors.org/lm-sensors/releases/$_F_archive_name-$pkgver.tar.bz2 README.Frugalware)
source=(http://ftp.osuosl.org/pub/blfs/conglomeration/lmsensors/$_F_archive_name-$pkgver.tar.bz2 README.Frugalware)
backup=(etc/{sensors3.conf,sysconfig/lm_sensors})

build() {
	Fcd
	# Compatibility with kernel 3.x
	Fsed '\\.(\\d+)(' '(' prog/detect/sensors-detect
	make user || Fdie
	make DESTDIR=$Fdestdir PREFIX=/usr MANDIR=/usr/share/man user_install || Fdie
	Frm usr/include/linux/
	Fdoc README.Frugalware
	Ffilerel prog/init/lm_sensors.service /lib/systemd/system/$pkgname.service
	#Fgenscriptlet
}

sha1sums=('3e245b61a69756ea94f9c8a7c7614ec543970b8c' \
          'ee447373129f3ddff3a4f2cf18de54004e1876c8')
# optimization OK
