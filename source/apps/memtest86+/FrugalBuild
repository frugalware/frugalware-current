# Compiling Time: 0.04 SBU
# Maintainer: dex77 <dex77@frugalware.org>

pkgname=memtest86+
pkgver=6.01
pkgrel=1
pkgdesc="An advanced memory diagnostic tool"
url="http://www.memtest.org/"
depends=()
groups=('apps')
archs=("x86_64")
_F_github_name="memtest86plus"
_F_github_tag_v=y
Finclude github
source+=(35_memtest86+ \
	60_memtest86+-efi )
sha1sums=('27b4981ee03df306fa73b7226f33ef67980322f9' \
          '2aa2deeb7d7dc56f389aa1487b7a57b0d44ce559' \
          'd21499be5857abf155062a0313411342d87c16ff')
_F_cd_path="memtest86plus-$pkgver/build64"

build()
{
	Fcd
	Fpatchall
	Fmake

	Ffilerel boot/memtest.bin
	Ffilerel boot/memtest.efi
	Fexe /etc/grub.d/35_memtest86+
	Fexe /etc/grub.d/60_memtest86+-efi
}

# optimization OK
