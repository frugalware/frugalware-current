# Compiling Time: 0.23 SBU
# Maintainer: DNAku <DNAku@frugalware.org>

pkgname=recode
pkgver=3.6
pkgrel=1
pkgdesc="Converts files between various character sets and usages"
url="http://www.gnu.org/software/recode/recode.html"
groups=('apps')
archs=('i686' 'x86_64')
up2date="lynx -dump ftp://ftp.gnu.org/pub/gnu/recode |grep tar|sed -n 's/.*x-\([^-]*\)-.*/\1/;$ p'|sed 's/.*code-//g'|sed 's/.tar.*//g'"
source=(ftp://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('2de90cd2ba553bc07d75a29913ea4424dd9e616b')

build()
{
	Fcd
	[ "$CARCH" == "x86_64" ] && Facu
	Fmake
	Fmakeinstall
}

# optimalization OK
