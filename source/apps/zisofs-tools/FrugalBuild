pkgname=zisofs-tools
pkgver=1.0.6
pkgrel=1
pkgdesc="Compress a file tree to make a compressed CD-ROM"
url="http://www.kernel.org/pub/linux/utils/fs/zisofs/"
depends=('zlib' 'glibc')
up2date=`lynx -dump 'http://www.kernel.org/pub/linux/utils/fs/zisofs/?C=M;O=D'|grep 'tar.bz2 '|sed 's/.*-\(.*\)\.tar\.bz2 *.*/\1/'`
source=(http://www.kernel.org/pub/linux/utils/fs/zisofs/$pkgname-$pkgver.tar.bz2)
md5sums=('b1439812746bd6176401fcdac82eeabf')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make INSTALLROOT=$startdir/pkg install
}
