# Last Modified: Sun, 19 Jun 2005 14:59:36 +0000
# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=apmd
pkgver=3.0.2
pkgrel=3
pkgdesc="Set of tools for managing notebook power consumption"
depends=('glibc')
makedepends=('x')
groups=('base')
archs=('i686' 'x86_64')
up2date="lynx -dump  http://www.worldvisions.ca/~apenwarr/apmd |grep current|tr -s ' '|sed 's/\. / /'|cut -d ' ' -f 9"
source=(http://www.worldvisions.ca/~apenwarr/apmd/$pkgname-$pkgver.tar.gz \
  rc.apmd $pkgname-$pkgver-gcc3.diff apmd-26fixes.patch)
sha1sums=('23ce275766441c59b6b47c002f9098eb' '6f8e2252c06f1561d3fb8753d0fe508c' \
	  'f20f01e0fdbb87e4cd63e89eebc51217' '21e26ad546f4fbaded7e439f44c6fcf4')

build()
{
	Fcd $pkgname
	Fpatchall || return 1
	Fsed '-I/usr/src/linux/include' '-I/usr/include' Makefile
	Fmake || return 1
	Fmkdir /etc /usr
	make PREFIX=$Fdestdir/usr APMD_PROXY_DIR=$Fdestdir/etc install
	Frcd
}

# vim: ft=sh
