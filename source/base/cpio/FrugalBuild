# Compiling Time: 0.06 SBU
# Maintainer: James Buren <ryuo@frugalware.org>
# Contributor: Miklos Vajna <vmiklos@frugalware.org>

pkgname=cpio
pkgver=2.14
pkgrel=1
pkgdesc="A program to manage archives of files"
url="http://www.gnu.org/software/cpio"
depends=('bash>=4.4.12-4' 'glibc>=2.34')
groups=('base')
archs=('x86_64')
Fup2gnubz2
source=(http://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('cbac50a61079b6f3bdcf9ffe42171d9257cfe877')
CFLAGS+=' -fcommon'

build()
{
	Fbuild
	# conflicts with tar
	Frm usr/libexec/rmt
	Frm usr/share/man/man8/rmt.8*
	# backward compat
	Fln ../usr/bin/cpio /bin/cpio
}

# optimization ok
