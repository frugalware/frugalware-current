# Compiling time: 0.24 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=dbus-glib
pkgver=0.98
pkgrel=2
pkgdesc="Glib bindings for DBUS"
url="http://www.freedesktop.org/wiki/Software_2fDBusBindings"
depends=('dbus>=1.4.14-1' 'glib2>=2.16.3')
if [ "$CARCH" == "arm" ]; then
	makedepends=('gtk-doc')
else
	makedepends=('gtk-doc' 'doxygen') ## LOL
fi
groups=('base')
archs=('i686' 'x86_64' 'arm')
options=('scriptlet')
up2date="lynx -dump http://dbus.freedesktop.org/releases/dbus-glib/|Flasttar"
source=(http://dbus.freedesktop.org/releases/$pkgname/$pkgname-$pkgver.tar.gz)
sha1sums=('203f02e41eba1aeac8986e655d794c8833e437bf')

build()
{
	Fcd
	Fpatchall
	Fautoreconf
	Fmake  --sysconfdir=/etc --localstatedir=/var \
		--exec-prefix=/ \
		--libdir=/usr/lib \
		--libexecdir=/usr/lib/$pkgname \
		--bindir=/usr/bin \
		--enable-doxygen-docs \
		--disable-xml-docs \
		--disable-ansi \
		--disable-asserts \
		--disable-tests \
		--with-xml=libxml \
		--enable-bash-completion
	Fmakeinstall
	Fln ../usr/bin/dbus-binding-tool /bin/dbus-binding-tool
}


# optimization OK
