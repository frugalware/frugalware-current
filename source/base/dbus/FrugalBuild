# Compiling time: 0.48 SBU
# Maintainer: crazy <crazy@frugalware.org>

## this is just for tool chain bumps
## and/or rebuilds of say libffi
## do NOT set n for production systems

USE_TC_X=${USE_TC_X:-"y"}

pkgname=dbus
pkgver=1.10.10
pkgrel=4
pkgdesc="A message bus system"
url="http://freedesktop.org/wiki/Software/dbus"
rodepends=('scriptlet-core')
depends=('libxml2>=2.9.4-3' 'expat>=2.1.0-5' 'libsystemd>=231-5')
makedepends=('xmlto>=0.0.28' 'docbook-xsl' 'docbook-xml' 'systemd>=231-5')
options=('scriptlet')
groups=('base' 'core')
archs=('i686' 'x86_64')
_F_archive_grepv="1.11" # 1.11 is devel .13 is devel etc
up2date="Flasttar http://dbus.freedesktop.org/releases/dbus/"
backup=(etc/dbus-1/session.conf etc/tmpfiles.d/dbus.conf)

source=(http://dbus.freedesktop.org/releases/dbus/$pkgname-$pkgver.tar.gz \
	dbus-1-launch.desktop
	dbus.conf )
sha1sums=('f1236d1e7ab7ff26c704fa0069c7b50d3c8f0a4b' \
          '1c7bd0b397f281ab26a70d48269496cc5a742509' \
          'd006b4e680e6fbc4bcaac8337fc3a8b2af151b98')

subpkgs=('dbus-x11')
subdescs=('X based tools for D-BUS.')
subconflicts=('dbus-gtk+2')
subreplaces=('dbus-gtk+2')
subprovides=('dbus-gtk+2')
if Fuse $USE_TC_X; then
	## sure we can change subdesc etc but no need to do that since is only for Tc
	subdepends=("libx11>=1.6.3-4 libsm>=1.2.2-3")
	makedepends+=('x11-protos')
else
	subdepends=()
fi
subrodepends=("dbus=$pkgver")
subgroups=('xapps')
subarchs=('i686 x86_64')

if Fuse $USE_TC_X; then
	Fconfopts+=" --with-x --enable-x11-autolaunch"
else
	Fconfopts+=" --without-x --disable-x11-autolaunch"
fi


Fconfopts+="	--prefix=/usr \
		--sysconfdir=/etc \
                --localstatedir=/var \
                --exec-prefix=/ \
                --libdir=/usr/lib \
                --bindir=/usr/bin \
                --libexecdir=/usr/lib/$pkgname-1 \
                --with-system-pid-file=/var/run/dbus/dbus.pid \
                --with-system-socket=/var/run/dbus/system_bus_socket \
                --with-session-socket-dir=/tmp \
                --with-dbus-user=messagebus \
                --disable-doxygen-docs \
                --enable-inotify \
                --enable-userdb-cache \
                --with-gnu-ld \
                --enable-xml-docs \
                --disable-asserts \
                --disable-checks \
                --disable-tests \
                --disable-selinux \
                --with-systemdsystemunitdir=/lib/systemd/system \
                --enable-systemd \
		--enable-user-session \
		--disable-Werror \
		--enable-static=no \
		--disable-static"

build()
{
	Fcd
	Fpatchall
	Fautoreconf
	Fmake
	Fmakeinstall

	## and we use /etc/xdg/autostart for GNOME/XFCE
	Fexe /etc/xdg/autostart/dbus-1-launch.desktop

	# bug dbus-arch-deps.h is being included as <dbus/dbus-arch-deps.h> from dbus.h
	## but installed as .. /usr/lib/dbus-1.0/include/dbus/dbus-arch-deps.h  so nothing can find it
	## workaround for now
	Fln /usr/lib/dbus-1.0/include/dbus/dbus-arch-deps.h /usr/include/dbus-1.0/dbus/dbus-arch-deps.h

	## just to keep this dirs
	Fmkdir /etc/dbus-1/system.d/.holdme
	Fmkdir /usr/share/dbus-1/services/.holdme
	Frm /var/run
	Fmkdir /etc/tmpfiles.d
	cat > $Fdestdir/etc/tmpfiles.d/dbus.conf << EOF
d $Flocalstatedir/run/dbus 0755 root root -
EOF
	Fsplit dbus-x11 usr/bin/dbus-launch /etc/xdg

	Ffileschown /usr/lib/dbus-1/dbus-daemon-launch-helper 0 38
	Ffileschmod /usr/lib/dbus-1/dbus-daemon-launch-helper 4750

	# Create users using sysuser.d
	Fmkdir usr/lib/sysusers.d/
	Ffile /usr/lib/sysusers.d/$pkgname.conf

}

# optimization OK
