post_install()
{
	echo "generating uuid for dbus"
	/usr/bin/dbus-uuidgen --ensure 
	echo "done installing dbus"
}

post_upgrade()
{
	post_install
}

post_remove()
{
	getent passwd messagebus 2>&1 > /dev/null && userdel messagebus
	getent group messagebus 2>&1 > /dev/null && groupdel messagebus
}

op=$1
shift
$op $*
