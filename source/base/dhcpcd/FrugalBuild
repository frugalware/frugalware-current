pkgname=dhcpcd
pkgver=10.0.0
pkgrel=1
pkgdesc="A DHCP client daemon"
groups=('base')
archs=('x86_64')
depends=('glibc>=2.34' 'libudev>=242')
makedepends=('systemd-devel>=242')
url="https://roy.marples.name/projects/dhcpcd/"
_F_github_author=NetworkConfiguration
_F_github_tag=y
_F_github_tag_prefix="$pkgname-"
Finclude github
sha1sums=('aee8cc363dc80fd4096516c1438ef3675407bd26')
backup=('etc/dhcpcd.conf')
options+=('static')
_F_cd_path="$pkgname-$pkgname-$pkgver"

build() {
	Fcd
	Fsed 'nohook lookup-hostname' '#nohook lookup-hostname' dhcpcd.conf
	Fbuild
	Fmkdir /var/lib/dhcpcd
}

# optimization OK
