# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=dhcpcd
pkgver=7.2.2
pkgrel=2
pkgdesc="A DHCP client daemon"
groups=('base')
archs=('x86_64')
depends=('glibc>=2.29-5' 'libudev>=242')
makedepends=('systemd-devel>=242')
_F_github_author="rsmarples"
Finclude github
sha1sums=('8c6a4f11a02aa22712bfefb8ed78b71e4877e77c')
backup=('etc/dhcpcd.conf')
options+=('static')
_F_cd_path="$pkgname-$pkgname-$pkgver"

build() {

	## we nned fPIC ..
	## error adding symbols: Bad value
	## Makefile:23: recipe for target 'udev.so' failed
	## make[1]: *** [udev.so] Error 1
	## is strnage since make won't die ..
	CFLAGS+=" -fPIC"

	Fcd
	Fsed 'nohook lookup-hostname' '#nohook lookup-hostname' dhcpcd.conf
	Fpatchall
	_F_make_opts="-j1"
	Fmake
	Fmakeinstall
	Fmkdir /var/lib/dhcpcd
}

# optimization OK
