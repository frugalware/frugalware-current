# Compiling Time: 0.03 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=efibootmgr
pkgver=14
pkgrel=1
pkgdesc="A program for modifying the EFI boot manager."
url="https://github.com/vathpela"
depends=('pciutils>=3.5.1-3' 'efivar>=30')
groups=('base')
archs=('!i686' 'x86_64')
_F_github_author="rhinstaller"
_F_github_tag=y
Finclude github
sha1sums=('7a87b0c4b0990d484e7a83d156e77e7719834964')
options+=('force' 'static')

build()
{
	Fcd
	Fpatchall
	make EXTRA_CFLAGS=" $CFLAGS" || Fdie
	Fexerel src/$pkgname /usr/sbin/$pkgname
	Fmanrel src/$pkgname.8
}

# optimization OK
