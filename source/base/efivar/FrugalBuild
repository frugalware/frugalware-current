# Compiling Time: 0.03 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=efivar
pkgver=32
pkgrel=3
pkgdesc="Library to manipulate EFI variables"
depends=('popt>=1.16-9')
groups=('base')
archs=('x86_64')
_F_github_author="rhboot"
_F_github_tag=y
Finclude github
source+=("efi_guid_ux_capsule.patch")
sha1sums=('00eb9cfcb5b2de72e42d25fb044e12fb0ce83603' \
          'f582716de1e38f0c44ed691cce053f8da75d1152')
options+=('force' 'static')
_F_make_opts="libdir=/usr/lib/ bindir=/usr/bin/ mandir=/usr/share/man/ includedir=/usr/include/ V=1 -j1"

build()
{
	Fcd
	Fsed "lib64" "lib" Make.defaults
	Fsed '-O0' '-Os' Make.defaults
	CFLAGS+=" -flto"
	export OPT_FLAGS="$CFLAGS -flto"
	Fbuild

}

# optimization OK
