pkgname=file
pkgver=5.43
pkgrel=1
pkgdesc="File type identification utility"
url="http://www.darwinsys.com/file/"
depends=('glibc>=2.35' 'zlib>=1.2.12' 'bzip2' 'xz')
groups=('base' 'chroot-core')
archs=('x86_64')
up2date="Flasttar ftp://ftp.astron.com/pub/file/"
source=(ftp://ftp.astron.com/pub/file/$pkgname-$pkgver.tar.gz)
sha1sums=('8cb1a01257e9d9b15bb58dae409e1cb6710c5947')

Fconfopts+="	--datadir=/etc \
                --enable-fsect-man5 \
                --disable-static \
		--disable-libseccomp"
_F_cross32_simple_auto=true
_F_cross32_delete=('usr/share')
Finclude cross32

build()
{
	Fbuild_cross32

	Fln /usr/share/misc/magic.mgc /etc/magic

}

# optimization OK
