build()
{
	Fpatchall
	Fmake CFLAGS="$CFLAGS -D_GNU_SOURCE -D_FILE_OFFSET_BITS=64 -D_LARGEFILE_SOURCE" \
		--datadir=/etc --enable-fsect-man5 --enable-static
	make DESTDIR=$Fdestdir install
	Fln /etc/file/magic /etc/magic
}

# optimization OK
