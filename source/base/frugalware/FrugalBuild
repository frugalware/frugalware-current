pkgname=frugalware
pkgver=0.7pre2
pkgrel=1
pkgdesc="Basic Frugalware Linux filesystem package"
url="http://ftp.frugalware.org/pub/other/frugalware/"
depends=()
rodepends=('coreutils' 'chkconfig')
makedepends=('help2man')
