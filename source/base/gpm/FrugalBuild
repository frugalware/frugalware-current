# Compiling Time: 0.05 SBU
# Maintainer: James Buren <ryuo@frugalware.org>
# Contributor: Miklos Vajna <vmiklos@frugalware.org>

pkgname=gpm
pkgver=1.20.7
pkgrel=12
pkgdesc="General purpose mouse server"
url="https://www.nico.schottelius.org/software/gpm/"
depends=('ncurses>=6.1-2')
groups=('base')
archs=('x86_64')
backup=(etc/sysconfig/gpm)
_F_systemd_units=(gpm=e)
_F_github_author=telmich
_F_github_tag=y
_F_github_devel=yes
Finclude systemd github
source=(gpm.conf gpm.service)
sha1sums=('45729ab026508ccf12c9435108e4b620c93204ea' \
          'de2a9c6f0b9b4b899ec1b212f21c04c8d2aed39b')
build()
{
	Funpack_scm

	## 64bit need -fPIC
	CFLAGS+=" -fPIC"

	Fcd
	./autogen.sh || Fdie
	Fautoreconf
	Fbuild
	Ffile gpm.conf /etc/sysconfig/gpm
	Ffile /lib/systemd/system/gpm.service
	Fgenscriptlet
}

# optimization OK
