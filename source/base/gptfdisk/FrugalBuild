# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=gptfdisk
pkgver=1.0.9
pkgrel=4
pkgdesc="A clone of fdisk that works on GPT disks instead of MBR disks."
depends=('libuuid>=2.31.1-3' 'libstdc++>=11.3' 'ncurses>=6.1' 'popt>=1.16-7')
groups=('base')
archs=('x86_64')
_F_sourceforge_ext='.tar.gz'
Finclude sourceforge
source+=(gptfdisk-1.0.9-libuuid.patch)
sha1sums=('284bd000edaf7874b472bd01719c6a71a8030e13' \
          '46078539e76737f00e5ee884015f23d6daa8fbaf')

build()
{
	Fcd
	Fpatchall
	Fmake
	Fexerel /usr/bin/cgdisk
	Fexerel /usr/bin/gdisk
	Fexerel /usr/bin/sgdisk
	Fexerel /usr/bin/fixparts
	Fmanrel *.8
}

# optimization OK
