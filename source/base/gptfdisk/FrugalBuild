# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=gptfdisk
pkgver=1.0.7
pkgrel=1
pkgdesc="A clone of fdisk that works on GPT disks instead of MBR disks."
depends=('libuuid>=2.31.1-3' 'libstdc++>=9.1.0-3' 'ncurses>=6.1' 'popt>=1.16-7')
groups=('base')
archs=('x86_64')
_F_sourceforge_ext='.tar.gz'
Finclude sourceforge
sha1sums=('406ab2596e1911c916dce677ce7e903076d94c6d')

build()
{
	Fcd
	Fpatchall
	Fmake
	Fexerel /sbin/cgdisk
	Fexerel /sbin/gdisk
	Fexerel /sbin/sgdisk
	Fexerel /sbin/fixparts
	Fmanrel *.8
}

# optimization OK
