# Compiling Time: 0.08 SBU
# Maintainer: James Buren <ryuo@frugalware.org>
# Contributor: Miklos Vajna <vmiklos@frugalware.org>

pkgname=grep
pkgver=3.11
extrapkgver=
pkgrel=1
pkgdesc="Print lines matching a pattern"
url="http://www.gnu.org/software/grep/grep.html"
depends=('pcre2')
groups=('base' 'core')
archs=('x86_64')
Fup2gnugz
source=(https://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver$extrapkgver.tar.xz)
sha1sums=('955146a0a4887eca33606e391481bbef37055b86')
options+=('ldgold')

build()
{
	Fcd $pkgname-$pkgver$extrapkgver
	Fbuild --without-included-regex
	Fmv /usr/bin /
	Fln ../../bin/grep /usr/bin/grep
	Fln ../../bin/fgrep /usr/bin/fgrep
	Fln ../../bin/egrep /usr/bin/egrep
}

# optimization OK
