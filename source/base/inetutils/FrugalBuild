# Compiling Time: 0.01 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=inetutils
pkgver=2.4
pkgrel=1
pkgdesc="A collection of common network programs"
archs=('x86_64')
groups=('base')
url="https://www.gnu.org/software/inetutils/"
depends=('pam' 'libcap')
makedepends=('help2man')
source=("https://ftp.gnu.org/gnu/inetutils/${pkgname}-${pkgver}.tar.xz" \
	hostname \
	host.conf \
	hosts.equiv \
	ftpd.service \
	rlogin@.service \
	rlogin.socket \
	rsh@.service \
	rsh.socket \
	talk.service \
	talk.socket \
	telnet@.service \
	telnet.socket \
	rlogin \
	rsh \
	talk \
	telnet \
	rlogin.pam \
	rsh.pam )
signatures=("${source[0]}.sig" '' '' '' '' '' '' '' '' '' '' '' '' '' '' '' '' '' '')
up2date="Flasttar https://ftp.gnu.org/gnu/${pkgname}"
Fconfopts="	--prefix=/ \
		--without-wrap \
		--with-pam \
		--enable-ftp \
		--enable-ftpd \
		--enable-telnet \
		--enable-telnetd \
		--enable-talk \
		--enable-talkd \
		--enable-rlogin \
		--enable-rlogind \
		--enable-rsh \
		--enable-rshd \
		--enable-rcp \
		--enable-hostname \
		--enable-dnsdomainname \
		--enable-ifconfig \
		--disable-rexec \
		--disable-rexecd \
		--disable-tftp \
		--disable-tftpd \
		--disable-ping \
		--disable-ping6 \
		--disable-logger \
		--disable-syslogd \
		--disable-inetd \
		--disable-whois \
		--disable-uucpd \
		--disable-traceroute"

backup=(etc/hosts.equiv, etc/host.conf, etc/hostname)

conflicts=('netkit-base' 'netkit-telnet')
replaces=('netkit-base' 'netkit-telnet')
provides=('netkit-base' 'netkit-telnet')

build(){
	Fbuild
	Finstall 644 etc/hosts.equiv
	Finstall 644 etc/host.conf
	Finstall 644 etc/xinetd.d/telnet
	Finstall 644 etc/xinetd.d/talk
	Finstall 644 etc/xinetd.d/rlogin
	Finstall 644 etc/xinetd.d/rsh

	Finstall 644 rlogin.pam etc/pam.d/rlogin
	Finstall 644 rsh.pam etc/pam.d/rsh

	Finstall 644 lib/systemd/system/ftpd.service
	Finstall 644 lib/systemd/system/rlogin@.service
	Finstall 644 lib/systemd/system/rlogin.socket
	Finstall 644 lib/systemd/system/rsh@.service
	Finstall 644 lib/systemd/system/rsh.socket
	Finstall 644 lib/systemd/system/talk.service
	Finstall 644 lib/systemd/system/talk.socket
	Finstall 644 lib/systemd/system/telnet@.service
	Finstall 644 lib/systemd/system/telnet.socket

	Finstall 644 etc/hostname
	Fmkdir sbin/
	Fmv bin/ifconfig sbin/ifconfig
}

# optimization OK
