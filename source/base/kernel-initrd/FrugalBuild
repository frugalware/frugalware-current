# Compiling Time: 0 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

Finclude kernel-version

pkgname=kernel-initrd
pkgver=$_F_kernelver_ver
pkgrel=17
pkgdesc="The initrd for the Frugalware Linux Kernel."
url="http://www.frugalware.org"
depends=("kernel=$_F_kernelver_ver-$_F_kernelver_rel")
makedepends=('dracut-plymouth' 'linux-firmware>=20120104' 'xz' 'eject' 'sysvinit-tools' \
	'less' 'xfsprogs' 'jfsutils' 'reiserfsprogs' 'mdadm' 'lvm2' 'udev>=175' \
	'systemd>=38-2' 'kmod>=4')
groups=('base')
archs=('i686' 'x86_64')
up2date="$_F_kernelver_ver"
options=('scriptlet')

_add_include()
{
	includes=("${includes[@]}" "--include" "$1" "$1")
}

_add_include /sbin/mdadm
_add_include /sbin/mdmon
_add_include /lib/udev/rules.d/64-md-raid.rules

build()
{
	_UNAME="$_F_kernelver_ver-fw$_F_kernelver_rel"
	Fmkdir /boot
	Fexec /usr/sbin/dracut --xz --force -a dmsquash-live ${includes[@]} \
		$Fdestdir/boot/initrd-$_UNAME.img.xz $_UNAME || Fdie
	if ! unxz < $Fdestdir/boot/initrd-$_UNAME.img.xz | cpio -t | grep -q '\.ko$'; then
		error "No kernel modules in initrd."
		Fdie
	fi
	Fln initrd-$_UNAME.img.xz /boot/initrd.img.xz
}
