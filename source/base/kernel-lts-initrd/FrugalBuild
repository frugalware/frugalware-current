pkgname=kernel-lts-initrd
_F_kernelmod_scriptlet="$Fincdir/kernel-initrd.install"
_F_cd_path="/"
_F_kernelmod_name="-lts"
_F_kernel_name="-lts"
_F_kernel_ver=6.1.57
_F_kernelmod_ver="$_F_kernel_ver"
