# Compiling Time: 0.01 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=kmod
pkgver=27
pkgrel=2
pkgdesc="Utilities for inserting and removing modules from the Linux kernel"
url="http://kernel.org"
depends=('zlib>=1.2.11-13' 'xz>=5.2.4-2' 'zstd>=1.4.4' 'openssl>=1.1.1-6')
makedepends=('libxslt>=1.1.32-2')
groups=('base' 'core')
archs=('x86_64')
backup=('etc/rc.d/rc.modules' 'etc/sysconfig/modules')
_F_archive_grepv="pre\|rc"
up2date="Flasttar $url/pub/linux/utils/kernel/kmod"
source=($url/pub/linux/utils/kernel/kmod/$pkgname-$pkgver.tar.xz modules zstd-support.patch)
sha1sums=('2c5d55ffe3a83e9de70bb3419fb1a2887489a65f' \
          'd8192e844d0bb37c5f7f7defda540db1fd232824' \
          '25d51c168a423e2620bb5b805857a30a9e18a31b')
options=('scriptlet' 'force')

build() {
	Fcd
	Fpatchall
	Fautoreconf
	Fmake --with-zlib --with-xz --with-zstd --with-openssl --enable-tools
	Fmakeinstall
	Ffile /etc/sysconfig/modules
	# systemd
	Fmkdir /etc/modules-load.d
	Fln ../sysconfig/modules /etc/modules-load.d/sysconfig.conf
	# Compatibility symlinks
	local i
	for i in depmod insmod lsmod modinfo modprobe rmmod; do
		Fln /usr/bin/kmod /sbin/$i
	done
}

# optimization ok
