# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=less
pkgver=385
pkgrel=1
pkgdesc="A paginator similar to more"
url="http://www.greenwoodsoftware.com/less"
depends=('ncurses' 'bash' 'file')
groups=('base')
archs=('i686' 'x86_64' 'ppc')
### Need to review this. 385 version available, but nowhere announced
#up2date="lynx -dump 'http://ftp.gnu.org/pub/gnu/less/?M=D'|grep tar.gz$|sed -n 's/.*s-\(.*\)\.t.*/\1/;1 p'"
source=($url/$pkgname-$pkgver.tar.gz lesspipe.sh)
sha1sums=('175ace7cd8258a46f30faed267e59d6995c37fc0' \
	  '3e7e305a7eec7d3a52fd994f93c6065a71319086')

build()
{
	Fbuild --sysconfdir=/etc || return 1
	Fmkdir /bin
	Fmv /usr/bin/less /bin/
	Fexe lesspipe.sh /bin
}

# optimalization ok

