pkgname=libgpg-error
pkgver=1.52
pkgrel=1
pkgdesc="Support library for libgcrypt"
url="http://www.gnupg.org"
groups=('base' 'core')
archs=('x86_64')
depends=('glibc>=2.35')
makedepends=('gcc>=11.3' 'inetutils')
up2date="Flasttar $url/download/index.html"
source=(https://gnupg.org/ftp/gcrypt/libgpg-error/$pkgname-$pkgver.tar.bz2)
sha1sums=('227a0514e7afee71ad980bc943135a22370c79dd')
Fconfopts+=" --enable-static"
options+=('scriptlet' 'static' )  ## pacman
_F_cross32_simple_auto="yes"
_F_cross32_delete=('usr/share')
Finclude cross32

subpkgs+=("${pkgname}-static")
subdescs+=("Static files for $pkgname")
subdepends+=('')
subgroups+=('devel-extra')
subarchs+=('x86_64')
suboptions+=('')

build() {

    Fbuild_cross32
    Fsplit $pkgname-static usr/lib/*.a
}


# optimization OK
