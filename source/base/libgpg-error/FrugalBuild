pkgname=libgpg-error
pkgver=1.47
pkgrel=1
pkgdesc="Support library for libgcrypt"
url="http://www.gnupg.org"
groups=('base' 'core')
archs=('x86_64')
depends=('glibc>=2.35')
makedepends=('gcc>=11.3')
up2date="Flasttar $url/download/index.html"
source=(ftp://ftp.gnupg.org/gcrypt/libgpg-error/$pkgname-$pkgver.tar.bz2)
sha1sums=('94668233fd7bd8e7c0ec5e363134cd53c575da60')
Fconfopts+=" --enable-static"
options+=('scriptlet' 'static' 'ldgold')  ## pacman
_F_cross32_simple_auto="yes"
_F_cross32_delete=('usr/share')
Finclude cross32

subpkgs+=("${pkgname}-static")
subdescs+=("Static files for $pkgname")
subdepends+=('')
subgroups+=('devel-extra')
subarchs+=('x86_64')
suboptions+=('')

build() {

    Fbuild_cross32
    Fsplit $pkgname-static usr/lib/*.a
}


# optimization OK
