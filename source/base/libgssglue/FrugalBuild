pkgname=libgssglue
pkgver=0.8
pkgrel=1
_hash=cef4d8a6bb54c1c87a5f7442b214ce72
pkgdesc="Generic Security Services GLUE."
url="https://gitlab.com/gsasl/libgssglue"
depends=('glibc>=2.34')
groups=('base')
archs=("x86_64")
_F_archive_grepv="rel"
_F_archive_name="$pkgname-$pkgname"
up2date="Flasttar $url/-/tags"
source=("$url/uploads/$_hash/$pkgname-$pkgver.tar.gz")
sha1sums=('59837623a5af2b80aa2aacafb752d0bde05af8be')
_F_cd_path="$pkgname-$pkgver"

build() {
	Fbuild

	Fmkdir etc/
	Finstallrel 0644 doc/gssapi_mech.conf /etc/
}

# optimization OK
