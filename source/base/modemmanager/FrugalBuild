# Compiling Time: 0.67 SBU
# Maintainer: Baste <baste@frugalware.org>
# Contributor: bouleetbil <bouleetbil@frogdev.info>

USE_DOC=${USE_DOC:-"n"}

pkgname=modemmanager
_F_archive_name="ModemManager"
pkgver=1.6.12
pkgrel=3
pppVer=2.4.7
pkgdesc="Mobile broadband modem management service"
url="http://www.freedesktop.org/wiki/Software/ModemManager/"
depends=("ppp>=$pppVer" 'libgudev>=231-2' 'elfutils>=0.167-2' 'systemd')
makedepends=('intltool' 'libxslt')
groups=('base')
archs=('x86_64')
_F_archive_grepv=".99[0-9]"
up2date="Flasttar http://www.freedesktop.org/software/$_F_archive_name/"
options+=('scriptlet')
Fconfopts+=" \
	--enable-more-warnings=error \
	--with-polkit=no \
	--with-udev-base-dir=/lib/udev/ \
	--without-qmi \
	--without-mbim \
	--enable-static=no \
	--disable-static"
if Fuse $USE_DOC; then
        makedepends=("${makedepends[@]}" 'gtk-doc>=1.11')
        Fconfopts+=" --enable-gtk-doc"
        subpkgs=("$pkgname-docs")
        subdescs=("ModemManager Documentation")
        subdepends=()
        subgroups=('docs-extra')
        subarchs=('x86_64')
else
	Fconfopts+=" --disable-gtk-doc"
fi

subpkgs+=("lib32-${pkgname}")
subdescs+=("$pkgdesc ( 32bit )")
subdepends+=("lib32-libgudev")
subgroups+=('lib32-extra')
subarchs+=('x86_64')

_F_cross32_delete=('usr/share' 'lib/')
F32confopts="	--libdir=/usr/lib32 \
		--bindir=/usr/i686-frugalware-linux/bin \
		--sbindir=/usr/i686-frugalware-linux/sbin \
		--includedir=/usr/i686-frugalware-linux/include"
Finclude cross32
_F_cd_path="${_F_archive_name}-$pkgver"

_F_scm_type="git"
_F_scm_url="https://anongit.freedesktop.org/git/ModemManager/ModemManager.git"
Finclude scm


build() {
	Funpack_scm

        Fcross32_prepare
	Fbuild

        Fcross32_reset_and_fix
        Fcross32_delete_empty
	Fsplit "lib32-${pkgname}" /\*

	Fexec make clean || Fdie
	Fbuild


	if Fuse $USE_DOC; then
		Fsplit $pkgname-docs usr/share/gtk-doc
	fi

}

# optimization OK
