pkgname=net-tools
pkgver=2.10
pkgrel=1
pkgdesc="Important tools for controlling the network subsystem"
url="http://www.tazenda.demon.co.uk/phil/net-tools/"
depends=('glibc>=2.26.9000-3')
makedepends=('bluez>=5.44-2')
groups=('base' 'chroot-core')
conflicts=('hotplug')
archs=('x86_64')
_F_sourceforge_ext=".tar.xz"
Finclude sourceforge
source+=(config.patch makefile.patch)
sha1sums=('4080baab0486dc882c3b293d5559c27251ae4268' \
          '496b1263bbef9243c63a03c3153701e07031e965' \
          'f5a4700f401b9565a9bd202489680c0121d92162')

build()
{
	Fcd
	Fpatchall
	yes '' | make config || Fdie
	Fexec make || Fdie
	Fexec make DESTDIR=$Fdestdir install || Fdie
}

# optimization OK
