pkgname=networkmanager
_F_gnome_name=NetworkManager
_F_gnome_ext=.tar.xz
_F_gnome_devel="y"
pkgver=1.0.10
pkgrel=1
pkgdesc="Network Management daemon"
depends=('wireless_tools>=29-4' 'iproute2>=4.3.0-2' 'nss>=3.21-2' 'libgcrypt>=1.6.4-3' \
	'libnl>=3.2.9-2' 'ppp=2.4.7' 'wpa_supplicant>=2.5-3' 'iptables' 'polkit>=0.113-3' 'ca-certificates' \
	'modemmanager>=1.4.12-2' 'libarchive>=3.0.3-2' 'dbus-glib>=0.104-2' 'libndp>=1.5-4' 'newt>=0.52.18-2')
makedepends=('perl-xml-parser' 'intltool' 'gobject-introspection' 'dhcpcd' 'dhclient' 'ppp>=2.4.7-2')
rodepends=('mobile-broadband-provider-info') ## some 4G modems won't work without
groups=('base')
archs=('i686' 'x86_64' 'arm')
Finclude gnome
options+=('scriptlet')
backup=('etc/NetworkManager/NetworkManager.conf')
sha1sums=('1c199fdfb9fff9e7f540d51952699ce815a12369')
_F_cd_path=$_F_gnome_name-$pkgver
replaces=('nm-openconnect')

_F_systemd_units=(NetworkManager=e)
Finclude systemd

Fconfopts="	--with-distro=frugalware \
		--with-crypto=nss \
		--with-systemdsystemunitdir=/lib/systemd/system \
		--with-system-ca-path=/etc/ssl/certs \
		--with-dbus-sys-dir=/etc/dbus-1/system.d \
		--enable-introspection=yes \
		--with-session-tracking=systemd \
		--with-nmtui=yes \
		--with-pppd-plugin-dir=/usr/lib/pppd/2.4.7 \
		--with-modem-manager-1"

build() {
	Fbuild
	Fmkdir etc/NetworkManager/system-connections
	Fmkdir etc/NetworkManager/dispatcher.d
	cat > $Fdestdir/etc/NetworkManager/NetworkManager.conf << EOF
[main]
plugins = keyfile
EOF
	Fgenscriptlet
}


# optimization OK
