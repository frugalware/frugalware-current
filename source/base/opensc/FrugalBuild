pkgname=opensc
pkgver=0.22.0
pkgrel=3
pkgdesc='Tools and libraries for smart cards'
archs=('x86_64')
groups=('base')
url='https://github.com/OpenSC/OpenSC/wiki'
backup=('etc/opensc.conf')
makedepends=('docbook-xsl')
depends=('pcsc-lite' 'openssl>=3.0.7')
_F_github_grepv="rc3\|rc2\|rc1"
Finclude github
source=("https://github.com/OpenSC/OpenSC/releases/download/$pkgver/opensc-$pkgver.tar.gz" \
	opensc-openssl-3.patch)
sha1sums=('d920880c72462619e0a1a629e0a637155b75a352' \
          '65ebe7f1b769af0d53ebd2f129df5f6b1c0db9a4')
options=('nolto')
_Fbuild_autoreconf=yes

build() {
  Fcd
  Fexec ./bootstrap || Fdie
  Fbuild
}

# optimization OK
