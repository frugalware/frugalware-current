#!/bin/sh

pre_sysupgrade() {
	/usr/bin/pacman-g2 -Qe > /tmp/old-orphans
}

post_sysupgrade() {
	/usr/bin/pacman-g2 -Qe > /tmp/new-orphans
	if [ -s /tmp/new-orphans ]; then
		/bin/echo "There are orphans: check with pacman-g2 -Qe"
	elif [ $(/usr/bin/diff /tmp/old-orphans /tmp/new-orphans) ]; then
		/bin/echo "Installed packages no longer needed found:"
		/usr/bin/comm -13 /tmp/old-orphans /tmp/new-orphans
	fi
	/bin/rm -f /tmp/old-orphans /tmp/new-orphans
}

op=$1
shift
$op $*
