version=0.5

if ! [ -e *fpm ]; then
	echo "No package in this directory!"
elif [ `ls *.fpm|wc|tr -s ' '|cut -d ' ' -f 3` == 1 ]; then
	pkgname=`cat FrugalBuild |grep pkgname|sed -n '1 p'|cut -d = -f 2`
	cmda="rm -f ../../../frugalware/`ls |grep "^$pkgname-[[:digit:]]"|grep fpm`"
	echo "$cmda"
	$cmda
	cmdb="mv `ls *fpm` ../../../frugalware/"
	echo "$cmdb"
	$cmdb
else
	echo "More than one package in this directory!"
fi

