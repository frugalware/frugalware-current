pkgver=8.41
pkgrel=1
pkgdesc="Perl-compatible regular expression library"
groups=('base' 'chroot-core')
archs=('x86_64')
depends=('zlib>=1.2.11-2' 'bzip2>=1.0.6-14' \
	'readline>=6.3-14' 'libstdc++>=6.3.1-4')
