pkgname=pcsc-lite
pkgver=2.2.0
pkgrel=2
pkgdesc="PC/SC Architecture smartcard middleware library"
url="https://pcsclite.apdu.fr"
depends=('glibc>=2.34' 'libsystemd' 'polkit' 'python3' 'libudev')
makedepends=('systemd-devel')
groups=('base')
archs=('x86_64')
backup=('etc/pcsc/reader.conf')
up2date="Flasttar $url/files"
source=($url/files/$pkgname-$pkgver.tar.xz \
	0001-use-default-prefix-for-binary-install-dir.patch)
signatures=("${source[0]}.asc" '')
_F_meson_confopts="	-Dlibudev=true \
			-Dpolkit=true \
			-Dserial=true \
			-Dsystemdunit=system"

Finclude meson

# optimization OK
