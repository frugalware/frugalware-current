# Compiling Time: 0.12 SBU
# Maintainer: whoever <none@frugalware.org>


pkgname=readline
pkgver=8.1
pkgrel=1
pkgdesc="GNU readline library"
url="http://www.gnu.org/"
depends=('ncurses>=6.1-5')
groups=('base' 'chroot-core')
archs=('x86_64')
backup=("etc/inputrc")
_F_archive_grepv="alpha\|beta\|rc"
up2date="Flasttar https://ftp.gnu.org/pub/gnu/$pkgname/"
Finclude cross32
source=(https://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.gz \
	inputrc \
	readline.sh)
sha1sums=('48c5e0c3a212449e206e21ba82856accac842c6f' \
          '39e29b3077ddd60dba35376c532ca83e978606a7' \
          'dec827003e9f1e029d57f3d32fa67a41ef3d0cd6')


subpkgs=("lib32-${pkgname}")
subdescs=("$pkgdesc ( 32bit )")
subdepends=("lib32-ncurses>=6.1-3")
subgroups=('lib32-extra')
subarchs=('x86_64')
suboptions=('force')

_patch() {

	unset MAKEFLAGS ## DO NOT REMOVE
        for i in {001..003}
        do
                Fpatch readline70-$i
        done
}

build()
{

	## NOTE: please test that build before pushing
	## do _not_ use Fmake since build system seems broken
	## do _not_ use auto cross32 build

	Fcd
#	_patch
	Fcross32_prepare
	Fcross32_copy_source
	Fconf --with-curses
	Fexec make TERMCAP_LIB=-lncurses SHLIB_LIBS=-lncurses -j1 || Fdie
	Fmakeinstall

	Fcross32_copy_back_source
	Fcross32_reset_and_fix
	Fcross32_delete_empty
	Fsplit "${subpkgs[0]}" /\*

	Fcd
	# copyed source already patched
	Fconf --with-curses
	Fexec make TERMCAP_LIB=-lncurses SHLIB_LIBS=-lncurses -j1 || Fdie
	Fmakeinstall
	Ffile /etc/inputrc
	Fexe /etc/profile.d/readline.sh

}

# optimization OK
