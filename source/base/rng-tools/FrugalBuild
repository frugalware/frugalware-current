pkgname=rng-tools
pkgver=6.8
pkgrel=1
pkgdesc="Random number generator related utilities"
archs=('x86_64')
groups=('base')
depends=('libgcrypt' 'curl' 'libp11' 'opensc' 'jitterentropy-library' 'sysfsutils')
backup=(etc/conf.d/rngd)
_F_github_author="nhorman"
_F_github_tag_v=y
Finclude github
source+=(rngd.conf
        rngd.service)
sha1sums=('25a20dfc818f3d95d3c63145feb7c102c1572540' \
          '3843ed109db98f26bc236e66914ad69404897e7c' \
          'ffd3429786eaef25cf68141946494594e673da31')


build() {
	Fbuild

	Finstall 0644 lib/systemd/system/rngd.service
	Finstall 0644 rngd.conf etc/conf.d/rngd
}

# optimization OK
