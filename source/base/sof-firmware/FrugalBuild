# Compiling Time: 0.01 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=sof-firmware
pkgver=1.7
pkgrel=1
pkgdesc="Sound Open Firmware"
archs=('x86_64')
groups=('base')
depends=('glibc')
url="https://www.sofproject.org/"
options=('nostrip')
_F_github_author=thesofproject
_F_github_name=sof-bin
_F_github_tag_v=y
_F_github_grepv=rc2
Finclude github
sha1sums=('751c0ee0b9caa4af8f494f5d203d294e25b6b219')
_F_cd_path="sof-bin-$pkgver"

build() {
	Fcd
	Fmkdir lib/firmware/intel

	Fcprel sof-v$pkgver lib/firmware/intel/sof
	Fcprel sof-tplg-v$pkgver lib/firmware/intel/sof-tplg
}


# optimization OK
