# Compiling Time: 0.01 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=sof-firmware
pkgver=2023.12
pkgrel=1
pkgdesc="Sound Open Firmware"
archs=('x86_64')
groups=('base')
depends=('glibc>=2.35')
url="https://www.sofproject.org/"
options=('nostrip')
_F_github_author=thesofproject
_F_github_name=sof-bin
_F_github_tag_v=y
_F_github_grepv=rc1
Finclude github
source=("https://github.com/thesofproject/sof-bin/releases/download/v${pkgver}/sof-bin-${pkgver}.tar.gz")
sha1sums=('7ec113433ae053fba8acbff73a1db3763904c8dc')
_F_cd_path="sof-bin-${pkgver}"

build() {
	Fcd
	Fmkdir lib/firmware/intel
	Fmkdir usr/bin
	export TOOLS_DEST="$Fdestdir/usr/bin"
	export FW_DEST="$Fdestdir/lib/firmware/intel"
	Fexec ./install.sh || Fdie
}


# optimization OK
