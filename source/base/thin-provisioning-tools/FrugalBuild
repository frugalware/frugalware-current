pkgname=thin-provisioning-tools
pkgver=1.0.0
pkgrel=1
pkgdesc='Suite of tools for manipulating the metadata of the dm-thin device-mapper target'
archs=('x86_64')
depends=('libgcc')
makedepends=('rust')
groups=('base')
_F_github_author="jthornber"
_F_github_tag_v=yes
_F_github_grepv="rc1\|rc2"
Finclude github
sha1sums=('b8200310a40596b5ef7ab74e0bde8228668f8aee')

options+=('ldgold')

build() {
	Fcd
	Fpatchall
	Fmake
	Fexec make DESTDIR="$Fdestdir"/usr install || Fdie
}

# optimization OK
