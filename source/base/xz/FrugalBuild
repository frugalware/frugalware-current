# Compiling Time: 0.20 SBU
# Maintainer: whoever <none@frugalware.org>
# Contributor: Tuxbubling <tuxbubling@jabber.fr>

pkgname=xz
pkgver=5.4.5
pkgrel=3
pkgdesc="XZ Utils is free general-purpose data compression software with high compression ratio."
url="http://tukaani.org/xz/"
depends=('glibc>=2.37')
makedepends+=('gcc>=12.2')
groups=('base' 'chroot-core')
archs=('x86_64')
_F_archive_grepv="alpha\|beta"
up2date="Flasttar $url"
source=($url/$pkgname-$pkgver.tar.gz)
signatures=($source.sig)
conflicts=('xz-lzma' 'lzma')
replaces=('xz-lzma' 'lzma')
provides=('xz-lzma' 'lzma')
options+=('static') ## pacman.static-need-it
_F_cross32_simple_auto="yes"
F32confopts="	--libdir=/usr/lib32 \
		--disable-rpath"
_F_cross32_delete=("usr/bin" "usr/include")
Finclude cross32
_F_cd_path="$pkgname-$pkgver"

subpkgs+=("${pkgname}-static")
subdescs+=("Static files for $pkgname")
subdepends+=('libstdc++>=12.2')
subgroups+=('devel-extra')
subarchs+=('x86_64')
suboptions+=('')

build() {
	Fcross32_common_build ## 32bit
	Fcross32_delete_empty
        Fcross32_delete_static
        Fsplit "${subpkgs[0]}" /\*

	Fpatchall
	Fconf
	Fexec make CFLAGS="${CFLAGS} -fprofile-update=atomic -fprofile-dir=${Fsrcdir}/pgo -fprofile-generate=${Fsrcdir}/pgo -fprofile-partial-training" || Fdie
	Fexec make CFLAGS="${CFLAGS} -fprofile-update=atomic -fprofile-dir=${Fsrcdir}/pgo -fprofile-generate=${Fsrcdir}/pgo -fprofile-partial-training" -k check || Fdie
	Fexec make clean || Fdie
	Fexec make CFLAGS="${CFLAGS} -fprofile-use=${Fsrcdir}/pgo -fprofile-dir=${Fsrcdir}/pgo -fprofile-partial-training" || Fdie
	Fmakeinstall

	Fsplit $pkgname-static usr/lib/*.a
}
# optimization OK
