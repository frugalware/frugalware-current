# Compiling time: 0.03 SBU
# Maintainer: James Buren <ryuo@frugalware.org>
# Contributor: Miklos Vajna <vmiklos@frugalware.org>
# Modified by Laszlo Dvornik <dvornik@gnome.hu>


USE_ASM=${USE_ASM:-"n"}

pkgname=zlib
pkgver=1.2.13
pkgrel=1
pkgdesc="A compression/decompression library"
url="http://www.zlib.net/"
depends=('glibc>=2.35')
makedepends=('glibc-devel>=2.35' 'gcc>=12.2')
groups=('base' 'chroot-core')
archs=('x86_64')
up2date="lynx -dump http://www.zlib.net/ | grep -m 1 'zlib source code' | cut -d ' ' -f 16 | tr -d ,"
source=(http://www.zlib.net/$pkgname-$pkgver.tar.xz)
sha1sums=('b459b42aa533968ae403c0002a255d62d3136954')
options+=('static' 'ofast' )
Finclude cross32
_Fbuild_no_patch=yes

subpkgs=("lib32-${pkgname}")
subdescs=("$pkgdesc ( 32bit )")
subdepends=("${depends[@]}")
subgroups=('lib32-extra')
subarchs=('x86_64')
suboptions=('force')

subpkgs+=("${pkgname}-static")
subdescs+=("Static files for $pkgname")
subdepends+=('')
subgroups+=('devel-extra')
subarchs+=('x86_64')
suboptions+=('')

build()
{
	CFLAGS+=" -fPIC"
	Fcd
	Fpatchall

	if Fuse ASM; then
		CFLAGS="$CFLAGS -DASMV"
                MAKEFLAGS="$MAKEFLAGS OBJA=match.o PIC_OBJA=match.lo"
	fi

	## 32-bit
	Fcross32_prepare

	F32confopts=" \
			--prefix=/usr \
			--libdir=/usr/lib32"

	Fconf --shared $F32confopts
	Fexec make $MAKEFLAGS || Fdie
	Fmakeinstall

	Fexec cd contrib/minizip || Fdie
	Fautoreconf
	Fbuild $F32confopts

	Fcross32_delete_empty
	Frm usr/{include,share}

	Fsplit "lib32-zlib" /\*

	Fexec make distclean || Fdie
	Fexec cd ../../ || Fdie
	Fexec make distclean || Fdie
	Fcross32_reset_and_fix

	## 64-bit
	Fconfopts=" \
			--prefix=/usr \
			--libdir=/usr/lib"

	Fexec cp contrib/gcc_gvmat64/gvmat64.S match.S || Fdie
	Fconf --shared
	Fexec make $MAKEFLAGS || Fdie
	Fmakeinstall

	Fexec cd contrib/minizip || Fdie
	Fautoreconf
	Fbuild

	Fsplit ${pkgname}-static usr/lib/*.a

}

# optimization OK
