pkgname=zstd
pkgver=1.4.0
pkgrel=2
pkgdesc='Zstandard - Fast real-time compression algorithm'
archs=('x86_64')
groups=('base')
depends=('zlib>=1.2.11-13' 'xz>=5.2.4-2' 'lz4>=1.9.1-2')
_F_github_author="facebook"
_F_github_tag_v=y
Finclude github
url='http://www.zstd.net/'
sha1sums=('e84134317de0129a651784a558338398f8910c49')
_F_make_opts+=" PREFIX=/usr"
options+=('ldgold')

# optimization OK

build() {
	Fbuild
	Fexec make -C contrib/pzstd || Fdie
	Fexerel contrib/pzstd/pzstd usr/bin/pzstd
}
