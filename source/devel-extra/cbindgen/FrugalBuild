pkgname=cbindgen
pkgver=0.7.1
pkgrel=1
pkgdesc="A project for generating C bindings from Rust code."
depends=('libgcc')
makedepends=('cargo')
groups=('devel-extra')
archs=('x86_64')
_F_github_author="eqrion"
_F_github_tag_v="y"
Finclude github
sha1sums=('0d88bf7ee68a14c7ebd3daee9fc6c822c4818081')


build() {

	Fcd
	Fexec cargo build --release || Fdie
	Fexec cargo install --root $Fdestdir/usr || Fdie
	## why to hell they install that in that PATH!!
	Frm usr/.crates.toml
}
# optimization OK
