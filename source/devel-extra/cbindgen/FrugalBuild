pkgname=cbindgen
pkgver=0.9.0
pkgrel=1
pkgdesc="A project for generating C bindings from Rust code."
depends=('libgcc')
makedepends=('cargo')
groups=('devel-extra')
archs=('x86_64')
_F_github_author="eqrion"
_F_github_tag_v="y"
Finclude github
sha1sums=('273e3e46f088d0358a497f08f2ac1d631b0fcb6f')


build() {

	Fcd
	Fexec cargo build --release || Fdie
	Fexec cargo install --root $Fdestdir/usr || Fdie
	## why to hell they install that in that PATH!!
	Frm usr/.crates.toml
}
# optimization OK
