pkgname=cbindgen
pkgver=0.25.0
pkgrel=1
pkgdesc="A project for generating C bindings from Rust code."
depends=('libgcc>=13.2')
makedepends=('rust')
groups=('devel-extra')
archs=('x86_64')
_F_github_author="eqrion"
_F_github_tag_v="y"
Finclude github
sha1sums=('138f01eaceda8ed1d70e5436e0cba25ea0a1dc76')


build() {

	Fcd
	Fexec cargo fetch --locked || Fdie
	Fexec cargo build --release --frozen || Fdie
	Finstallrel 0755 target/release/cbindgen usr/bin/cbindgen
}
# optimization OK
