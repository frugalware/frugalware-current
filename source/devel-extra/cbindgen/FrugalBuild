pkgname=cbindgen
pkgver=0.8.3
pkgrel=1
pkgdesc="A project for generating C bindings from Rust code."
depends=('libgcc')
makedepends=('cargo')
groups=('devel-extra')
archs=('x86_64')
_F_github_author="eqrion"
_F_github_tag_v="y"
Finclude github
sha1sums=('5199a9e3f88946feefb404c9a3e8b1d79d98c92a')


build() {

	Fcd
	Fexec cargo build --release || Fdie
	Fexec cargo install --root $Fdestdir/usr || Fdie
	## why to hell they install that in that PATH!!
	Frm usr/.crates.toml
}
# optimization OK
