pkgname=cbindgen
pkgver=0.6.6
pkgrel=1
pkgdesc="A project for generating C bindings from Rust code."
depends=('libgcc')
makedepends=('cargo')
groups=('devel-extra')
archs=('x86_64')
_F_github_author="eqrion"
_F_github_tag_v="y"
Finclude github
sha1sums=('90c1d29ede3a464085bd0d1d8ca142095c4886b7')


build() {

	Fcd
	Fexec cargo build --release || Fdie
	Fexec cargo install --root $Fdestdir/usr || Fdie
	## why to hell they install that in that PATH!!
	Frm usr/.crates.toml
}
# optimization OK
