pkgname=cbindgen
pkgver=0.8.6
pkgrel=1
pkgdesc="A project for generating C bindings from Rust code."
depends=('libgcc')
makedepends=('cargo')
groups=('devel-extra')
archs=('x86_64')
_F_github_author="eqrion"
_F_github_tag_v="y"
Finclude github
sha1sums=('eaab56ffd8ee4f1d023a1b9234834ec6ca8f5628')


build() {

	Fcd
	Fexec cargo build --release || Fdie
	Fexec cargo install --root $Fdestdir/usr || Fdie
	## why to hell they install that in that PATH!!
	Frm usr/.crates.toml
}
# optimization OK
