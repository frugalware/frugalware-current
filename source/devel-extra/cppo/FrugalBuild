# Compiling Time: 0.06 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=cppo
pkgver=1.6.8
pkgrel=1
pkgdesc='An equivalent of the C preprocessor for OCaml programs'
archs=('x86_64')
groups=('devel-extra')
depends=('ocaml>=4.13.1')
makedepends=('dune' 'ocaml-static' 'ocaml-compiler-libs' 'ocamlbuild' 'ocaml-findlib')
_F_github_author=ocaml-community
_F_github_tag_v=y
Finclude github
sha1sums=('830ebd12e8b41f5c5330c1bc50b4c7952a4f8a3c')

build() {
	Fcd
	Fpatchall
	Fmake
	DESTDIR="${Fdestdir}" dune install --prefix "/usr" --libdir "lib/ocaml"
}

# optimization OK
