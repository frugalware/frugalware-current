# Compiling Time: 0.01 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=docker-compose
pkgver=2.10.2
pkgrel=1
pkgdesc="Fast, isolated development environments using Docker"
archs=('x86_64')
depends=('glibc>=2.35')
makedepends=('go' 'git')
rodepends=('docker')
groups=('devel-extra')
url="https://www.docker.com/"
_F_github_author=docker
_F_github_name=compose
_F_archive_grepv="rc2\|rc1\|rc3\|rc4"
_F_github_tag_v=y
Finclude github
sha1sums=('4a30fd931e17d5d1e78e3e1bb99dd0ae51f6f032')
_F_cd_path="compose-$pkgver"

build(){
	export GIT_TAG="v$pkgver"
	Fcd
	Fmake
	Finstallrel 755 bin/build/docker-compose usr/lib/docker/cli-plugins/docker-compose
	Fln /usr/lib/docker/cli-plugins/docker-compose usr/bin/docker-compose
}

# optimization OK
