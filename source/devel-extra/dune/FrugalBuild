# Compiling Time: 0 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=dune
pkgver=3.0.3
pkgrel=3
pkgdesc="A composable build system for OCaml (formerly jbuilder)"
archs=('x86_64')
groups=('devel-extra')
depends=('glibc>=2.34')
makedepends=('ocaml-findlib' 'ocaml-static')
_F_github_author=ocaml
_F_github_grepv="draft\|beta\|alpha"
Finclude github
source=("https://github.com/ocaml/dune/archive/${pkgver}.tar.gz")
up2date="$up2date | sed s/+$pkgextraver//"
sha1sums=('5a00b5d593bedf67665f19b60ab11c6db5599475')
_F_cd_path="$pkgname-$pkgver"
Fconfopts="	--libdir /usr/lib/ocaml"

build() {
	Fcd
	Fpatchall
	Fconf

	Fexec make dune.exe || Fdie

	Fexec  ./dune.exe build -p "dune,dune-action-plugin,dune-build-info,dune-configurator,dune-glob,dune-private-libs,dune-site,dyn,stdune,ordering,xdg,fiber" --profile dune-bootstrap
	Fmkdir usr/lib/ocaml

	for pkg in "dune dune-action-plugin dune-build-info dune-configurator dune-glob dune-private-libs dune-site dyn stdune ordering xdg fiber"
	do
		Fexec ./dune.exe install $pkg --destdir="$Fdestdir" --prefix=/usr --libdir="$(ocamlfind printconf destdir)" || Fdie
	done

	Fmv usr/{doc,share/}
	Fmv usr/{man,share/}

}

# optimization OK
