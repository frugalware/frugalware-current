pkgname=grpc
pkgver=1.57.0
pkgrel=1
pkgdesc="High performance, open source, general RPC framework that puts mobile and HTTP/2 first."
archs=('x86_64')
groups=('devel-extra')
url='https://grpc.io'
depends=('openssl>=3.1.0' 'c-ares' 'protobuf>=24.2' 're2')
makedepends=('re2-static' 'systemd-devel' 'protobuf-static')
_F_github_tag_v=yes
_F_github_grepv="pre\|1.47\|1.46\|1.51"
_F_cmake_confopts="	-DgRPC_BUILD_CSHARP_EXT=OFF \
			-DgRPC_BUILD_TESTS=OFF \
			-DgRPC_BUILD_GRPC_CSHARP_PLUGIN=OFF \
			-DgRPC_BUILD_GRPC_OBJECTIVE_C_PLUGIN=OFF \
			-DgRPC_RE2_PROVIDER=package \
			-DgRPC_CARES_PROVIDER=package \
			-DgRPC_PROTOBUF_PROVIDER=package \
			-DgRPC_SSL_PROVIDER=package \
			-DgRPC_ZLIB_PROVIDER=package \
			-DBUILD_SHARED_LIBS=ON \
			-DgRPC_ABSL_PROVIDER=package \
			-DCMAKE_CXX_STANDARD=17 \
			-DCMAKE_POSITION_INDEPENDENT_CODE=ON"

Finclude github cmake
source+=(grpc-1.57.0-fix-cmake.patch)
sha1sums=('2f79ee87d0cbbe315b9b9734acc4d1df1c5a1121' \
          'e059c21c6a72e64c9d4e4a0747c3372d943e4a9f')

build() {
	Fcd

	export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:$Fsrcdir/$_F_cd_path/frugalware_cmake_build"
	Fexec mkdir -p third_party/opencensus-proto/src || Fdie
	CMake_build
}

# optimization OK
