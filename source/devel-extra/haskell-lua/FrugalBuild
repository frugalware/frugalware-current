pkgname=haskell-lua
pkgver=2.2.0
pkgrel=1
pkgdesc="Lua, an embeddable scripting language"
groups=('devel-extra')
archs=('x86_64')
depends=('ghc>=9.2.1' 'lua')
makedepends=('uusi')
_F_haskell_setup="Setup.hs"
Finclude haskell
sha1sums=('58af6d61d197eb83a421fca29a27b965c0d11ab8')
_F_haskell_confopts=" --ghc --prefix=/usr --libsubdir=\$compiler/site-local/\$pkgid -f system-lua"

build() {
        Fcd
        Fexec gen-setup || Fdie
        Fbuild_haskell
}

# optimization OK
