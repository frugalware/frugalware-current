# Compiling Time: 0.02 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=haskell-only
pkgver=0.0.6.0
pkgrel=1
pkgdesc='The 1-tuple type or single-value "collection"'
groups=('devel-extra')
archs=('x86_64')
depends=('haskell-regex-compat')
_F_haskell_setup="Setup.hs"
Finclude haskell
source+=(build.patch)
sha1sums=('346d33d3782e226d43f7dc36a77ee4ea6222ce1b' \
          'db7388950c162c48aa7fe1763ab9352088d3b20c')

Fbuild_haskell() {
  Fcd
  Fpatchall
  Fexec runhaskell $_F_haskell_setup configure $_F_haskell_confopts || Fdie
  Fexec runhaskell $_F_haskell_setup haddock || Fdie
  Fexec runhaskell $_F_haskell_setup build || Fdie
  Fexec runhaskell $_F_haskell_setup copy --destdir=$Fdestdir
}

# optimization OK
