# Compiling Time: 0.1 SBU
# Maintainer: AlexExtreme <alex@alex-smith.me.uk>

pkgname=iasl
_F_archive_name=acpica-unix
pkgver=20061109
pkgrel=1
pkgdesc="Intel ACPI Source Language (ASL) compiler"
url="http://www.intel.com/technology/iapc/acpi/"
license="iASL"
depends=('glibc' 'bison' 'flex')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://developer.intel.com/technology/iapc/acpi/license2.htm | Flasttar"
source=(http://developer.intel.com/technology/iapc/acpi/downloads/$_F_archive_name-$pkgver.tar.gz \
	iasl_segfault.patch)
sha1sums=('98540d982172286674d904f98ac1b5e13b59d455' \
	  '1c6b2228a3bbef14f6afab33fc13a3832e50e300')
unset MAKEFLAGS

build() {
	Fcd
	Fpatchall
	make -C compiler CFLAGS="${CFLAGS}" || Fdie
	Fmkdir /usr/bin
	Fexerel compiler/iasl /usr/bin/iasl
}

# optimization OK
