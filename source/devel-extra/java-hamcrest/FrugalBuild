# Compiling Time: 0.09 SBU
# Maintainer: Miklos Vajna <vmiklos@frugalware.org>

pkgname=java-hamcrest
pkgver=1.3
pkgrel=2
pkgdesc="Library of matchers for building test expressions."
Finclude openjava googlecode
up2date="$pkgver"
depends=()
groups=('devel-extra')
archs=('i686' 'x86_64')
source=(https://hamcrest.googlecode.com/files/hamcrest-core-${pkgver}.jar \
	https://hamcrest.googlecode.com/files/hamcrest-library-${pkgver}.jar \
	https://hamcrest.googlecode.com/files/hamcrest-generator-${pkgver}.jar \
	https://hamcrest.googlecode.com/files/hamcrest-integration-${pkgver}.jar)
sha1sums=('42a25dc3219429f0e5d060061f71acb49bf010a0' \
          '4785a3c21320980282f9f33d0d1264a69040538f' \
          'ac921a8dae5c747ed933c1a44fe1b5a95f1f12dc' \
          '5de0c73fef18917cd85d0ab70bb23818685e4dfd')

options+=('nostrip')
replaces=('hamcrest')
provides=('hamcrest')

build() {

	Fmkdir usr/share/java/hamcrest
	cp -v $Fsrcdir/*jar $Fdestdir/usr/share/java/hamcrest

	local i
	for i in hamcrest-core hamcrest-core hamcrest-generator hamcrest-integration; do
		Fln ${i}-$pkgver.jar /usr/share/java/hamcrest/${i}.jar
	done
}

