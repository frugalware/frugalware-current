# Compiling Time: 20 SBU
# Maintainer: Melko <melko@frugalware.org>


pkgname=julia
pkgver=1.9.2
pkgrel=1
pkgdesc="High-level, high-performance dynamic programming language for technical computing."
depends=('libgfortran' 'gmp' 'fftw' 'libgit2>=0.25.0' 'zlib>=1.2.12' 'mbedtls' 'libunwind' \
	'pcre2' 'lapack' 'utf8proc' '7zip' 'openblas' 'libatomic' 'suitesparse')
makedepends=('gcc-gfortran' 'git' 'cmake' 'patchelf' )
groups=('devel-extra')
archs=('x86_64')
_F_github_tag_v="y"
_F_github_author="JuliaLang"
_F_gnome_iconcache="y"
_F_github_grepv="rc6\|rc5\|rc4\|rc3\|rc2\|rc1\|1.0\|beta\|1.6\|alpha"
Finclude github
sha1sums=('d24cc10836a98b97c4126f5a8e6a27b0109b82d7')
options=('nolto')

build() {

	Fcd
	Fpatchall

	_opts=(prefix=$Fprefix sysconfdir=/etc \
		MARCH=x86-64 \
		JULIA_BUILD_MODE=release \
		JULIA_PRECOMPILE=0 \
		USE_SYSTEM_BLAS=1 \
		USE_SYSTEM_CSL=1 \
		USE_SYSTEM_CURL=1 \
		USE_SYSTEM_DSFMT=0 \
		USE_SYSTEM_GMP=1 \
		USE_SYSTEM_LAPACK=1 \
		USE_SYSTEM_LIBBLASTRAMPOLINE=0 \
		USE_SYSTEM_LIBGIT2=1 \
		USE_SYSTEM_LIBM=0 \
		USE_SYSTEM_LIBSSH2=1 \
		USE_SYSTEM_LIBSUITESPARSE=1 \
		USE_SYSTEM_LIBUNWIND=1 \
		USE_SYSTEM_LIBUV=0 \
		USE_SYSTEM_LLVM=0 \
		USE_SYSTEM_MBEDTLS=1 \
		USE_SYSTEM_MPFR=1 \
		USE_SYSTEM_NGHTTP2=1 \
		USE_SYSTEM_OPENLIBM=0 \
		USE_SYSTEM_PCRE=1 \
		USE_SYSTEM_ZLIB=1)

	Fexec make ${_opts[@]} || Fdie
	Fexec make  DESTDIR=$Fdestdir ${_opts[@]} install || Fdie

	Fmkdir etc/ld.so.conf.d

	echo /usr/lib/julia/ >> "$Fdestdir/etc/ld.so.conf.d/julia.conf" || Fdie

	# empty
	Frm usr/libexec/
}

# optimization OK
