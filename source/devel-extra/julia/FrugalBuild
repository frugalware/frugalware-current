# Compiling Time: 20 SBU
# Maintainer: Melko <melko@frugalware.org>


## NOTE you need add -P flag to makepkg to build this package
pkgname=julia
pkgver=1.3.0
pkgrel=1
pkgdesc="High-level, high-performance dynamic programming language for technical computing."
depends=('libgfortran' 'gmp' 'fftw' 'libgit2>=0.25.0' 'libunwind' 'pcre2' 'lapack' 'utf8proc' '7zip')
makedepends=('gcc-gfortran' 'git' 'cmake')
groups=('devel-extra')
archs=('x86_64')
_F_github_tag_v="y"
_F_github_author="JuliaLang"
_F_gnome_iconcache="y"
_F_github_grepv="rc6\|rc5\|rc4\|rc3\|rc2\|1.0"
Finclude github
source=(https://github.com/JuliaLang/$pkgname/releases/download/v$pkgver/$pkgname-$pkgver-full.tar.gz \
	libunwind-version.patch)
sha1sums=('79420574a37a2d843a915bf2e7d6441157aba7bc' \
          '5947ec03aa8f67a7bb2639dde6b86bafec76bcce')

options=('nolto')

build() {

	Fcd
	Fpatchall

	_opts=(prefix=$Fprefix sysconfdir=/etc \
		MARCH=x86-64 \
		JULIA_BUILD_MODE=release \
		JULIA_PRECOMPILE=0 \
		USE_SYSTEM_FFTW=1 \
		USE_SYSTEM_BLAS=0 \
		USE_SYSTEM_LAPACK=1 \
		USE_SYSTEM_LIBUNWIND=1 \
		USE_SYSTEM_LLVM=0 \
		USE_SYSTEM_READLINE=1 \
		USE_SYSTEM_PCRE=1 \
		USE_SYSTEM_LIBM=0 \
		USE_SYSTEM_GMP=1 \
		USE_SYSTEM_LIBGIT2=1 \
		USE_SYSTEM_LIBUNWIND=1 \
		USE_SYSTEM_MPFR=1 \
		USE_SYSTEM_ZLIB=1 \
		USE_SYSTEM_P7ZIP=1 \
		USE_INTEL_MKL=0 \
		USE_SYSTEM_PATCHELF=1 \
		USE_LLVM_SHLIB=1)

	Fexec make ${_opts[@]} || Fdie
	Fexec make  DESTDIR=$Fdestdir ${_opts[@]} install || Fdie

	# empty
	Frm usr/libexec/
}

# optimization OK
