pkgname=lessc
pkgver=4.2.0
pkgrel=1
pkgdesc="A standalone compiler for the LESS CSS language."
url="http://lesscss.org/"
groups=('devel-extra')
depends=('glibc')
makedepends=('nodejs')
archs=('x86_64')
_F_github_author=less
_F_github_name=less.js
_F_github_tag_v=y
Finclude github
sha1sums=('cbefbfaa14a4cd388e2099b2b51f956e1465c450')
source=("https://registry.npmjs.org/less/-/less-$pkgver.tgz")

build() {
    npm install -g --prefix "$Fdestdir"/usr "$Fsrcdir"/less-$pkgver.tgz
}

# optimization OK
