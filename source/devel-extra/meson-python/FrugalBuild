# Compiling Time: 0.01 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=meson-python
pkgver=0.14.0
pkgrel=1
pkgdesc='Meson PEP 517 Python build backend'
archs=('x86_64')
groups=('devel-extra')
depends=('meson' 'patchelf' 'python3-wheel' 'python3-pyproject-metadata')
makedepends=('python3-build' 'python3-installer' 'ninja')
_F_github_author="mesonbuild"
_F_github_tag=y
Finclude github
sha1sums=('fd5869f8716fbc8bd4e1d8143c943aaf6f930511')

build() {
	Fcd
	Fpatchall
  	Fexec python3 -m build --wheel --no-isolation || Fdie
 	Fexec python3 -m installer --destdir="$Fdestdir" dist/*.whl || Fdie
}


# optimization OK
