# Compiling Time: 3.94 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=nodejs
pkgver=18.15.0
pkgrel=2
pkgdesc='Evented I/O for V8 javascript'
archs=('x86_64')
url='https://nodejs.org/'
license=('MIT')
groups=('devel-extra')
depends=('zlib' 'c-ares' 'nghttp2' 'openssl' 'icu4c')
makedepends=('ca-certificates' 'mold')
source=(http://nodejs.org/dist/v${pkgver}/node-v${pkgver}.tar.gz \
	ares_compat.patch )
sha1sums=('0c85fdd6474a4623b589df7bf8fe26e926b88e22' \
          'e9ebef1ff71573861daf3b2a8b050599d275907d')
_F_archive_name="node"
Fpkgversep="-v"
_F_archive_grepv="x64\|linux\|ppc"
up2date="Flasttar $url/en/download"
Fconfopts="	--prefix=/usr \
		--with-intl=system-icu \
		--shared-zlib \
		--shared-cares \
		--shared-openssl \
		--openssl-use-def-ca-store \
		--enable-lto \
    		--shared-nghttp2"
_F_conf_notry="build"

options=('static' 'nolto')

build() {
	export GYP_DEFINES="linux_use_gold_flags=0 linux_use_bundled_binutils=0 linux_use_bundled_gold=0"
	# use mold

	export LDFLAGS="-fuse-ld=mold $LDFLAGS"
	Fbuild
}

# optimization OK
