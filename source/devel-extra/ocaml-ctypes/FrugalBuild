# Compiling Time: 0.06 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=ocaml-ctypes
pkgver=0.21.1
pkgrel=1
pkgdesc='Library for binding to C libraries using pure OCaml'
archs=('x86_64')
license=('custom')
depends=('ocaml>=5.0' 'libffi>=3.4' 'ocaml-integers>=0.3.0-4' 'ocaml-bigarray-compat')
makedepends=('dune' 'ocaml-static' 'ocaml-compiler-libs')
options=('nostrip')
groups=('devel-extra')
_F_github_author="ocamllabs"
_F_github_name="$pkgname"
_F_github_tag="y"
Finclude github
options=('nostrip')
sha1sums=('0116bff3411c5aa4c0f097b475a2e95403d73552')

build() {
	Fcd
	Fpatchall

	Fexec dune build --release --verbose || Fdie
	DESTDIR="$Fdestdir" dune install --prefix '/usr' --libdir '/usr/lib/ocaml'
}

# optimization OK
