# Compiling Time: 0.06 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=ocaml-integers
pkgver=0.3.0
pkgrel=4
pkgdesc='Library for binding to C libraries using pure OCaml'
archs=('x86_64')
groups=('devel-extra')
options=('nostrip')
depends=('ocaml>=4.10.0')
makedepends=('ocamlbuild' 'dune' 'opam' 'ocaml-findlib')
_F_github_author="ocamllabs"
_F_github_tag=yes
Finclude github
sha1sums=('65ed71a3ee5bd0017645a6e1b15c583f38b64e5d')

build() {
	Fcd
	Fpatchall

	Fexec dune build --profile release || Fdie
	Fexec opam-installer	--prefix="${Fdestdir}/usr" \
				--stubsdir="${Fdestdir}$(ocamlc -where)/stublibs" \
				--libdir="${Fdestdir}$(ocamlc -where)" _build/default/integers.install || Fdie


}

# optimization OK
