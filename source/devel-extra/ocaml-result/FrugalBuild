# Compiling Time: 0.06 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=ocaml-result
pkgver=1.4
pkgrel=1
pkgdesc='Compatibility Result module'
archs=('x86_64')
groups=('devel-extra')
depends=('ocaml>=4.06.0')
makedepends=('opam' 'dune' 'ocaml-findlib')
_F_github_name="result"
_F_github_author="janestreet"
_F_github_tag=yes
Finclude github
sha1sums=('c4e8ddaae7bdaac02afe2fe08f333f753fa29460')
_F_cd_path="result-$pkgver"

build() {
	Fcd

	Fexec jbuilder build || Fdie
	Fexec jbuilder install --prefix "${Fdestdir}/usr" \
		--libdir "${Fdestdir}$(ocamlfind printconf destdir)" || Fdie

}

