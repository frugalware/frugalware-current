pkgname=ocaml
pkgver=4.09.0
pkgrel=1
pkgdesc="Caml is a general-purpose programming language, designed with program safety and reliability in mind."
url="http://www.ocaml.org"
depends=('libxml2>=2.9.4-2' 'gdbm>=1.11-2' 'binutils>=2.32-6' 'ncurses>=6.0-18')
makedepends=('tk>=8.6.8' 'x11-protos')
groups=('devel-extra')
archs=('x86_64')
_F_github_grepv="beta"
_F_github_tag=y
Finclude github
sha1sums=('6639bc23c7e334e869d86ca52d0b5817fd095089')
options=('static')
_F_conf_notry="man\|host\|prefix"
Fconfopts="	-prefix /usr \
                -bindir /usr/bin \
                -libdir /usr/lib/ocaml \
                -mandir /usr/share/man \
                --with-pthread"
subpkgs+=("ocaml-static")
subdescs+=('Caml libraries statically linked.')
subdepends+=('')
subrodepends+=('')
subgroups+=('devel-extra')
subarchs+=('x86_64')

build() {
	Fcd
    	unset MAKEFLAGS

	Fconf
    	Fsed "\(BYTECCCOMPOPTS=.*\)" "\1 ${CFLAGS}" config/Makefile
	Fsed "\(NATIVECCCOMPOPTS=.*\)" "\1 ${CFLAGS}" config/Makefile
	Fexec make world || Fdie
	Fexec make opt || Fdie
	Fexec make opt.opt || Fdie

	Fmakeinstall


	Fsplit ocaml-static usr/lib/ocaml/*.a

}

# optimization OK
