pkgname=perl-gtk2-gladexml
pkgver=1.005
pkgrel=1
pkgdesc="Create user interfaces directly from Glade XML files."
url="http://www.cpan.org/"
depends=('perl-gtk2' 'libglade')
makedepends=('perl-extutils-depends' 'perl-extutils-pkgconfig')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://search.cpan.org/search?query=gtk2%3A%3Agladexml&mode=all'|grep XML-|sed -n 's/.*XML-\([^ ]*\) -.*/\1/;1 p'"
source=(http://search.cpan.org/CPAN/authors/id/T/TS/TSCH/Gtk2-GladeXML-$pkgver.tar.gz)
sha1sums=('c28c7b9b5514ab3fe1b7fc5e7e6f5f99780fc7a4')

build() {
	cd $startdir/src/Gtk2-GladeXML-$pkgver
	perl Makefile.PL
	
	make test
	make || return 1
	
	make install DESTDIR=$startdir/pkg
	mv $startdir/pkg/usr/lib/perl5/site_perl/?.?.? $startdir/pkg/usr/lib/perl5/site_perl/current
	rm -rf $startdir/pkg/usr/lib/perl5/?.?.?
	find $startdir/pkg/usr/lib/perl5/site_perl/current/ -name .packlist -exec rm {} \;
}
