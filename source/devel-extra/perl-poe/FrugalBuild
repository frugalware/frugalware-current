# Compiling Time: ~0.25 SBU
# Maintainer: Zsolt Szalai <xbit@frugalware.org>

pkgname=perl-poe
pkgver=0.9999
pkgrel=1
pkgdesc="portable multitasking and networking framework for Perl"
_F_perl_name=POE
_F_perl_author=R/RC/RCAPUTO
Finclude perl
url="http://poe.perl.org/"
makedepends=('perl')
depends=('perl')
groups=('devel-extra')
archs=('i686' 'x86_64')

build() {
	Fcd POE-$pkgver
	Fconf --default
	
	make test
	make || return 1
	
	Fmakeinstall	
}
sha1sums=('541de21c56b8458b740d282fad804ed57903cc6d')
