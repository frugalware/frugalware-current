# Compiling Time: ~0.01 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=perl-unix-syslog
pkgver=0.100
pkgrel=1
pkgdesc="Perl interface to the UNIX syslog(3) calls"
url="http://cpan.org/"
makedepends=('perl')
depends=('perl')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://search.cpan.org/~mharnisch/' |grep 'Unix-Syslog-' |sed 's/.*log-\(.*\) P.*/\1/;1 q'"
source=(http://search.cpan.org/CPAN/authors/id/M/MH/MHARNISCH/Unix-Syslog-$pkgver.tar.gz)
sha1sums=('adc108db0bc2cb7297b7966e528246f95ecd3f4f')

build() {
	cd $startdir/src/Unix-Syslog-$pkgver
	perl Makefile.PL
	
	make test
	make || return 1
	
	make install DESTDIR=$startdir/pkg
	mv $startdir/pkg/usr/lib/perl5/site_perl/?.?.? \
		$startdir/pkg/usr/lib/perl5/site_perl/current
	rm -rf $startdir/pkg/usr/lib/perl5/?.?.?
	find $startdir/pkg/usr/lib/perl5/site_perl/current/ -name .packlist -exec rm {} \;
}

# optimalization OK

# vim: ft=sh
