_F_pecl_name="pdo"
pkgver=1.0.3
pkgdesc="provides a uniform data access interface"
depends=('php>=5.2.6')
Finclude pecl
pkgrel=1
archs=('i686' 'x86_64')
sha1sums=('93f627b4b3fc053d8a00042217fc6bf3666c170c')
up2date="lynx -dump http://pecl.php.net/package/$_F_pecl_name |grep -m1 '[0-9.]\{3,\}\.tgz$'|sed 's/.*-\(.*\)\.t.*/\1/'"

build() {
	Fcd PDO-$pkgver
	Fbuildpecl
}

# optimization OK
