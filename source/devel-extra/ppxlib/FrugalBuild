# Compiling Time: 0.06 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=ppxlib
pkgver=0.30.0
pkgrel=1
pkgdesc='Standard infrastructure for ppx rewriters'
archs=('x86_64')
groups=('devel-extra')
depends=('ppx_derivers' 'sexplib0' 'ocaml-stdlib-shims')
makedepends=('dune' 'ocaml-compiler-libs-repackaged' 'ocaml-static')
_F_github_author="ocaml-ppx"
_F_github_tag=yes
Finclude github
sha1sums=('a7778490bad165709f0492ca5b9f29d2b097c86e')

build() {
	Fcd
	Fpatchall

	Fexec dune build --release --verbose || Fdie
	DESTDIR="$Fdestdir" dune install --prefix '/usr' --libdir '/usr/lib/ocaml'
}

# optimization OK
