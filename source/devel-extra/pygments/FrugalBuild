pkgrel=1
pkgdesc="Pygments is a fast syntax highlighter written in Python with a special focus on details."
depends=('python')
makedepends=('epydoc' 'setuptools')
groups=('devel-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
url="http://pygments.pocoo.org/"
