# Contributor: enda <enda@netou.com>

pkgname=pyro
pkgver=3.5
pkgrel=2
pkgdesc="PYthon Remote Objects is an advanced and powerful Distributed Object Technology system"
depends=('python>=2.5')
groups=('devel-extra')
archs=('i686' 'x86_64')
Finclude sourceforge python
up2date="lynx -dump 'http://pyro.sourceforge.net/download.html' |grep 'Pyro version '| sed 's/.*is \(.*\) (.*/\1/'"
source=(${source/pyro-/Pyro-} \
	setup.cfg \
	README.Frugalware \
	README.Frugalware.fr)

build()
{
	Fcd Pyro-$pkgver
	# use a custom setup.cfg (bin files goes to $_F_python_libdir/Pyro/bin/)
	mv ../setup.cfg ./
	Fsed '$ver' "$_F_python_ver" setup.cfg
	Fbuild
	Fdoc README.Frugalware
}

sha1sums=('b7ddbc4ff1e54573a60f3f724ac122b04b3716f3' \
	  '07f873c214c03d301d242a9db896bd2e7d2596a3' \
	  '5e04939c3d608ced59ffc630b6902eefb9f6ed4c' \
	  'a595ab61ad94510ef6f7bc12f1b7371281793825')
