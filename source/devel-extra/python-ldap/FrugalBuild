pkgname=python-ldap
pkgver=2.2.0
pkgrel=1
pkgdesc="This is a python module to access an LDAP server"
groups=('devel-extra')
archs=('i686' 'x86_64')
depends=('python' 'openldap')
Finclude sourceforge
source=(${source[@]} setup.cfg)
sha1sums=('bc25275af4690b7438728787bd429e249e428260' \
	  '43d1d1684b3a4b12d3ae820cd34c6542aa0936b3')

build() {
	Fcd
	cp -f $Fsrcdir/setup.cfg setup.cfg
	Fmake
	Fmakeinstall
}

# optimalization OK
