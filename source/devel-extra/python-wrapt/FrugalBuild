pkgname=python-wrapt
pkgver=1.14.1
pkgrel=2
pkgdesc="A Python module for decorators, wrappers and monkey patching"
depends=('python')
makedepends=('python2-setuptools' 'python3-setuptools')
groups=('devel-extra')
archs=('x86_64')
_F_python_version=python3
_F_pypi_name="wrapt"
Finclude pypi
sha1sums=('034e42e256e9e9ea1cd8ee8b2d75ee81ae9b1c44')

subpkgs=("python3-wrapt")
subdescs=('A Python 3 module for decorators, wrappers and monkey patching')
subdepends=('python3>=3.11')
subrodepends=('')
subgroups=('devel')
subarchs=('x86_64')


build() {
	Fcd
	#Python3
	Fexec python3 setup.py install --root=$Fdestdir --optimize=1 || Fdie
	Fsplit python3-wrapt usr/lib

	#Python2
	Fexec python setup.py install --root=$Fdestdir --optimize=1 || Fdie
}

# optimization OK
