pkgname=python2-importlib-metadata
pkgver=1.5.0
pkgrel=3
pkgdesc="Read metadata from Python packages"
depends=('python')
makedepends=('python2-setuptools_scm' 'python3-setuptools_scm')
groups=('devel-extra')
archs=('x86_64')
_F_pypi_name=importlib_metadata
Finclude pypi
sha1sums=('6aea8fce3924a30a82315d517552ef4c39b7c9f8')

subpkgs=("python3-importlib-metadata")
subdescs=('Python 3 Read metadata from Python packages')
subdepends=('python3-zipp')
subgroups=('devel-extra')
subarchs=('x86_64')


build() {
        Fcd
        #Python3
        Fexec python3 setup.py install --root=$Fdestdir --optimize=1 || Fdie
        Fsplit python3-importlib-metadata usr/lib

        #Python2
        Fexec python setup.py install --root=$Fdestdir --optimize=1 || Fdie
}

# optimization OK
