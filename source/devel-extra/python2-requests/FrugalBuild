build() {
	#python3
	Fcd
        Fexec python3 setup.py install --root=$Fdestdir --optimize=1 || Fdie
        Fsplit python3-$_F_archive_name usr/lib
        #Python2
        Fexec python setup.py install --root=$Fdestdir --optimize=1 || Fdie
}

