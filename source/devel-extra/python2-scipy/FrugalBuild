Finclude github
sha1sums=('0ca8f5ca8498d071231d5c202bed3aaa79598b74')

build()
{
	unset LDFLAGS
  	CFLAGS+=" -fno-strict-aliasing"
	CXXFLAGS+=" -fno-strict-aliasing"
  	Fbuild
}

