pkgname=python2-setuptools_scm-git-archive
pkgver=1.4
pkgrel=1
pkgdesc="setuptools_scm plugin for git archives"
groups=('devel-extra')
depends=('python2-setuptools_scm')
archs=('x86_64')
_F_pypi_name="setuptools-scm-git-archive"
_F_archive_name="setuptools_scm_git_archive"
Finclude pypi

sha1sums=('5e893fcb35f9633ea1431138c1d90a5f2687b36d')

subpkgs=("python3-setuptools_scm-git-archive")
subdescs=('Python 3 setuptools_scm plugin for git archives')
subdepends=('python3-setuptools_scm')
subgroups=('devel-extra')
subarchs=('x86_64')


build() {
        Fcd
        #Python3
        Fexec python3 setup.py install --root=$Fdestdir --optimize=1 || Fdie
        Fsplit python3-setuptools_scm-git-archive usr/lib

	#Python2
        Fexec python setup.py install --root=$Fdestdir --optimize=1 || Fdie
}

# optimization OK
