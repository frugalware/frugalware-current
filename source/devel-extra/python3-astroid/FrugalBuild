pkgname=python3-astroid
pkgver=2.14.2
pkgrel=1
pkgdesc="Python Abstract Syntax Tree New Generation."
archs=('x86_64')
depends=('python3-six' 'python3-lazy-object-proxy' 'python3-wrapt')
makedepends=('python3-build' 'python3-installer' 'python3-setuptools' 'python3-wheel')
groups=('devel-extra')
_F_pypi_name="astroid"
Finclude python pypi
source+=(fix-depends.patch)
sha1sums=('8ef600065357ef9db539eae4784b6b4e24708ee6' \
          'b2e8101a57583add5a8613128178a09214e0cc07')
_F_python_version=python3

build() {
        Fcd
        Fpatchall
        Fexec python3 -m build --wheel --no-isolation || Fdie
        Fexec python3 -m installer --destdir="$Fdestdir" dist/*.whl || Fdie

}

# optimization OK
