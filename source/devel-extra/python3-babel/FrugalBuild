pkgname=python3-babel
pkgver=2.10.1
pkgrel=1
_core=41
pkgdesc="A collection of tools for internationalizing Python applications"
url="http://babel.edgewall.org"
depends=('python3>=3.10' 'python3-pytz')
makedepends=('python3-setuptools')
_F_archive_name="Sphinx"
options=('nostrip')
groups=('devel-extra')
archs=('x86_64')
_F_archive_name="Babel"
_F_pypi_name="Babel"
Finclude pypi
_F_cd_path="$_F_pypi_name-$pkgver"
source+=("http://unicode.org/Public/cldr/$_core/core.zip")
sha1sums=('89820a010c5fcd7e0ac77008a9c46ce2304b59a3' \
          '28c99b735e2d25eb58a433c9852c0d8e13cf67a0')

build() {

	Fcd
	Fexec mkdir cldr || Fdie
	Fexec mv ../core.zip cldr/cldr-core-$_core.zip || Fdie

	python3 setup.py import_cldr || Fdie
	python3 setup.py install --root=$Fdestdir || Fdie

}

# optimization OK
