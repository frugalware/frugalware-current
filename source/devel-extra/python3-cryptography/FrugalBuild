# Compiling Time: 0.13 SBU
# Maintainer: Michel Hermier <hermier@frugalware.org>

pkgname=python3-cryptography
pkgver=43.0.0
pkgrel=1
pkgdesc="Cryptography expose cryptographic recipes and primitives in a python module"
depends=('openssl>=3.1.0' 'python3>=3.11' 'python3-idna' 'python3-cffi' 'python3-asn1crypto' 'python3-six')
makedepends=('python3-installer' 'python3-build' 'python3-setuptools-rust' \
	'python3-wheel' 'python3-wheel' 'python3-maturin')
groups=('devel-extra')
archs=('x86_64')
_F_pypi_name="cryptography"
Finclude pypi
sha1sums=('37140feca2c57d271d51d11ef827e3875547c62e')
_F_python_version=python3
options=('nolto')

build() {
        Fcd
        Fpatchall
        Fexec python3 -m build --wheel --no-isolation || Fdie
        Fexec python3 -m installer --destdir="$Fdestdir" dist/*.whl || Fdie

}

# optimization OK
