# Compiling Time: 0.01 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=python3-editables
pkgver=0.3
pkgrel=2
pkgdesc="A Python library for creating editable wheels"
depends=('python3>=3.11')
makedepends=('python3-installer' 'python3-build' 'python3-setuptools' 'python3-wheel')
groups=('devel-extra')
archs=('x86_64')
_F_pypi_name=editables
Finclude pypi
sha1sums=('a99e0ba3d75e4f439b9742e65cbff24e0b8ce80e')

build() {
	Fcd
	Fpatchall
	Fexec python3 -m build --wheel --no-isolation || Fdie
	Fexec python3 -m installer --destdir="$Fdestdir/" dist/*.whl || Fdie

}


# optimization OK
