pkgname=python3-html5-parser
pkgver=0.4.11
pkgrel=1
pkgdesc="Fast C based HTML 5 parsing for python"
depends=('python3>=3.12' 'libxml2')
makedepends=('python3-setuptools')
groups=('devel-extra')
archs=('x86_64')
_F_pypi_name="html5-parser"
Finclude pypi
_F_cd_path="$_F_pypi_name-$pkgver"
sha1sums=('d2aec7784f427686be3932033c4e7053650c0b50')

build()	{
	Fcd
	Fexec python3 setup.py install --root="$Fdestdir" || Fdie
}

# optimization OK
