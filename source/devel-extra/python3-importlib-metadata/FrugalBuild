pkgname=python3-importlib-metadata
pkgver=4.11.2
pkgrel=1
pkgdesc="Read metadata from Python packages"
depends=('python3-zipp')
makedepends=('python3-setuptools_scm' 'pyproject2setuppy')
groups=('devel-extra')
archs=('x86_64')
_F_pypi_name=importlib_metadata
Finclude pypi
sha1sums=('4d1f08c9655bb44e9bd8aefdc938d7375e814b41')
_F_python_version=python3

build() {
	Fcd
	Fexec python3 -m pyproject2setuppy.main build || Fdie
	Fexec python3 -m pyproject2setuppy.main install --root="$Fdestdir" --optimize=1 || Fdie
}

# optimization OK
