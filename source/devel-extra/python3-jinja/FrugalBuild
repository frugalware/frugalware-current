pkgver=2.10.3
pkgrel=2
pkgdesc="A simple pythonic template language written in Python"
depends=('python3' 'python3-markupsafe')
makedepends=('python3-setuptools')
groups=('devel-extra')
archs=('x86_64')
_F_archive_name="Jinja2"
_F_pypi_name="Jinja2"
Finclude pypi
_F_cd_path="$_F_pypi_name-$pkgver"
sha1sums=('fbb6a03ad01b766d816650147d1fccfc145de9e0')

replaces=('python-jinja')
provides=('python-jinja')
conflicts=('python-jinja')

build()	{
	Fcd
	Fexec python3 setup.py install --root="$Fdestdir" -O1 || Fdie
}


