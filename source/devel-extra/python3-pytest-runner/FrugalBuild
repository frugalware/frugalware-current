pkgname=python3-pytest-runner
pkgver=6.0.0
pkgrel=4
pkgdesc="Invoke py.test as distutils command with dependency resolution"
depends=('python3>=3.11')
makedepends=('python3-setuptools_scm' 'pyproject2setuppy')
groups=('devel-extra')
archs=('x86_64')
sha1sums=('b13e48a67ea39890f3d05c8b185b6dfa3f6c1e10')
_F_pypi_name=pytest-runner
Finclude pypi
_F_python_version=python3

build() {
        Fcd
        Fexec python3 -m pyproject2setuppy.main build || Fdie
        Fexec python3 -m pyproject2setuppy.main install --root="$Fdestdir" --optimize=1 || Fdie
}

# optimization OK
