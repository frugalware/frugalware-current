_F_archive_name="scipy"
pkgname=python3-scipy
pkgver=1.10.1
pkgrel=1
pkgdesc="SciPy is open-source software for mathematics, science, and engineering."
depends=('pybind11' 'python3-numpy>=1.7.1' 'libcblas')
makedepends=('gcc-gfortran' 'python3-pythran' 'blas' 'lapack' \
	'python3-cython>=0.22' 'python3-numpy-static' 'python3-setuptools')
groups=('devel-extra')
archs=('x86_64')
_F_pypi_name=scipy
Finclude pypi
sha1sums=('ff83163396a70276c0441b541befc485b471b27b')
_F_python_version=python3

build()
{
	unset LDFLAGS
  	CFLAGS+=" -fno-strict-aliasing"
	CXXFLAGS+=" -fno-strict-aliasing"
  	Fbuild
}

# optimization OK
