pkgname=python3-setuptools
pkgver=41.0.1
pkgrel=2
pkgdesc="Tool to build and install python packages"
groups=('devel-extra')
depends=('python3' 'python3-packaging' 'python3-appdirs' 'python3-six')
archs=('x86_64')
_F_python_version="python3"
_F_pypi_name="setuptools"
_F_pypi_ext=".zip"
Finclude pypi
_F_cd_path="setuptools-$pkgver"
sha1sums=('2dee31e61a0d13bd8f687c40a4f725da798cbe44')

build() {

	## no windows crap please
	export SETUPTOOLS_INSTALL_WINDOWS_SPECIFIC_FILES=0
	Fcd
	Fpatchall
	Fexec python3 bootstrap.py ||Â Fdie
	Fmake
	Fmakeinstall
	Frm usr/bin/easy_in*
}

# optimization OK
