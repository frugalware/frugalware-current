pkgname=python3-setuptools
pkgver=47.3.1
pkgrel=1
pkgdesc="Tool to build and install python packages"
groups=('devel-extra')
depends=('python3>=3.8.3' 'python3-packaging' 'python3-appdirs' 'python3-six')
archs=('x86_64')
_F_python_version="python3"
_F_pypi_name="setuptools"
_F_pypi_ext=".zip"
Finclude pypi
_F_cd_path="setuptools-$pkgver"
sha1sums=('de78bc94a13fd1ac857bcb60310c23059c6823dd')

build() {

	## no windows crap please
	export SETUPTOOLS_INSTALL_WINDOWS_SPECIFIC_FILES=0
	Fcd
	Fpatchall
	Fexec python3 bootstrap.py ||Â Fdie
	Fmake
	Fmakeinstall
	Frm usr/bin/easy_in*
}

# optimization OK
