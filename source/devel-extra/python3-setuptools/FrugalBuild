pkgname=python3-setuptools
pkgver=63.1.0
pkgrel=1
pkgdesc="Tool to build and install python packages"
groups=('devel-extra')
depends=('python3>=3.10' 'python3-packaging' 'python3-appdirs' 'python3-six')
archs=('x86_64')
_F_python_version="python3"
_F_pypi_name="setuptools"
Finclude pypi
_F_cd_path="setuptools-$pkgver"
sha1sums=('7d014e537ac0b131bb2fda74c5bdffbe07aaf09e')

build() {

	## no windows crap please
	export SETUPTOOLS_INSTALL_WINDOWS_SPECIFIC_FILES=0
	Fcd
	Fpatchall
	Fexec python3 bootstrap.py ||Â Fdie
	Fmake
	Fmakeinstall
	Frm usr/bin/easy_in*
}

# optimization OK
