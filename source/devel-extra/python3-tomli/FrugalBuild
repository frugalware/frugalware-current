# Compiling Time: 0.13 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=python3-tomli
pkgver=2.0.1
pkgrel=4
pkgdesc="A lil' TOML parser"
depends=('python3>=3.11')
makedepends=('python3-setuptools' 'pyproject2setuppy')
groups=('devel-extra')
archs=('x86_64')
_F_pypi_name="tomli"
Finclude pypi
sha1sums=('3eae299137c59d6d6d30be01417366c57dd1adf5')

build() {
	Fcd
	Fexec python3 -m pyproject2setuppy.main build || Fdie
	Fexec python3 -m pyproject2setuppy.main install --root="$Fdestdir" --optimize=1 || Fdie
}

# optimization OK
