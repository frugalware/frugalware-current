pkgname=python3-toposort
pkgver=1.7
pkgrel=3
pkgdesc="Implements a topological sort algorithm"
groups=('devel-extra')
makedepends=('pyproject2setuppy' 'python3-setuptools')
depends=('python3>=3.11')
archs=('x86_64')
sha1sums=('7431b3fa19a2f154b824f7af23d53eb0ceef3593')
_F_pypi_name=toposort
Finclude pypi
_F_python_version=python3

build() {
        Fcd
        Fexec python3 -m pyproject2setuppy.main build || Fdie
        Fexec python3 -m pyproject2setuppy.main install --root="$Fdestdir" --optimize=1 || Fdie
}


# optimization OK
