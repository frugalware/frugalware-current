pkgname=ruby-bundler
pkgver=1.17.1
pkgrel=1
pkgdesc="Bundler manages an application's dependencies through its entire life, across many machines, systematically and repeatably."
url="http://bundler.io"
groups=('devel-extra')
archs=('x86_64')
_F_gem_name=${pkgname/ruby-/}
Finclude gem
_F_cd_path="."
sha1sums=('55fc4c907a9cc0896a71b0bec3f23b7faa1d427d')

build() {
       Finstallgem
       Frm usr/bin/rake
}
