pkgname=ruby-bundler
pkgver=2.0.2
pkgrel=1
pkgdesc="Bundler manages an application's dependencies through its entire life, across many machines, systematically and repeatably."
url="http://bundler.io"
groups=('devel-extra')
archs=('x86_64')
_F_gem_name=${pkgname/ruby-/}
Finclude gem
_F_cd_path="."
sha1sums=('fe373c106bdb98fa9ef93e2a15e59c3fc081abbb')

build() {
       Finstallgem
       Frm usr/bin/rake
}

# optimization OK
