pkgname=ruby-bundler
pkgver=2.4.8
pkgrel=1
pkgdesc="Bundler manages an application's dependencies through its entire life, across many machines, systematically and repeatably."
url="http://bundler.io"
groups=('devel-extra')
archs=('x86_64')
_F_gem_name=${pkgname/ruby-/}
Finclude gem
_F_cd_path="."
sha1sums=('b6e6e0cb26434816ac06351052d91db0dcff0e30')

build() {
       Finstallgem
       Frm usr/bin/rake
}

# optimization OK
