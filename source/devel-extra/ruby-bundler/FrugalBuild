pkgname=ruby-bundler
pkgver=2.5.13
pkgrel=1
pkgdesc="Bundler manages an application's dependencies through its entire life, across many machines, systematically and repeatably."
url="http://bundler.io"
groups=('devel-extra')
archs=('x86_64')
_F_gem_name=${pkgname/ruby-/}
Finclude gem
_F_cd_path="."
sha1sums=('68b1f21418580df863efcb1eeb15e9f65ca1c9f1')

build() {
       Finstallgem
       Frm usr/bin/rake
}

# optimization OK
