pkgname=ruby-bundler
pkgver=2.4.22
pkgrel=1
pkgdesc="Bundler manages an application's dependencies through its entire life, across many machines, systematically and repeatably."
url="http://bundler.io"
groups=('devel-extra')
archs=('x86_64')
_F_gem_name=${pkgname/ruby-/}
Finclude gem
_F_cd_path="."
sha1sums=('e92fd4e2c1fae332dad30373a4eda194695394f8')

build() {
       Finstallgem
       Frm usr/bin/rake
}

# optimization OK
