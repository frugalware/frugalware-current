pkgname=ruby-bundler
pkgver=1.17.2
pkgrel=1
pkgdesc="Bundler manages an application's dependencies through its entire life, across many machines, systematically and repeatably."
url="http://bundler.io"
groups=('devel-extra')
archs=('x86_64')
_F_gem_name=${pkgname/ruby-/}
Finclude gem
_F_cd_path="."
sha1sums=('ae53043155986471b1eabb56c65608dbaa6cfb33')

build() {
       Finstallgem
       Frm usr/bin/rake
}
