pkgname=ruby-bundler
pkgver=1.16.1
pkgrel=2
pkgdesc="Bundler manages an application's dependencies through its entire life, across many machines, systematically and repeatably."
url="http://bundler.io"
groups=('devel-extra')
archs=('x86_64')
_F_gem_name=${pkgname/ruby-/}
Finclude gem
_F_cd_path="."
sha1sums=('bca8cd6a0d44524c55a04256307da33e6fe37d5f')

build() {
       Finstallgem
       Frm usr/bin/rake
}
