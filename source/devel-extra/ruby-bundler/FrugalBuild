pkgname=ruby-bundler
pkgver=2.5.5
pkgrel=1
pkgdesc="Bundler manages an application's dependencies through its entire life, across many machines, systematically and repeatably."
url="http://bundler.io"
groups=('devel-extra')
archs=('x86_64')
_F_gem_name=${pkgname/ruby-/}
Finclude gem
_F_cd_path="."
sha1sums=('15d8eff0f147f2816f9cbac69dec017ace33417e')

build() {
       Finstallgem
       Frm usr/bin/rake
}

# optimization OK
