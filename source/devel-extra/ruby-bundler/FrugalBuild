pkgname=ruby-bundler
pkgver=1.16.3
pkgrel=1
pkgdesc="Bundler manages an application's dependencies through its entire life, across many machines, systematically and repeatably."
url="http://bundler.io"
groups=('devel-extra')
archs=('x86_64')
_F_gem_name=${pkgname/ruby-/}
Finclude gem
_F_cd_path="."
sha1sums=('ca6a670c29d2928a8dca24ee95a7978c8a532e36')

build() {
       Finstallgem
       Frm usr/bin/rake
}
