# Compiling Time: 0.60 SBU
# Maintainer: Elentir <elentir@frugalware.org>

pkgname=scikit-build-core
pkgver=0.9.6
pkgrel=1
pkgdesc="Next generation Python CMake adaptor and Python API for plugins"
url="https://scikit-build.org/"
depends=('python3-setuptools' 'python3-wheel' 'cmake' 'python3-distro')
makedepends=('python3-hatch-vcs' 'python3-hatch-fancy-pypi-readme' 'python3-installer' 'python3-pyproject-hooks')
groups=('devel-extra')
archs=('x86_64')
_F_github_author="scikit-build"
_F_github_name=$pkgname
_F_github_tag_v=y
Finclude github
sha1sums=('838ffa536a40d77043caa2adfa550fc135a362c0')
_F_python_version=python3

build() {
        Fcd
        Fpatchall
        Fexec python3 -m build -nw || Fdie
        Fexec python3 -m installer --destdir="$Fdestdir" dist/*.whl || Fdie
}

# optimization OK
