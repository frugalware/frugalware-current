pkgname=scikit-build
pkgver=0.16.2
pkgrel=1
pkgdesc="Improved build system generator for CPython C, C++, Cython and Fortran extensions"
url="https://scikit-build.org/"
depends=('python3-setuptools')
makedepends=('python3-setuptools_scm')
groups=('devel-extra')
archs=('x86_64')
_F_github_tag=y
Finclude github
sha1sums=('f5609543554bd656216c9e36c016397d4f46aec0')
_F_python_version=python3

build() {
	export SETUPTOOLS_SCM_PRETEND_VERSION=${pkgver}
	Fbuild
}

# optimization OK
