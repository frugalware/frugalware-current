# Compiling Time: 1.33 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=shiboken2
pkgver=5.15.0
_qtver=5.15.0
pkgrel=2
pkgdesc="Support library for Python bindings."
depends=('qt5-xmlpatterns>=5.15.0' 'clang-libs' 'libxslt')
makedepends=('python3-sphinx' 'clang' 'llvm')
url="https://wiki.qt.io/Qt_for_Python"
_F_pypi_name="PySide2"
_F_pypi_ext="-cp35.cp36.cp37.cp38-abi3-manylinux1_x86_64.whl"
_F_cmake_confopts="     -DBUILD_TESTS=OFF \
                        -DPYTHON_EXECUTABLE=/usr/bin/python3"
Finclude pypi cmake
groups=('devel-extra')
up2date="$up2date | sed \"s/_${_qtver}//\" "
source=("https://download.qt.io/official_releases/QtForPython/pyside2/PySide2-$pkgver-src/pyside-setup-opensource-src-${pkgver}.tar.xz")
sha1sums=('a16a0bb6afd73fe0020fa92ddb0dac9c94d48b78')
archs=('x86_64')
_F_cd_path="pyside-setup-opensource-src-${_qtver}/sources/shiboken2"
options=('clang')
export CC=/usr/bin/clang
export CXX=/usr/bin/clang++

subpkgs=("python3-$pkgname")
subdescs=("Shiboken lib python only")
subdepends=('python3>=3.8.3')
subarchs=('x86_64')
subgroups=('lib')

build() {
	CMake_build
	Fsplit python3-$pkgname	usr/lib/python*
	Fsplit python3-$pkgname usr/lib/libshiboken*
}

# optimization OK
