pkgname=shiboken6
pkgver=6.7.1
_qtver=6.7.0
pkgrel=1
pkgdesc="Support library for Python bindings."
depends=("qt6-base>=$_qtver" 'clang-libs>=17.0.6' 'libxslt')
makedepends=('python3-sphinx' 'clang' 'clang-static' 'llvm' 'llvm-static' \
	'openmp' 'mlir' 'polly' 'qt6-tools' 'qt6-svg' 'qt6-3d' 'qt6-scxml' \
	'qt6-datavis3d' 'qt6-charts' 'qt6-multimedia' 'qt6-quick3d' 'qt6-positioning' 'qt6-graphs' \
	'qt6-networkauth' 'qt6-remoteobjects' 'qt6-sensors' 'qt6-serialport' 'qt6-connectivity' \
	'qt6-webchannel' 'qt6-webengine' 'qt6-websockets' 'qt6-shadertools' 'qt6-speech' 'qt6-httpserver')
url="https://wiki.qt.io/Qt_for_Python"
_F_pypi_name="shiboken6"
_F_pypi_ext="-cp39-abi3-manylinux_2_28_x86_64.whl"
_F_cmake_confopts="     -DBUILD_TESTS=OFF \
                        -DPYTHON_EXECUTABLE=/usr/bin/python3 \
			-DUSE_PYTHON_VERSION=3"
Finclude pypi cmake
groups=('devel-extra')
source=("https://download.qt.io/official_releases/QtForPython/$pkgname/PySide6-$pkgver-src/pyside-setup-everywhere-src-${pkgver}.tar.xz" \
	missing-include.patch)
sha1sums=('762853e4a4123f4aae99ae3c5b963decceba629b' \
          '265a61912bd2d41829e3ecd62aab62e5abd5fc01')
archs=('x86_64')
_F_cd_path="pyside-setup-everywhere-src-${pkgver}/sources/shiboken6"

subpkgs=("python3-$pkgname")
subdescs=("Shiboken lib python only")
subdepends=('python3>=3.12')
subarchs=('x86_64')
subgroups=('lib')

build() {
	CMake_build
	Fsplit python3-$pkgname	usr/lib/python*
	Fsplit python3-$pkgname usr/lib/libshiboken*
}

# optimization OK
