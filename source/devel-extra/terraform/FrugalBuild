# Compiling Time: 0.01 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=terraform
pkgver=0.13.5
pkgrel=1
pkgdesc="HashiCorp tool for building and updating infrastructure as code idempotently"
archs=('x86_64')
url="https://www.terraform.io/"
depends=('glibc')
makedepends=('go')
groups=('devel-extra')
_F_github_author="hashicorp"
_F_github_tag_v=y
_F_github_grepv="beta\|rc1\|alpha"
Finclude github
sha1sums=('f016146f02d1755fef82630e91e1c7ec5cb868d2')

build() {
	Fcd
	export CGO_LDFLAGS="$LDFLAGS"
	export GOFLAGS="-trimpath"
	Fexec go build -o terraform-binary || Fdie
	Fexerel terraform-binary usr/bin/$pkgname
}

# optimization OK
