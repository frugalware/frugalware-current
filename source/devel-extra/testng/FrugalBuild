# Compiling Time: 0.01 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=testng
pkgver=7.5
pkgrel=1
pkgdesc='A testing framework inspired by JUnit and NUnit'
archs=('x86_64')
groups=('devel-extra')
url="http://testng.org"
depends=('openjdk')
makedepends=('gradle')
_F_github_author=cbeust
_F_github_tag=y
Finclude github openjava
sha1sums=('d330d297e3ccb700b8c694e4b34c97ca179f3610')

build()
{
        export GRADLE_USER_HOME="${Fsrcdir}/gradle_home"
        Fexec mkdir -p ${GRADLE_USER_HOME} || Fdie
        Fcd

        Fexec gradle build -x test || Fdie
        Fjar testng/build/libs/testng-7.5-SNAPSHOT.jar

}

# optimization OK
