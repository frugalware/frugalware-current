pkgname=vala
pkgver=0.40.8
pkgrel=1
pkgdesc="Vala is a prgramming language that aims to bring modern programming language features to GNOME developers"
depends=('glib2>=2.56.1' 'libffi>=3.2.1-2')
makedepends=('libxslt')
groups=('devel-extra')
archs=('x86_64')
_F_gnome_ext=".tar.xz"
_F_gnome_devel="n"
Finclude gnome
sha1sums=('83967bee6d09ac7ce88caac520234976a12b010c')

subpkgs=('valadoc')
subdescs=('Vala Documentation')
subdepends=('graphviz')
subrodepends=('vala')
subgroups=('devel-extra')
subarchs=('x86_64')

build() {
	Fcd
	Fautoreconf
	Fsed '$(datadir)/pkgconfig' '$(libdir)/pkgconfig' vapigen/Makefile.{in,am}
	Fbuild
	Frm usr/share/pkgconfig

	Fsplit valadoc usr/bin/valadoc
	Fsplit valadoc usr/bin/valadoc-0.40
	Fsplit valadoc usr/include/valadoc-0.40
	Fsplit valadoc usr/lib/libvaladoc*
	Fsplit valadoc usr/lib/valadoc
	Fsplit valadoc usr/lib/pkgconfig/valadoc-0.40.pc
	Fsplit valadoc usr/share/valadoc
	Fsplit valadoc usr/share/vala/vapi/valadoc*
	Fsplit valadoc usr/share/man/man1/valadoc*
}
# optimization OK
