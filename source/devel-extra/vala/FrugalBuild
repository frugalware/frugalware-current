pkgname=vala
pkgver=0.56.4
pkgrel=1
pkgdesc="Vala is a prgramming language that aims to bring modern programming language features to GNOME developers"
url="https://vala.dev"
depends=('glib2>=2.60.0' 'libffi>=3.2.1-2' 'graphviz')
makedepends=('libxslt')
groups=('devel-extra')
archs=('x86_64')
_F_gnome_ext=".tar.xz"
_F_gnome_devel="n"
Finclude gnome
sha1sums=('09f9362a66cd6b09fc263e8f369f15db9e50220d')

replaces=('valadoc')
