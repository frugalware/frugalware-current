options+=('asneeded')

USE_DOC=${USE_DOC:-"y"}

pkgname=vala
pkgver=0.22.1
pkgrel=1
pkgdesc="Vala is a prgramming language that aims to bring modern programming language features to GNOME developers"
depends=('glib2>=2.38.0')
makedepends=('libxslt' 'gobject-introspection')
groups=('devel-extra')
archs=('i686' 'x86_64' 'arm')
_F_gnome_ext=".tar.xz"
_F_gnome_devel="n"
Finclude gnome
sha1sums=('440b63356a94565a3f58b9e2218e3bb31f02879b')
Fconfopts+=" --enable-vapigen"
replaces=('vtg' 'valide')
provides=('vtg' 'valide')

if Fuse $USE_DOC; then
        subpkgs=("$pkgname-docs")
        subdescs=("Vala Documentation")
        subdepends=('devhelp')
        subgroups=('docs-extra')
        subarchs=('i686 x86_64')
fi

build() {
	Fbuild
	if Fuse $USE_DOC; then
        	Fsplit $pkgname-docs usr/share/devhelp
        fi
}

# optimization OK
