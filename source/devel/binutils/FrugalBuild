pkgname=binutils
pkgver=2.16.91.0.6
pkgrel=1
pkgdesc="A set of programs to assemble and manipulate binary and object files"
url="http://sources.redhat.com/binutils"
depends=('bash')
groups=('devel' 'devel-core')
archs=('i686' 'x86_64' 'ppc')
up2date="lynx -dump 'http://www.kernel.org/pub/linux/devel/binutils/?C=M&O=D'|grep tar.bz2$|sed -n 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=(http://www.kernel.org/pub/linux/devel/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('6dfe6166502e07b2b146516c80fd17f9d0228f47')
options=('force')

build()
{
	Fpatchall
	Fconf --enable-shared --disable-werror
	
	make tooldir=$Fdestdir/usr || return 1
	
	make prefix=$Fdestdir/usr tooldir=$Fdestdir/usr install
	Frm /usr/info/dir
}

# optimalization ok
