# Compiling time: 3.45 SBU
# Maintainer: DeX77 <dex77@frugalware.org>
# Contributor: bouleetbil <bouleetbil@frogdev.info>

pkgname=mono
pkgver=6.12.0.205
pkgrel=1
pkgdesc="Mono runtime and class libraries, a C# compiler/interpreter"
url="http://www.mono-project.com/"
groups=('devel')
archs=("x86_64")
depends=('zlib>=1.2.12' 'libstdc++>=9.1.0-3')
makedepends+=('cmake')
_F_github_tag_prefix="$pkgname-"
_F_github_tag=y
_F_scm_type=git
_F_scm_url=https://github.com/mono/mono.git
_F_scm_git_cloneopts="--recursive"
Finclude scm github
unset source

replaces=('monodoc' 'ikvm')
conflicts=('monodoc' 'ikvm')
provides=('monodoc' 'ikvm')

options=('static')

Fconfopts+="   --disable-quiet-build \
               --disable-system-aot \
               --with-libgdiplus=installed \
               --with-ikvm-native=yes \
               --with-jit=yes \
               --with-mcs-docs=no"

build() {
	Funpack_scm

	Fbuild

	# for openoffice
	sed -i -e "s:#Requires:Requires:" ${Fdestdir}/usr/lib/pkgconfig/mono.pc || Fdie
}

# optimization OK
