pkgname=perl-net-ssleay
pkgver=1.25
pkgrel=2
pkgdesc="Perl extension for using OpenSSL"
url="http://cpan.org/"
makedepends=('perl')
depends=('openssl' 'perl')
groups=('devel')
archs=('i686' 'x86_64')
up2date="pud -p http://search.cpan.org/~sampo/ -e 'Net_SSLeay.pm-(.*?)$'"
source=(http://search.cpan.org/CPAN/authors/id/S/SA/SAMPO/Net_SSLeay.pm-$pkgver.tar.gz)
md5sums=('87de8a06802fbb63c7c85e89eedbe139')

build() {
	cd $startdir/src/Net_SSLeay.pm-$pkgver
	perl Makefile.PL
	
	make test
	make || return 1
	
	make install DESTDIR=$startdir/pkg
	mv $startdir/pkg/usr/lib/perl5/site_perl/?.?.? \
		$startdir/pkg/usr/lib/perl5/site_perl/current
	rm -rf $startdir/pkg/usr/lib/perl5/?.?.?
	find $startdir/pkg/usr/lib/perl5/site_perl/current/ -name .packlist -exec rm {} \;
}

