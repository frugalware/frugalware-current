pkgname=pycurl
pkgver=7.45.1
pkgrel=3
pkgdesc="Python module interface to the cURL library"
depends=('python3' 'curl>=7.50.3-2' 'zlib>=1.2.12' 'openssl>=3.0.7')
url="http://pycurl.io/"
groups=('devel')
archs=("x86_64")
Finclude pypi
sha1sums=('c63d95443d2997430396a1d46921b646c16cd011')

build() {
  	Fcd
	Fmake
	Fexec python3 setup.py install --curl-config=/usr/bin/curl-config --prefix $Fdestdir/usr --with-openssl || Fdie
}


# optimization OK
