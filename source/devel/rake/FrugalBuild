pkgname=rake
pkgver=0.7.1
pkgrel=1
pkgdesc="Make-like scripting in Ruby"
url="http://rake.rubyforge.org/"
groups=('devel-extra')
archs=('i686' 'x86_64')

Finclude gem
sha1sums=('b64fdff051a2d64c6bf5518f0951b98766a1677c')

build() {
	Finstallgem
	sed -i -e "s|^\(begin\)$|#!/usr/bin/env ruby\n\n\1|" "$Fdestdir"/usr/bin/rake
}

# optimalization OK

