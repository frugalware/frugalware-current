# Compiling time: 0.53 SBU
# Contributor: Bence Nagy <nagybence@tipogral.hu>
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=ruby
pkgver=1.8.6
pkgrel=1
pkgdesc="An object-oriented programming language."
url="http://www.ruby-lang.org/"
depends=('ncurses' 'termcap' 'db' 'gdbm' 'openssl' 'readline' 'zlib')
makedepend=('tk')
groups=('devel')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.ruby-lang.org/en/downloads/ |grep tar.gz |sed -ne 's/.*-\(.*\).t.*/\1/;1p'"
source=(ftp://ftp.ruby-lang.org/pub/ruby/ruby-$pkgver.tar.gz)
sha1sums=('c915f65e1e42dbedc43acabcbef2bbe03233bf20')

build() {
	Fbuild --enable-shared --enable-pthread \
		--with-tk-include=/usr/include/tk/generic \
		--with-tcl-include=/usr/include/tcl/generic
	Fmakeinstall install-doc
}

# optimization OK
