build() {

	Fcd $pkgname

	for pkg in "${subpkgs[@]}"
	do
		cd ${pkg/e17-/} || Fdie
		Fautoreconf
		Fbuild
		#Fsplit $subpkgs /usr
        	cd .. || Fdie
	done
}

# optimization OK
