# Compiling Time: 0 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=python-efl
pkgver=1.26.0
pkgrel=1
pkgdesc="Enlightenment Python bindings Libraries"
url="https://www.enlightenment.org/"
source=(https://download.enlightenment.org/rel/bindings/python/$pkgname-$pkgver.tar.xz)
up2date="Flasttar https://download.enlightenment.org/rel/bindings/python/"
groups=('enlightenment-extra' 'e-libs')
archs=('x86_64')
depends=('efl>=1.21.0' 'dbus-python')
makedepends=('x11-protos' 'python3-setuptools' 'python3-cython')
sha1sums=('9c86e79480db07ddcca22fcd71083cc20032bc32')

build() {
	export ENABLE_CYTHON="yes"
	Fcd
	Fpatchall
	Fexec python3 setup.py clean_generated_files || Fdie
	Fmake
	Fmakeinstall
}

# optimization OK
