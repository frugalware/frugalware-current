build() {
  Fmkdir usr/share/flightgear/data/Aircraft/
  cp -r $Fsrcdir/* $Fdestdir/usr/share/flightgear/data/Aircraft/ || Fdie
  Frm usr/share/flightgear/data/Aircraft/*.zip
}
