# Compiling Time: 2.05 SBU
# Maintainer: Miklos Vajna <vmiklos@frugalware.org>

pkgname=flightgear
pkgver=1.9.0
pkgrel=2
pkgdesc="An open-source, multi-platform flight simulator."
url="http://www.flightgear.org/"
depends=('libgl' 'zlib' 'freealut' 'freeglut' 'fgfs-base' 'plib' 'libboost-mt>=1.37.0' 'openscenegraph>=2.8.0')
makedepends=('simgear' 'boost>=1.37.0')
groups=('games-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/Downloads/source.shtml|grep 'Release: Version \([0-9\.]*\) ('|sed 's/.*n \(.*\) (.*/\1/;q'"
source=(ftp://ftp.flightgear.org/pub/fgfs/Source/FlightGear-$pkgver.tar.gz)
sha1sums=('1c59a93fce10f574de76edc87116eaa9795cc8f4')

build()
{
	unset MAKEFLAGS
	Fcd FlightGear-$pkgver
	Fmake --with-threads
	Fmakeinstall
}

# optimization ok
