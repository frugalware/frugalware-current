pkgname=fortune-mod-himym
pkgver=0.3
pkgrel=1
pkgdesc="How I Met Your Mother fortune cookies"
url="http://m-redd.com/mod/"
depends=('fortune-mod')
groups=('games-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
source=(http://m-redd.com/mod/$pkgname-$pkgver.tar.gz)
sha1sums=('5a4346ace1ddfd15014c1cd46c37d7e9c5984e2f')

build() {
  Fcd
  Fmkdir usr/share/fortune
  Finstallrel 644 himym usr/share/fortune
}
