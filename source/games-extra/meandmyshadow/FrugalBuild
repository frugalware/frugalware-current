depends=('sdlimage' 'sdl_ttf' 'sdl_mixer' 'sdl_gfx>=2.0.24' 'curl' 'libarchive' 'libglu')
Finclude cmake
groups=('games-extra')
archs=('i686' 'x86_64')
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
_F_sourceforge_ext="-src.tar.gz"
Finclude gnome-scriptlet sourceforge
