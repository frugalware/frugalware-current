pkgname=mupen64plus
pkgver=2.0
pkgrel=2
pkgdesc="Nintendo64 Emulator"
depends=('freetype2' 'sdl' 'mesa' 'libglu' 'gtk+2>=2.20.1' 'libxau' 'libxdmcp' 'libstdc++' 'libxml2>=2.7.8' 'sdl_ttf' 'libboost>=1.58.0')
_F_googlecode_ext=".tar.gz"
_F_googlecode_name="$pkgname-bundle-src"
_F_googlecode_dirname="$pkgname"
Finclude googlecode
_F_cd_path="$pkgname-bundle-src-$pkgver"
options=('scriptlet')
groups=('games-extra')
archs=('i686' 'x86_64')
sha1sums=('078a518e1b162bd88993e1815967fdafe61d9e28')

build() {
  Fcd

  sh m64p_build.sh
  sh m64p_install.sh PREFIX=$Fdestdir/usr
}

# optimization OK
