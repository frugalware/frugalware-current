pkgname=netpanzer
pkgver=0.8.7
pkgextraver="-source"
pkgrel=1
pkgdesc="Fast-action multiplayer strategic network game"
url="https://netpanzer.io"
depends=('libstdc++' 'physfs>=2.0.2' 'sdl' 'sdl_mixer' 'sdlimage' 'sdl_ttf')
makedepends=('scons')
groups=('games-extra')
archs=('x86_64')
_F_github_grepv=RC
Finclude github
up2date="$up2date | sed 's/-github//g'"
source=("https://github.com/netpanzer/netpanzer/archive/refs/tags/$pkgver-github.tar.gz")
sha1sums=('1596f9ad19ad9c26bc19fb9aecc6d0984d681c88')

build()
{
	Fexec scons || Fdie
}
