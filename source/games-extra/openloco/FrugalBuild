pkgname=openloco
pkgver=22.06.1
pkgrel=1
pkgdesc="An open source re-implementation of Locomotion"
archs=('x86_64')
groups=('games-extra')
depends=('lib32-sdl2_mixer' 'lib32-yaml-cpp>=0.7.0' 'lib32-libpng' 'lib32-openal' 'libstdc++')
makedepends=('libpng' 'libzip' 'sdl2' 'sdl2_mixer' 'x11-protos' 'clang')
_F_github_tag_v=y
Finclude github cmake
sha1sums=('315d80eb9d8cd90e59843b234140d1910a72e6b1')
_F_cd_path="OpenLoco-$pkgver"
options=('clang')

build() {
	export CXXFLAGS="-m32"
	export CC=/usr/bin/clang
	export CXX=/usr/bin/clang++

	CMake_build
}

