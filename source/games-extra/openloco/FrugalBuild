# Compiling Time: 0.01 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=openloco
pkgver=21.04.1
pkgrel=1
pkgdesc="An open source re-implementation of Locomotion"
archs=('x86_64')
groups=('games-extra')
depends=('lib32-sdl2_mixer' 'lib32-yaml-cpp' 'lib32-libpng' 'libstdc++')
makedepends=('libpng' 'libzip' 'sdl2' 'sdl2_mixer' 'yaml-cpp' 'x11-protos')
_F_github_tag_v=y
Finclude github cmake
sha1sums=('1243e6c61d37a578d9cee937d1e172a9c7788215')
_F_cd_path="OpenLoco-$pkgver"
CXXFLAGS="-m32"
options=('nolto')

build() {
	CMake_build
	Fexerel /usr/bin/$pkgname
	Fmkdir usr/share/
	Fmv icons/ usr/share/icons/
	Fmv applications/ usr/share/applications/
}

# optimization OK
