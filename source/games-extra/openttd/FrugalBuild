pkgname=openttd
pkgver=1.9.3
pkgrel=1
pkgdesc="An open source clone of the Microprose game Transport Tycoon Deluxe."
url="http://www.openttd.org/en"
depends=('sdl>=1.2.15-3' 'xz>=5.2.2-4' 'lzo>=2.09-4' 'libpng>=1.6.20' \
	'fontconfig>=2.11.94-3' 'icu4c>=64.2' 'libtimidity>=0.1.0-2')
makedepends+=('catcodec' 'grfcodec')
rodepends=('opensfx' 'opengfx>=0.5.5')
groups=('games-extra')
archs=('x86_64')
up2date="Fwcat $url/download-stable | sed -n 's|^.*stable is \(.*\),.*$|\1|p'"
_F_gnome_iconcache=y
Finclude gnome-scriptlet
Fconfopts="	--prefix-dir=/usr \
		--binary-dir=bin \
		--data-dir=share/$pkgname \
		--doc-dir=share/doc/$pkgname-$pkgver \
		--install-dir=$Fdestdir"
source=(https://proxy.binaries.openttd.org/openttd-releases/$pkgver/$pkgname-$pkgver-source.tar.xz)
sha1sums=('43686d697e9c03d2aa35d8577c32dd098458b82f')

build() {

	Fbuild
	Fbuild_gnome_scriptlet
}
# optimization OK
