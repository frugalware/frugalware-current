pkgname=performous
pkgver=1.1
pkgrel=21
url="http://performous.org/"
pkgdesc="Performous : The free Linux karaoke game"
rodepends=('performous-songs')
depends=('libboost' 'libepoxy' 'libxml++2' 'portaudio' 'fmtlib' \
	'portmidi' 'opencv' 'aubio' 'glm' 'nlohmann-json')
makedepends=('boost>=1.74.0' 'x11-protos')

_F_github_tag="Y"
_F_github_devel=yes
_F_cmake_confopts="	-DBoost_NO_BOOST_CMAKE=ON"
CFLAGS="${CFLAGS} -isystem /usr/include/harfbuzz"
CXXFLAGS="${CXXFLAGS} -isystem /usr/include/harfbuzz"

Finclude github cmake
groups=('games-extra')
archs=('x86_64')

build() {
	Funpack_scm
	Fcd
	CMake_build
}

# optimization OK
