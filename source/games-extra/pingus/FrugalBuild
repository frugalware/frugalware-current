pkgname=pingus
pkgver=0.6.0
pkgrel=1
pkgdesc="Pingus is a free Lemmings clone for GNU/Linux"
url="http://pingus.seul.org"
depends=('libmikmod' 'libvorbis' 'hermes' 'libxml2' 'clanlib-legacy')
groups=('games-extra')
archs=('i686')
up2date="lynx -dump http://pingus.seul.org/download.html | grep -m1 -A2 Source | sed 's/.*-\(.*\).t.*/\1/' | tail -n1"
source=(http://pingus.seul.org/files/pingus-0.6.0.tar.bz2 $pkgname-$pkgver-gcc.patch)
sha1sums=('be3970eea96163009926014535ab92a6bec136fe' 'be143a8885102d254c5dbb21f41161229b2b5787')

build()
{
	  Fbuild --with-clangl
}

# optimization OK
