# Compiling Time: 0.66 SBU
# Maintainer: detto <detto_o@freenet.de>

pkgname=snes9x
pkgver=1.51
pkgrel=1
pkgdesc="A portable, freeware Super Nintendo Entertainment System (SNES) emulator."
url="http://www.snes9x.com"
srcurl="http://files.ipherswipsite.com"
archs=('i686')
groups=('games-extra')
depends=('libpng' 'libxxf86dga')
makedepends=('nasm')
up2date="lynx -dump $srcurl/$pkgname | grep -m2 src.tar.bz2 | grep -v 1.5-src | cut -d '-' -f2"
source=($srcurl/$pkgname/$pkgname-$pkgver-src.tar.bz2)
sha1sums=('a0de23fb376463d27f4e8fc7f11424bd3c598585')
_F_cd_path=$pkgname-$pkgver-src
Fconfopts="$Fconfopts --with-netplay"

build () {
    Fmake
    Fexerel /usr/bin/$pkgname
    Fdocrel doc/* unix/docs/readme_unix.txt
}
