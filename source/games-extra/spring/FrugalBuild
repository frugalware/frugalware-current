depends=('libboost>=1.70' 'devil>=1.8.0' 'libunwind>=1.1-4' 'curl>=7.47.0' 'sdl2>=2.0.4' \
	'glew>=2.1.0' 'freetype2>=2.6.2-3' 'libxcursor>=1.1.14-2' 'openal>=1.20' \
	'openjre-x')
makedepends=('xz>=5.0.3' 'boost>=1.71.0' '7zip' 'asciidoc' 'docbook-xsl' 'x11-protos')
_F_cmake_confopts="	-DCMAKE_INSTALL_PREFIX=/usr \
			-DDATADIR=share/spring \
			-DUSE_GML_SIM=ON \
			-DUSE_GML=ON \
			-DBoost_NO_BOOST_CMAKE=ON \
			-DCMAKE_BUILD_TYPE=Release"
_F_github_tag=y
