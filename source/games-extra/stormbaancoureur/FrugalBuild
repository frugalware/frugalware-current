pkgname=stormbaancoureur
pkgver=2.1.5
pkgrel=1
pkgdesc="Simulated Obstacle Course For Automobiles"
url="http://www.sturmbahnfahrer.com/"
depends=('plib' 'ode' 'freeglut' 'libgl' 'alsa-lib' 'libgcc' 'libxext' 'libxdamage')
groups=('games-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://bram.creative4vision.nl/sturmbahnfahrer/download/ |Flasttar"
source=(http://bram.creative4vision.nl/sturmbahnfahrer/download/$pkgname-$pkgver.tar.gz)
sha1sums=('3cbd1cb0879e143e5eb45699f133a5636a8eb0b7')

_F_cd_path="$pkgname-$pkgver/src-$pkgname"
_F_desktop_name="Stormbaan Coureur"
_F_desktop_categories="Game;"

build()
{
	Fbuild
	Fdesktop2
}

