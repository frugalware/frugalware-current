# Compiling Time: 0.10 SBU
# Maintainer: Pingax <pingax@frugalware.org>
# Contributor: PacMiam <PacMiam@gmx.fr>

pkgname=tanglet
pkgver=1.5.4
pkgrel=2
pkgdesc="Tanglet is a single player word finding game based on Boggle(tm)."
url="http://gottcode.org/tanglet/"
groups=('games-extra')
archs=('x86_64')
depends=('qt5-base>=5.13.1')
makedepends=('qt5-tools')
up2date="Flastarchive $url -src.tar.bz2"
source=("http://gottcode.org/$pkgname/$pkgname-$pkgver-src.tar.bz2")
sha1sums=('f9c9d65c57b0d789bef17ae924f8f8e34c974eb3')

build () {
	Fcd
    	qmake-qt5 PREFIX=/usr || Fdie
    	Fmake
    	Fmakeinstall INSTALL_ROOT=$Fdestdir
}

# optimization OK
