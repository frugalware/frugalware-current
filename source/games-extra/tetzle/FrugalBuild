# Compiling Time: 0.15 SBU
# Maintainer: PacMaiam <PacMiam@gmx.fr>

pkgname=tetzle
pkgver=2.1.0
pkgrel=1
pkgdesc="A jigsaw puzzle with tetrominoes for pieces."
url="http://gottcode.org/tetzle/"
depends=('qt5-base')
makedepends=('qt5-tools')
groups=('games-extra')
archs=('i686' 'x86_64')
_F_gnome_iconcache="y"
Finclude gnome-scriptlet
up2date="Flastarchive $url -src.tar.bz2"
source=("http://gottcode.org/$pkgname/$pkgname-$pkgver-src.tar.bz2")
sha1sums=('11528ea4268077ca52423e3c356bf940f338cbc7')

build ()
{
    	Fcd
    	qmake-qt5 PREFIX=/usr || Fdie
    	Fmake
    	Fmakeinstall INSTALL_ROOT=$Fdestdir
	Fbuild_gnome_scriptlet
}

# optimization OK
