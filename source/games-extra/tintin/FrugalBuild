pkgname=tintin
pkgver=2.00.8
pkgrel=1
pkgdesc="A console mud client from which other mud clients have been written."
depends=('zlib')
groups=('games-extra')
archs=('i686' 'x86_64' 'ppc')
Finclude sourceforge
up2date="${up2date//.tar.gz/-osx.tar.gz}"
sha1sums=('59c919cfe1b1b8d217ca9608c5e76140e8c8aa38')
_F_cd_path="tt/src"

build()
{
	Fmake --enable-big5
	Fexerel /usr/bin/tt++
	Fdocrel ../{docs,mods}/*
}

# optimization OK
