# Compiling Time: 1.38 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=ultrastardx
pkgver=2020.4.0
pkgrel=1
pkgdesc='Free and open source karaoke game. (GIT)'
archs=('x86_64')
url="http://usdx.eu/"
groups=('games-extra')
depends=('sdl2' 'sdl2_image' 'freetype2' 'lua' 'ffmpeg' 'portaudio')
makedepends=('fpc')
_F_github_author=UltraStar-Deluxe
_F_github_name=USDX
_F_github_devel=yes
Finclude github
_F_desktop_name="Ultrastar Deluxe"
_F_desktop_icon="$pkgname.png"
_F_desktop_categories="Games"

build() {
	unset LDFLAGS
	Funpack_scm
	Fbuild
	Finstall 644 $pkgname/game/resources/icons/ultrastardx-icon.png usr/share/pixmaps/ultrastardx.png
	Fdesktop2
}


# optimization OK
