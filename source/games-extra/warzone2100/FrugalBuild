pkgname=warzone2100
pkgver=2.1.3
pkgrel=2
pkgdesc="3D realtime strategy game on a future Earth"
url="http://wz2100.net"
depends=('physfs>=2.0.0' 'libpng' 'libjpeg' 'sdl_net' 'mesa' 'openal' 'libvorbis' 'libmad' 'openal>=1.7.411' 'quesoglc')
makedepends=('gawk' 'bison' 'flex' 'zip')
groups=('games-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/download | Flasttar"
source=(http://download.gna.org/warzone/releases/2.1/$pkgname-$pkgver.tar.bz2)
sha1sums=('49a75cb87297c2ecb51719f6f049b540ab96a32d')

build()
{
	Fcd
  	sh ./autogen.sh || Fdie
	Fmake
	Fmakeinstall
}

# optimization OK
