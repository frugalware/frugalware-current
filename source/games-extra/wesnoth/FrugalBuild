options+=('nobuild')

pkgname=wesnoth
pkgver=1.15.2
pkgrel=1
pkgdesc="Wesnoth is a turn based strategy game played in the fantasy world"
url="http://www.wesnoth.org/"

groups=('games-extra')
archs=('x86_64')
depends=('sdl2_image' 'sdl2_mixer' 'sdl2_ttf' 'pango' 'libboost' 'zlib')
makedepends=('x11-protos' 'boost' 'libboost-static')

Fconfopts+="	--enable-server \
		--enable-editor \
		--enable-tools \
		--enable-campaign-server \
		--with-fifodir=/var/run/wesnoth \
		--disable-strict-compilation"
_F_sourceforge_ext=".tar.bz2"
Finclude cmake sourceforge
