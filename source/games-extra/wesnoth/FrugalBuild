options+=('nobuild')

pkgname=wesnoth
pkgver=1.18.0
pkgrel=1
pkgdesc="Wesnoth is a turn based strategy game played in the fantasy world"
url="http://www.wesnoth.org/"
groups=('games-extra')
archs=('x86_64')
depends=('sdl2_image' 'sdl2_mixer' 'sdl2_ttf' 'pango' 'libboost>=1.72.0' 'zlib>=1.2.12' 'curl')
