Fconfopts+="	--enable-server \
		--enable-editor \
		--enable-tools \
		--enable-campaign-server \
		--with-fifodir=/var/run/wesnoth \
		--disable-strict-compilation"
_F_sourceforge_ext=".tar.bz2"
Finclude cmake sourceforge
