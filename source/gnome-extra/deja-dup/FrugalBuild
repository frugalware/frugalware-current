pkgname=deja-dup
pkgver=38.1
pkgrel=1
pkgdesc="Déjà Dup is a simple backup program and uses duplicity as the backend."
url="https://gitlab.gnome.org/World/deja-dup"
depends=('gtk+3' 'appstream-glib'  'gnome-keyring' 'libpeas' 'libnotify' 'libsecret-vala' )
makedepends=('gnome-doc-utils' 'intltool' 'vala' 'elinks' 'help2man' 'itstool' 'nautilus' 'x11-protos')
rodepends=('duplicity')
groups=('gnome-extra')
archs=('x86_64')
_F_gnome_iconcache="y"
_F_gnome_glib="y"
Finclude gnome-scriptlet meson
up2date="Flasttar https://gitlab.gnome.org/World/deja-dup/tags"
source=( https://gitlab.gnome.org/World/$pkgname/-/archive/$pkgver/$pkgname-$pkgver.tar.bz2)
sha1sums=('05d985269fe2a98bb2d6e826aaa48ccadb1f2315')

replaces=("backintime" "backintime-kde" "backintime-gnome")
conflicts=("${replaces[@]}")

build() {
	Meson_build
	Fbuild_gnome_scriptlet

	Fmkdir "etc/ld.so.conf.d"
	echo /usr/lib/deja-dup  >> "$Fdestdir/etc/ld.so.conf.d/deja-dup.conf" || Fdie

}

# optimization OK
