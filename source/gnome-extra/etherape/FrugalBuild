pkgname=etherape
pkgver=0.9.9
pkgrel=3
pkgdesc="Graphical network monitor"
options=('scriptlet')
_F_gnome_desktop=y
_F_gnome_scrollkeeper=y
Finclude sourceforge gnome-scriptlet
depends=('libglade>=2.6.4-2' 'libgnomeui>=2.24.1-2' 'libjpeg' 'libsm' 'popt' 'gnome-vfs' 'openssl>=1.0.0' \
	'esd' 'gail>=2.20.0-2' 'libart_lgpl' 'atk' 'pango>=1.24.2-2' 'freetype2' 'libxau>=1.0.1' 'libxdmcp' \
	'libxdamage' 'libxinerama' 'libxi' 'libxrandr' 'libxcursor' 'rarian' 'libpcap')
makedepends=('gnome-doc-utils')
groups=('gnome-extra')
archs=('i686' 'x86_64' 'ppc')
sha1sums=('8ff818d625a0c7fed4c1d5373ec5665ee0aa9f3d')

build()
{
	Fcd
	Fsed "Exec=etherape" "Exec=gksu etherape" etherape.desktop.in
	Fbuild
	Fbuild_gnome_scriptlet
}

# optimization OK
