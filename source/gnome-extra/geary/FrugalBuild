         'libnotify' 'libcanberra' 'desktop-file-utils' 'gcr>=3.12.2-2' 'tdb')
makedepends=('vala' 'intltool' 'gobject-introspection' 'gnome-doc-utils' 'libxml2-python')
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
_F_gnome_glib="y"
