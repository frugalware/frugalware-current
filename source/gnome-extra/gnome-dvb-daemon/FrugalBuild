	'pygobject3-cairo' 'linuxtv-dvb-apps' 'libgudev' \
	'liboil' 'gst-plugins-good' 'gst-python')
makedepends=('totem>=3.0.0' 'intltool' 'vala')
Fconfopts="${Fconfopts[@]} --enable-totem-plugin"
groups=('gnome-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
_F_gnome_devel="y"
_F_gnome_ext=".tar.xz"
Finclude gnome
subpkgs=('gnome-dvb-totem')
