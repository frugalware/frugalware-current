# Compiling Time: 0.05 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=gnome-shell-extension-weather
pkgver=20110524
pkgrel=2
pkgdesc="gnome-shell-extension-weather is a simple extension for displaying weather notifications in Gnome Shell."
url="https://github.com/simon04/gnome-shell-extension-weather"
depends=('gnome-shell>=3.0.2')
groups=('gnome-extra')
archs=('i686' 'x86_64')
up2date="Flasttar http://ftp.frugalware.org/pub/other/people/devil505/snapshots/$pkgname"
source=(http://ftp.frugalware.org/pub/other/people/devil505/snapshots/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('dec3ea1c1435435f43a63d20f32017b31f18f379')

build(){
        Fcd
        Fmkdir usr/share/gnome-shell/extensions/
        Fcprel weather\@venemo.net usr/share/gnome-shell/extensions/
	Fsed "3.0.1" "3.0" $Fdestdir/usr/share/gnome-shell/extensions/weather@venemo.net/metadata.json
}
