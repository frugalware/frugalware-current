depends=('grilo>=0.1.15' 'libsoup' 'gupnp-av' 'libgdata')
makedepends=('intltool' 'gnome-doc-utils>=0.10.3' 'gobject-introspection')
groups=('gnome-extra')
archs=('i686' 'x86_64' 'ppc')
_F_gnome_devel="y"
Finclude gnome
sha1sums=('ff93b6d4ddd5c65739c24474f393cdb7d2369e49')
Fconfopts="$Fconfopts \
		--disable-fakemetadata \
		--enable-filesystem \
		--enable-jamendo \
		--enable-lastfm-albumart \
		--enable-upnp \
		--enable-youtube \
		--enable-flickr \
		--enable-podcasts \
		--enable-bookmarks \
		--disable-shoutcast \
		--enable-apple-trailers \
		--enable-metadata-store \
		--enable-vimeo \
		--enable-gravatar \
		--disable-tracker \
		--enable-localmetadata"

build() {
	Fbuild
	Frm usr/bin/test
}
