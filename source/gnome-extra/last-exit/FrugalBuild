# Compiling Time: 0.15 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=last-exit
pkgver=4
pkgrel=2
pkgdesc="Last Exit is a Last.fm player for Gnome."
url="http://folks.o-hand.com/iain/last-exit/"
depends=('gtk2-sharp' 'gnome-sharp' 'mono' 'dbus-glib>=0.71' \
	'gstreamer' 'gst-plugins-base' 'gst-plugins-ugly-mad' \
	'gst-plugins-good-gconf' 'gst-plugins-base-oil')
makedepends=('intltool')
groups=('gnome-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | grep tar.bz2 | Flasttarbz2"
options=('scriptlet')
source=($url/$pkgname-$pkgver.tar.bz2 \
	last-exit-dbus-sharp-parallel-build-fix.patch)
_F_gnome_iconcache="y"
_F_gnome_schemas=('/etc/gconf/schemas/lastfm.schemas' \
		'/etc/gconf/schemas/last-exit.schemas')
Finclude gnome-scriptlet mono
sha1sums=('0411e2a6bda5734849c3020c34af3c777ba1cb7b' \
	'679f8f66cf1293bb446a1c281194ebf6b3647081')

build()
{
	Fcd
	Fpatchall
	Fautoreconf
	Fmonoexport
	Fconf
	Fmakeinstall
	Fmonocleanup
	Fbuild_gnome_scriptlet
}

# optimization OK
