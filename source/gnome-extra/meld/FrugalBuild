# Contributor: AlexExtreme <alex@alex-smith.me.uk>

options+=('asneeded')

pkgname=meld
pkgver=3.12.1
pkgrel=1
pkgdesc="a visual diff and merge tool"
url="http://meldmerge.org/"
depends=('gtk+3' 'gtksourceview3' 'dbus-python')
makedepends=('intltool' 'itstool')
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
_F_gnome_mime="y"
_F_gnome_glib="y"
_F_gnome_devel="n"
_F_gnome_ext=".tar.xz"
Finclude gnome gnome-scriptlet
groups=('gnome-extra')
archs=('i686' 'x86_64')
sha1sums=('c46ecab903bad2ece5c5031a624b545c7dcdb486')

build() {
	Fcd
	python setup.py build || Fdie
	python setup.py --no-update-icon-cache --no-compile-schemas install  --root=$Fdestdir || Fdie
	Fbuild_gnome_scriptlet
}

