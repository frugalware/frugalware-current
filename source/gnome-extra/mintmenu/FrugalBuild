# Compiling Time: 0.01 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=mintmenu
pkgver=5.1.3
pkgrel=1
pkgdesc="Linux Mint Menu for Gnome"
url="http://packages.linuxmint.com/pool/main/m/mintmenu"
depends=('gnome-panel' 'gnome-python' 'gnome-python-desktop' 'pyxdg' 'pygtk'  'gnome-terminal' 'gksu' \
	'gnome-python-desktop-desktop' 'configobj')
options=('scriptlet')
groups=('gnome-extra')
archs=('i686' 'x86_64')
Fpkgversep="_"
up2date="Flasttar $url"
source=(${url}/${pkgname}_${pkgver}.tar.gz frugal-icon.png frugal-logo.svg)
sha1sums=('3d358ecde8442088501590747216adac8c911ee7' \
          '90d529e028586ec784ba69afa6ca5b805097e6ef' \
          '102e46961b1a3bab0e058b1ac6b665c995ce21fb')

build() {
  Fcd $pkgname
  Fpatchall
  Fcprel usr /
  Ffileschmod usr/lib/bonobo/servers/mintMenu.server 644
  Frm usr/lib/linuxmint/mintMenu/mint-logo.svg
  Frm usr/lib/linuxmint/mintMenu/icon.png
  Frm usr/lib/linuxmint/mintMenu/mintMenu.png
  Finstall 644 frugal-logo.svg usr/lib/linuxmint/mintMenu/mint-logo.svg
  Finstall 644 frugal-icon.png usr/lib/linuxmint/mintMenu/icon.png
  Finstall 644 frugal-icon.png usr/lib/linuxmint/mintMenu/mintMenu.png
}

