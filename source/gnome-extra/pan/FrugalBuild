# Compiling Time: 1.36 SBU
# Maintainer: Anthony Jorion <pingax@frugalware.org>
# Contributor: Christian Hamar alias krix <krics@linuxforum.hu>
# Contributor: BMH1980 <bmh1980@frugalware.org>

options+=('asneeded')

pkgname=pan
pkgver=0.139
pkgrel=2
pkgdesc="A newsreader for GNOME"
url="http://pan.rebelbase.com/"
license="GPL2"
up2date="lynx -dump $url/download/releases/|sed -n 's|.*/\(.*\)/$|\1|;$ p'"
source=($url/download/releases/$pkgver/source/$pkgname-$pkgver.tar.bz2)
groups=('gnome-extra')
archs=('i686' 'x86_64')
depends=('libxml2>=2.7.8' 'gmime2' 'gtkspell' 'pango')
makedepends=('intltool')
_F_gnome_desktop="y"
Finclude gnome-scriptlet

sha1sums=('01ea0361a6d81489888e6abb075fd552999c3c60')


build()
{
	if [ "$CARCH" == "x86_64" ]; then
		export CFLAGS="$CFLAGS -fPIC"
		export CXXFLAGS="$CXXFLAGS -fPIC"
	fi
	Fpatchall
	Fmake
	Fmakeinstall
	Fbuild_gnome_scriptlet
}

# optimization OK
