# Compiling Time: 0.03 SBU
# Maintainer: Priyank <priyankmg@gmail.com>

pkgname=parano
pkgver=0.3.3
pkgrel=2
pkgdesc="Parano is a GNOME frontend for creating/editing/checking MD5 and SFV files"
url="http://parano.berlios.de/"
makedepends=('intltool')
depends=('gtk+2' 'pygtk' 'python' 'shared-mime-info' 'libgnomeui' 'gnome-python')
groups=('gnome-extra')
archs=('i686')
Finclude berlios
source=(${source[@]} $pkgname-mime.patch1)
sha1sums=('3022e16eee108478c24630cac3f9840ad595dd7f' \
	  '4c42d4dfc85589bec780eb3375702e1662e97bf3')

build() {
	Fpatchall
  	Fmake --disable-scrollkeeper --disable-schemas-install
	make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR=$Fdestdir install  || Fdie
}

# optimization OK
