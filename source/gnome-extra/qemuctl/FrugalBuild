# Compiling Time: 0.01 SBU
# Maintainer: AlexExtreme <alex@alex-smith.me.uk>

pkgname=qemuctl
pkgver=0.2
pkgrel=2
pkgdesc="A small GUI for changing media etc. while QEMU is running."
depends=('gtk+2' 'glade' 'perl' 'perl-gtk2' 'qemu')
groups=('gnome-extra')
archs=('i686' 'x86_64')
sha1sums=('d9262feac55942f86332603d69df425287c96c81')
Finclude sourceforge
up2date="$up2date | sed 's/qemuctl //'"
source=(http://ftp.frugalware.org/pub/other/sources/$pkgname/$pkgname-$pkgver.tar.gz)
_F_cd_path="${pkgname}${pkgver}"

build() {
	Fcd
	Fmakeinstall
}
