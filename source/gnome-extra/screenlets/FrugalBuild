pkgname=screenlets
pkgver=0.1.2
pkgrel=5
pkgdesc="Screenlets are small applications that can be described as the virtual representation of things lying/standing around on your desk"
url="http://www.screenlets.org"
depends=('pycairo' 'pygtk' 'pyxdg' 'dbus-python' 'gnome-python-desktop' 'libnotify>=0.7' 'notification-daemon' 'xdg-utils' 'gnome-python-desktop-keyring' 'gnome-python-extras-mozembed' 'gnome-python-desktop-wnck')
options=('scriptlet')
groups=('gnome-extra')
archs=('i686' 'x86_64')
up2date="Flasttar https://launchpad.net/screenlets/"
source=(http://launchpad.net/screenlets/trunk/$pkgver/+download/$pkgname-$pkgver.tar.bz2)
_F_cd_path="$pkgname"
sha1sums=('de5a9776afbbd283a7fc83c63816f3f750b72baf')

build()
{
   Fcd
   python setup.py install --root=$Fdestdir || Fdie
}
