depends=('gtk+3' 'gcr' 'libsecret' 'libldap>=2.4.16' 'openssh' \
	'seahorse-sharing>=3.2.1')
makedepends=('vala' 'intltool' 'itstool' 'libsecret-vala')
groups=('gnome-extra')
archs=('x86_64')
_F_gnome_glib="y"
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
_F_gnome_ext=".tar.xz"
_F_gnome_devel="n"
Finclude gnome gnome-scriptlet meson
