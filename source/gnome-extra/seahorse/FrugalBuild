	'gpgme' 'libsoup>=2.30.0' 'dbus' 'dbus-glib' 'libxml2' \
	'libnotify>=0.4.5-2' 'libgnomeui>=2.24.3' 'openssh' 'gconf>=2.28.1' 'avahi>=0.6.24-5')
