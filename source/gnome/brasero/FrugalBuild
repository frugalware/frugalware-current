# Contributor: bouleetbil <bouleetbil@frogdev.info>

pkgname=brasero
pkgver=3.4.1
pkgrel=3
pkgdesc="A CD/DVD Burning application for the GNOME desktop."
url="http://www.gnome.org/projects/brasero/"
makedepends=('intltool' 'gnome-doc-utils')
depends=('libarchive' 'gtk+3>=3.2.0' 'libisofs>=1.2.4' 'libburn>=1.2.4' 'libtracker' \
		'gstreamer' 'gst-plugins-base' 'gst-plugins-good' \
		'libxml2' 'totem>=3.0.0' 'perl-xml-parser' 'dbus-glib>=0.80' \
		'popt' 'libdvdcss' 'libcanberra-gtk' 'icu4c>=4.8')
makedepends=('gnome-doc-utils' 'intltool' 'gobject-introspection')
groups=('gnome')
conflicts=('bonfire')
replaces=('bonfire')
archs=('i686' 'x86_64')
sha1sums=('ca636f3d2e8f4795a0794cd2a0ce3ded840e2a02')

subpkgs=("nautilus-brasero")
subdescs=('An easy to use CD/DVD burning package for Nautilus')
subdepends=("nautilus>=2.90.0")
subrodepends=("$pkgname=$pkgver")
subgroups=('gnome')
subarchs=('i686 x86_64')
subreplaces=('nautilus-cd-burner')
subprovides=('nautilus-cd-burner')

_F_gnome_doc="y"
_F_gnome_glib="y"
_F_gnome_scrollkeeper="y"
_F_gnome_desktop="n"
_F_gnome_iconcache="y"
_F_gnome_mime="y"
_F_gnome_git="n"
_F_gnome_ext=".tar.xz"
Finclude gnome gnome-scriptlet
Fconfopts+=" --enable-search --enable-playlist --enable-preview --enable-inotify --enable-libnotify --disable-schemas-install \
	--enable-caches=no --enable-introspection=yes"

if [ "$_F_gnome_git" != "n" ]; then
        unset sha1sums
fi

build() {
        if [ "$_F_gnome_git" != "n" ]; then
                Funpack_scm
                Fcd $pkgname
                sh ./autogen.sh
        else
                Fcd
        fi
	Fbuild
	Fbuild_gnome_scriptlet
	Fsplit nautilus-brasero usr/lib/nautilus
	_F_gnome_split_doc
}

# optimization OK

