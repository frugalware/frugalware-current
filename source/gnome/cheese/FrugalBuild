depends=('librsvg>=2.40.2' 'gst1-plugins-good>=1.4.2' 'gst1-plugins-base>=1.4.2' 'gst1-plugins-base-pango>=1.4.2' \
	'xf86vidmodeproto' 'evolution-data-server>=3.13.6' 'dbus' 'gnome-video-effects' \
	'gst1-plugins-good-video4linux2>=1.4.2' 'db>=4.7.25-2' 'gnome-desktop>=3.14.0' \
	'gst1-plugins-bad-mpeg2enc>=1.4.2' 'gst1-plugins-base-ogg>=1.4.2' 'gst1-plugins-base-theora>=1.4.2' 'gst1-plugins-base-vorbis>=1.4.2' \
	'systemd>=188' 'libcanberra-gtk' 'clutter-gst>=2.0.8' 'clutter-gtk>=1.6.0' 'gst1-plugins-good-vpx>=1.4.2' 'gst1-plugins-good-jpeg' \
	'gst1-plugins-base-oil')
