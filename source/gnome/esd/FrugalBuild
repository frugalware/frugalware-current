pkgname=esd
realname=esound
pkgver=0.2.36
pkgrel=1
pkgdesc="Enlightened Sound Daemon"
url="http://www.tux.org/~ricdude/EsounD.html"
backup=('etc/esd.conf')
depends=('audiofile' 'alsa-lib')
groups=('gnome')
archs=('i686' 'x86_64')
Finclude gnome
source=(http://ftp.gnome.org/pub/GNOME/sources/esound/$preup2date/esound-$pkgver.tar.gz)
md5sums=('f2ba3597ef584f4eed7a8aa0ce875c2d')

build()
{
	Fcd esound-$pkgver
	Fbuild --with-audiofile --enable-alsa
}

