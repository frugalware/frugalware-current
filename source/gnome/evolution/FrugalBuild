	'psmisc' 'gnome-common' 'krb5' 'gtk-doc' 'openssl>=1.0.0' 'itstool' 'yelp-tools' 'libcryptui')
groups=('gnome')
archs=('i686' 'x86_64')
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
_F_gnome_glib="y"
_F_gnome_devel="n"
