pkgname=gnome-menus
pkgver=2.30.2
pkgrel=3
pkgdesc="GNOME menus and menu editor"
depends=('gamin>=0.1.9-3' 'pygtk>=2.16.0-5')
makedepends=('intltool')
groups=('gnome' 'gnome-minimal')
replaces=('gnome-main-menu')
archs=('i686' 'x86_64' 'ppc')
Finclude gnome
Fsysconfdir="/etc/gnome"
Fconfopts="$Fconfopts --enable-python --enable-debug=no"
source=(${source[@]} $pkgname-2.18.0-categorize-prefs-menu.patch gnomemenu.sh)
sha1sums=('edbc9b9fc4e86f5cc772011ea768ba9487625d67' \
          '2e365ed35fefe56e388e410219c391eb40d089f7' \
          '5ccf8242ec2ca93c220e8859371a890261ee603b')

build() {
	Fbuild
	Fexe /etc/profile.d/gnomemenu.sh
}

# optimization OK
