pkgname=gthumb
pkgver=2.6.9
pkgrel=1
pkgdesc="Image browser and viewer for GNOME"
url="http://gthumb.sourceforge.net/"
depends=('libgnomeui' 'libgnomeprintui' 'libgphoto2' 'scrollkeeper' \
	'desktop-file-utils')
makedepends=('intltool')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
install=$pkgname.install
Finclude gnome
sha1sums=('393fb2bdbd32478ea812762eea56d2ba3e602d56')

build()
{
	Fcd
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	[ -f omf.make ] && Fsed "-scrollkeeper-update.*" "" omf.make
	Fmake --disable-schemas-install
	Fmakeinstall GCONF_DISABLE_SCHEMA_INSTALL=1
}


# optimalization OK
