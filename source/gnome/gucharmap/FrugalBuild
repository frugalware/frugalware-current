# Last modified: Thu, 08 Sep 2005 02:59:34 +0200
# Compiling time: 0.28
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=gucharmap
pkgver=1.4.4
pkgrel=2
pkgdesc="A featureful Unicode character map for GNOME"
url="http://www.gnome.org/"
depends=('libgnomeui' 'scrollkeeper')
makedepends=('intltool' 'gnome-doc-utils')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
install=$pkgname.install
Finclude gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2 \
	$pkgname.install)
sha1sums=('19917c99a2dfced3754025fa6a0e0d3249312965' \
	  'cad7e8d04b21f4791484c61aa879b29ad34b2704')

build() {
	Fcd
	find . -name Makefile.in -exec sed -i -e 's/-scrollkeeper-update.*//' {} \;
	if [ -f omf.make ]; then
		sed -i -e 's/-scrollkeeper-update.*//' omf.make
	fi
	Fmake
	Fmakeinstall
}

# vim: ft=sh

# optimalization OK
