# Last modified: Sun, 11 Sep 2005 11:28:19 +0200
# Compiling time: ~3 minutes
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=libgtkhtml
pkgver=2.6.3
pkgrel=3
pkgdesc="A GTK+2 based HTML rendering library"
url="http://www.gnome.org/"
depends=('gail' 'gnome-vfs' 'libxml2')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
Finclude gnome
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$preup2date/$pkgname-$pkgver.tar.bz2)
md5sums=('c77789241d725e189ffc0391eda94361')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr

	make || return 1

	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
