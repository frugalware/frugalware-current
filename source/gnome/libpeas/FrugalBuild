pkgname=libpeas
pkgver=1.22.0
pkgrel=1
pkgdesc="libpeas is a gobject-based plugins engine"
depends=('glib2>=2.54.0' 'pygobject3>=3.26.0' 'gobject-introspection>=1.54.0' 'icu4c>=58.1' \
	'python3-pygobject3>=3.26.0')
makedepends=('intltool>=0.51.0-4' 'vala>=0.38.1')
groups=('gnome')
archs=("x86_64")

subpkgs=('libpeas-gtk')
subdescs=('libpeas GTK support')
subdepends=('gtk+3>=3.22.21')
subrodepends=('libpeas')
subgroups=('gnome')
subarchs=("x86_64")
subreplaces=('')
subprovides=('')
subconflicts=('')

subpkgs+=("$pkgname-demo")
subdescs+=("$pkgname demo")
subrodepends+=("$pkgname=$pkgver")
subdepends+=("")
subgroups+=('gnome-extra')
subarchs+=("x86_64")
subreplaces+=('')
subprovides+=('')
subconflicts+=('')

_F_gnome_iconcache="y"
_F_gnome_doc="y"
_F_gnome_ext=".tar.xz"
_F_gnome_devel="n"
Finclude gnome gnome-scriptlet
sha1sums=('2e84a418208ff9a15f16566b552734c1b7af0edc')

build() {
	Fbuild
	Fsplit libpeas-gtk usr/lib/*gtk*
	Fsplit libpeas-gtk usr/lib/pkgconfig/*gtk*
	Fsplit libpeas-demo usr/lib/peas-demo
	Fbuild_gnome_scriptlet
	_F_gnome_split_doc
}

# optimization OK
