# Compiling time: 0.49 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=metacity
pkgver=2.17.3
pkgrel=1
pkgdesc="A window manager for GNOME"
url="http://www.gnome.org/"
depends=('startup-notification' 'gconf' 'gnome-themes>=2.16.1')
makedepends=('intltool')
replaces=('metacity-theme-simplebox-custom')
provides=('metacity-theme-simplebox-custom')
groups=('gnome' 'gnome-core')
archs=('i686' 'x86_64')
_F_gnome_schemas=('/etc/gconf/schemas/metacity.schemas')
Finclude gnome gnome-scriptlet
source=(${source[@]} $pkgname-2.16.1-frugalware_defaults.patch \
	http://ftp.frugalware.org/pub/other/people/alex/Simplebox-custom-1.5.1.tar.bz2)
sha1sums=('6cd0d4b77b65fd76176a2ab650dcffb5a5c2c52c' \
	  '07cc5e5ffe547f77918847e48c3c28cde7217208' \
	  '2ed4e29d5563cb74219230f2a92dbbf4bb7c5428')

build() {
	Fbuild
	cd $Fsrcdir
	rm Simplebox-custom-1.5/metacity-1/metacity-theme-1.xml~
	Fmkdir /usr/share/themes
	cp -Rad Simplebox-custom-1.5 $Fdestdir/usr/share/themes/
	Fbuild_gnome_scriptlet
}

# optimization OK
