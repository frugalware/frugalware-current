pkgname=pango
pkgver=1.12.0
pkgrel=1
pkgdesc="A library for layout and rendering of text"
url="http://www.gtk.org/"
depends=('cairo>=1.0.2' 'glib2' 'libxft' 'libpng' 'perl')
groups=('gnome' 'gnome-core')
makedepends=('gtk-doc')
archs=('i686' 'x86_64')
install=$pkgname.install
Finclude gnome
sha1sums=('f4e07c2a3702b53a96fe19ac9cc13db049f759bc')

build()
{
	Fbuild --enable-gtk-doc
}


