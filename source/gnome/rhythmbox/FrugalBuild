pkgname=rhythmbox
pkgver=3.4
pkgrel=1
pkgdesc="A music management application for GNOME"
url="http://www.rhythmbox.org/"
depends=('libsoup-gnome>=2.50.0' 'json-glib' 'tdb' 'totem-pl-parser>=3.10.4' 'gst1-plugins-base' \
	'libdmapsharing' 'libnotify' 'brasero>=3.12.0-2' 'clutter-gtk>=1.6.0-4' 'libsecret>=0.18' \
	'libgudev' 'libpeas-gtk')
makedepends=('gnome-common' 'intltool' 'gobject-introspection' 'vala' 'gtk-doc' 'yelp-tools' \
	'libgpod>=0.8.3-5' 'libmtp>=1.1.6-2' 'grilo' 'check')
rodepends=('gst1-plugins-ugly-mad')
replaces=('rhythmbox-desktop-art')
groups=('gnome')
archs=('i686' 'x86_64')
_F_gnome_glib="y"
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
_F_gnome_devel="y"
_F_gnome_doc="y"
_F_gnome_ext=".tar.xz"
Finclude gnome-scriptlet gnome

Fconfopts+=" --enable-daap=yes --enable-python=yes --without-hal \
	--with-brasero --enable-vala=yes"

sha1sums=('267990365decf1302188d0e987ab2157ab61fb3c')

