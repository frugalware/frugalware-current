	'libdmapsharing' 'libnotify>=0.7.6-3' 'brasero>=3.12.0-2' 'clutter-gtk>=1.8.2' 'libsecret>=0.18.5-2' \
	'libgudev>=230-7' 'libpeas-gtk>=1.20.0')
