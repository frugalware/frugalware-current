# Compiling Time: 0.10 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=seed
pkgver=3.0.0
pkgrel=1
pkgdesc="Seed is a library and interpreter, dynamically bridging the WebKit JavaScriptCore engine."
depends=('libxml2>=2.7.8' 'webkit-gtk3>=1.3.4' 'libffi>=3.0.9' 'libsoup-gnome>=2.32.0' 'sqlite3' \
	'clutter-cairo' 'clutter-gtk' \
	'gnome-js-common' 'dbus-glib' 'libffi')
makedepends=('gtk-doc' 'intltool' 'gobject-introspection>=0.9.0')
groups=('gnome')
archs=('i686' 'x86_64' 'ppc')
options=('scriptlet')
Finclude gnome
sha1sums=('03e77d8f816aafa1aca7c507ec6bea3b89653c08')

Fconfopts="$Fconfopts --with-webkit=3.0"
build() {
	Fcd
	Fpatchall
	mkdir -p m4
	autoreconf -i -f || Fdie
	Fmake
	Fmakeinstall
}

# optimization OK
