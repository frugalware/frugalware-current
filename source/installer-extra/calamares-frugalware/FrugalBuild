archs=("x86_64")
groups=('installer-extra')
_F_github_name="calamares"
_F_github_tag_v=y
_F_kde_defaults=0
#_F_cmake_type=Debug
#options+=('nostrip')
Finclude kf5 github
source+=(calamares-locale.service  \
	calamares-locale-setup \
	calamares-frugalware.svg \
	49-nopasswd_calamares.rules \
	fwcfg.patch \
	# dmi guessing for default host name
	0001-Try-to-guess-suggested-hostname-from-dmi.patch \
	0001-pacman-fixes.patch \
	0003-disable-lvm.patch \
	0004-locale-fixes.patch \
	parted.patch \
	fix-storage-check.patch)

depends=('kpmcore>=4.0.0' 'parted' 'kconfig' 'python3' 'kcoreaddons' 'libboost>=1.70' \
	'libpwquality' 'polkit-qt5-1' 'qt5-declarative>=5.10.3' 'qt5-svg>=5.10.3')
makedepends+=('qt5-tools>=5.10.3' 'boost' 'yaml-cpp' 'x11-protos')
rodepends=('rsync' 'squashfs')
sha1sums=('e18c4970277a774e691396a0f24696ed8b93ee20' \
