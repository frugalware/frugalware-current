pkgname=kblogger
pkgver=0.6.2
pkgrel=1
pkgdesc="KBlogger is a simple to use blogging application for the K Destkop Environment."
license="GPL"
depends=('kdebase>=3.5.5')
groups=('kde-extra')
archs=('i686' 'x86_64')
_F_kde_id="29552"
Finclude kde
url="http://kblogger.pwsp.net/"
options=('scriptlet')
source=(http://kblogger.pwsp.net/files/$pkgname-$pkgver.tar.gz admin.patch)
sha1sums=('0f590e97024072440dae8da8ce795535b8c362b4' \
          'ef31cd1c39ad9230b5642300c6c721ae34838e1d')

build()
{
        Fcd
	Fpatchall
        make -f admin/Makefile.common cvs || Fdie
        Fmake
	Fmakeinstall
}

# optimization OK
