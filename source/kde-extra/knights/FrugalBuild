pkgname=knights 
pkgver=0.6.4_beta
pkgrel=1
pkgdesc="Knights is a graphical chess interface designed for use with the K Desktop Environment." 
_F_sourceforge_broken_up2date=1
Finclude sourceforge
_F_kde_defaults=0
Finclude kde
url="http://mtvg.sourceforge.net/"
depends=('kdelibs' 'kdebase' 'libogg' 'xfsprogs-attr' 'libgl' 'libxmu' 'libxi' 'libxrandr' 'libxcursor' 'libxinerama' 'libxft' 'libpng' 'libsm' 'libgcc' 'libxdamage')
options=('scriptlet')
groups=('kde-extra')
archs=('i686')
_F_cd_path="$pkgname"
sha1sums=('af8f5d59b7d96b643a7738911f3d04642e2fbec0')

build()
{
  Fcd
  sed -ie '46s/;//' knights/audio.h
  Fbuild
}

# optimization OK
