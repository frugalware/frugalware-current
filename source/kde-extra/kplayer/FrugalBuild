pkgname=kplayer
pkgver=0.6.2
pkgrel=1
pkgdesc="KPlayer is a KDE media player based on MPlayer."
depends=('kdelibs>=3.5.5')
rodepends=('mplayer')
groups=('kde-extra')
archs=('i686' 'x86_64')
license="GPL"
_F_sourceforge_ext=".tar.bz2"
_F_kde_defaults=0
Finclude sourceforge kde

build()
{
	Fcd
	Fpatchall
	make -f admin/Makefile.common cvs || Fdie
	Fmake \
		--disable-debug \
		--without-debug \
		--with-gnu-ld \
		--disable-final
	Fmakeinstall
	Frm usr/share/services/{mms,mmst,mmsu,pnm,rtsp}.protocol
}

# optimization OK
sha1sums=('22561a9edcad24d08c318b46b1fb868f5a032791')
