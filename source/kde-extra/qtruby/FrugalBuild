# Compiling Time: 0.79 SBU
# Maintainer: Melko <melko@frugalware.org>

options+=('asneeded')

pkgname=qtruby
pkgrel=1
pkgdesc="Ruby bindings for the Qt libraries."
groups=('kde-extra')
archs=('i686' 'x86_64')
Finclude kde
depends=("smokeqt>=$_F_kde_ver" 'ruby>=1.9.2')

build() {
	unset MAKEFLAGS
	unset _F_KDE_LD_FLAGS
	KDE_build
}

# optimization OK
