build()
{
	KDE_make_split

	## maybe patch up ?
	KDE_project_install kmime
	Fmkdir usr/share/mime/packages
	Frm usr/share/doc
	Finstallrel 644 ../kdepimlibs-mime.xml /usr/share/mime/packages/

	Fsplit libkmime /\*

	KDE_install
}

