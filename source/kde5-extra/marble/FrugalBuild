_F_kde_project="release-service"
Finclude kf5
groups=('kde5-extra')
archs=('x86_64')
depends=("qt5-location>=$_F_kdever_qt5" "qt5-tools>=$_F_kdever_qt5")
makedepends+=('kdoctools')
rodepends=('libmarble')
sha1sums=('e9402b4d9925b4fdfd1a9b7699edc8d33bd83845')
_F_cmake_confopts+="	-DKDE_INSTALL_CONFDIR=/etc/xdg"

subpkgs=('libmarble')
subdescs=('Marble libs')
subgroups=('kde5-extra')
subarchs=('x86_64')
subdepends=('qt5-webengine qt5-serialport gpsd>=3.23 knewstuff kparts krunner5 protobuf>=3.18.0')
