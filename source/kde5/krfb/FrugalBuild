subgroups=("kde5-extra")
subdepends=('pipewire libepoxy')
subrodepends=("$pkgname")
subarchs=('x86_64')

build() {
	KDE_build
	Fsplit $pkgname-pipewire usr/lib/qt5/plugins/krfb/framebuffer
}

