pkgname=kvirc
pkgver=5.0.0
pkgrel=27
pkgdesc="Graphical Irc client for K Desktop"
_F_scm_type="git"
_F_scm_tag="master"
_F_scm_url="https://github.com/kvirc/KVIrc.git"
Finclude kf5-version cmake scm
up2date="$pkgver"
depends=("kxmlgui>=$_F_kf5_full" "knotifications>=$_F_kf5_full" \
	"qt5-x11extras>=$_F_kdever_qt5" \
	'openssl>=1.1.1' "qt5-svg>=$_F_kdever_qt5" 'audiofile>=0.3.6-3' \
	"qt5-multimedia>=$_F_kdever_qt5" 'libxscrnsaver>=1.2.2-2' \
	'audiofile' 'enchant1' 'python3>=3.9.6' 'icu4c>=68.1')
makedepends+=('perl' 'python' 'doxygen' 'x11-protos')
groups=('kde5')
archs=("x86_64")
url="http://www.kvirc.net"
_F_cmake_confopts+=" -DWANT_ENV_FLAGS=ON \
		-DWANT_VERBOSE=ON \
		-DWANT_COEXISTENCE=OFF"
_F_cd_path="$pkgname"
source+=(frugalware-default-channel.patch)

build() {
	Funpack_scm
	CMake_build
}


# optimization OK
