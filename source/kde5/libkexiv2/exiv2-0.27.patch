                 if (it != exifData.end() && it->count())
                 {
                     long orientation = it->toLong();
                     qCDebug(LIBKEXIV2_LOG) << "Exif Thumbnail Orientation: " << (int)orientation;
                     rotateExifQImage(thumbnail, (ImageOrientation)orientation);
