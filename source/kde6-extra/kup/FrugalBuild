Finclude kf6 scm
depends=("kcmutils>=$_F_kf6_full" "kidletime>=$_F_kf6_full" "libplasma>=$_F_kdever_plasma" \
	"plasma5support>=$_F_kdever_plasma" 'pcre2' 'openssl>=3.1.0' 'libgit2')
unset source

build() {
