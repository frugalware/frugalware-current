# Compiling Time: 0.44 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=polonium
pkgver=0.6.0
pkgrel=1
pkgdesc='Autotile manager for Plasma 6'
archs=('x86_64')
groups=('kde6-extra')
depends=('kwin')
makedepends=('nodejs')
_F_github_author=zeroxoneafour
Finclude github
source=("https://github.com/zeroxoneafour/polonium/archive/refs/tags/v${pkgver}.tar.gz")
sha1sums=('5089e16a7829722901e29620101e5ec574812cf9')
up2date="$up2date | sed 's/v//g'"


build() {
	Fcd
	Fexec make clean || Fdie
	Fexec make src res || Fdie
	Fmkdir usr/share/kwin/scripts/polonium/
	Fcprel pkg usr/share/kwin/scripts/polonium/
}

# optimization OK
