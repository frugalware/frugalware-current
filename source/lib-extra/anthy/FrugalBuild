pkgname=anthy
pkgver=8133
pkgextra=memm
pkgrel=1
pkgdesc="Free and secure Japanese conversion engine."
url="http://anthy.sourceforge.jp/"
urlweird="http://sourceforge.jp/projects/anthy/files/?release_id=20192#20192"
depends=('glibc')
groups=('lib-extra')
archs=('i686' 'x86_64')
## LOL
up2date="lynx -dump $urlweird|grep 'anthy-'|grep '.tar.gz'|sed -e 's|.*-||g' -e 's|.tar.gz.*||g'|sort -n -r|head -n 1|sed 's|$pkgextra||g'"
source=(http://osdn.dl.sourceforge.jp/$pkgname/22051/$pkgname-$pkgver$pkgextra.tar.gz)
sha1sums=('50e4be927ca7a9e841f2800d1c393e992c248512')
_F_cd_path="$pkgname-$pkgver$pkgextra"

# optimization OK
