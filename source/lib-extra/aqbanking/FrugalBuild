# Compiling Time: 0.21 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=aqbanking
pkgver=2.2.4
pkgrel=1
pkgdesc="AqBanking is a library for online banking and financial applications."
url="http://http://www.aquamaniac.de/aqbanking/"
depends=('gwenhywfar>=2.5.0' 'libofx' 'libchipcard3')
makedepends=('qt' 'gtk+2' 'libglade')
groups=('lib-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
Finclude sourceforge
sha1sums=('5f21cd13cfd75d88274ece4ba2463ff0604fa3cb')

build() {
	## won't build without on an SMP system
	unset MAKEFLAGS
	Fbuild --enable-python --enable-release \
		--with-frontends="cbanking qbanking g2banking"
	# move docs to right place
	Fmv /usr/share/doc/$pkgname /usr/share/doc/$pkgname-$pkgver/
	Fmv /usr/share/doc/aqhbci /usr/share/doc/$pkgname-$pkgver/
}

# optimization OK
