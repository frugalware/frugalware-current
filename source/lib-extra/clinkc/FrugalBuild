# Compiling Time: 0.40 SBU
# Maintainer: AlexExtreme <alex@alex-smith.me.uk>

pkgname=clinkc
pkgver=2.1
realver=210
pkgrel=2
pkgdesc="CyberLink for C is a UPnP library using C for small and embedded platforms."
depends=('libxml2' 'expat' 'curl')
makedepends=('doxygen')
groups=('lib-extra')
archs=('i686')
Finclude sourceforge
sha1sums=('2aaf3a58422bb97c30f20fc0e2b8ff8d3c529da3')
_F_cd_path="$pkgname"
source=(http://${_F_sourceforge_mirror}.dl.sourceforge.net/sourceforge/$_F_sourceforge_dirname/$_F_sourceforge_name${realver}$_F_sourceforge_ext)

build() {
	Fcd
	./bootstrap || Fdie
	Fbuild
	Frm /usr/share/doc/clinkc0
	Fmv /usr/share/doc/clinkc-dev /usr/share/doc/${pkgname}-${pkgver}/
	Fmv /usr/share/doc/clinkc-2.0-0 /usr/share/doc/${pkgname}-${pkgver}/
}

# optimization OK
