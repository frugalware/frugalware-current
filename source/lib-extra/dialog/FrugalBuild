# Compiling Time: 0.26 SBU
# Maintainer: James Buren <ryuo@frugalware.org>
# Contributor: Miklos Vajna <vmiklos@frugalware.org>

pkgname=dialog
pkgver=1.3_20190211
pkgrel=2
pkgdesc="A tool to display dialog boxes from shell scripts"
url="http://invisible-island.net/dialog/dialog.html"
depends=('ncurses>=6.1-2')
groups=('lib-extra')
archs=('x86_64')
up2date="Flasttar ftp://ftp.invisible-island.net/pub/dialog/"
source=(ftp://ftp.invisible-island.net/pub/dialog/dialog-${pkgver/_/-}.tgz)
signatures=($source.asc)

# since most config utils use libdialog please _be_ careful when you bump this pkg

build()
{
	unset MAKEFLAGS
	CFLAGS+=" -fPIC"
	Fcd $pkgname-${pkgver/_/-}

	Fbuild --with-ncurses --enable-nls --with-shared

	Fmv /usr/bin /
}

# optimization OK
