# Compiling Time: 0.01 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=evdi
pkgver=1.9.1
pkgrel=189
pkgdesc="Extensible Virtual Display Interface"
groups=('lib-extra')
archs=('x86_64')
depends=('libdrm' 'python3>=3.12')
makedepends=('pybind11')
_F_github_author="DisplayLink"
_F_github_tag_v="y"
_F_github_devel=yes
_F_scm_tag=devel
Finclude github kernel-module
options+=('nostrip' 'force' 'nowfsecurity')
_F_make_opts+="        KERN_DIR=${_F_kernelmod_dir}/build MODULE_DIR_TST=${Fdestdir}/${_F_kernelmod_dir} KVER=${_F_kernelmod_uname} ZSTD_CLEVEL=19 INSTALL_MOD_STRIP=1"

build() {
	unset CFLAGS

	Funpack_scm
	Fcd
	Fsed '/lib/modules' "/usr/lib/modules" module/Makefile
	Fsed 'INSTALL_MOD_PATH=$(DESTDIR)' 'INSTALL_MOD_PATH=$(DESTDIR)/usr' module/Makefile
	Fbuild
	Fbuild_kernelmod_scriptlet
}

# optimization OK
