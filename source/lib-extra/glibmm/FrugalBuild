pkgname=glibmm
pkgver=2.76.0
pkgrel=1
pkgdesc="C++ interface for glib2"
url="http://www.gnome.org/"
depends=('libsigc++3' 'glib2>=2.60.3' 'mm-common')
makedepends=('doxygen' 'graphviz' 'libxslt')
groups=('lib-extra')
archs=("x86_64")
_F_gnome_ext=".tar.xz"
_F_gnome_doc="y"
_F_meson_confopts="	-Dbuild-documentation=true"
Finclude gnome meson
source=("https://download.gnome.org/sources/glibmm/${pkgver%.*}/glibmm-$pkgver.tar.xz")
sha1sums=('3fc95b3dbffcee5460a48e7b8dc72131743ef81a')

subpkgs=("$pkgname-docs")
subdescs=("Glibmm Documentation")
subdepends=()
subgroups=('docs-extra')
subarchs=("x86_64")

build()
{
	Meson_build
	Fsplit $pkgname-docs usr/share/doc
}

# optimization OK
