pkgname=glibmm
pkgver=2.60.0
pkgrel=3
pkgdesc="C++ interface for glib2"
url="http://www.gnome.org/"
depends=('libsigc++2>=2.10.0-2' 'glib2>=2.60.3')
groups=('lib-extra')
archs=("x86_64")
_F_gnome_ext=".tar.xz"
_F_gnome_doc="y"
Finclude gnome
sha1sums=('7c179619b66f2c5a15553ebccce8c0df3b774672')

subpkgs=("$pkgname-docs")
subdescs=("Glibmm Documentation")
subdepends=()
subgroups=('docs-extra')
subarchs=("x86_64")

build()
{
       Fbuild
       Fsplit $pkgname-docs usr/share/doc
}

# optimization OK
