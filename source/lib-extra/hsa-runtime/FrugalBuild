pkgname=hsa-runtime
pkgver=1.0f.3
pkgrel=1
pkgdesc="AMD Hetrogeneous System Architecture Runtime"
archs=('x86_64')
groups=('lib-extra')
depends=('elfutils')
_F_github_author=HSAFoundation
_F_github_name=HSA-Runtime-AMD
_F_github_tag=y
_F_github_tag_prefix="release-v"
Finclude github
sha1sums=('edf3c091d2839cce4287482a21b4e07de9dde33d')
_F_cd_path="HSA-Runtime-AMD-release-v$pkgver"

build() {
	Fcd
	Fmkdir opt/hsa
	Fcprel lib opt/hsa/
	Fcprel include opt/hsa/
	Fcprel sample opt/hsa/
}



# optimization OK
