pkgname=jemalloc
pkgver=5.2.0
pkgrel=1
pkgdesc="General-purpose scalable concurrent malloc(3) implementation"
url="http://www.canonware.com/jemalloc"
_F_github_author="$pkgname"
_F_github_tag="no"
Finclude  github
depends=('glibc>=2.26.9000-3')
makedepends+=('libxslt' 'docbook-xml' 'docbook-xsl')
options+=('static')
groups=('lib-extra')
archs=('x86_64')
sha1sums=('979e1487e0b87a898c228d7e9502ca027ec4472c')

build() {

	Fcd
	Fconf
	Fexec make build_doc_man build_doc_html || Fdie
	Fmake
	Fmakeinstall

}
# optimization OK
