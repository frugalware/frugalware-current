pkgname=leatherman
pkgver=1.6.0
pkgrel=1
pkgdesc="Collection of C++ and CMake utility libraries"
archs=('x86_64')
groups=('lib-extra')
license=('APACHE')
depends=()
makedepends=('libboost>=1.66.0' 'boost>=1.66.0')
_F_github_author="puppetlabs"
_F_github_tag=y
_F_github_grepv="1.4"
Finclude cmake github
options=('static')
sha1sums=('ec84c77a3ccb1450f381a6a83a7bd28567a062e0')

build() {
        Fcd

	local i
        for i in $(grep -rl rb_data_object_alloc ruby)
        do
                Fsed rb_data_object_alloc rb_data_object_wrap $i
        done

        CMake_build
}


# optimization OK
