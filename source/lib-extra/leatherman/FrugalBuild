pkgname=leatherman
pkgver=1.7.2
pkgrel=1
pkgdesc="Collection of C++ and CMake utility libraries"
archs=('x86_64')
groups=('lib-extra')
license=('APACHE')
depends=()
makedepends=('libboost>=1.70.0' 'boost>=1.70.0')
_F_github_author="puppetlabs"
_F_github_tag=y
_F_github_grepv="1.4"
_F_cmake_confopts="    -DBoost_NO_BOOST_CMAKE=ON"
Finclude cmake github
options=('static')
source+=("disable-Werror.patch")
sha1sums=('ece19dbdf91e3b92350dee312937cb0d4b4f8eea' \
          'c680e47633004e0de77c5af83f8f50e5b91b560d')

build() {
        Fcd

	local i
        for i in $(grep -rl rb_data_object_alloc ruby)
        do
                Fsed rb_data_object_alloc rb_data_object_wrap $i
        done

        CMake_build
}


# optimization OK
