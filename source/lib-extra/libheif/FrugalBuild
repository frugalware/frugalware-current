pkgname=libheif
pkgver=1.14.2
pkgrel=2
pkgdesc='HEIF file format decoder and encoder'
archs=('x86_64')
groups=('lib-extra')
_F_github_author="strukturag"
_F_github_tag_v=y
Finclude github cmake
depends=('aom' 'libde265' 'x265' 'dav1d' 'rav1e')
sha1sums=('70276b44f4cb494aadecf836863e8554b941ea0e')

subpkgs=('libheif-tools')
subdescs=('libheif tools')
subarchs=('x86_64')
subgroups=('apps-extra')
subrodepends=('libheif')
subdepends+=('')

subpkgs+=('libheif-gdk-pixbuf')
subdescs+=('libheif gdk-pixbuf-loader')
subarchs+=('x86_64')
subgroups+=('lib-extra')
subrodepends+=('libheif')
subdepends+=('gdk-pixbuf2')

build() {
	CMake_build
	Fsplit libheif-tools usr/bin/
	Fsplit libheif-gdk-pixbuf usr/lib/gdk-pixbuf-2.0/
}

# optimization OK
