pkgname=libluv
pkgver=1.48.0
pkgrel=1
pkgextraver=0
pkgdesc='Bare libuv bindings for lua'
archs=('x86_64')
url='https://github.com/luvit/luv'
depends=('luajit2' 'libuv')
groups=('lib-extra')
_F_github_author="luvit"
_F_github_name="luv"
_F_github_tag_v=yes
_F_cmake_confopts+="  -DWITH_SHARED_LIBUV=ON \
                      -DLUA_BUILD_TYPE=System \
                      -DBUILD_MODULE=OFF \
                      -DBUILD_SHARED_LIBS=ON"
Finclude cmake github
up2date="$up2date | sed \"s/-$pkgextraver//\""
source=("https://github.com/luvit/luv/releases/download/v${pkgver}-${pkgextraver}/luv-v${pkgver}-${pkgextraver}.tar.gz")
sha1sums=('2c089a2c8bfaa7302c9ac803db15f009a8a8649a')
_F_cd_path="luv-v${pkgver}-$pkgextraver"


