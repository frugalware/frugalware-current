# Compiling Time: 0.01 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=libraw
pkgver=0.9.1
pkgrel=1
pkgdesc="A library for reading RAW files obtained from digital photo cameras."
url="http://www.libraw.org/"
depends=('libstdc++')
groups=('lib-extra')
archs=('i686' 'x86_64')
_F_archive_name="LibRaw"
up2date="Flasttar $url/download"
source=(http://www.libraw.org/data/$_F_archive_name-${pkgver}.tar.gz)
sha1sums=('c314ac3949605ea3419f0ef1851af3af1772e6d9')

build() {
  Fcd $_F_archive_name-${pkgver}
  Fmake
  Fmkdir usr/include/
  Fcprel libraw usr/include/
  Fmkdir usr/lib/
  Fcprel lib/libraw.a usr/lib/
  Fcprel lib/libraw_r.a usr/lib/
  Fmkdir usr/bin/
  Fexerel bin/[a-z]* usr/bin/
}