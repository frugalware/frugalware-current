pkgname=libtorrent-rasterbar
pkgver=1.2.10
pkgrel=3
pkgdesc="LibTorrent Rasterbar is a BitTorrent library written in C++"
_F_github_author="arvidn"
_F_github_name="libtorrent"
_F_github_tag=y
_F_github_grepv="1.1\|RC"
Finclude github python
url="http://www.libtorrent.org"
depends=('openssl>=1.1.1' 'geoip>=1.4.8-2')
makedepends=('boost>=1.74.0')
groups=('lib-extra')
archs=('x86_64')
Fconfopts+="	--with-libgeoip=system \
		--enable-python-binding \
		--enable-statistics \
		--enable-disk-stats \
		--enable-deprecated-functions \
		--prefix=/usr "
source=("https://github.com/arvidn/libtorrent/releases/download/libtorrent-${pkgver}/libtorrent-rasterbar-$pkgver.tar.gz" )
sha1sums=('e39bef3f49f99122b5a4ba2009f782d9f45f32fd')
options=('force')

subpkgs=("libtorrent-rasterbar-python")
subdescs=('libtorrent-rasterbar python bindings')
subdepends=("python libboost>=1.74.0")
subrodepends=("$pkgname=$pkgver")
subgroups=('lib-extra')
subarchs=('x86_64')
suboptions=('force')

build()
{
	Fbuild
	Fsplit libtorrent-rasterbar-python $_F_python_libdir
}


