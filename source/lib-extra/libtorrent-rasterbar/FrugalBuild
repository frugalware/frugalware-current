pkgname=libtorrent-rasterbar
pkgver=1.2.2
pkgrel=1
pkgdesc="LibTorrent Rasterbar is a BitTorrent library written in C++"
_F_github_author="arvidn"
_F_github_name="libtorrent"
_F_github_tag=y
_F_github_grepv="1.1"
Finclude github python
url="http://www.libtorrent.org"
depends=('libboost>=1.70.0' 'openssl>=1.1.1' 'geoip>=1.4.8-2')
makedepends=('boost>=1.70.0')
groups=('lib-extra')
archs=('x86_64')
Fconfopts+="	--with-libgeoip=system \
		--enable-python-binding \
		--enable-statistics \
		--enable-disk-stats \
		--enable-deprecated-functions \
		--prefix=/usr "
source=("https://github.com/arvidn/libtorrent/releases/download/libtorrent-${pkgver//\./_}/libtorrent-rasterbar-$pkgver.tar.gz" )
sha1sums=('ebe0002a37a845bf08e7d91ff1c86120de2173ca')
up2date="$up2date | sed 's/libtorrent_//g' | sed 's/_/\./g'"

subpkgs=("libtorrent-rasterbar-python")
subdescs=('libtorrent-rasterbar python bindings')
subdepends=("python")
subrodepends=("$pkgname=$pkgver")
subgroups=('lib-extra')
subarchs=('x86_64')

build()
{
	Fbuild
	Fsplit libtorrent-rasterbar-python $_F_python_libdir
}


# optimization OK
