# Compiling Time: 1 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=libudev0-shim
pkgver=1
pkgrel=1
pkgdesc='libudev.so.0 compatibility library for systems with newer udev versions'
archs=('x86_64')
groups=('lib-extra')
depends=('libsystemd')
_F_github_author="archlinux"
_F_github_tag=y
_F_github_tag_v=y
_F_cross32_simple_auto="yes"
Finclude github cross32

sha1sums=('782d72697103f601492d41e05ea79d8ed0ae3ecc')

build() {
        Fcross32_prepare
        Fcross32_copy_source
        Fmake
	Finstallrel 755 usr/lib32/libudev.so.0.0.9999
	Fln /usr/lib32/libudev.so.0.0.9999 /usr/lib32/libudev.so.0
        Fcross32_copy_back_source
        Fcross32_reset_and_fix
	Fsplit "${subpkgs[0]}" /\*

        Fmake
        Finstallrel 755 usr/lib/libudev.so.0.0.9999
        Fln /usr/lib/libudev.so.0.0.9999 /usr/lib/libudev.so.0
	
}


# optimization OK
