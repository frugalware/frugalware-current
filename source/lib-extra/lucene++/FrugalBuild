# Compiling Time: 0.23 SBU
# Maintainer: Marius Cirsta <mcirsta@frugalware.org>

pkgname=lucene++
pkgver=3.0.7
pkgrel=11
pkgdesc="An up to date C++ port of the popular Java Lucene library, a high-performance, full-featured text search engine"
depends=('libboost>=1.74.0')
makedepends+=('boost>=1.74.0')
groups=('lib-extra')
archs=('x86_64')
_F_archive_name="rel"
Fpkgversep="_"
_F_github_author=luceneplusplus
_F_github_name=LucenePlusPlus
_F_github_devel=y
_F_cmake_confopts="	-DLIB_DESTINATION=/usr/lib \
			-DENABLE_CUSTOM_ALLOCATOR='FALSE' \
			-DENABLE_TEST=OFF \
			-DBoost_NO_BOOST_CMAKE=ON"
Finclude github cmake
options=('static')

build() {
	Funpack_scm
	CMake_build
	Fmv usr/include/pkgconfig /usr/lib/
}

# optimization OK
