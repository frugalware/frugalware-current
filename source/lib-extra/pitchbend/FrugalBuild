# Maintainer: DeX77 <dex@dragonslave.de>
# Compiling Time: 0.14 SBU

pkgname=pitchbend
pkgver=0.3.g578e08c
pkgrel=2
pkgdesc="Python module providing pitchbend and echo effect hooks for SDL_mixer."
archs=('i686' 'x86_64')
groups=('lib-extra')
url="http://git.jstump.com/gitweb/pitchbend.git"
depends=('libsndobj' 'sdl_mixer')
_F_scm_type="git"
_F_scm_url="git://git.jstump.com/git/pitchbend.git"
Finclude scm

build()
{
  Funpack_scm
  touch VERSION
  export CFLAGS="$CFLAGS -I/usr/include/SDL -D_GNU_SOURCE=1 -D_REENTRANT "
  Fbuild
}


# optimization OK
