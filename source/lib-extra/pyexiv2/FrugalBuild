pkgname=pyexiv2
pkgver=0.2.2
pkgrel=3
pkgdesc="a python binding to exiv2"
url="http://tilloy.net/dev/pyexiv2"
depends=('python>=2.7' 'exiv2>=0.21' 'libboost>=1.39.0')
makedepends=('boost>=1.39.0' 'scons')
archs=('i686' 'x86_64' 'ppc')
groups=('lib-extra')
up2date="Flasttar http://tilloy.net/dev/pyexiv2/download.html"
source=(http://launchpad.net/$pkgname/0.2.x/$pkgver/+download/$pkgname-$pkgver.tar.bz2)
sha1sums=('33f58a6826a45cd070833a16d762edea68f7bda0')

build() {
	Fcd
	scons || Fdie
	scons DESTDIR=$Fdestdir install || Fdie
}

# optimization OK
