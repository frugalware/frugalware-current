pkgname=python3-pylast
pkgver=5.0.0
pkgrel=2
pkgdesc="A Python 3interface to Last.fm and Libre.fm"
groups=('lib-extra')
archs=('x86_64')
depends=('python3-six>=1.16')
makedepends=('python3-setuptools_scm')
_F_pypi_name="pylast"
Finclude pypi
sha1sums=('c85aaaa4e191376f543c63960ed3f91f1ddfc4ca')
_F_cd_path="pylast-$pkgver"

replaces=('pylast')
provides=('pylast')
conflicts=('pylast')

build() {
        Fcd

        Fexec python3 setup.py build || Fdie
        Fexec python3 setup.py install --root=$Fdestdir --optimize=1 || Fdie

}

# optimization OK
