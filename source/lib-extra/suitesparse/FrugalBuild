# Compiling Time: 0.01 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=suitesparse
pkgver=5.10.1
pkgrel=2
pkgdesc="A collection of sparse matrix libraries"
url="http://faculty.cse.tamu.edu/davis/suitesparse.html"
archs=('x86_64')
depends=('lapack' 'libgomp' 'libstdc++>=11.2')
makedepends=('cmake')
groups=('lib-extra')
_F_github_author="DrTimothyAldenDavis"
_F_github_name="SuiteSparse"
_F_github_tag_v=y
Finclude github
source+=(suitesparse-no-demo.patch)
sha1sums=('83dd96b32701e12b7577acb7d9aea80138d7e46e' \
          '8dd4b03a768dfe25914a1f3f065f64a533ef5c5d')
_F_cd_path="SuiteSparse-$pkgver"
options=('static')

build() {
	Fcd
	Fpatchall
	BLAS=-lblas LAPACK=-llapack make || Fdie
	BLAS=-lblas LAPACK=-llapack make INSTALL_LIB="${Fdestdir}"/usr/lib INSTALL_INCLUDE="${Fdestdir}"/usr/include install || Fdie
}

# optimization OK
