pkgver=2.8.0
pkgrel=1
pkgdesc="A clean C library for processing UTF-8 Unicode data."
archs=('x86_64')
groups=('lib-extra')
depends=('glibc>=2.34')
_F_github_author="JuliaLang"
_F_github_tag_v="yes"
Finclude github
source+=(libutf8proc.pc)
options+=('static')
_F_make_opts+=" prefix=/usr"
