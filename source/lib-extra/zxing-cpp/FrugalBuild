pkgname=zxing-cpp
pkgver=1.0.0
pkgrel=6
pkgdesc="A command-line tool to decode QRCode"
groups=('lib-extra')
archs=('x86_64')
depends=('libstdc++>=11.2')
makedepends=('opencv') ## lib is static..
_F_github_author="glassechidna"
_F_github_devel=yes
Finclude github cmake
options=('static')

build()
{
	Funpack_scm
	CMake_build -DCMAKE_CXX_FLAGS="${CXXFLAGS} -fPIC"
}


