pkgname=expat
pkgver=2.0.0
pkgrel=3
pkgdesc="An XML Parser library written in C"
groups=('lib' 'chroot-core')
archs=('i686' 'x86_64')
depends=('glibc')
install=$pkgname.install
url="http://expat.sf.net"
up2date="lynx -dump http://expat.sourceforge.net/|grep 'Expat [0-9\.]* rel'|sed -n 's/.*xpat \(.*\) rel.*/\1/;1 p'"
source=(http://dl.sourceforge.net/sourceforge/expat/$pkgname-$pkgver.tar.gz)
sha1sums=('9ff011a75a1f5b60145c4afdec520442cb398d93')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make prefix=$startdir/pkg/usr install
}

# optimalization OK
