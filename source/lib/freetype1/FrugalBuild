pkgname=freetype1
pkgver=1.3.1
pkgrel=3
pkgdesc="TrueType font rendering library"
url="http://www.freetype.org"
groups=('lib')
archs=('i686' 'x86_64')
depends=('glibc')
up2date="lynx -dump 'http://sourceforge.net/project/showfiles.php?group_id=3157&package_id=3068'|grep 'freetype-'|sed -e 's/.*-\(.*\).tar.gz.*/\1/;q'"
source=(http://heanet.dl.sourceforge.net/freetype/freetype-$pkgver.tar.gz \
        freetype-$pkgver.diff)
md5sums=('9a9e7ad00c1ef6dfbf8f8e19ceefb300' 'a7236fe561e1859d1afd5ade834d94ab')

build() {
    cd $startdir/src/freetype-$pkgver
    Fpatch freetype-$pkgver.diff || return 1
    Facu
    Fmake || return 1
    Fmakeinstall || return 1
}

# optimalization OK

