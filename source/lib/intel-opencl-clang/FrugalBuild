pkgname=intel-opencl-clang
pkgver=10.0.0
pkgextraver="-2"
pkgrel=3
pkgdesc="A wrapper library around clang that can compile OpenCL C kernels to SPIR-V modules"
archs=("x86_64")
depends=('spirv-llvm-translator>=10.0.0-2' 'llvm-libs>=11.0.0' 'clang>=11.0.0' 'compiler-rt>=11.0.0')
makedepends=('llvm' 'llvm-static' 'git')
groups=('lib')
_F_github_author="intel"
_F_github_name="opencl-clang"
_F_github_tag_v=y
_F_github_ver="${pkgver}${pkgextraver}"
_F_scm_tag=ocl-open-110
_F_github_devel=y
Finclude github cmake

build() {
	Funpack_scm
	CMake_build
}
