pkgname=libatomic_ops
pkgver=7.6.10
pkgrel=3
pkgdesc="Implementation for atomic memory update operations"
url="http://www.hboehm.info/gc"
groups=('lib')
depends=()
archs=("x86_64")
sha1sums=('ad1c9cd6cc22e042a784e34baa360874083e5f60')
up2date="Flasttar http://www.hboehm.info/gc/gc_source/"
source=("http://www.hboehm.info/gc/gc_source/libatomic_ops-${pkgver}.tar.gz")
options+=('static') # needed for libgc , do not remove !!

subpkgs=("${pkgname}-static")
subdescs=("Static files for $pkgname")
subdepends=('')
subgroups=('devel-extra')
subarchs=('x86_64')

build() {

	Fbuild
	Fsplit ${pkgname}-static usr/lib/*a
}

# optimization OK
