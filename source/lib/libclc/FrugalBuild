pkgname=libclc
pkgver=19.1.1
pkgrel=1
pkgdesc="Library requirements of the OpenCL C programming language"
archs=('x86_64')
depends=('glibc')
groups=('lib')
url="http://libclc.llvm.org/"
makedepends=('clang' 'llvm' 'spirv-llvm-translator' 'llvm-static' 'spirv-tools' 'openmp' 'mlir' 'polly')
_F_cmake_src_dir="libclc"
Finclude cmake
options+=('clang')
_F_github_author=llvm
_F_github_name=llvm-project
_F_github_tag=yes
_F_github_grepv="rc1\|rc2\|rc3\|rc4\|init"
Finclude github
up2date="$up2date | sed 's/llvmorg-//'"
source=(https://github.com/llvm/llvm-project/releases/download/llvmorg-$pkgver/llvm-project-$pkgver.src.tar.xz)
_F_archive_ver="${pkgver}.src"
_F_cd_path="llvm-project-${_F_archive_ver}"
sha1sums=('a2dd343a5628b2f6ed2db168bcf8ee6885a9a10e')

provides=('lib32-libclc')
