pkgrel=2
pkgdesc="C/C++ port of the Sass CSS precompiler"
url="https://github.com/sass/libsass"
archs=("x86_64")
groups=('lib')
_F_github_tag=y
_F_github_author="sass"
Finclude github
source+=(1ec3876afc071a79bb2d104b0b79306392e20bc4.patch
		fdf63e4c93d40c1c4da43fdf13010d590dc133e0.patch)
depends=('libstdc++>=9.1.0-3')
sha1sums=('6f362fec7970bf0b7bec667166e93bbe63354816' \
          'cc896eecf2dee463652b8be96bf3d12e76cb49a7' \
          '0b49e72574fdb08b32a2cd76e27c9049387f588a')
_Fbuild_autoreconf=yes
Fconfopts+=" --disable-static"
options=('force')

build() {
	export LIBSASS_VERSION=$pkgver
	Fbuild
}
