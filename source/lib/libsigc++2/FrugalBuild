# Compiling Time: 0.01 SBU
# Maintainer: DeX77 <dex77@frugalware.org>
# Contributor: Shrift <shrift@frugalware.org>

pkgname=libsigc++2
pkgver=2.10.4
pkgrel=1
pkgdesc="A typesafe callback framework for C++"
url="http://libsigc.sourceforge.net/"
depends=('libstdc++>=9.1.0-3')
makedepends=('mm-common')
groups=('lib')
archs=("x86_64")
_F_gnome_name="libsigc++"
_F_gnome_ext=".tar.xz"
_F_gnome_devel="n"
_F_archive_grepv="3.0"
_F_meson_confopts=" --includedir $Fdestdir/usr/include" #wtf
Finclude gnome meson
sha1sums=('eecde11178a20b24a8bd0ff0fe6db194c9a8c9ca')
_F_cd_path="${_F_gnome_name}-${pkgver}"

build(){

	Meson_build
	Fmv var/tmp/fst/pkg/usr/include/sigc++-2.0/sigc++/adaptors/* /usr/include/sigc++-2.0/sigc++/adaptors/
	Fmv var/tmp/fst/pkg/usr/include/sigc++-2.0/sigc++/functors/* /usr/include/sigc++-2.0/sigc++/functors/
	Frm var/tmp/fst/pkg/usr/include/sigc++-2.0/sigc++/adaptors/
	Frm var/tmp/fst/pkg/usr/include/sigc++-2.0/sigc++/functors/
	Fmv var/tmp/fst/pkg/usr/include/sigc++-2.0/sigc++/* /usr/include/sigc++-2.0/sigc++/
	Frm var/

	Fexec sed -i 's/\/var\/tmp\/fst\/pkg//'  $Fdestdir/usr/lib/pkgconfig/sigc++-2.0.pc
}


# optimization ok
