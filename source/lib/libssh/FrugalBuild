pkgname=libssh
pkgver=0.7.5
pkgrel=4
pkgdesc="The SSH library"
url="http://www.libssh.org/"
depends=('openssl>=1.0.2-20' 'zlib>=1.2.8-8' 'libgcrypt>=1.7.3-2')
makedepends=('doxygen')
groups=('lib')
archs=("x86_64")
up2date="lynx -dump https://www.libssh.org/ | grep -m1 '^\[' | sed 's/.*-\(.*\)/\1/'"
source=(https://www.libssh.org/files/${pkgver%%.?}/$pkgname-$pkgver.tar.xz bug-260.patch)
sha1sums=('0cf54e96e91d73e730ae4bc76d3f5277100c0f1a' \
          '8d3067031b6d12880b12fff87922d8d6db1edd43')
_F_cmake_confopts="-DWITH_SSH1=ON -DWITH_GCRYPT=ON -DWITH_INTERNAL_DOC=ON"
Finclude cmake

# optimization OK
