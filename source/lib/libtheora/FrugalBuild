pkgname=libtheora
pkgver=1.0alpha7
pkgrel=1
pkgdesc="An open video codec developed by the Xiph.org."
url="http://www.theora.org/"
groups=('lib')
archs=('i686' 'x86_64')
depends=('libogg')
makedepends=('libvorbis' 'doxygen' 'sdl')
up2date="lynx -dump http://www.theora.org/|grep -m1 'libtheora-\(.*\).tar.bz2'|sed 's/.*-\(.*\).t.*/\1/'"
source=(http://downloads.xiph.org/releases/theora/$pkgname-$pkgver.tar.bz2)
sha1sums=('ee97d30e0818c27666477113c019d53f15449d3d')

# optimization OK
