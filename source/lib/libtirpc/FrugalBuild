pkgname=libtirpc
pkgver=0.2.2
pkgrel=2
pkgdesc="A port of Suns Transport-Independent RPC library to Linux."
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
depends=('libgssglue')
rodepends=('libkrb5')
backup=('etc/netconfig')
groups=('lib')
archs=('i686' 'x86_64' 'ppc' 'arm')
source=($source libtirpc-0.2.1-fortify.patch \
	libtirpc-0.2.2-rpc-des-prot.patch)
sha1sums=('576c8826a91110580b60c973c672836559d2805a' \
          'c14fcb21e0dfa37fce5b5e23d5a04ddf0090da35' \
          '29cdbb22e478bf2bc28c84a378ddb64327a8e378')

build()
{
	Fbuild
	Ffilerel doc/etc_netconfig /etc/netconfig
}

# optimization OK
