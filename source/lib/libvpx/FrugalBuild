# Compiling Time: 0.07 SBU
# Maintainer: Marius Cirsta <mcirsta@frugalware.org>

pkgname=libvpx
pkgver=1.8.1
pkgrel=1
pkgdesc="WebM VP8 VP9 Codec SDK"
depends=('libstdc++>=9.1.0-3')
makedepends=('yasm>=1.3.0-3')
groups=('lib')
archs=("x86_64")
_F_github_author=webmproject
_F_github_tag_v="v"
Finclude github
sha1sums=('6c9a55e1f92d7301383f387486bb574f22faf855')
_confopts+=" --prefix=/usr \
		--enable-experimental \
		--enable-vp8 \
		--enable-vp9 \
		--enable-vp9-highbitdepth \
		--enable-runtime-cpu-detect \
		--enable-shared \
		--enable-postproc \
		--enable-vp9-postproc \
		--enable-pic \
		--enable-vp9-temporal-denoising"

Fconfopts="	$_confopts --libdir=/usr/lib"

F32confopts=" $_confpts --libdir=/usr/lib32"

_F_cross32_delete=('usr/bin' 'usr/include')
_F_cross32_simple_auto=yes
Finclude cross32

options+=('nolto')

build() {

	Fbuild_cross32
	chmod 644 "$Fdestdir"/usr/include/vpx/*.h || Fdie
}

# optimization OK
