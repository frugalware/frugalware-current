# Compiling Time: 0.01 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=nghttp3
pkgver=1.3.0
pkgrel=1
pkgdesc="nghttp3 is an implementation of HTTP/3 in C"
groups=('lib' 'chroot-core')
archs=("x86_64")
depends=('glibc>=2.3.4')
url="https://nghttp2.org/nghttp3"
_F_github_author="ngtcp2"
_F_github_tag_v="y"
Finclude github
source=("https://github.com/ngtcp2/nghttp3/releases/download/v${pkgver}/nghttp3-${pkgver}.tar.xz")
sha1sums=('a36dc8248258a6a56172d75e112097b3cd691dd3')

## pacman
Fconfopts+="	--enable-static"
options+=('static')

subpkgs=("${pkgname}-static")
subdescs=("Static files for $pkgname")
subdepends=('')
subgroups=('devel-extra')
subarchs=('x86_64')
subrodepends=('')


build() {

	Fcd
	Fautoreconf
	Fbuild

	Fsplit ${pkgname}-static usr/lib/*.a

}

# optimization OK
