pkgname=opencdk
pkgver=0.5.5
pkgrel=2
pkgdesc="The Open Crypto Development Kit provides basic parts of the OpenPGP message format"
url="http://www.gnu.org/software/gnutls/"
groups=('lib')
archs=('i686' 'x86_64')
depends=('libgcrypt' 'zlib')
up2date="wget --passive-ftp -O - -q ftp://ftp.gnutls.org/pub/gnutls/$pkgname/|sed -n 's/.*-\([0-9.]\+\).tar.bz2.*/\1/;T;p'|sort -r|sed -n '1p'"
source=(ftp://ftp.gnutls.org/pub/gnutls/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('376b93e03e680a92e6ce9a54c33b5d3273a1d86b')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr

	make || return 1

	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
