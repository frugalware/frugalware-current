# Compiling Time: 5 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=ppl12
pkgver=0.12
pkgrel=3
pkgdesc="Library that provides numerical abstractions."
url="http://bugseng.com/products/ppl"
depends=('gmp')
groups=('lib')
archs=('i686' 'x86_64' 'arm')
up2date="Flasttar http://bugseng.com/products/$pkgname/download/ftp/releases/LATEST/"
source=(http://bugseng.com/products/ppl/download/ftp/releases/$pkgver/ppl-$pkgver.tar.xz)
signatures=($source.sign)

build()
{
  Fcd ppl-$pkgver
  Fbuild
  Frm /usr/share /usr/include /usr/bin /usr/lib/\*.{so,la,a}
}

# optimization OK
