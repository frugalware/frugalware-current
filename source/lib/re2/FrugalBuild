# Compiling Time: 1.24 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=re2
pkgver=2023.08.01
pkgrel=2
pkgdesc="Fast, safe, thread-friendly regular expression engine."
_F_github_author="google"
_F_github_tag=y
_F_github_ver="${pkgver//\./-}"
_F_cmake_confopts="	-DCMAKE_POSITION_INDEPENDENT_CODE=ON \
			-DRE2_USE_ICU=ON"
Finclude github cmake
up2date="$up2date | tr - ."
depends=('libstdc++' 'libgcc' 'abseil-cpp')
groups=('lib')
archs=("x86_64")
sha1sums=('e77bbf52bd0a307db594418bbaf560b2c9146842')
_F_cd_path="$pkgname-`echo $pkgver | tr . -`"
_F_make_opts+=" prefix=/usr"
options=('static')

subpkgs+=("${pkgname}-static")
subdescs+=("Static files for $pkgname")
subdepends+=('')
subgroups+=('devel-extra')
subarchs+=('x86_64')
suboptions+=('')

build() {

	Fbuild
	CMake_build

	Fsplit ${pkgname}-static usr/lib/*.a
}

# optimization OK
