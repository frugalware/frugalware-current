depends=('libstdc++>=9.1.0-3')
groups=('lib')
archs=("x86_64")
_F_github_author="google"
_F_github_tag=y
_F_cmake_confopts="	-DBUILD_SHARED_LIBS=ON"
Finclude github cmake
source+=('snappy.pc')
