# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

_F_aspell_lang=sl
pkgname=aspell-$_F_aspell_lang
pkgver=0.50r0
pkgrel=2
pkgdesc="German word list for the Aspell spell checker"
url="http://aspell.net/"
depends=('aspell')
groups=('locale-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://ftp.gnu.org/pub/gnu/aspell/dict/$_F_aspell_lang/\?M=D|grep aspell-$_F_aspell_lang|sed -n -e \"s/aspell-$_F_aspell_lang-//\" -e 's/\.tar\..* / /' -e 's/-/r/' -e '1 p'|cut -d ] -f 3|cut -d ' ' -f 1"
source=(ftp://ftp.gnu.org/gnu/aspell/dict/$_F_aspell_lang/$pkgname-`echo $pkgver|sed 's/r/-/'`.tar.bz2)
md5sums=('c4c11402bc834d796d1b56e711470480')

build() {
	cd $startdir/src/$pkgname-`echo $pkgver|sed 's/r/-/'`
	./configure
	make || return 1
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
