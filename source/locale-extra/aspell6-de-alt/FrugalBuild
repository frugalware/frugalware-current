# Compiling Time: ~1 minute
# Maintainer: VMiklos <vmiklos@frugalware.org>

lang=de-alt
pkgname=aspell6-$lang
pkgver=2.1r1
pkgrel=1
pkgdesc="GNU Aspell 0.60 German - Old Spelling dictionary"
url="http://aspell.net/"
depends=('aspell>=0.60')
groups=('locale-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://ftp.gnu.org/pub/gnu/aspell/dict/de/\?M=D|grep aspell6-$lang |sed -n -e \"s/aspell6-$lang-//\" -e 's/\.tar\..* / /' -e 's/-/r/' -e '1p'|cut -d ] -f 3|cut -d ' ' -f 1"
source=(ftp://ftp.gnu.org/gnu/aspell/dict/de/$pkgname-`echo $pkgver|sed 's/r/-/'`.tar.bz2)
md5sums=('13245374b03088608d729fd15c58cd7a')

build() {
	cd $startdir/src/$pkgname-`echo $pkgver|sed 's/r/-/'`
	./configure
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
