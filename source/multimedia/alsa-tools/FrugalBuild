# Compiling Time: 0.42 SBU
# Maintainer: James Buren <ryuo@frugalware.org>
# Contributor: Miklos Vajna <vmiklos@frugalware.org>

pkgname=alsa-tools
pkgver=1.1.0
pkgrel=1
pkgdesc="Tools for ALSA."
url="http://www.alsa-project.org"
depends=('alsa-lib>=1.1.0' 'libstdc++')
makedepends=('x11-protos')
groups=('multimedia')
archs=('i686' 'x86_64')
_F_archive_grepv="rc"
source=(ftp://ftp.alsa-project.org/pub/tools/$pkgname-$pkgver.tar.bz2)
up2date="Flasttar ftp://ftp.alsa-project.org/pub/tools"
options=('scriptlet')
sha1sums=('02c9276f1c272c4bbf9bad9cfe0a9d8d8a6f50cf')

subpkgs=("$pkgname-gui")
subdescs=('GUI based ALSA utilities.')
subdepends=("gtk+2 gtk+3 fltk")
subrodepends=("$pkgname=$pkgver")
subgroups=('xmultimedia-extra')
subarchs=('i686 x86_64')

build()
{
	export GITCOMPILE_NO_MAKE=y
	Fcd
	Fpatchall
	for i in `find . -type d`
	do
		[ "$i" == "." ] && continue
		[ "$i" == "./qlo10k1" ] && continue
		[ "$i" == "./ld10k1" ] && continue
		cd $i
		if [ -x gitcompile ]; then
			./gitcompile || Fdie
			Fmake
			Fmakeinstall
		fi
		cd -
	done
	Fsplit $pkgname-gui usr/bin/{echomixer,envy24control,hdspconf,hdspmixer,rmedigicontrol,hdajackretask}
	Fsplit $pkgname-gui usr/share/{pixmaps,applications}
}

# optimization OK
