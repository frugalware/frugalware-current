pkgname=alsa-utils
pkgver=1.1.2
pkgrel=2
pkgdesc="An alternative implementation of Linux sound support"
url="http://www.alsa-project.org"
depends=("alsa-lib>=1.1.2-2" 'libsamplerate>=0.1.8-3' 'ncurses>=6.0-12')
makedepends=('xmlto' 'docbook-xsl' 'docbook-xml')
options=('scriptlet')
groups=('multimedia')
archs=("x86_64")
_F_archive_grepv='rc'
up2date="Flasttar $url"
source=(ftp://ftp.alsa-project.org/pub/utils/$pkgname-$pkgver.tar.bz2)
sha1sums=('b8678946beb99efeb9998e718eafc5f6d26504d8')
_F_systemd_units=(alsa-restore=e alsa-store=e)
Finclude systemd

subpkgs=('alsa-info')
subdescs=('Provide information about alsa')
subdepends=('dialog>=1.3_20160828')
subgroups=('multimedia-extra')
subarchs=("x86_64")

build()
{
	export GITCOMPILE_NO_MAKE=y
	Fbuild
	Fgenscriptlet

	Fsplit alsa-info usr/sbin/alsa-info.sh
}

# optimization OK
