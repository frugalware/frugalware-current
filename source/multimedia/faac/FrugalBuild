# Last Modified: Thu, 02 Jun 2005 09:27:47 +0000
# Compiling Time: 0.01 SBU
# Maintainer: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=faac
pkgver=1.24
pkgrel=2
pkgdesc="FAAC is an AAC audio encoder."
url="http://www.audiocoding.com/faac.php"
depends=('glibc' 'faad2')
groups=('multimedia')
archs=('i686' 'x86_64')
Finclude sourceforge
up2date="lynx -dump 'http://prdownloads.sourceforge.net/faac/?sort_by=date&sort=desc'|grep faac-[0-9\.]*.tar.gz|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
sha1sums=('fd79715a800f8b39470d5b312f5d843a2629dd49')

build() {
	cd $startdir/src/$pkgname
	chmod +x bootstrap
	./bootstrap
	Fmake || return 1
	Fmakeinstall || return 1
}

# vim: ft=sh
