# Compiling Time: 0.76 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=faad2
pkgver=2.7
pkgrel=3
pkgdesc="ISO AAC audio decoder"
_F_sourceforge_dirname="faac"
_F_sourceforge_realname="$pkgname-src"
Finclude sourceforge
url="http://www.audiocoding.com/"
depends=('libstdc++')
rodepends=('libmp4v2')
groups=('multimedia')
archs=('i686' 'x86_64' 'ppc')
makedepends=('libsndfile' 'id3lib' 'sysfsutils')
sha1sums=('80eaaa5cc576c35dd28863767b795c50cbcc0511')


build()
{
	Fcd $pkgname-$pkgver
	Fpatchall
	Fsed 'AC_PROG_CC' "AC_PROG_CC\nAC_PROG_CXX" configure.in
	Fautoreconf
	Fmake
	Fmakeinstall
}


# optimization OK
