# Compiling Time: 0.01 SBU
# Maintainer: crazy <crazy@frugalware.org>
# Contributor: Miklos Vajna <vmiklos@frugalware.org>

pkgname=flac
pkgver=1.3.1
pkgrel=3
url="https://xiph.org/flac/"
pkgdesc="Free Lossless Audio Coder"
depends=('libogg>=1.3.2-5' 'libstdc++>=6.2.1-5')
groups=('multimedia')
archs=('i686' 'x86_64')
up2date="Flasttar http://downloads.xiph.org/releases/$pkgname"
source=(http://downloads.xiph.org/releases/$pkgname/$pkgname-$pkgver.tar.xz)
sha1sums=('38e17439d11be26207e4af0ff50973815694b26f')


build()
{

	if [ "$CARCH" == "x86_64" ]; then
		Fconfopts+=" --enable-sse"
	fi

	Fcd
	Fsed '-O3' '-O2' configure.ac
	Fexec ./autogen.sh || Fdie
	Fbuild --disable-silent-rules
}

# optimization OK
