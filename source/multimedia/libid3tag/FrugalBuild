# Compiling Time: 0.02 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=libid3tag
pkgver=0.15.1b
pkgrel=2
pkgdesc="ID3 tag manipulation library"
url="http://www.underbit.com/products/mad/"
depends=('zlib')
groups=('multimedia')
archs=('i686' 'x86_64')
up2date="lynx -dump ftp://ftp.mars.org/pub/mpeg/|grep 'libid3tag.*\.tar\.gz$'|sort -n -r|head -n 1|sed 's/.*-\(.*\).t.*/\1/'"
source=(ftp://ftp.mars.org/pub/mpeg/$pkgname-$pkgver.tar.gz id3tag.pc)
sha1sums=('4d867e8a8436e73cd7762fe0e85958e35f1e4306' \
          '594921af7295980d5e96b819bb9acefab0928b4c')

build() {
	Fbuild || return 1
	mkdir $Fdestdir/usr/lib/pkgconfig/
	cp $Fsrcdir/id3tag.pc $Fdestdir/usr/lib/pkgconfig/id3tag.pc
}
