pkgname=libvorbis
pkgver=1.3.6
pkgrel=2
pkgdesc="Vorbis codec library"
url="http://www.vorbis.com/"
groups=('multimedia')
archs=("x86_64")
depends=('glibc>=2.27-2' 'libogg>=1.3.2-8')
up2date="Flasttar https://ftp.osuosl.org/pub/xiph/releases/vorbis"
source=(http://downloads.xiph.org/releases/vorbis/$pkgname-$pkgver.tar.gz \
	ov_read_filter.patch)
sha1sums=('91f140c220d1fe3376d637dc5f3d046263784b1f' \
          'ef944bdb9a213f43deb69f6bce44b8d94f72fc80')
_F_cross32_simple_auto="yes"
Finclude cross32

build()
{
	Fcd
	## something is wrong with these guys :P
	Fsed '-O20' '' configure
	Fsed '-O3'  '' configure
	Fbuild_cross32
}

# optimization OK
