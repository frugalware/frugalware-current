# Compiling Time: 0.12 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=mpd
pkgver=0.12.1
pkgrel=2
pkgdesc="the Music Player Daemon"
url="http://musicpd.org"
depends=('libmikmod>=3.1.7' 'flac' 'libao' 'audiofile>=0.1.7' 'libvorbis' \
	 'faad2' 'libid3tag' 'libmad')
backup=('etc/mpd.conf')
groups=('multimedia')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/files.shtml|grep Current|sed -n 's/.*s \(.*\)/\1/;1 p'"
source=(http://musicpd.org/uploads/files/mpd-$pkgver.tar.bz2 rc.mpd)

build()
{
	Fbuild
	Frcd
	Ffilerel doc/mpdconf.example /etc/mpd.conf
	Fmv /usr/share/doc/$pkgname /usr/share/doc/$pkgname-$pkgver
}

# optimization OK

sha1sums=('8b124bfcf4b1b2c23abd40661bd0ad0b33fadbfe' \
	  '3c7de283c3a659b99d5eb6fe64dc0245eab87855')
