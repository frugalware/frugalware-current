pkgname=mpeg4ip
pkgver=1.4.1
pkgrel=1
pkgdesc="Open Source, Open Standards, Open Streaming"
url="http://mpeg4ip.sourceforge.net/"
depends=('sdl' 'gtk+2' 'atk' 'mpeg2dec' 'ffmpeg' 'pango' 'cairo' 'id3lib' 'x264')
makedepends=('faac' 'lame' 'x264' 'ffmpeg' 'xvidcore')
groups=('multimedia')
archs=('i686')
Finclude sourceforge
sha1sums=('f0a4b9ecfb281c6c20b332002a7e341e27a9ea10')
options=('nobuild')

build()
{
	Fcd $pkgname-$pkgver
	./bootstrap
	Fbuild || return 1
}

# optimalization ok
