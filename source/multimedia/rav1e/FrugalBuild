# Compiling Time: 0.01 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=rav1e
pkgver=0.3.4
pkgrel=1
pkgdesc='An AV1 encoder focused on speed and safety'
archs=('x86_64')
groups=('multimedia')
depends=('libgcc')
makedepends=('cargo' 'nasm' 'cargo-c')
_F_github_author=xiph
_F_github_tag_v=y
_F_github_grepv="alpha\|p2020"
Finclude github
sha1sums=('7e14c82ecdad19a87022ffa97b499672a8e224bb')

build() {
        Fcd

        Fexec cargo fetch \
                --locked \
                --manifest-path Cargo.toml || Fdie

        Fexec cargo build \
                --release \
                --frozen \
                --manifest-path Cargo.toml || Fdie

        Fexec cargo cbuild \
                --release \
                --frozen \
		--prefix=/usr \
                --manifest-path Cargo.toml || Fdie

        Fexec cargo install \
                --frozen \
                --offline \
                --no-track \
                --path . \
                --root "${Fdestdir}"/usr || Fdie

	Fexec cargo cinstall \
		--release \
		--frozen \
		--prefix /usr \
		--destdir "${Fdestdir}" || Fdie

}


# optimization OK
