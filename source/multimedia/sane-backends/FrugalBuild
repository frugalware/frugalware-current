# Last Modified: Sun, 07 Aug 2005 15:25:34 +0200
# Compiling Time: ~0.84 SBU
# Maintainer: VMiklos <vmiklos@frugalware.org>

pkgname=sane-backends
pkgver=1.0.16
pkgrel=1
pkgdesc="Scanner Access Now Easy"
url="http://www.sane-project.org"
depends=('libieee1284' 'libgphoto2')
groups=('multimedia')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.sane-project.org/|grep \"ackend.*released\"|tr -s ' '|cut -d ' ' -f 3|cut -d - -f 3"
# .17 does not exists, it's the same tarball as .16
up2date="$up2date |sed 's/1.0.17/1.0.16/'"
source=(http://alioth.debian.org/download.php/1079/$pkgname-$pkgver.tar.gz)
sha1sums=('38e2bf7aef648f3ea19bd6c89af2c2fdd8b6eeb1')

build() {
	Fmake
	Fmakeinstall
	# add hotplug support for USB scanners
	Fmkdir /etc/hotplug/usb
	Ffilerel tools/hotplug/{libsane.usermap,libusbscanner} /etc/hotplug/usb/
}

# vim: ft=sh

# optimalization OK
