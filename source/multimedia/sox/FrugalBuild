pkgname=sox
pkgver=12.18.2
pkgrel=2
pkgdesc="A universal sound converter, player, and recorder"
url="http://sox.sourceforge.net/"
depends=('libvorbis' 'lame' 'libmad' 'bash' 'alsa-lib')
groups=('multimedia')
archs=('i686' 'x86_64')
Finclude sourceforge
sha1sums=('3f5742cbed98deafbcf80251c29224c9a9ef5c89')

build()
{
	Fmake
	Fmakeinstall install install-play install-lib
}
# optimization OK
