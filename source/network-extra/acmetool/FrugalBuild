pkgname=acmetool
pkgver=0.0.67
pkgrel=2
pkgdesc="An automatic certificate acquisition tool for ACME (Let's Encrypt)"
groups=('network-extra')
archs=('x86_64')
depends=('libcap')
makedepends=('go' 'git')
_F_github_author="hlandau"
_F_github_name="acme"
_F_github_tag_v="y"
Finclude github
source+=(disable-tls-sni-01.patch)
sha1sums=('1ea93de016336107c83428c5749ce2d8faa698ac' \
          '24bb85378e7ef8003e9800e716f454a08f6e403e')
_F_cd_path="acme-$pkgver"

build() {
	Fcd
	Fpatchall
	Fmake
	Fmkdir usr/bin/
	Fmakeinstall PREFIX=/usr
}


# optimization OK
