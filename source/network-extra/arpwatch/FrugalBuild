# Compiling Time: 0.01 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=arpwatch
pkgver=3.3
pkgrel=1
pkgdesc='Ethernet/FDDI station activity monitor'
archs=('x86_64')
groups=('network-extra')
url='https://ee.lbl.gov'
up2date="Flasttar $url/downloads/$pkgname"
depends=('libpcap' 'postfix')
source=("$url/downloads/$pkgname/$pkgname-$pkgver.tar.gz" \
	no-rc.d.patch \
	"$pkgname.service")
sha1sums=('e58c5210d4e8315064b2479d1b0e6db262c24560' \
          '44a60a5848f0a796421fc222a787e30b3bdafa9a' \
          '67b8b73b81c419c481b6fddf831eb9bd889c2569')

build() {
	Fmkdir usr/sbin/
	Fmkdir usr/share/man/man8/
	Fbuild
	Finstall 644 $pkgname.service lib/systemd/system/$pkgname@.service
	Fmkdir var/lib/arpwatch
}


# optimization OK
