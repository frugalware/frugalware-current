# Compiling Time: 0.14 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=dovecot
pkgver=2.3.5.2
pkgrel=2
mainver=${pkgver%.*}
pkgdesc="An open source IMAP and POP3 server, written with security primarily in mind."
url="http://www.dovecot.org"
depends=('libldap>=2.4.47-2' 'clucene' 'curl' 'pam' 'libsodium' \
	'mariadb-libs>=10.3.14' 'libpq>=11.2-2' 'libkrb5' \
	'e2fsprogs' 'openssl>=1.1.1' 'icu4c>=1.70.0')
makedepends=('mariadb>=10.3.14' 'postgresql>=11.2-2' 'openldap>=2.4.47-2' 'krb5')
groups=('network-extra')
archs=('x86_64')
up2date="Flasttar ${url}/download.html"
source=(${url}/releases/2.3/${pkgname}-${pkgver}.tar.gz \
	dovecot.sysusers  dovecot.tmpfiles fix-mysql-free.patch)
sha1sums=('501740dd5e3d299115cdc04798efb546c33b3d9d' \
          '783526e7ba1265fbff421972b82f2bd5cbc38210' \
          'aca9285e92370844eae959db1c2074063188b78c' \
          '45efb743daf851e783538bc7e1f9335bc1ee7bed')

_F_systemd_units=(dovecot=)
Finclude systemd

build()
{

	Fcd
	Fpatchall
	Fautoreconf
	Fconf  \
		--with-nss \
		--with-lzma \
		--with-lz4 \
		--with-zlib \
		--with-bzlib \
		--with-libcap \
		--with-mysql \
		--with-pgsql \
		--with-sqlite \
		--with-pam \
		--with-sodium \
		--with-lucene \
		--with-libcap \
		--with-ssl=openssl \
		--with-ssldir=/etc/ssl \
		--with-ldap=plugin \
		--with-gssapi \
		--with-moduledir=/usr/lib/dovecot/modules \
		--sysconfdir=/etc \
		--with-rundir=/run/$pkgname \
		--with-systemdsystemunitdir=/lib/systemd/system \
		--docdir=/usr/share/doc/dovecot-${pkgver}

	## do not remove , out-of-tree-modules need it
	Fexec make dovecot-config || Fdie
	Fexec make || Fdie
	Fmakeinstall

	Ffile $pkgname.sysusers  /usr/lib/sysusers.d/$pkgname.conf
	Ffile $pkgname.tmpfiles  /usr/lib/tmpfiles.d/$pkgname.conf
	Fgenscriptlet
}

# optimization OK
