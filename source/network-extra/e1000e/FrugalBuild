# Compiling Time: 1 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=e1000e
pkgver=3.3.5.3
pkgrel=23
pkgdesc="Intel e1000e Ethernet adapter driver"
archs=('x86_64')
groups=('network-extra')
_F_sourceforge_dirname="e1000"
_F_sourceforge_rss_limit=100
Finclude sourceforge kernel-module
source+=("kernel-4.10.patch" "mainline-backports.patch")
sha1sums=('03031b5be7e25808bd6dfe2672fc1347d86dd39b' \
          '766c96f3a8195ecf08ba7cdff9462f353f00f6a4' \
          'b77118b5468dc04618fbca8062664c522df622f1')
options+=('nostrip')

build() {
	Fpatchall
	cd src/

	Fmake
	Ffilerel e1000e.ko $_F_kernelmod_dir/updates/drivers/net/ethernet/intel/e1000e/e1000e.ko
	Fbuild_kernelmod_scriptlet
}
