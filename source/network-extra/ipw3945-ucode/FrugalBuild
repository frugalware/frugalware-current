pkgname=ipw3945-ucode
pkgver=1.13
pkgrel=1
pkgdesc="Intel PRO/Wireless 3945ABG Network Connection Adapter Microcode"
url="http://www.bughost.org/ipw3945/"
depends=('udev')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url|grep ipw3945-ucode-|sed 's/.*-\(.*\)\.t.*/\1/;q'"
source=($url/ucode/ipw3945-ucode-$pkgver.tgz)
sha1sums=('3e400a7677d5bcff7e573f393b32e2b8bf7db483')

build()
{
	Fcd
	Ffilerel /lib/firmware/ipw3945.ucode
}
