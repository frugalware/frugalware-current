pkgname=linkchecker
pkgver=5.0.2
pkgrel=2
pkgdesc="Check websites and HTML documents for broken links."
depends=('python>=2.7')
groups=('network-extra')
archs=('i686' 'x86_64')
_F_sourceforge_name="LinkChecker"
Finclude sourceforge
up2date="lynx -dump $url|grep linkchecker-stable|sed 's/.*linkchecker-stable - //'"
source=(${source/linkchecker-/$_F_archive_name-})
sha1sums=('1cf26ed30b3d3bddd0e31dd45952202d9527a6af')

build()
{
	Fcd
	rm -f Makefile
	Fbuild
}

# optimization OK
