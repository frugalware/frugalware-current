          'dfd2235978e62cc4b357d6d4f635f39bece33602')
_F_cd_path="modsecurity-v$pkgver"
Fconfopts+="	--enable-shared"
options=('static')

build() {

	Fcd
	Fexec ./build.sh || Fdie
	Fbuild
}

