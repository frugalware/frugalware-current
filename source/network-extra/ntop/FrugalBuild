# Compiling Time: 0.71 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=ntop
pkgver=3.3.8
pkgrel=2
pkgdesc="A network traffic probe that shows the network usage"
depends=('openssl>=1.0.0' 'gd' 'gdbm' 'glib' 'libxml2' 'libpcap' 'rrdtool>=1.4.3-3')
groups=('network-extra')
archs=('i686' 'x86_64')
_F_sourceforge_ext=".tar.gz"
Finclude sourceforge
url="http://www.ntop.org"
sha1sums=('6ef20a1c43ce560b81e6439dc7ad0f7b29edc2c0')

build()
{
	Fcd
	sh autogen.sh --noconfig
	Fbuild --with-rrd-home="${Fprefix}"
	Fmkdir var/
	install -d -m755 --owner=nobody --group=nobody $Fdestdir/var/ntop || Fdie
}

# optimization OK
