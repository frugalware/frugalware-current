# Compiling Time: 0.03 SBU
# Maintainer: bouleetbil <bouleetbil@frogdev.info>

pkgname=open-isns
pkgver=0.102
pkgrel=1
pkgdesc="iSNS server and client for Linux"
depends=('openslp>=2.0.0-5' 'openssl>=3.0.7')
groups=('network-extra')
archs=('x86_64')
_F_github_author="open-iscsi"
_F_github_tag_v=yes
Finclude github
backup=(etc/isns/{isnsadm.conf,isnsd.conf,isnsdd.conf})
sha1sums=('34c484238c43e37d182d57c20abcfb525063af15')


build()
{
	Fcd
	Fpatchall
	Fautoreconf
	Fmake --enable-shared
	Fexec make DESTDIR=$Fdestdir systemddir=/lib/systemd/system install_hdrs install_lib install || Fdie
}

# optimization OK
