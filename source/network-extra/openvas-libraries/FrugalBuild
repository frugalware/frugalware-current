depends=('gnutls>=3.4.2' 'libssh' 'hiredis>=0.14.0' 'gpgme' 'libpcap' 'libldap')
makedepends=('doxygen')
groups=('network-extra')
archs=('x86_64')
_F_github_author="greenbone"
_F_github_dirname="gvm-libs"
_F_github_tag_v="yes"
Finclude github cmake
_F_cd_path="gvm-libs-$pkgver"
