_F_cmake_confopts+="	-DCMAKE_BUILD_TYPE=Release \
			-DCMAKE_INSTALL_PREFIX=/usr \
			-DLIBDIR=/usr/lib \
			-DSYSCONFDIR=/etc \
			-DLOCALSTATEDIR=/var"

provides=('gvm-libs')

build() {
	CMake_build

	# garbage
	Frm /usr/share/openvas
	Frm var/run
}

