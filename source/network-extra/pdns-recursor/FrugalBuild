# Compiling Time: 0.12 SBU
# Contributor: kikadf <kikadf.01@gmail.com>
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=pdns-recursor
pkgver=4.1.9
pkgrel=1
pkgdesc="Power DNS recursor"
url="http://www.powerdns.com/"
depends=('luajit2' 'libstdc++>=6.2.1-5' 'lua' 'curl' 'libsodium' 'protobuf>=3.6.1' 'libsystemd')
makedepends=('boost>=1.66.0' 'systemd' 'ragel')
groups=('network-extra')
archs=('x86_64')
backup=(etc/powerdns/recursor.conf)
_F_archive_grepv="rc\|alpha"
up2date="Flasttar http://downloads.powerdns.com/releases/"
source=(http://downloads.powerdns.com/releases/$pkgname-$pkgver.tar.bz2  recursor.conf)
sha1sums=('6894996a862beaf8c5ef5195df06f3f602516a1b' \
          '6d2781e079cb874b4fcb65eda44c280d1e73cbd3')


build()
{
	Fcd $pkgname-$pkgver
	Fconf \
		--libdir=/usr/lib/pdns \
		--sysconfdir=/etc/powerdns \
		--enable-recursor --with-luajit  \
		--with-pgsql-includes=/usr/include \
		--with-sqlite-includes=/usr/include \
		--enable-systemd --with-systemd=/lib/systemd/system
	Fexec make OPTFLAGS="" || Fdie
	Fmakeinstall
	Fmkdir /etc/powerdns
	Ffile /etc/powerdns/recursor.conf
}

# optimization OK
