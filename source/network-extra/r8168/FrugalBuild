# Compiling Time: 0.01 SBU
# Contributor: Daniel Exner <dex@dragonslave.de>
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=r8168
pkgver=8.046.00
pkgrel=2
Finclude kernel-module
pkgdesc="Realtek driver for RTL8111/RTL8168 cards."
groups=('network-extra')
archs=('x86_64')
url='http://www.realtek.com.tw/downloads/downloadsView.aspx?Langid=1&PNid=13&PFid=5&Level=5&Conn=4&DownTypeID=3&GetDown=false'
up2date="Fwcat '$url' | sed -n -r 's/.*$pkgname-([0-9.]+)[.]tar[.]bz2.*/\1/p'"
# Needs updating for each upgrade.
#https://github.com/mtorromeo/r8168/archive/$pkgver.tar.gz \
source=(https://az695102.vo.msecnd.net/rtdrivers/cn/nic/0011-r8168-8.046.00.tar.bz2
	$pkgname.conf \
	do-not-run-make-install-on-make.patch )
sha1sums=('a62127c1f498c36dcf18ca7a548af51eedcc221f' \
          '385fab20e1ad896dc6c1ee5c4aff9a6bd9496ee0' \
          'ee1adc720e1ec7a65780b82ff5cb34c77b17e85e' )

build() {
	unset MAKEFLAGS
	Fcd

	Fbuild_kernelmod_scriptlet
	Fsed '$(shell uname -r)' "${_F_kernelmod_uname}" src/Makefile
	Fpatchall
	Fexec make || Fdie
	Ffilerel src/r8168.ko $_F_kernelmod_dir/kernel/drivers/net/ethernet/realtek/r8168.ko
	Ffile /etc/modprobe.d/$pkgname.conf
	Fkernelver_compress_modules
}

# optimization OK
