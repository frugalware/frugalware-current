# Compiling Time: 0.01 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=vpnc
pkgver=0.5.3.550
pkgrel=8
pkgdesc="VPN client for cisco3000 VPN Concentrators"
url="https://davidepucci.it/doc/vpnc"
license=('GPL')
depends=('libgcrypt' 'openssl>=3.0.7' 'iproute2')
archs=('x86_64')
groups=('network-extra')
_F_github_author=streambinder
_F_github_devel=y
_F_scm_git_cloneopts="--recursive"
Finclude github

build() {
	Funpack_scm

	# Build hybrid support
	Fsed '#OPENSSL' 'OPENSSL' Makefile

	# no usr/local
	Fsed 'PREFIX=/usr/local' 'PREFIX=/usr' Makefile

	Fbuild
}


# optimization OK
