# Compiling Time: 0.01 SBU
# Maintainer: Miklos Vajna <vmiklos@frugalware.org>

pkgname=webalizer
pkgver=2.01_10
origver=`echo $pkgver|sed 's/_/-/'`
pkgrel=1
pkgdesc="The Webalizer is a fast, free web server log file analysis program."
url="http://www.mrunix.net/webalizer/"
depends=('gd' 'geoip')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.mrunix.net/webalizer/download.html|grep Stable|sed 's/.*: \(.*\)/\1/;s/-/_/'"
source=(ftp://ftp.mrunix.net/pub/webalizer/$pkgname-$origver-src.tgz \
	http://sysd.org/proj/geolizer_$origver-patch.20050520.tar.bz2)
sha1sums=('b13bceac94b221b5435d45b142d30663d7399f40' \
	  '61adea1082dee6ab683c0ffde48ea73897e540fc')

build()
{
	Fcd $pkgname-$origver
	Fpatch geolizer_$origver-patch/geolizer.patch
	Fmake --enable-geoip
	Fmkdir /usr/bin /usr/man/man1 /etc
	Fmakeinstall ETCDIR=$Fdestdir/etc
	Frm /usr/bin/webazolver
	Fln webalizer /usr/bin/webazolver
}





# optimization OK
