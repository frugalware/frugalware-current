depends=('gnutls' 'libgcrypt' 'curl' 'ncurses>=6.0-12' 'ruby>=3.1.2' \
	'lua>=5.4' 'tk' 'guile')
## FIXME - subpackages=()
makedepends=('intltool' 'perl>=5.28.2' 'python3>=3.8.3' 'aspell')
groups=('network-extra')
archs=('x86_64')
