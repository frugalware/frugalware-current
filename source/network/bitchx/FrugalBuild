	  'b1318d59dcde51e8aece1e82becf96d52e9e8fae')

build() {
	Fcd BitchX
	Fbuild --with-ssl --with-plugins
	Frm /usr/bin/BitchX
	Fln /usr/bin/BitchX-1.1-final /usr/bin/bitchx
	Fln /usr/bin/BitchX-1.1-final /usr/bin/BitchX
}

