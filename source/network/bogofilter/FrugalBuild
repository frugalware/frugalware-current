# Last Modified: Sat, 29 Apr 2006 00:35:52 +0200
# Compiling Time: 0.31 SBU
# Maintainer: geekitus <geekitus@tele2.fr>

pkgname=bogofilter
pkgver=1.0.2
pkgrel=1
pkgdesc="A very fast Bayesian spam filtering tool"
url="http://bogofilter.sourceforge.net/"
license="GPL2"
Finclude sourceforge
up2date="lynx -dump http://sourceforge.net/projects/bogofilter/|grep -m1 'Stable'|sed 's/.*-\(.*\) -.*/\1/'"
groups=('network-extra')
archs=('i686' 'x86_64')
depends=('glibc' 'db')
backup=(etc/bogofilter.cf)

build()
{
	Fbuild --localstatedir=/var \
	       --enable-transactions
	Fmv /etc/bogofilter.cf.example /etc/bogofilter.cf
	Fdocrel bogofilter.cf.example GETTING.STARTED
	Fdocrel doc/*.html doc/README.*
	Fdocrel contrib/*.example contrib/README.*
	for i in contrib/*.pl contrib/*.sh ; do
		Fexerel $i /usr/bin/`basename $i`
	done
}

sha1sums=('e9f4f2b869a816ba389cb7b4a3c48bfce228b0e1')

# optimization OK
