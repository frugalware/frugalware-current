pkgname=curl
pkgver=7.16.3
pkgrel=1
pkgdesc="A command line tool for transferring data specified with URL syntax."
url="http://curl.haxx.se"
depends=('openssl=0.9.8' 'zlib' 'libidn' 'c-ares')
groups=('network')
archs=('i686' 'x86_64')
Fconfopts="$Fconfopts --enable-ares" #necessary for rtorrent
up2date="lynx -dump $url/download.html|grep Released|tr -s ' '|sed 's/, / /'|cut -d ' ' -f 3"
source=(http://curl.haxx.se/download/$pkgname-$pkgver.tar.bz2)
signatures=($source.asc)

# optimization OK
