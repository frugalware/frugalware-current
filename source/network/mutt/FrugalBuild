pkgname=mutt
pkgver=1.4.2.1
pkgrel=2
pkgdesc="A small but very powerful text-based mail client."
url="http://www.mutt.org/"
groups=('network')
archs=('i686' 'x86_64')
depends=('ncurses' 'openssl')
makedepends=('gnupg')
up2date="pud -p http://www.mutt.org/ -e 'Stable.*? Mutt ([\d\.]*) was'"
source=(ftp://ftp.mutt.org/$pkgname/$pkgname-${pkgver}i.tar.gz)
sha1sums=('10fae2eef5a671d1ea6e17acd6e64cd1f37c3961')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --sysconfdir=/etc \
		--enable-pop --enable-imap --with-ssl --enable-pgp
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
}

# vim: ft=sh
