pkgname=rdate
pkgver=1.4
pkgrel=1
pkgdesc="A tool to get the date and time via the network"
depends=('glibc')
url="ftp://people.redhat.com/sopwith/"
groups=('network')
archs=('i686' 'x86_64')
license=('GPL-2')
up2date="wget --passive-ftp -O - -q $url|grep rdate.*tar.gz|sed -ne 's/.*e-\(.*\)\.t.*/\1/' -e '1 p'"
source=($url/$pkgname-$pkgver.tar.gz rdate-cflags-fix.patch)
sha1sums=('bad85e74a1523f8548105d7700ed63e9886b9979' \
          'fcc9eb114ea905021dcdec40ccc4c1f1df5e12d0')

build() {
	Fcd	
	Fpatchall || return 1
	Fmake || return 1
	Fmakeinstall || return 1	
}

# optimalization OK
