depends=('talloc>=2.1.8-2' 'tdb>=1.3.12-1' 'libldap>=2.4.44-2' 'ncurses>=6.0-15' 'libsystemd>=231-10')
makedepends+=('docbook-xsl' 'docbook-xml' 'openldap>=2.4.44-2' 'cups>=2.1.2-2' 'avahi>=0.6.31-9' 'systemd' 'krb5')
