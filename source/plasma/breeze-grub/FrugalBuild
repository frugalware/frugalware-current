pkgname=breeze-grub
pkgver=6.2.0
pkgrel=1
pkgdesc="Breeze theme for GRUB"
groups=('plasma')
archs=("x86_64")
_F_kde_project="plasma"
Finclude kf6
rodepends=('grub2')
sha1sums=('bfaad19f89a5f3460712e1dc6f2263e6ff2a13ac')

build(){
	Fcd
	Fmkdir usr/share/grub/themes/
	Fcprel breeze usr/share/grub/themes/
}

# optimization OK
