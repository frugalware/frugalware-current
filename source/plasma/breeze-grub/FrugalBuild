pkgname=breeze-grub
pkgver=6.2.1
pkgrel=1
pkgdesc="Breeze theme for GRUB"
groups=('plasma')
archs=("x86_64")
_F_kde_project="plasma"
Finclude kf6
rodepends=('grub2')
sha1sums=('a097b172b284e6322f7c589ce8c59f2ca5cb2290')

build(){
	Fcd
	Fmkdir usr/share/grub/themes/
	Fcprel breeze usr/share/grub/themes/
}

# optimization OK
