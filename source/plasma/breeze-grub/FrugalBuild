pkgname=breeze-grub
pkgver=6.0.3
pkgrel=3
pkgdesc="Breeze theme for GRUB"
groups=('plasma')
archs=("x86_64")
_F_kde_project="plasma"
Finclude kf6
rodepends=('grub2')
sha1sums=('b621515570535a2d57ea970bc36d3a4fab19fa49')

build(){
	Fcd
	Fmkdir usr/share/grub/themes/
	Fcprel breeze usr/share/grub/themes/
}

# optimization OK
