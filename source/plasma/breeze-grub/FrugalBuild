pkgname=breeze-grub
pkgver=6.3.4
pkgrel=2
pkgdesc="Breeze theme for GRUB"
groups=('plasma')
archs=("x86_64")
_F_kde_project="plasma"
Finclude kf6
rodepends=('grub2')
sha1sums=('3a1ffd7615a9817b732b8076d013ef48b547c376')

build(){
	Fcd
	Fmkdir usr/share/grub/themes/
	Fcprel breeze usr/share/grub/themes/
}

# optimization OK
