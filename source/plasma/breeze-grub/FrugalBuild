pkgname=breeze-grub
pkgver=5.8.2
pkgrel=1
pkgdesc="Breeze theme for GRUB"
groups=('plasma')
archs=('i686' 'x86_64')
_F_kde_project="plasma"
Finclude kf5
rodepends=('grub2')
sha1sums=('f72bcac4b339d98e4374d415bc6a7a7aea150d45')

build(){
	Fcd
	Fmkdir usr/share/grub/themes/
	Fcprel breeze usr/share/grub/themes/
}

# optimization OK
