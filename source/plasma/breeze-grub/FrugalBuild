pkgname=breeze-grub
pkgver=6.1.5
pkgrel=1
pkgdesc="Breeze theme for GRUB"
groups=('plasma')
archs=("x86_64")
_F_kde_project="plasma"
Finclude kf6
rodepends=('grub2')
sha1sums=('ee1c5fc663550d971d23c08a3055d40c16c84c04')

build(){
	Fcd
	Fmkdir usr/share/grub/themes/
	Fcprel breeze usr/share/grub/themes/
}

# optimization OK
