Finclude kf5
depends=("kxmlrpcclient>=$_F_kf5_full" "kidletime>=$_F_kf5_full" \
	"syntax-highlighting>=$_F_kf5_full" "kdeclarative>=$_F_kf5_full" \
	'pcre2' "kuserfeedback")
