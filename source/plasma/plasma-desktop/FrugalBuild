sha1sums=('ed68ccf587b227c1a463c8f93715560db6207e06' \
          '714e6e60e809997aee9c2c0d46cf87a1a7a30d95' \
          '4ee02d2dc4fd0c4d26ae66ea688e3876ccce1835' \
