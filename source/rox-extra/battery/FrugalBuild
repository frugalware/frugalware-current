# Compiling Time: ~0.03 SBU
# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=battery
pkgver=0.1
pkgrel=1
pkgdesc="A simple ROX applet to monitor battery charge"
url="http://www.csai.unipa.it/peri/"
license="GPL2"
up2date="$pkgver"
source=($url/Battery/Battery.tgz)
groups=('rox-extra')
archs=('i686')
depends=('gtk+2' 'python')
Finclude rox
sha1sums=('6fa22f15ce8e7cc15a7313b9e773b5f4afd8a477')


build()
{
    Fmkdir /usr/share/Apps
    Battery/AppRun --compile || return 1
    cp -rv Battery $Fdestdir/usr/share/Apps/ || return 1
    Fmv /usr/share/Apps/Battery/COPYING /usr/share/Apps/Battery/Help
    Frm /usr/share/Apps/Battery/src
    Fdoc Battery/COPYING Battery/Help/*
}

# optimalization ok - i686

