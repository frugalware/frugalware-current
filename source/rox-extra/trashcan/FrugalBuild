# Compiling Time: ~0.01 SBU
# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=trashcan
pkgver=031127
pkgrel=1
pkgdesc="Yet another simple ROX wrapper for libtrash."
url="http://kymatica.com/index.php/Software"
license="GPL2"
depends=('libtrash' 'python' 'rox-lib')
groups=('rox-extra')
archs=('i686')
up2date="lynx -dump $url | grep -o 'TrashCan-[0-9]\+' | grep -o -m 1 '[0-9]\+'"
source=(http://kymatica.com/uploads/Software/TrashCan-$pkgver.tar.bz2)
sha1sums=('4a7fc798248cba2f9a6d04d7545c2e3feada6b3a')

build()
{
	Fmkdir /usr/share/Apps
	cp -rv TrashCan $Fdestdir/usr/share/Apps/ || return 1
	Fdoc TrashCan/Help/COPYING TrashCan/Help/README
}

# optimalization ok - noarch
