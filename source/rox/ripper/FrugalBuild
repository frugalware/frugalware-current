pkgname=ripper
pkgver=004
pkgrel=1
pkgdesc="A CD to MP3/OGG Ripper/Encoder for the ROX Desktop."
url="http://www.hayber.us/rox/Ripper/"
license="GPL2"
depends=('rox-lib')
groups=('rox-extra')
archs=('i686')
up2date="lynx -dump http://www.hayber.us/rox/ripper/ | grep .tgz | sed -n '$ p' | sed 's/.*-\(.*\)\.t.*/\1/'"
source=(http://www.hayber.us/rox/ripper/Ripper-$pkgver.tgz)
sha1sums=('d08a0e982f5c61dcdd8511f37aca238c262f43a9')

build() {
	Fmkdir usr/share/Apps
	cp -r Ripper $Fdestdir/usr/share/Apps/
	Fln /usr/share/Apps/Ripper/AppRun /usr/bin/rox-ripper
	Fdoc Ripper/Help/*
	Frm usr/share/Apps/Ripper/{tests,Help,.svn,Messages/.svn,messages.pot}
	Fln /usr/share/doc/$pkgname-$pkgver/ usr/share/Apps/Ripper/Help
}

# optimalization OK - noarch

