+static void
+_decor_pad_border_picture (Display     *xdisplay,
+			   Picture     dst,
+			   decor_box_t *box)
+{
+    int x1, y1, x2, y2;
+
+    x1 = box->x1;
+    y1 = box->y1;
+    x2 = box->x2;
+    y2 = box->y2;
+
+    if (box->pad & PAD_TOP)
+    {
+	XRenderComposite (xdisplay, PictOpSrc, dst, None, dst,
+			  x1, y1,
+			  0, 0,
+			  x1, y1 - 1,
+			  x2 - x1, 1);
+
+	y1--;
+    }
+
+    if (box->pad & PAD_BOTTOM)
+    {
+	XRenderComposite (xdisplay, PictOpSrc, dst, None, dst,
+			  x1, y2 - 1,
+			  0, 0,
+			  x1, y2,
+			  x2 - x1, 1);
+
+	y2++;
+    }
+
+    if (box->pad & PAD_LEFT)
+    {
+	XRenderComposite (xdisplay, PictOpSrc, dst, None, dst,
+			  x1, y1,
+			  0, 0,
+			  x1 - 1, y1,
+			  1, y2 - y1);
+    }
+
+    if (box->pad & PAD_RIGHT)
+    {
+	XRenderComposite (xdisplay, PictOpSrc, dst, None, dst,
+			  x2 - 1, y1,
+			  0, 0,
+			  x2, y1,
+			  1, y2 - y1);
+    }
+}
