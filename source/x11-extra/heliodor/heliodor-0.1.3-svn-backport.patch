+int
+decor_handle_selection_clear (Display *xdisplay,
+			      XEvent  *xevent,
+			      int     screen)
+{
+    Atom dm_sn_atom;
+    char buf[128];
+
+    sprintf (buf, "DM_S%d", screen);
