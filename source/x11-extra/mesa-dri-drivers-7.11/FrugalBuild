# Compiling Time: 2 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=mesa-dri-drivers-7.11
pkgver=7.11.2
pkgrel=5
pkgdesc="Mesa 7.11 dri drivers for ancient video hardware."
url="http://mesa3d.sourceforge.net/"
depends=('libdrm')
makedepends=('dri2proto' 'glproto' 'expat' 'libxdamage' 'libxxf86vm' 'llvm>=3.4.2-2' 'libxt' 'makedepend')
groups=('x11-extra')
archs=('i686' 'x86_64')
up2date="$pkgver"
source=(ftp://ftp.freedesktop.org/pub/mesa/older-versions/7.x/$pkgver/MesaLib-$pkgver.tar.bz2 git.patch)
sha1sums=('5981ac2de8438e5f4a1f3561f2044d700c5f0de9' \
          '8384bb693d0f4719740160d204d0f9a7eeb6669c')

build()
{
	Fcd Mesa-$pkgver
	Fpatchall
	Fautoreconf
	Fconf \
		--with-dri-driverdir=/usr/lib/dri \
		--enable-dri \
		--with-dri-drivers=unichrome,i810,mach64,mga,r128,savage,sis,tdfx \
		--with-gallium-drivers= \
		--enable-glx \
		--enable-glx-tls \
		--with-driver=dri \
		--enable-gles1 \
		--enable-gles2 \
		--enable-egl \
		--enable-texture-float \
		--enable-shared-glapi \
		--disable-xa \
		--enable-gbm \
		--enable-xcb
	make || Fdie
	Fmakeinstall
	Frm /usr/include
	Frm /usr/lib/\*.so\*
	Frm /usr/lib/pkgconfig
}

# optimization OK
