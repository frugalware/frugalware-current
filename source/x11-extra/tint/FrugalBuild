pkgname=tint
pkgver=0.7
pkgrel=1
pkgdesc="Tint is a simple panel/taskbar."
depends=('pango>=1.24.4' 'libxinerama>=1.0.3' 'imlib2>=1.4.2-4' 'libxau>=1.0.4' 'libxdmcp>=1.0.2-2' 'libxml2>=2.7.2-4')
groups=('x11-extra')
options=('scriptlet')
archs=('i686' 'x86_64')
_F_googlecode_name="${pkgname}2"
_F_googlecode_dirname="${pkgname}2"
_F_archive_name="${pkgname}2"
Finclude googlecode
sha1sums=('9c6b1de7669f83bb4754c709bab49c4efdee7173')

build()
{
	Fbuild
	# include the sample tintrc for reference
	Ffilerel tint2rc /etc/xdg/$pkgname
}

# optimization OK
