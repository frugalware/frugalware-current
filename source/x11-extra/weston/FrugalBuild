# Compiling Time: 0.63 SBU
# Maintainer: crazy <crazy@frugalware.org>

: ${USE_DEVEL="n"}

pkgname=weston
pkgver=1.12.0
pkgrel=1
pkgdesc="Wayland Default Display Compositor"
url="http://wayland.freedesktop.org/"
groups=('x11-extra')
archs=('i686' 'x86_64')
depends=('libxkbcommon>=0.5.0-3' 'cairo>=1.14.6-2' 'libwebp>=0.5.0' \
	'libinput>=1.1.4-1' 'dbus>=1.10.6-5' 'colord>=1.2.12-5' \
	'libxcursor>=1.1.14-2' 'libgles>=11.2.2' 'libwayland-egl>=11.2.2' \
	'libunwind>=1.1-4' 'wayland-protocols>=1.4' 'libva' 'pango')

makedepends=('x11-protos>=0.1-3')
up2date="Flasttar https://wayland.freedesktop.org/releases/"

if Fuse DEVEL; then
	pkgver=$pkgver.g9061f91
	_F_scm_type="git"
	_F_scm_url="git://anongit.freedesktop.org/wayland/weston"
	Finclude scm
else
	source=("${url}releases/${pkgname}-${pkgver}.tar.xz")
	sha1sums=('36f1a31a32964be8ec782898cc31c70c90ba5697')
fi

Fconfopts+="    --enable-clients \
                --enable-drm-compositor \
                --enable-x11-compositor \
                --enable-wayland-compositor \
                --enable-weston-launch \
                --enable-demo-clients-install \
                --enable-xwayland"

build() {
	if Fuse DEVEL; then
		Funpack_scm
		./autogen.sh
	fi
	Fbuild
}

# optimization OK
