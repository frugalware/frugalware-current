pkgname=font-cursor-misc
pkgver=1.0.0
pkgrel=1
pkgdesc="X.Org Cursor Misc Fontset"
url="http://xorg.freedesktop.org"
groups=('x11' 'xorg-core' 'xorg-fonts')
archs=('i686' 'x86_64')
depends=('mkfontscale' 'mkfontdir')
makedepends=('pkgconfig' 'bdftopcf')
Finclude xorg
source=(${source[@]} mkfontscale-fix.patch)
install=$pkgname.install

build() {
	Fcd
	Fpatchall
	autoreconf || return 1
	Fmake
	Fmakeinstall
}

# optimalization OK

# vim: ft=sh
sha1sums=('3fe0f1015c15444169d2b28cdb138b2d49481f78' \
	  '84d377ebafea8d3df2d9076119f1f669bdc1b860')
