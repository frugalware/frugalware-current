# Compiling Time: 0.13 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=glfw
pkgver=3.3.3
pkgrel=1
pkgdesc="A free, open source, portable framework for OpenGL application development."
makedepends=('x11-protos' 'doxygen' 'extra-cmake-modules' 'wayland-protocols' 'libglvnd' 'vulkan-headers')
url="glfw.org"
Finclude cmake
groups=('x11')
archs=('x86_64')
up2date="Flastarchive $url/download.html .zip"
source=("https://github.com/glfw/glfw/releases/download/$pkgver/glfw-$pkgver.zip")
sha1sums=('f9f0e1f515040e3c41d072d63ff31db8f961a607')
depends=('libwayland-egl' 'libxkbcommon' 'vulkan-icd-loader')

unset MAKEFLAGS

_F_cmake_confopts="	-DBUILD_SHARED_LIBS=ON \
			-DGLFW_USE_WAYLAND=ON"
build()
{
     CMake_build
     Fdocrel docs/html/*

     # fix pc file prefix path
     Fsed "$Fdestdir" "$Fdestdir/usr/lib/pkgconfig/lib$pkgname.pc"
}

# optimization OK
