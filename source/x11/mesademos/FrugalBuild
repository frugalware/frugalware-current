# Compiling Time: 1.14 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=mesademos
_F_archive_name=mesa-demos
pkgver=8.3.0
pkgrel=4
pkgdesc="OpenGL demonstration and test programs."
url="http://mesa3d.sourceforge.net/"
up2date="lynx -dump  ftp://ftp.freedesktop.org/pub/mesa/demos | grep ftp | sort -r | head -n1| sed 's/.*\///'"
source=(ftp://ftp.freedesktop.org/pub/mesa/demos/$pkgver/$_F_archive_name-$pkgver.tar.gz)
depends=('glew>=2.0.0' 'libglu>=9.0.0-2' 'freeglut>=3.0.0-1')
makedepends=('x11-protos')
archs=('i686' 'x86_64')
groups=('x11')
sha1sums=('2d46ef2d83030c978ba032eac14bf94007bd4a84')

build() {

	Fbuild
	## conflicts with bitmap package
	Fmv usr/bin/bitmap usr/bin/mesa-bitmap
}
# optimization OK
