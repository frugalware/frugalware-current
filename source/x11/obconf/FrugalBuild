pkgname=obconf
pkgver=1.5
pkgrel=1
pkgdesc="OpenBox's Configuration utility"
url="http://icculus.org/openbox/obconf"
depends=('openbox' 'gtk+2' 'libglade')
up2date=`lynx -dump http://icculus.org/openbox/obconf|grep 'The current release'|tr -s ' '|cut -d ' ' -f 7|cut -b '2-4'`
source=(http://$url/$pkgname-$pkgver.tar.gz)
md5sums=('a0f0e14db3d889bd67f98f1c00b4a9f7')

build() {
	cd $startdir/src/$pkgname-$pkgver
	PKG_CONFIG_PATH="/usr/X11R6/lib/pkgconfig/" ./configure --prefix=/usr

	make || return 1
	make DESTDIR=$startdir/pkg install || return 1
}

