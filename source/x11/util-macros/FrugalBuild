pkgname=util-macros
pkgver=1.19.0
pkgrel=3
pkgdesc="X.Org autotools utility macros"
groups=('x11' 'xorg-core' 'xorg-util')
archs=('i686' 'x86_64')
depends=()
Finclude xorg
sha1sums=('00cfc636694000112924198e6b9e4d72f1601338')

build() {

	Fcd
	Fsed '$(datadir)/pkgconfig' '/usr/lib/pkgconfig' Makefile.{am,in}
	Fbuild
}
