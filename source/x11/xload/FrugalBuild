# Compiling Time: 0.01 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=xload
pkgver=1.0.1
pkgrel=1
pkgdesc="X.Org xkill application"
url="http://xorg.freedesktop.org"
groups=('x11' 'xorg-core' 'xorg-apps')
archs=('i686' 'x86_64')
depends=('libxaw' 'libxp')
makedepends=('inputproto')
_F_xorg_nr="$_F_xorg_nr"
Finclude xorg
source=($source http://xorg.freedesktop.org/releases/X11R7.1/patches/xload-1.0.1-setuid.diff)

build() {
	Fsed xload.c xload/xload.c $Fsrcdir/xload-1.0.1-setuid.diff
	Fbuild --enable-xprint
}

# optimization OK

sha1sums=('a65b9bc49f68f39fab19730e291b4f875468f247' \
	  'b14a6f911c2043052aa5006f3146fc5534705c2f')
