: ${USE_DGA="y"}
: ${USE_KDRIVE="y"}
: ${USE_UDEV="y"}
: ${USE_SERVERDMX="y"}

pkgname=xorg-server
pkgver=1.19.6
pkgrel=9
pkgdesc="Modular X.Org X Server"
groups=('x11' 'xorg-core')
archs=('x86_64')
depends=('pixman>=0.32.8-3' 'libepoxy>=1.3.1-6' 'libsystemd>=231-13' 'libdmx>=1.1.3-3' 'libxfont2>=2.0.1' 'pam' \
	'mesa-libglx>=17.3.0-3' 'libglvnd' 'libglapi>=17.3.0-3' 'dbus' 'mesa-dri-drivers' 'libgbm>=17.3.0-3' 'mesa-libegl>=17.3.0-3')
makedepends=('libxkbfile>=1.0.9-3' 'libxtst>=1.2.2-3' 'libxres>=1.0.7-4' 'font-util>=1.3.1-3' 'doxygen' 'xmlto' \
	'libxslt' 'wayland-protocols' 'mesa-libgl-headers>=17.3.0-3' 'systemd')
rodepends=('xf86-video-vesa')
provides=('libdri' 'xf86-video-modesetting' 'glamor')
replaces=('libdri' 'xf86-video-modesetting' 'glamor' \
	'xf86-video-cirrus' 'xf86-video-newport' 'xf86-video-rendition' \
	'xf86-video-sunbw2' 'xf86-video-suncg14' 'xf86-video-suncg3' \
	'xf86-video-suncg6' 'xf86-video-sunffb' 'xf86-video-sunleo' \
	'xf86-video-suntcx' 'xf86-video-via' 'xf86-video-xgi' 'xf86-input-evtouch' )
conflicts=("${replaces[@]}")

_F_archive_grepv="99"
_F_cross32_combined=y
Finclude xorg cross32
source+=(xorg-server-modules-path-nvidia-stuff.patch \
	xserver-autobind-hotplug.patch \
	udev-stop-adding-NULL-devices.patch \
	xvfb-run \
	xvfb-run.1)
sha1sums=('2dd560ac49bdbda7f67166546af43541fabf517f' \
          '12c1561967d325e8eeebe8eac6af199817dca470' \
          'f9cac3aedb5a8302162ba536550fdd466c6fc498' \
          '02802b35982680bb4f3e027b2b77a35ae1556ab8' \
          'c94f742d3f9cabf958ae58e4015d9dd185aabedc' \
          '6838fc00ef4618c924a77e0fb03c05346080908a')

Fconfopts+="    --disable-static \
		--enable-ipv6 \
		--enable-dri \
		--enable-dri2 \
		--enable-dri3 \
		--enable-xcsecurity \
		--enable-xorg \
		--disable-xfake \
		--sysconfdir=/etc/X11 \
		--localstatedir=/var \
		--with-xkb-output=/var/lib/xkb \
		--with-xkb-path=/usr/lib/X11/xkb \
		--enable-xnest \
		--enable-composite \
		--enable-glx-tls \
		--disable-install-setuid \
		--enable-record \
		--enable-glamor \
		--enable-xwayland \
		--enable-systemd-logind \
		--disable-suid-wrapper \
		--with-systemd-daemon=no \
		--with-sha1=libgcrypt \
                --with-vendor-web=https://www.frugalware.org \
                --with-os-name=Frugalware_Linux \
                --with-os-vendor=Frugalware.org-Development-Team \
                --with-builder-addr=frugalware-devel@frugalware.org \
		--enable-input-thread \
		--enable-secure-rpc \
		--disable-linux-acpi \
		--disable-linux-apm"


if Fuse $USE_UDEV; then
	depends+=('libsystemd>=231-13')
	makedepends+=('systemd')
	rodepends+=('xf86-input-evdev')
	Fconfopts+=" --disable-config-hal --enable-config-udev --enable-config-udev-kms"
else
	Fconfopts+=" --disable-config-hal --disable-config-udev --disable-config-udev-kms"
	rodepends+=('xf86-input-mouse' 'xf86-input-keyboard')
fi

subpkgs=("lib32-$pkgname")
subdescs=("Modular X.Org X Server (32-bit)")
subgroups=('lib32-extra')
subarchs=('x86_64')
subdepends=('lib32-pixman>=0.32.8-3 lib32-libepoxy>=1.3.1-6 lib32-libsystemd>=231-17 lib32-libdmx>=1.1.3-3 lib32-libdbus lib32-mesa-libegl>=17.3.0-3 lib32-pam
	lib32-libxfont2>=2.0.1 lib32-libglvnd lib32-mesa-libglx>=17.3.0-3 lib32-libglapi>=17.3.0-3 lib32-mesa-dri-drivers>=17.3.0-3 lib32-libgbm>=17.3.0-3')

subpkgs+=('xorg-server-xwayland')
subdescs+=('Run X clients under wayland.')
subdepends+=('mesa-libglx>=17.3.0-3 libglapi>=17.3.0-3 libglvnd libepoxy>=1.3.1-6 pixman>=0.32.8-3 libsystemd>=231-17 libxfont2>=2.0.1')
subgroups+=('x11-extra')
subarchs+=('x86_64')

subpkgs+=('lib32-xorg-server-xwayland')
subdescs+=('Run X clients under wayland.')
subdepends+=('lib32-mesa-libglx>=17.3.0-3 lib32-libglapi>=17.3.0-3 lib32-libglvnd lib32-libepoxy>=1.3.1-6 lib32-pixman>=0.32.8-3 lib32-libsystemd>=231-17 lib32-libxfont2>=2.0.1')
subgroups+=('lib32-extra')
subarchs+=('x86_64')

if Fuse $USE_KDRIVE; then
	subpkgs+=("$pkgname-xephyr")
	subdescs+=('KDrive xephyr X server')
	subdepends+=('libepoxy>=1.3.1-6 pixman>=0.32.8-3 libxfont>=1.5.1-2 libsystemd>=231-17 mesa-libglx>=17.3.0-3 libglapi>=17.3.0-3 libglvnd  xcb-util-image>=0.4.0-3 xcb-util-wm>=0.4.1-3 xcb-util-renderutil xcb-util-keysyms')
	subgroups+=('x11')
	subarchs+=('x86_64')

	subpkgs+=("$pkgname-fbdev")
	subdescs+=('KDrive fbdev X server')
	subdepends+=('pixman>=0.32.8-3 libxfont>=1.5.1-3 libxau>=1.0.8-2 libsystemd>=231-17 libxdmcp>=1.1.2-3')
	subgroups+=('x11-extra')
	subarchs+=('x86_64')

	subpkgs+=("lib32-$pkgname-xephyr")
	subdescs+=('KDrive xephyr X server (32-bit)')
	subdepends+=('lib32-libepoxy>=1.3.1-6 lib32-pixman>=0.32.8-3 lib32-libxfont>=1.5.1-2 lib32-libsystemd>=231-17
		lib32-xcb-util-image>=0.4.0-3 lib32-xcb-util-wm>=0.4.1-3 lib32-xcb-util-renderutil lib32-xcb-util-keysyms
		lib32-mesa-libglx>=17.3.0-3 lib32-libglapi>=17.3.0-3 lib32-libglvnd')
	subgroups+=('lib32-extra')
	subarchs+=('x86_64')

	subpkgs+=("lib32-$pkgname-fbdev")
	subdescs+=('KDrive fbdev X server (32-bit)')
	subdepends+=('lib32-pixman>=0.32.8-3 lib32-libxfont>=1.5.1-3 lib32-libxau>=1.0.8-2 lib32-libsystemd>=231-17 lib32-libxdmcp>=1.1.2-3')
	subgroups+=('lib32-extra')
	subarchs+=('x86_64')

	Fconfopts+=" \
		--enable-xephyr \
		--enable-xvfb \
		--enable-kdrive \
		--enable-kdrive-evdev \
		--enable-kdrive-kbd \
		--enable-kdrive-mouse
		--enable-xfbdev"
else
	Fconfopts+=" \
		--disable-xephyr \
		--disable-xvfb \
		--disable-kdrive \
		--disable-kdrive-evdev \
		--disable-kdrive-kbd \
		--disable-kdrive-mouse \
		--disable-xfbdev"
fi

if Fuse $USE_SERVERDMX; then
	subpkgs+=("$pkgname-dmx")
	subdescs+=('Distributed Multi-Head X server.')
	subdepends+=('libdmx>=1.1.3-3 libxaw>=1.0.13-3 libxrender>=0.9.10 libxi>=1.7.6-2 pixman>=0.32.8-3 libxfont2>=2.0.1 libsystemd>=231-17 libxtst libxres')
	subgroups+=('x11-extra')
	subarchs+=('x86_64')

        subpkgs+=("lib32-$pkgname-dmx")
        subdescs+=('Distributed Multi-Head X server. (32-bit)')
        subdepends+=('lib32-libdmx>=1.1.3-3 lib32-libxaw>=1.0.13-3 lib32-libxrender>=0.9.10 lib32-libxi>=1.7.6-2 lib32-pixman>=0.32.8-3 lib32-libxfont2>=2.0.1 lib32-libsystemd>=231-17 lib32-libxtst lib32-libxres')
        subgroups+=('lib32-extra')
        subarchs+=('x86_64')

	Fconfopts+=" --enable-dmx"
else
	Fconfopts+=" --disable-dmx"
fi

if Fuse $USE_DGA; then
	makedepends+=('xf86dgaproto>=2.1-2')
	Fconfopts+=" --enable-dga"
else
	Fconfopts=" --disable-dga"
fi

_Fbuild_autoreconf=yes
_Fbuild_no_patch=yes

## do not remove for now
options+=('nonow' 'plt')

build() {

	Fcd
	Fpatchall
	Fbuild_cross32

	Frm usr/share/X11/xorg.conf.d/10-evdev.conf

	Fsplit xorg-server-xwayland usr/bin/Xwayland
	Fsplit lib32-xorg-server-xwayland usr/i686-frugalware-linux/bin/Xwayland

	## the servers =)
	if Fuse $USE_SERVERDMX; then
		## -dmx
		Fsplit $pkgname-dmx \
			usr/bin/{Xdmx,dmxaddinput,dmxaddscreen,dmxreconfig,dmxresize,dmxrminput,dmxrmscreen,dmxtodmx,dmxwininfo,vdltodmx,xdmxconfig}
		Fsplit $pkgname-dmx usr/share/man/man1/*dmx*

                Fsplit lib32-$pkgname-dmx \
                        usr/i686-frugalware-linux/bin/{Xdmx,dmxaddinput,dmxaddscreen,dmxreconfig,dmxresize,dmxrminput,dmxrmscreen,dmxtodmx,dmxwininfo,vdltodmx,xdmxconfig}

	fi
	if Fuse $USE_KDRIVE; then
		## -xephyr
		Fsplit $pkgname-xephyr usr/bin/Xephyr
		Fsplit lib32-$pkgname-xephyr usr/i686-frugalware-linux/bin/Xephyr

		## -fbdev
		Fsplit $pkgname-fbdev usr/bin/Xfbdev
		Fsplit lib32-$pkgname-fbdev usr/i686-frugalware-linux/bin/Xfbdev
	fi
	Fexe usr/bin/xvfb-run
	Fman xvfb-run.1

	Fsplit lib32-$pkgname usr/lib32/
	Fsplit lib32-$pkgname usr/i686-frugalware-linux/
}

# optimization OK
