# Compiling Time: 0.16 SBU
# Maintainer: Kooda <kooda@upyum.com>

pkgname=2mandvd
pkgver=1.4
pkgrel=1
pkgdesc="A tool to easily make video DVDs"
url="http://2mandvd.tuxfamily.org/"
depends=('libqtwebkit' 'webkit' 'ffmpegthumbnailer' 'sox' 'mplayer' 'mencoder' 'dvdauthor' \
         'transcode' 'mjpegtools' 'netpbm' 'cdrkit' 'xine-lib' 'perl' 'libexif' 'libqtopengl')
groups=('xapps-extra')
archs=('i686' 'x86_64')
replaces=('smile')
up2date="lynx -dump http://download.tuxfamily.org/2mandvd/ | sed 's|2ManDVD|2mandvd|g' | Flasttar"
source=(http://download.tuxfamily.org/$pkgname/2ManDVD-$pkgver.tar.gz)
sha1sums=('cec04936994732a6bce13d2078f225b64fb5f4c8')
_F_cd_path="2ManDVD"

build()
{
	Fcd
	qmake -project || Fdie
	echo "QT += webkit opengl" >> 2ManDVD.pro || Fdie
	qmake || Fdie
	Fbuild

	# Install
	Fmkdir usr/share/2ManDVD/
	Fcprel Bibliotheque usr/share/2ManDVD/
	Fcprel Interface usr/share/2ManDVD/
	Fcprel 2ManDVD usr/share/2ManDVD/
	Fwrapper 'cd /usr/share/2ManDVD/ && ./2ManDVD' 2ManDVD
}

# optimization OK
