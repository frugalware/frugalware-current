	myconf_gn+=" use_gold=false"
	myconf_gn+=" is_debug=false"
	myconf_gn+=" enable_iterator_debugging=false"
	myconf_gn+=" enable_nacl=false"

	myconf_gn+=" enable_hangout_services_extension=false"
	myconf_gn+=" enable_widevine=true"
