	myconf_gn+=" fieldtrial_testing_like_official_build=true"
	myconf_gn+=" use_sysroot=false"
	myconf_gn+=" proprietary_codecs=true "
	myconf_gn+=" enable_mse_mpeg2ts_stream_parser=true "
	myconf_gn+=" use_gio=false "
