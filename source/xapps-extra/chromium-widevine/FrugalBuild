# Compiling Time: 26.46 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=chromium-widevine
pkgdesc='A browser plugin designed for the viewing of premium video content'
pkgver=78.0.3904.97
pkgrel=1
archs=('x86_64')
url='http://www.google.com/chrome'
depends=('glibc')
rodepends=("chromium-browser")
groups=('xapps-extra')
options=('nostrip' 'nobuild')
source=("https://dl.google.com/linux/deb/pool/main/g/google-chrome-stable/google-chrome-stable_${pkgver}-1_amd64.deb")
_F_archive_name="chromium"
up2date="Flasttar 'http://chromium.woolyss.com/#stable-chromium-version'"
sha1sums=('f5c549d535f26f9463b763e51a1a91cefa62ca86')

build() {
	ar x "google-chrome-stable_${pkgver}-1_amd64.deb" || Fdie
	bsdtar -xf data.tar.xz opt/google/chrome/WidevineCdm/_platform_specific/linux_x64/libwidevinecdm.so || Fdie

	Fmkdir usr/lib/chromium/
	Finstall 644 opt/google/chrome/WidevineCdm/_platform_specific/linux_x64/libwidevinecdm.so usr/lib/chromium/
}

# optimization OK
