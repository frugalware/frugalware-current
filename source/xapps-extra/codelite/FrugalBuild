# Compiling Time: 2.57 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=codelite
pkgver=2.5.2.4031
pkgrel=2
pkgdesc="IDE for C/C++ languages."
Finclude sourceforge
depends=('wxgtk-u8>=2.8.10.1-2')
groups=('xapps-extra')
archs=('i686' 'x86_64')
sha1sums=('104e5d20b758262fc8a00a0a4aeab48d4d4498ee')
unset MAKEFLAGS

build() {
	Fsed "-O3" "$CFLAGS" configure
	Fmake
	make DESTDIR="$Fdestdir" core_install plugins_install || Fdie
}

# optimization OK
