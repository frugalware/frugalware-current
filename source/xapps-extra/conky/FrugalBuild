pkgname=conky
pkgver=1.9.0
pkgrel=2
pkgdesc="Light-weight system monitor."
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
depends=('wireless_tools' 'imlib2' 'libxdamage' 'libxft' 'glib2' 'curl' 'alsa-lib' 'toluapp>=1.0.93-3' 'cairo' 'nghttp2')
groups=('xapps-extra')
archs=('i686' 'x86_64')
backup=(etc/conky/conky.conf etc/conky/conky_no_x11.conf)
sha1sums=('2069cbdb8e7224fcbf3c6b1ddebf64a51634b4cc')

build()
{
	Fbuild --enable-xft \
		--enable-own-window \
		--enable-wlan \
		--enable-rss \
		--enable-ibm \
		--enable-imlib2 \
		--enable-lua \
		--enable-lua-cairo \
		--enable-lua-imlib2
	Fdocrel doc/*.html
}

# optimization OK
