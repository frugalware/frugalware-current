pkgname=conky
pkgver=1.8.0
pkgrel=2
pkgdesc="Light-weight system monitor."
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
depends=('libxext>=1.0.5-3' 'libxdamage>=1.1.1-3' 'libxrender>=0.9.4-3' 'libxft>=2.1.13-2' 'wireless_tools' 'curl' 'lua' 'openssl>=1.0.0')
makedepends=('xorg-server')
groups=('xapps-extra')
archs=('i686' 'x86_64')
#source=($source header.diff)
sha1sums=('eef214c2917ea5666d24f03128b12d00fa313b58')

build()
{
	Fbuild --enable-xft --enable-proc-uptime --enable-double-buffer --enable-own-window --enable-wlan --enable-rss
	Fdocrel doc/*.html
}

# optimization OK
