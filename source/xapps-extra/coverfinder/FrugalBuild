pkgname=coverfinder
pkgver=0.1.1
pkgrel=1
pkgdesc="This is a tool to find cover images via the Amazon Web Services API and to save them locally"
url="http://mookooh.org/coverfinder/"
depends=('gtk+2' 'curl' 'libxdamage')
options=('scriptlet')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump $url | grep tar.gz | Flasttar"
source=($url/releases/$pkgname-$pkgver.tar.gz)
sha1sums=('727ea6b8a9576098111e63c07514369ed03bf349')
