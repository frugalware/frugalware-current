# Compiling Time: 0.05 SBU
# Maintainer: pete <pete@teamlupus.hu>

pkgname=dillo
pkgver=2.1
pkgrel=2
pkgdesc="A multi-platform browser alternative that's small, stable, developer-friendly, usable, fast, and extensible."
url="http://www.dillo.org"
depends=('openssl' 'libjpeg' 'fltk2>=r6786' 'libpng')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="Flasttarbz2 http://www.dillo.org/download/"
source=(http://www.dillo.org/download/$pkgname-$pkgver.tar.bz2 dillo-inbuf.patch)
signatures=($source.asc '')

build() {
	Fbuild --sysconfdir=/etc/ --disable-dlgui
	Fdeststrip /etc/dillo/dpidrc
}

# optimization OK
