# Compiling Time: 0.06 SBU
# Maintainer: Anthony Jorion <pingax@frugalware.org>

pkgname=feh
pkgver=2.14
pkgrel=1
pkgdesc="A useful simple image viewer."
url="http://feh.finalrewind.org/"
## imagemagick can be a rodep / optional dep
depends=('libxinerama' 'curl' 'imlib2' 'libexif' 'libpng')
makedepends=('x11-protos' 'libxt')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
source="$url/$pkgname-$pkgver.tar.bz2"
sha1sums=('c5e419e4f5cce648f60f87879237ff57b1375032')

build() {
	export PREFIX="/usr"
	Fbuild
	## duplicates files
	Frm usr/share/doc/feh
}

# optimization OK
