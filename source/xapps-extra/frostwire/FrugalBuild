# Compiling Time: ~0 SBU
# Maintainer: Priyank <priyankmg@gmail.com>

pkgname=frostwire
pkgver=4.10.9
pkgrel=1
pkgdesc="FrostWire is a Peer to Peer (P2P) information sharing client for the Gnutella network"
url="http://www.frostwire.com"
depends=('j2re')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.frostwire.com/ | grep Current | sed 's/.*]\(.*\)*/\1/'"
source=(http://heanet.dl.sourceforge.net/sourceforge/$pkgname/FrostWire-$pkgver-1.tar.gz)
sha1sums=('3140d51f47b3f5c52d0f37d4a67486fd83768bff')

build() {
	Fcpr FrostWire-$pkgver/usr
	Ffileschmod usr/bin/frostwire 755
	
	# Fix LFs and CRs in runFrost.sh
	sed -i 's/[^ -~]//g' $Fdestdir/usr/lib/frostwire/runFrost.sh
}

# optimization OK
