pkgname=git-cola
pkgver=4.0.2
pkgrel=1
pkgdesc="Git-cola is a sleek and powerful Git GUI."
depends=('pyqt4' 'pyinotify')
makedepends=('python-setuptools')
_F_github_tag_v="y"
Finclude github
_F_cd_path="$pkgname-$pkgver"
url="http://git-cola.github.io/"
groups=('xapps-extra')
archs=('x86_64')
sha1sums=('3877844caee292d8e20ae43b1ee17064c3e04df1')
_F_make_opts+=" prefix=/usr"

build() {
	Fcd
	Fexec rm Makefile || Fdie
	Fbuild
}

