# Compiling Time: 1.98 SBU
# Maintainer: DeX77 <dex77@frugalware.org>
# Contributor: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=graphviz
pkgver=2.44.0
pkgrel=2
pkgdesc="Open Source Graph Visualization Software"
url="http://www.graphviz.org/"
depends=('perl>=5.22.1' 'gd>=2.1.1-4' 'python>=2.7.11-4' 'guile>=3.0.3' 'devil>=1.8.0' 'libxpm' 'libxaw' 'freeglut')
makedepends=('x11-protos' 'tcl-static' 'tk' 'swig' 'bison')
groups=('xapps-extra')
archs=('x86_64')
options=('scriptlet' 'static' 'force' 'noversrc')
up2date="Flasttar https://gitlab.com/graphviz/graphviz/-/tags"
source=("https://gitlab.com/graphviz/graphviz/-/archive/stable_release_${pkgver}/graphviz-stable_release_${pkgver}.tar.bz2")
sha1sums=('3fb0fd34e37a7135d239111b157ab3b7f33312ef')
_F_cd_path="graphviz-stable_release_${pkgver}"

Fconfopts+="	--enable-static \
                --with-x \
                --disable-dependency-tracking \
                --with-dynagraph \
                --with-tcl \
		--with-tk \
                --with-pangocairo \
		--libdir=/usr/lib"
build() {
	export PYTHON=python2
	Fbuild

	## anjuta won't build without , geom.h is broken for real
	## while include that header which is not installed ...
	Fexec cp lib/common/arith.h \
		$Fdestdir/usr/include/$pkgname || Fdie
	Fmv usr/lib64/* usr/lib/
	Frm usr/lib64
	Frm gv.*
}

# optimization OK
