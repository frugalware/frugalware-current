# Compiling Time: 0.01 SBU
# Maintainer: BMH1980 <bmh1980@frugalware.org>

pkgname=gtkpacman
pkgver=1.2
pkgrel=2
pkgdesc="PyGTK gui to ArchLinux pacman"
url="http://gtkpacman.berlios.de/"
license="GPL2"
up2date="lynx -dump $url/\?page_id=4|grep stable|cut -d ' ' -f 7|sed 's|\[[0-9]\]||'"
source=(http://download.berlios.de/$pkgname/gtkPacman-$pkgver.tar.bz2)
sha1sums=('c5a62d657595004043b928ee0cd098b092e057c3')
groups=('xapps-extra')
archs=('i686' 'x86_64')
depends=('pygtk' 'vte')
options=('scriptlet')

build()
{
	Fcd gtkPacman-$pkgver
	Fbuild
	Fmv /opt/gnome/share/applications /usr/share/applications
	Fmv /opt/kde/share/applications/kde /usr/share/applications/kde
	Frm /opt
}


