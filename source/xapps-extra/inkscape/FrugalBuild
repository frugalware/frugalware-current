# TODO: java ?!

build()
{
	Fbuild \
		--without-gnome-vfs \
		--enable-lcms \
		--with-perl \
		--with-python \
		--with-xft \
		--enable-poppler-cairo \
		--disable-dependency-tracking
		## Debug
		## --enable-debug --with-debug
}

# optimization OK
