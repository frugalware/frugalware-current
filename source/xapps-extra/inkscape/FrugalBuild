pkgname=inkscape
pkgver=0.48.5
pkgrel=3
pkgdesc="A vector illustrator program"
depends=('openssl>=1.0.0' 'lcms' 'cairomm' 'libgcc' 'atk' 'gtkmm2>=2.10.10-3' 'glibmm' 'freetype2' 'libxcb>=1.3-1' \
	'pango>=1.14.3' 'libgc>=7.0' 'glib2' 'gtkspell' 'popt' 'gtk+2>=2.20.0-2' 'python>=2.7' 'perl' \
	'poppler-glib>=0.24.1' 'imagemagick>=6.8.9' 'gsl')
makedepends=('boost>=1.50.0' 'intltool' 'perl-xml-parser')
rodepends=('libxml2>=2.6.20' 'pyxml' 'libxslt' 'lxml')
groups=('xapps-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
_F_archive_grepv="pre"
_F_sourceforge_ext=".tar.bz2"
_F_sourceforge_rss_limit=100
#_F_sourceforge_subdir="$pkgname"
Finclude sourceforge
url="http://www.inkscape.org/"
sha1sums=('83ddb0c96069638f712a869039989bfd7d79c6a8')

# TODO: java ?!

build()
{
	Fbuild \
		--without-gnome-vfs \
		--enable-lcms \
		--with-perl \
		--with-python \
		--with-xft \
		--enable-poppler-cairo \
		--disable-dependency-tracking
		## Debug
		## --enable-debug --with-debug
}

# optimization OK
