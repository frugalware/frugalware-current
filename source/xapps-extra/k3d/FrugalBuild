options+=('asneeded')

pkgname=k3d
pkgver=0.8.0.2
pkgrel=6
pkgdesc="A complete free-as-in-freedom 3D modeling, animation and rendering system."
depends=('gtkglext' 'imagemagick>=6.7.9_2-1' 'librsvg' 'gts' 'python>=2.7' 'openexr>=2.2.0' 'libxml2' 'libsigc++2' \
	'freetype2' 'plib' 'graphviz' 'libtiff' 'atk' 'gtkmm2' 'pango' 'glibmm' 'libboost>=1.58.0' 'libglu')
makedepends=('boost>=1.58.0')
groups=('xapps-extra')
archs=('i686' 'x86_64')
options=('scriptlet' 'force')
_F_sourceforge_ext=".tar.gz"
_F_archive_name="$pkgname-source"
Finclude sourceforge cmake
source=($source \
	$pkgname-0.7.11.0-libpng14.patch \
	$pkgname-gcc-4.6.patch \
	$pkgname-gtkmm2.24.patch \
	$pkgname-gcc-4.7.patch)
url="http://www.k-3d.org/"
sha1sums=('5d677aef76053b01281476ae25f0bd4e998d319c' \
          '068bb0671d608cdc59f556011491685725a56360' \
          '3f20ebb16cf8849ecc5caded583b11b2f25e6e16' \
          'd6857963451ff201320ffa5b9dd3212f057f7374' \
          '26d73cea542221eed414b21b04d83232093d3cf1')

build() {
	Fcd
	rm -f CMakeCache.txt || Fdie
	Fsed "libpng12" "libpng14" cmake/modules/K3DFindPNG.cmake
	CMake_build
}

# optimization OK
