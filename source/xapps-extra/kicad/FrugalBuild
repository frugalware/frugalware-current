pkgname=kicad
pkgver=5.0.2
pkgrel=1
pkgdesc="Electronic schematic and printed circuid board design tools."
url="http://kicad-pcb.org"
depends=('wxwidgets>=3.1.2' 'glew>=2.1.0' 'libboost>=1.61.0' 'opencascade' 'glm' 'ngspice')
makedepends+=('boost>=1.61.0' 'x11-protos' 'swig')
groups=('xapps-extra')
archs=('x86_64')
_F_launchpad_ext='.tar.xz'
_F_launchpad_branch="${pkgver%.*}"
_F_archive_grepv="rc[0-9]"
_F_cmake_confopts="	-DKICAD_STABLE_VERSION=ON     \
			-DKICAD_REPO_NAME=stable      \
			-DKICAD_BUILD_VERSION=$pkgver \
			-DBUILD_GITHUB_PLUGIN=ON \
			-DKICAD_SCRIPTING_WXPYTHON=OFF"
Finclude cmake launchpad
up2date="Flastarchive https://launchpad.net/kicad/+download .tar.xz"
sha1sums=('d95792d1b70a009d1aa4cc90fe20a4ff4dca38ff')

CXXFLAGS+=" -Wno-deprecated-declarations -Wno-deprecated"
# optimization OK
