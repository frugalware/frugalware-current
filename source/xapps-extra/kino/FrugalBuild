# Last Modified: Wed, 14 Jun 2006 11:06:08 +0200
# Compiling Time: ~1.1 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=kino
pkgver=0.9.0
pkgrel=1
pkgdesc="A non-linear DV editor."
url="http://kino.schirmacher.de/"
makedepends=('perl-xml')
depends=('libstdc++' 'alsa-lib' 'libdv' 'libiec61883' 'libavc1394' 'libglade>=2.5' 'libxv' 'atk' 'libsamplerate' 'libsm' 'freetype2' 'pango')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://kino.schirmacher.de/article/static/1 |grep kino.*tar |sed -n -e 's/.*o-\(.*\).t.*/\1/'  -e '1 p'"
source=(http://heanet.dl.sourceforge.net/sourceforge/kino/$pkgname-$pkgver.tar.gz)
sha1sums=('e73ff885bb84b9242f3ce306b183f937ef0f6d6d')

build() {
	Fmkdir usr/share/pixmaps
	Fmkdir usr/share/kino
	Fmkdir etc/hotplug/usb
	Fmake	--enable-hotplug-script-dir=/etc/hotplug/usb \
		--enable-hotplug-usermap-dir=/usr/share/kino
	Fmakeinstall
}

# optimization OK
