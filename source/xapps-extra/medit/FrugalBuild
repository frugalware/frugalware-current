pkgname=medit
pkgver=0.10.0
pkgrel=1
pkgdesc="A useful programming and around-programming text editor."
depends=('gtk+2')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_sourceforge_ext=".tar.bz2"
_F_sourceforge_dirname="mooedit"
options=('scriptlet')
_F_gnome_iconcache=y
_F_cmake_type="Release"
Finclude gnome-scriptlet cmake sourceforge
source=(${source[@]} frugalbuild.lang)
sha1sums=('857ad41aef201d2a687999782e4905136b5d7ad8' \
          '8af772c1e82599c1367b6e5e9a422e743d0c82d5')

build() {
  CMake_build
  Fbuild_gnome_scriptlet
  Ffile /usr/share/moo/language-specs/frugalbuild.lang
}

