# Compiling Time: 0.05 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=merkaartor
pkgver=0.16.3
pkgrel=1
pkgdesc="An editor for the OpenStreetMap project"
url="http://merkaartor.be"
depends=('libqtsvg' 'libqtgui' 'libqtwebkit' 'libqtscript' 'exiv2>=0.20' 'libxml2' 'libxslt' 'libboost-mt')
makedepends=('boost')
options=('scriptlet')
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
Finclude gnome-scriptlet
groups=('xapps-extra')
archs=('i686')
up2date="Flasttar $url/wiki/merkaartor/Download"
source=(http://www.merkaartor.be/attachments/download/29/$pkgname-$pkgver.tar.bz2)
sha1sums=('1aadaeac2369502e2bb929a7a86a2916b711dd99')

build() {
  Fcd
  qmake Merkaartor.pro PREFIX=/usr NODEBUG=1 || Fdie
  Fmake
  make INSTALL_ROOT="$Fdestdir" install || Fdie
  Fbuild_gnome_scriptlet
}

# optimization OK
