pkgname=ngspice
pkgver=29
pkgrel=2
pkgdesc="Ngspice is a mixed-level/mixed-signal circuit simulator."
Finclude sourceforge
depends=('libgomp' 'readline' 'libxaw')
makedepends=('x11-protos')
groups=('xapps-extra' 'geda-suite')
archs=('x86_64')
sha1sums=('ed2bd864475403233514122551851aae23a619fd')
Fconfopts="	--with-readline=yes \
		--enable-xspice \
		--enable-cider \
		--enable-openmp \
		--enable-oldapps"

build() {
	Fbuild --with-ngshared
	Fmake clean
	Fbuild
}
