# Compiling Time: 0.50 SBU
# Maintainer: Melko <melko@frugalware.org>

pkgname=nomacs
pkgver=3.10.2
pkgrel=1
pkgdesc="Small and fast image viewer."
depends=('exiv2>=0.26' 'libraw>=0.19.0' 'opencv>=3.3.1' 'qt5-svg>=5.11.0-2')
makedepends=('qt5-tools>=5.11.0-2' 'x11-protos')
groups=('xapps-extra')
archs=('x86_64')
_F_github_tag='y'
#_F_cmake_confopts+=" -DUSE_SYSTEM_QUAZIP=ON"
Finclude github cmake
_Fbuild_no_patch=yes
sha1sums=('02ea1cbeab901896d60fb61ba56d5cc9f95d5966')

build() {
	Fcd
        Fpatchall
        Fexec cd ImageLounge || Fdie
	Fsed 'OpenCV 2.1.0' 'OpenCV 3.4.0' cmake/Unix.cmake
	CMake_build
}

# optimization OK
