pkgname=nomacs
pkgver=3.17.2287
pkgrel=2
pkgdesc="Small and fast image viewer."
depends=('exiv2>=0.28.1' 'libraw>=0.21.1' 'openblas' 'opencv>=4.9.0' 'qt5-svg>=5.15.10' 'quazip')
makedepends=('qt5-tools' 'x11-protos')
groups=('xapps-extra')
archs=('x86_64')
_F_github_tag='y'
_F_cmake_confopts+=" -DUSE_SYSTEM_QUAZIP=ON"
Finclude github cmake
_Fbuild_no_patch=yes
source+=(remove-versioncheck.patch)
sha1sums=('3da49a6833f8c0bb4477fb712d8ebf000bda5af5' \
          '1d38791531a7ca0057b841ff83eae044d8006492')

build() {

	Fcd
	Fpatchall
	Fexec cd ImageLounge || Fdie
	## whta the ..
	#LDFLAGS+=" -lquazip5"
	Fsed 'OpenCV 2.1.0' 'OpenCV 4.0.1' cmake/Unix.cmake
	CMake_build
}

# optimization OK
