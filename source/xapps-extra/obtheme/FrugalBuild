# Compiling Time: 0.01 SBU
# Maintainer: jercel <jercel16@gmail.com>

pkgname=obtheme
pkgver=2012
pkgrel=1
pkgdesc="A GUI theme editor for Openbox."
url="http://xyne.archlinux.ca/info/obtheme"
depends=('pygtk>=2.14.1-2' 'fuse-python>=-0.2.1')
options=('scriptlet')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="Flasttar http://xyne.archlinux.ca/projects/obtheme/src/"
source=(http://xyne.archlinux.ca/projects/obtheme/src/$pkgname-$pkgver.tar.xz)
sha1sums=('2cb529447ce380247153abab4aa29a8802c61fad')
options=('force')

build()
{
  	Fcd
	Fmkdir /usr/bin
	Fmkdir /usr/share/applications/
	Fcp $pkgname-$pkgver/$pkgname usr/bin/
	Ffileschmod /usr/bin/$pkgname 755
	Fcp $pkgname-$pkgver/$pkgname.desktop usr/share/applications/
}
