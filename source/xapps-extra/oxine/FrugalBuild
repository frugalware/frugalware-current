Finclude sourceforge
## ohh man WTF!
source=(${source/$pkgver/0.6} ${source/$pkgver.tar.gz/0_6_0-to-0_6_4.patch} \
	MKINSTALLDIRS.patch)
_F_cd_path="$pkgname-0.6"
Fconfopts="$Fconfopts --disable-joystick --enable-lirc --enable-vdr"


