pkgname=pidgin
pkgver=2.12.0
pkgrel=1
pkgdesc="A multi-protocol instant messaging (IM) client"
url="http://www.pidgin.im/"
groups=('xapps-extra')
archs=('x86_64')
depends=('gtk+2' 'startup-notification' 'libxscrnsaver' 'dbus-x11' 'libao' 'audiofile' 'libsm')
makedepends=('intltool' 'dbus-glib' 'libxml2' 'libxslt' 'nss' 'tk' 'tcl' 'nice' \
	'x11-protos' 'networkmanager' 'libxml2')
rodepends=('libpurple')
replaces=('pidgin-plugin-guifications')
_F_sourceforge_ext=".tar.bz2"
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
Finclude sourceforge gnome-scriptlet
sha1sums=('38f48c48978425b86fc9f4e8ba08216ff379451b')

subpkgs=("libpurple")
subdescs=("Library intended to be used by programmers seeking to write an IM client that connects to many IM networks.")
subdepends=("dbus-glib nss libgadu meanwhile farstream cyrus-sasl")
## tk but ..
subrodepends=("")
subgroups=('xlib')
subarchs=('x86_64')

subpkgs+=("finch")
subdescs+=("A ncurses-based messaging client")
subdepends+=("ncurses>=6.0-3")
subrodepends+=("libpurple")
subgroups+=('xapps-extra')
subarchs+=('x86_64')

build() {

    Fpatchall
    Fmake \
	--enable-cyrus-sasl \
        --enable-nss \
	--enable-farstream \
	--enable-dbus \
        --enable-meanwhile \
        --disable-avahi \
        --disable-doxygen \
        --disable-devhelp \
        --disable-gestures \
        --disable-schemas-install \
        --disable-dependency-tracking \
        --with-system-ssl-certs=/etc/ssl/certs \
	--disable-gtkspell
    make docs || Fdie
    Fmakeinstall

    Fbuild_gnome_scriptlet


    Fsplit libpurple usr/share/aclocal/purple.m4 \
        usr/lib/purple-2/* \
        usr/lib/libpurple* \
        usr/include/libpurple/* \
        usr/lib/pkgconfig/purple.pc

    Fsplit finch usr/bin/finch \
        usr/include/finch/* \
        usr/include/gnt/* \
        usr/lib/finch/ \
        usr/lib/gnt/* \
        usr/lib/libgnt.so* \
        usr/lib/pkgconfig/finch.pc \
        usr/lib/pkgconfig/gnt.pc
}

# optimization OK
