## TODO: sort options
##       add virtgl stuff
pkgname=qemu
pkgver=5.2.0
pkgrel=1
pkgdesc="QEMU is a FAST! processor emulator"
url="http://www.nongnu.org/qemu/"
depends=('libx11' 'sdl2' 'alsa-lib' 'cyrus-sasl' 'nss' 'libgl' 'pixman' \
	'libpng>=1.6.20' 'libjpeg-turbo' 'spice-server' 'spice-protocol' \
	'usbredir>=0.8.0' 'pulseaudio' 'ncurses>=6.0-3' 'libglu' 'libepoxy' \
	'libaio' 'lzo' 'snappy' 'libseccomp' 'numactl' 'bluez' 'jemalloc' \
	'curl' 'nettle>=3.6' 'libssh2' 'libgbm')
makedepends=('texi2html' 'xfsprogs' 'mesa-libgl-headers' 'x11-protos' \
	'mesa-libegl' 'pcre-static' 'ncurses-static' 'glib2-static' \
	'zlib-static' 'ninja' )
replaces=('kqemu' 'qemu-kvm')
conflicts=('kqemu' 'qemu-kvm')
provides=('kqemu' 'qemu-kvm')
groups=('xapps-extra')
archs=('x86_64')
_F_archive_grepv="rc[0-9]"
up2date="Flasttar http://wiki.qemu.org/download"
source=(http://wiki.qemu.org/download/${pkgname}-${pkgver//_/-}.tar.bz2 \
	qemu.conf qemu-guest-agent.service \
	99-qemu-guest-agent.rules \
	qemu-static.conf \
	README.Frugalware)
sha1sums=('d09534eef2694a08c8bd48073ec54d8d8fa85d9b' \
          'b44a774fe5ebcf52275ee0fc33a9654c157204ca' \
          '435373031bc0a1fed8abadab912460ddf98bc1c2' \
          'c997e6afd997aeb87791664c2583a009704a6792' \
          '1e03379c8edc1c227a58962294d8d9899b4c7273' \
          '11fea2f36b44297e241d8cbbdbc4cd14f1150b72')
options=('nolto')

subpkgs=('qemu-guest')
subdescs=('Files for use in QEMU guests.')
subgroups=('apps-extra')
subarchs=('x86_64')
subdepends=('glib2')

subpkgs+=('qemu-user-static')
subdescs+=('Statically linked binaries of Qemu with user emulation')
subgroups+=('apps-extra')
subarchs+=('x86_64')
subdepends+=('glibc')


TARGETS="riscv32-softmmu riscv64-softmmu i386-softmmu x86_64-softmmu arm-softmmu"


build()
{
	export CFLAGS+=" -fPIC"

	Fcd $pkgname-${pkgver%%_*}
	Fpatchall

	Fexec ./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
        --localstatedir=/ \
        --libexecdir=/usr/lib/qemu \
        --enable-linux-user \
        --disable-debug-info \
        --disable-bsd-user \
        --disable-werror \
        --disable-system \
        --disable-tools \
        --disable-docs \
        --disable-gtk \
        --disable-gnutls \
        --disable-nettle \
        --disable-gcrypt \
        --disable-glusterfs \
        --disable-libnfs \
        --disable-libiscsi \
        --disable-vnc \
        --disable-kvm \
        --disable-libssh \
        --disable-libxml2 \
        --disable-vde \
        --disable-sdl \
        --disable-opengl \
        --disable-xen \
        --disable-fdt \
        --disable-vhost-net \
        --disable-vhost-crypto \
        --disable-vhost-user \
        --disable-vhost-vsock \
        --disable-vhost-scsi \
        --disable-tpm \
        --disable-qom-cast-debug \
        --disable-capstone \
        --disable-zstd \
        --disable-linux-io-uring \
        --static || Fdie

        Fexec make || Fdie
        Fmakeinstall

	# remove conflicting files
	Frm var/
	Frm usr/share/
	Frm usr/include/

	# never go full circle
	Frm usr/bin/qemu-x86_64

	# this will lead to problems
	Frm usr/bin/qemu-i386

	# install binfmt file
	Finstall 644 usr/lib/binfmt.d/qemu-static.conf

	# split everything
	Fsplit $pkgname-user-static /\*

	Fexec make clean || Fdie

	# dynamic build
	Fexec ./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/ \
		--libexecdir=/usr/lib/qemu \
		--audio-drv-list='pa alsa sdl' \
		--target-list="$TARGETS" \
		--disable-qom-cast-debug \
		--enable-spice \
		--enable-usb-redir \
		--enable-jemalloc \
		--enable-modules || Fdie
	Fexec make || Fdie
	Fmakeinstall

	Fdoc README.Frugalware

	Ffile /etc/binfmt.d/qemu.conf
	Ffile /lib/systemd/system/qemu-guest-agent.service
	Ffile /lib/udev/rules.d/99-qemu-guest-agent.rules

	Fsplit qemu-guest /lib/systemd/system/qemu-guest-agent.service
	Fsplit qemu-guest /lib/udev/rules.d/99-qemu-guest-agent.rules
	Fsplit qemu-guest /usr/bin/qemu-ga

	Fln qemu-system-x86_64 /usr/bin/qemu

}

# optimization OK
