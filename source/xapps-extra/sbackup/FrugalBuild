pkgname=sbackup
pkgver=1.0
pkgrel=2
pkgdesc="SBackup is a simple backup solution intended for desktop use"
depends=('notify-python' 'fuse' 'libglade')
rodepends=('dcron')
makedepends=('gettext' 'intltool' 'gnome-doc-utils')
options=('scriptlet')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_sourceforge_sep="_"
_F_sourceforge_broken_up2date="1"
Finclude sourceforge
sha1sums=('599c49c19b3ae74b21baea6ccf7884743a4e8d58')

build(){
	cd sbackupPort || Fdie
	sed -i '/crontab/,/fi/d' configure.ac
	Fautoreconf
	Fbuild
}
