# Compiling Time: 0.04 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=spice-vdagent
pkgver=0.18.0
pkgrel=3
pkgdesc="Agent for Spice guests"
url="http://spice-space.org/download/releases/"
depends=('libxfixes' 'libxrandr' 'libxinerama' 'alsa-lib' 'libsystemd>=228' 'libpciaccess')
makedepends=('spice-protocol>=0.12.15' 'systemd>=228' 'x11-protos')
_F_systemd_units=(spice-vdagentd=e)
Finclude systemd
groups=('xapps-extra')
archs=('x86_64')
up2date="Flasttar $url"
source=($url/$pkgname-$pkgver.tar.bz2 use-run-not-var-run.patch)
sha1sums=('2e18fc918c46cdca1f00a3ce3c139c93f68ab166' \
          '3985d5e1b0517649b06e5295f7a61f132c28031f')

# How to test: http://www.linux-kvm.org/page/SPICE

build()
{
	Fbuild --with-session-info=systemd --with-init-script=systemd
	Fmkdir run/spice-vdagentd
	Frm var/run
	Fgenscriptlet
}

# optimization OK
