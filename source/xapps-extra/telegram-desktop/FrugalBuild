# Compiling Time: 13.15 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=telegram-desktop
pkgver=2.1.13
pkgrel=2
pkgdesc="Official Telegram Desktop client"
url="https://desktop.telegram.org/"
groups=('xapps-extra')
archs=('x86_64')
depends=('opus' 'ffmpeg' 'openal' 'qt5-imageformats>=5.15.0' 'qt5-base>=5.15.0' 'libdbusmenu-qt5' \
	'enchant' 'xxhash')
makedepends=('tl-expected' 'microsoft-gsl' 'range-v3' 'x11-protos' 'gtk+3')
_F_github_author="telegramdesktop"
_F_github_name="tdesktop"
_F_github_tag_v=y
_F_cmake_confopts="	-Ddisable_autoupdate=1 \
			-DCMAKE_INSTALL_PREFIX="$pkgdir/usr" \
        		-DCMAKE_BUILD_TYPE=Release \
        		-DTDESKTOP_API_TEST=ON \
        		-DDESKTOP_APP_USE_GLIBC_WRAPS=OFF \
        		-DDESKTOP_APP_USE_PACKAGED=ON \
        		-DDESKTOP_APP_USE_PACKAGED_RLOTTIE=OFF \
        		-DDESKTOP_APP_USE_PACKAGED_VARIANT=OFF \
        		-DDESKTOP_APP_DISABLE_CRASH_REPORTS=ON \
        		-DTDESKTOP_DISABLE_REGISTER_CUSTOM_SCHEME=ON \
        		-DTDESKTOP_DISABLE_DESKTOP_FILE_GENERATION=ON \
        		-DTDESKTOP_USE_PACKAGED_TGVOIP=OFF \
        		-DDESKTOP_APP_SPECIAL_TARGET= \
        		-DTDESKTOP_LAUNCHER_BASENAME=telegramdesktop"
Finclude github cmake
_F_archive_name="tdesktop"
up2date="Flastarchive https://github.com/telegramdesktop/tdesktop/releases/latest -full.tar.gz"
source=("https://github.com/telegramdesktop/tdesktop/releases/download/v${pkgver}/tdesktop-${pkgver}-full.tar.gz" \
	telegram-desktop.sh )
sha1sums=('906933c6320b4d214627973407ef9f34afd963b9' \
          '27446dd8a7afd59f66eb1a121d6c8a5139ff5342')
_F_cd_path="tdesktop-$pkgver-full"
options=('force')

build() {
	CMake_build
	Fmv usr/bin/telegram-desktop usr/bin/telegram-desktop-bin
	Fexe telegram-desktop.sh usr/bin/telegram-desktop
}

# optimization OK
