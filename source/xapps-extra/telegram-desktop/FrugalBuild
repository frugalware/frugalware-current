_F_cd_path="tdesktop-${pkgver}-full"
options=('clang')

build() {

	Fcd
	Fexec rm -rf Telegram/ThirdParty/libtgvoip/webrtc_dsp/absl || Fdie
	Fexec rm -rf Telegram/ThirdParty/{GSL,dispatch,expected,fcitx-qt5,fcitx5-qt,jemalloc,hime,hunspell,lz4,minizip,nimf,range-v3,xxHash} || Fdie

