pkgname=telegram-desktop
pkgver=4.9.5
pkgrel=1
pkgdesc="Official Telegram Desktop client"
url="https://desktop.telegram.org/"
groups=('xapps-extra')
archs=('x86_64')
depends=('hunspell' 'ffmpeg>=6.0' 'hicolor-icon-theme' 'lz4' 'openal' 'qt6-imageformats>=6.5.1' 'fmtlib' 'libboost' \
	'qt6-svg>=6.5.1' 'qt6-wayland>=6.5.1' 'qt6-5compat>=6.5.1' 'xxhash' 'rnnoise' 'pipewire' 'glib2' 'libsigc++3' \
	'libxtst' 'libxrandr' 'jemalloc' 'abseil-cpp>=20230125' 'libdispatch' 'webkit-gtk3' 'openssl' 'protobuf>=24.2')
makedepends=('python3' 'range-v3' 'tl-expected' 'microsoft-gsl' 'meson' 'kernel-headers' 'boost' 'gobject-introspection' 'doxygen' 'graphviz' 'libxslt' \
	'extra-cmake-modules' 'wayland-protocols' 'plasma-wayland-protocols' 'tg_owt' 'x11-protos' 'git' 'mm-common' 'perl-xml-parser')
_F_github_author="telegramdesktop"
_F_github_name="tdesktop"
_F_github_tag_v=y
_F_cmake_use_ninja=yes
_F_cmake_confopts="	-DCMAKE_BUILD_TYPE=Release \
			-DTDESKTOP_API_ID=611335 \
			-DTDESKTOP_API_HASH=d524b414d21f4d37f08684c1df41ac9c \
			-DDESKTOP_APP_USE_PACKAGED=ON \
			-DDESKTOP_APP_USE_PACKAGED_FONTS=ON \
			-DCMAKE_PREFIX_PATH="$Fsrcdir/glibmm" \
			-DDESKTOP_APP_DISABLE_CRASH_REPORTS=ON"
Finclude github cmake
_F_archive_name="tdesktop"
source=("https://github.com/telegramdesktop/tdesktop/releases/download/v${pkgver}/tdesktop-${pkgver}-full.tar.gz" \
	 https://download.gnome.org/sources/glibmm/2.77/glibmm-2.77.0.tar.xz)
sha1sums=('76591ba5ed927935aaaffa4316556178c890bcf7' \
          '92293e8d35c156e61d461f406b6bb45c90b321b0')
_F_cd_path="tdesktop-${pkgver}-full"
options=('clang')

build() {

	Fexec meson setup -Dmaintainer-mode=true --default-library static --prefix "$Fsrcdir/glibmm" --bindir "usr/bin" --libdir "usr/lib" --libexecdir "usr/lib" --includedir "usr/include" --datadir "usr/share" --localedir "usr/share/locale" "$Fsrcdir/glibmm-2.77.0" glibmm-build || Fdie
	Fexec meson compile -C glibmm-build || Fdie
	Fexec meson install -C glibmm-build || Fdie

	export PKG_CONFIG_PATH="$Fsrcdir/glibmm/usr/lib/pkgconfig"
	CMake_build
}

# optimization OK
