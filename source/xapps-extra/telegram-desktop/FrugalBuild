pkgname=telegram-desktop
pkgver=4.3.4
pkgrel=1
pkgdesc="Official Telegram Desktop client"
url="https://desktop.telegram.org/"
groups=('xapps-extra')
archs=('x86_64')
depends=('hunspell' 'ffmpeg4.4' 'hicolor-icon-theme' 'lz4' 'openal' 'qt6-imageformats' \
	'qt6-svg' 'qt6-wayland' 'qt6-5compat' 'xxhash' 'glibmm' 'rnnoise' 'pipewire' \
	'libxtst' 'libxrandr' 'jemalloc' 'abseil-cpp' 'libdispatch' 'webkit-gtk3' 'openssl1.1' 'protobuf')
makedepends=('python3' 'range-v3' 'tl-expected' 'microsoft-gsl' 'meson' 'abseil-cpp' \
	'extra-cmake-modules' 'wayland-protocols' 'plasma-wayland-protocols' 'tg_owt' 'x11-protos')
_F_github_author="telegramdesktop"
_F_github_name="tdesktop"
_F_github_tag_v=y
_F_cmake_use_ninja=yes
_F_cmake_confopts="	-DCMAKE_BUILD_TYPE=Release \
			-DTDESKTOP_API_ID=611335 \
			-DTDESKTOP_API_HASH=d524b414d21f4d37f08684c1df41ac9c"
Finclude github cmake
_F_archive_name="tdesktop"
source=("https://github.com/telegramdesktop/tdesktop/releases/download/v${pkgver}/tdesktop-${pkgver}-full.tar.gz")
sha1sums=('8faf008c91196699df1737861c2644049d40b757')
_F_cd_path="tdesktop-${pkgver}-full"
options=('clang')

build() {
	export PKG_CONFIG_PATH='/usr/lib/ffmpeg4.4/pkgconfig'

	Fcd
	Fexec rm -rf Telegram/ThirdParty/libtgvoip/webrtc_dsp/absl || Fdie
	CMake_build
}

# optimization OK
