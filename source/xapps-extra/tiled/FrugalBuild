pkgname=tiled
pkgver=1.3.1
pkgrel=1
pkgdesc="Tiled is a general purpose tile map editor."
depends=('zlib' 'qt5-base>=5.13.1' 'python>=2.7.12-2')
makedepends+=('qt5-tools>=5.13.1' 'ca-certificates' 'x11-protos')
groups=('xapps-extra')
archs=('x86_64')
sha1sums=('270bd9c027155002872fb178f3f00a647d63d03f')
options=('scriptlet')
_F_github_author=bjorn
_F_github_tag_v=y
Finclude github

build() {
	Fcd
	Fexec qmake-qt5 -r INSTALL_HEADERS=yes RPATH=no PREFIX=$Fdestdir/usr || Fdie
	Fbuild
}

