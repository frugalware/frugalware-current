pkgname=tiled
pkgver=1.9.2
pkgrel=1
pkgdesc="Tiled is a general purpose tile map editor."
depends=('zlib>=1.2.12' 'qt5-declarative' 'qt5-quickcontrols2' 'qt5-svg' 'python3>=3.8.3')
makedepends+=('qt5-tools>=5.15.0' 'ca-certificates' \
	'x11-protos' 'qbs' 'kernel-headers')
groups=('xapps-extra')
archs=('x86_64')
sha1sums=('f6d7d98b38a89ccf62f598064dc1eb28f69c01fa')
options=('scriptlet')
_F_github_author=bjorn
_F_github_tag_v=y
Finclude github

build() {
	Fcd
	Fpatchall
	Fexec qbs qbs.installPrefix:"/usr" projects.Tiled.useRPaths:false projects.Tiled.installHeaders:true || Fdie
	Fexec qbs install --install-root "$Fdestdir" || Fdie
}

# optimization OK
