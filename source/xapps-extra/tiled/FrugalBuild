pkgname=tiled
pkgver=1.10.1
pkgrel=1
pkgdesc="Tiled is a general purpose tile map editor."
depends=('zlib>=1.2.12' 'qt5-declarative>=5.15.10' 'qt5-quickcontrols2>=5.15.10' 'qt5-svg>=5.15.10' 'python3>=3.11')
makedepends+=('qt5-tools' 'ca-certificates' 'x11-protos' 'qbs' 'kernel-headers')
groups=('xapps-extra')
archs=('x86_64')
sha1sums=('2b41aa7e0849d6ebaa2e9d28ad73c1ac4e973d92')
options=('scriptlet')
_F_github_author=bjorn
_F_github_tag_v=y
Finclude github

build() {
	Fcd
	Fpatchall
	Fexec qbs qbs.installPrefix:"/usr" projects.Tiled.useRPaths:false projects.Tiled.installHeaders:true || Fdie
	Fexec qbs install --install-root "$Fdestdir" || Fdie
}

# optimization OK
