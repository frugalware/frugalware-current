pkgname=tiled
pkgver=1.4.0
pkgrel=1
pkgdesc="Tiled is a general purpose tile map editor."
depends=('zlib' 'qt5-base>=5.15.0' 'python>=2.7.12-2')
makedepends+=('qt5-tools>=5.15.0' 'ca-certificates' 'x11-protos')
groups=('xapps-extra')
archs=('x86_64')
sha1sums=('4b84d2da3e08fcbf5a59e691ab96a86cbea326fc')
options=('scriptlet')
_F_github_author=bjorn
_F_github_tag_v=y
Finclude github

build() {
	Fcd
	Fexec qmake-qt5 -r INSTALL_HEADERS=yes RPATH=no PREFIX=$Fdestdir/usr || Fdie
	Fbuild
}

