# Compiling time: 1.16 SBU
# Maintainer: Janos Kovacs <janny@frugalware.org>

pkgname=transcode
_F_berlios_ext=".tar.bz2"
_F_berlios_dirname="tcforge"
pkgver=1.1.5
pkgrel=5
Finclude berlios
pkgdesc="A suite of command line utilities for transcoding various video, audio, and container formats."
url="http://tcforge.berlios.de/"
depends=('mjpegtools>=1.9.0-3' 'mpeg2dec>=0.4.1' 'imagemagick>=6.6.3_9' 'ffmpeg>=0.6' 'libdvdread>=4.1.3' 'libxv' 'libtheora' 'libfame' 'libraw1394>=2.0.4')
groups=('xapps-extra')
archs=('i686' 'x86_64' 'ppc')
license="GPL"
options=('scriptlet')
sha1sums=('48c36e06ca0cd1cdc1a9c6a241e231f896eefd26')

build()
{
	Fcd
	Fautoreconf
	Fconf \
		--enable-netstream \
		--enable-v4l \
		--enable-lame \
		--enable-oss \
		--enable-libpostproc \
		--enable-freetype2 \
		--disable-avifile \
		--enable-ogg \
		--enable-vorbis \
		--enable-theora \
		--enable-libdv \
		--enable-libquicktime \
		--enable-a52 \
		--disable-libmpeg3 \
		--enable-libxml2 \
		--enable-mjpegtools \
		--enable-sdl \
		--enable-libfame \
		--enable-imagemagick \
		--enable-a52-default-decoder \
		--enable-xvid \
		--enable-x264 \
		--enable-alsa \
		--disable-pvm3 \
		--enable-faac \
		--disable-nuv
	make || Fdie
	Fmakeinstall
}

# optimization OK
