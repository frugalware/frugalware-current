# Compiling time: 1.16 SBU
# Maintainer: Janos Kovacs <janny@frugalware.org>

pkgname=transcode
_F_berlios_ext=".tar.bz2"
_F_berlios_dirname="tcforge"
pkgver=1.1.2
pkgrel=2
Finclude berlios
pkgdesc="A suite of command line utilities for transcoding various video, audio, and container formats."
url="http://tcforge.berlios.de/"
depends=('mjpegtools>=1.9.0rc2' 'mpeg2dec' 'imagemagick>=6.4.8_9' 'ffmpeg>=20080427-2' 'libdvdread' 'libxv' 'libtheora' 'libfame' 'libraw1394>=2.0.0-1')
groups=('xapps-extra')
archs=('i686' 'x86_64' 'ppc')
license="GPL"
options=('scriptlet')
sha1sums=('91060d3495dbecb67eb81dddf6cb633829adb1d6')

build()
{
	Fcd
	Fautoreconf
	Fconf \
		--enable-netstream \
		--enable-v4l \
		--enable-lame \
		--enable-oss \
		--enable-libpostproc \
		--enable-freetype2 \
		--disable-avifile \
		--enable-ogg \
		--enable-vorbis \
		--enable-theora \
		--enable-libdv \
		--enable-libquicktime \
		--enable-a52 \
		--disable-libmpeg3 \
		--enable-libxml2 \
		--enable-mjpegtools \
		--enable-sdl \
		--enable-libfame \
		--enable-imagemagick \
		--enable-a52-default-decoder \
		--enable-xvid \
		--enable-x264 \
		--enable-alsa \
		--disable-pvm3 \
		--enable-faac \
		--disable-nuv
	make || Fdie
	Fmakeinstall
}

# optimization OK
