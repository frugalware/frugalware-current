# Compiling Time: 0.08 SBU
# Maintainer: Priyank Gosalia <priyankmg@gmail.com>

pkgname=transmission
pkgver=0.6.1
pkgrel=1
pkgdesc="A free, lightweight BitTorrent Client"
url="http://transmission.m0k.org/"
depends=('gtk+2' 'gettext' 'openssl')
groups=('xapps-extra')
archs=('i686')
up2date="lynx -dump 'http://transmission.m0k.org/'|grep -m1 '.tar.gz'|sed 's/.*-\(.*\).t.*/\1/'"
source=(http://download.m0k.org/transmission/files/Transmission-$pkgver.tar.gz \
        $pkgname.png)
sha1sums=('da63bbed518fccee68fe36dc5daf5f6d9ecbb6d8' \
	'fcee79d5789409f819554c0a2924e4a32ce6cb88')

build() {
	Fcd Transmission-$pkgver
	Fmake
	Finstallrel 755 cli/transmissioncli /usr/bin/transmissioncli
	Finstallrel 755 gtk/transmission-gtk /usr/bin/transmission-gtk

	# Install the icon and .desktop
	Ficon $pkgname.png
	Fdesktop $pkgname-gtk $pkgname.png "Network;"
}

# optimization OK
