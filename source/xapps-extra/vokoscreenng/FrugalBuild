# Compiling Time: 0.46 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=vokoscreenng
pkgver=3.0.4
pkgrel=1
pkgdesc="Screencasting tool for Linux"
url="https://linuxecke.volkoh.de/vokoscreen/vokoscreen.html"
depends=('qt5-x11extras>=5.15.0' 'qt5-multimedia>=5.15.0' 'gstreamer1')
makedepends=('x11-protos' 'qt5-tools>=5.15.0')
archs=('x86_64')
groups=('xapps-extra')
_F_github_author="vkohaupt"
_F_github_name="$pkgname"
_F_github_tag="y"
_F_github_grepv="beta"
Finclude github
source+=(qt-5.15.patch)
sha1sums=('b9966e694fcd083039324ab293f7f06de13334bc' \
          '6d7f30f8daf140ea175a7b6777ab05d4381ac308')
_F_cd_path="vokoscreenNG-$pkgver"

replaces=('vokoscreen')
provides=('vokoscreen')
conflicts=('vokoscreen')

build() {

	Fcd
	Fpatchall

	Fexec cd src || Fdie
	Fexec qmake-qt5 || Fdie
	Fexec make || Fdie
	Fexec make INSTALL_ROOT=$Fdestdir install || Fdie
}

# optimization OK
