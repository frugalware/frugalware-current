pkgname=wxmaxima
pkgver=0.8.2
pkgrel=1
pkgdesc="wxMaxima is a wxWidgets GUI for the computer algebra system Maxima."
Finclude sourceforge
url="http://wxmaxima.sourceforge.net/"
depends=('maxima>=5.17.0' 'libxml2' 'wxgtk>=2.8.7')
groups=('xapps-extra')
archs=('i686' 'x86_64')
options=('scriptlet')
source=(${source/wxmaxima-/wxMaxima-})
_F_cd_path="wxMaxima-$pkgver"
sha1sums=('bc1d221855f5b7e57401801f43b60924987c5079')

build()
{
	Fbuild
	Ffilerel usr/share/applications/wxmaxima.desktop
	cd data || Fdie
	Ffilerel usr/share/pixmaps/wxmaxima.png

}

# optimization OK
