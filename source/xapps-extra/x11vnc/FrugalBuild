depends=('openssl>=1.1.1' 'libxtst>=1.2.2-2' 'zlib>=1.2.8-4' 'libjpeg-turbo' 'libvncserver')
makedepends=('x11-protos')
archs=('x86_64')
groups=('xapps-extra')
