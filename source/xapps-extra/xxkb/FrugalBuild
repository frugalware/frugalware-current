pkgname=xxkb
pkgver=1.11.1
_F_sourceforge_ext=-src.tar.gz
pkgrel=1
pkgdesc="Keyboard layout indicator and switcher"
groups=('xapps-extra')
archs=('i686' 'x86_64')
depends=('libx11' 'libxext' 'libxpm')
makedepends=('imake' 'libxt')
Finclude sourceforge
sha1sums=('3d0ec9335f05224c1040ca119e95ab090bf4d305')

build()
{
	Fcd
	xmkmf || Fdie
	Fmake
	Fmakeinstall
}
