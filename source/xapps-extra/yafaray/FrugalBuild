url="http://www.yafaray.org"
depends=('openexr>=2.1.0' 'libjpeg' 'zlib' 'libstdc++' 'libpng' \
	'freetype2' 'libtiff' 'libqtgui')
makedepends=('swig')
groups=('xapps-extra')
archs=('i686' 'x86_64')
sha1sums=('8007fd87026b48c0333f5aa758de2abca344ace8')
replaces=('yafray')
_F_github_author="YafaRay"
_F_github_name="Core"
_F_github_tag="y"
Finclude github cmake

build() {
	Funpack_github
	CMake_build
}

