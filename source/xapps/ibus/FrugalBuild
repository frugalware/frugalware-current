pkgname=ibus
pkgver=1.5.27
pkgrel=1
pkgdesc="Intelligent Input Bus."
depends=('gtk+3>=3.22.29' 'gtk+4' 'libnotify>=0.7.7-4' 'dbus>=1.10.10-4' 'libsystemd>=231-7' 'libffi>=3.2.1-2')
makedepends=('intltool' 'iso-codes' 'gobject-introspection>=1.56.0'  'vala>=0.40.0' 'docbook-xsl' 'python3-pygments' \
	'x11-protos' 'gtk-doc' 'systemd-devel' 'unicode-character-database' 'unicode-cldr' 'unicode-emoji ')
rodepends=('libibus')
groups=('xapps')
archs=("x86_64")
options=('scriptlet')
Finclude gnome-scriptlet github
source=("https://github.com/ibus/ibus/releases/download/${pkgver}/ibus-${pkgver}.tar.gz")
sha1sums=('82bbc5c5eef6b2024bea48addc024ab7823fcca8')
Fconfopts+="	--disable-gconf \
		--disable-dconf \
		--disable-gtk2 \
		--enable-gtk3 \
		--enable-wayland \
		--enable-gtk-doc \
		--enable-gtk4 \
		--disable-memconf \
		--enable-ui \
		--disable-python2 \
		--with-python=python3 \
		--enable-python-library \
		--with-ucd-dir=/usr/share/unicode/"

subpkgs+=('libibus')
subdescs+=('Ibus library')
subarchs+=('x86_64')
subgroups+=('lib')
subdepends+=('glib2')

build() {

	Fbuild
	Fbuild_gnome_scriptlet
	Fsplit libibus usr/include/
	Fsplit libibus usr/lib/girepository-1.0/
	Fsplit libibus usr/lib/pkgconfig/
	Fsplit libibus usr/share/gir-1.0/
	Fsplit libibus usr/share/ibus/dicts/
	Fsplit libibus usr/share/vala/
}

# optimization OK
