	'components' 'extensions' 'extras' 'filters' 'help'
	'impress' 'translations' 'libs-core' 'libs-extern-sys'
	'libs-extern' 'libs-gui' 'postprocess' 'sdk' 'testing'
	'ure' 'writer')
