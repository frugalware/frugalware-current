# Compiling Time: ~7 minutes
# Maintainer: VMiklos <mamajom@axelero.hu>

pkgname=xmms
pkgver=1.2.10
pkgrel=2
pkgdesc="The X MultiMedia System"
depends=('gtk+' 'libvorbis' 'esd' 'alsa-lib' 'libmikmod')
up2date=`lynx -dump http://www.xmms.org/download.php|grep ^XMMS|cut -d ' ' -f 2`
source=(http://www.xmms.org/files/1.2.x/$pkgname-$pkgver.tar.bz2 \
	$pkgname-$pkgver-kde.diff)
md5sums=('03a85cfc5e1877a2e1f7be4fa1d3f63c' '84c93658f7486f7e596865f196d28885')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install
	mkdir $startdir/pkg/opt
	cd $startdir/pkg/opt
	patch -p0 < $startdir/src/$pkgname-$pkgver-kde.diff
}

# vim: ft=sh
