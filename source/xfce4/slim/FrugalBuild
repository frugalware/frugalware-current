pkgname=slim
pkgver=1.3.1
pkgrel=9
pkgdesc="SLiM is a lightweight, Desktop-independent graphical login manager for X11."
depends=('libpng' 'libjpeg')
makedepends=('libx11>=1.2.2-1' 'libxft' 'libxmu')
rodepends=('xorg-server>=1.6.1-8')
groups=('xfce4')
archs=('i686' 'x86_64' 'ppc')
backup=('etc/slim.conf')
Finclude berlios
up2date=("lynx -dump http://developer.berlios.de/project/showfiles.php?group_id=2663 |grep slim-[0-9].[0-9].[0-9].tar |sed -ne 's/.*-\(.*\).t.*/\1/;1p'")
source=(${source[@]} \
	slim.conf \
	slim.install \
	$pkgname-$pkgver-cflags.diff \
	http://ftp.frugalware.org/pub/other/artwork/slim-theme/frugalware-1.3.tar.bz2 \
	Fix_GCC43.diff)

sha1sums=('30152b280724daf75299a8ee16585041f253ed4f' \
          '98dcec8ae2d52ae9c9b5abcfa3d145882a0848bd' \
          'a17849f628f4f74cf1bd48eea21a144f2f1a274d' \
          'cb591f6696e63ef43c8c86007283b0e59f4f2895' \
          '065f8157cb9e09c32eff4908005e7f208b6a10e2' \
          'b9e0e8d6643bab8a5361cce6bd8fdcc5a710eab2')

build()
{
	Fbuild
	Fcpr frugalware /usr/share/slim/themes/frugalware
	Fcpr slim.conf /etc/slim.conf
}

# optimization OK
