pkgname=xfce-utils
pkgver=4.3.99.2
pkgrel=1
pkgdesc="Utilities for Xfce4."
url="http://www.xfce.org/"
depends=('libxfcegui4>=4.3.99.2' 'libxfce4mcs>=4.3.99.2' 'dbus-glib>=0.71-2')
makedepends=('xfce-mcs-manager>=4.3.99.2')
groups=('xfce4' 'xfce4-core')
archs=('i686' 'x86_64')
_F_gnome_desktop=y
_F_gnome_iconcache=y
Finclude xfce4 gnome-scriptlet
source=(${source[@]} $pkgname-4.3.99.2-fix_dpi.patch)
sha1sums=('59622477cd60c08b72fe5113a87654a07d13a4f5' \
	  'ee2e6ac5d6a4c9853c5aaa152390df6f5e22952f')
Fconfopts="$Fconfopts --enable-dbus"
options=('scriptlet')

build() {
	Fbuild
	Finstallrel 755 $Fdestdir/etc/xdg/xfce4/xinitrc etc/X11/xinit/xinitrc.xfce4
	Fbuild_gnome_scriptlet
}

# optimization OK
