sha1sums=('cabae0e80b5cf1e0e765aa20edc3596cf3376f9b')

build() {

	Fcd
	rm -rf *synce* README || Fdie

	## something ugly but the other way is
	## a bit of more mess :-)
	## move all folders to match $subpkg
	for i in `ls -d *`
	do
		j=`echo $i | sed 's/_/-/;s/-[0-9].*//;s/-plugin//g'`
		mv ${i} claws-mail-plugin-${j} || Fdie
	done

	for pkg in "${subpkgs[@]}"
	do
		cd $pkg || Fdie
		Fbuild
		Fsplit $pkg /usr
        	cd .. || Fdie
	done

}

# optimization OK
