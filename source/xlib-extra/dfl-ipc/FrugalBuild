# Compiling Time: 1.86 SBU
# Maintainer: Baste <baste@frugalware.org>

pkgname=dfl-ipc
pkgver=0.2.0
pkgrel=3
pkgdesc="A very simple set of IPC classes for inter-process communication"
archs=('x86_64')
groups=('xlib-extra')
depends=("qt5-base>=5.15.15")
makedepends+=('qt5-tools' 'qt6-tools')
url="https://gitlab.com/desktop-frameworks/ipc"
source=("$url/-/archive/v${pkgver}/ipc-v${pkgver}.tar.gz")
up2date="lynx -dump https://gitlab.com/api/v4/projects/desktop-frameworks%2Fipc/repository/tags  | jq -r '.[].name' | grep -v test | head -n 1 | sed 's/v//g'"
Finclude meson
sha1sums=('03fb6cc8d9bb87b739646381d2164ea5c834b8d0')
_F_cd_path="ipc-v$pkgver"

subpkgs=("$pkgname-qt6")
subdescs=("${pkgdesc} Qt6")
subarchs=('x86_64')
subgroups=('xlib-extra')
subdepends=('qt6-base')

build() {
	Meson_build -Duse_qt_version=qt6 --buildtype=release
	Fsplit dfl-ipc-qt6 \*
	Meson_build
}

# optimization OK
