# Compiling Time: 1.86 SBU
# Maintainer: Baste <baste@frugalware.org>

pkgname=dfl-utils
pkgver=0.2.0
pkgrel=1
pkgdesc="Some utilities for DFL"
archs=('x86_64')
groups=('xlib-extra')
depends=('qt5-base')
makedepends+=('qt5-tools' 'qt6-tools')
url="https://gitlab.com/desktop-frameworks/utils"
source=("$url/-/archive/v${pkgver}/utils-v${pkgver}.tar.gz")
up2date="lynx -dump https://gitlab.com/api/v4/projects/desktop-frameworks%2Futils/repository/tags  | jq -r '.[].name' | grep -v test | head -n 1 | sed 's/v//g'"
Finclude meson
sha1sums=('9bc51c3cb313b644c9109f72741e18bdf4c5a961')
_F_cd_path="utils-v$pkgver"

subpkgs=("$pkgname-qt6")
subdescs=("${pkgdesc} Qt6")
subarchs=('x86_64')
subgroups=('xlib-extra')
subdepends=('qt6-base')

build() {
	Meson_build -Duse_qt_version=qt6 --buildtype=release
	Fsplit dfl-utils-qt6 \*
	Meson_build
}

# optimization OK
