# Compiling time: 0.45 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=fltk2
pkgver=r5857
origname=fltk-2.0.x-${pkgver}
pkgrel=1
pkgdesc="FLTK2 is a cross-platform C++ GUI toolkit for X."
url="http://www.fltk.org/"
depends=('libxi' 'libxinerama' 'libjpeg' 'cairo' 'libxft' 'libgcc')
makedepends=('doxygen')
options=('scriptlet')
groups=('xlib-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.fltk.org/|grep -m1 'FLTK 2.0.x Weekly Snapshot'|sed 's/.*, \(.*\)/\1/'"
source=(ftp://ftp.funet.fi/pub/mirrors/ftp.easysw.com/pub/fltk/snapshots/$origname.tar.bz2 \
	disable_crappy_test.patch)
sha1sums=('8af7352e3e1c71dcc4b60b48e8740da8423c3a34'\
          '007ac0c6e19ea5afa4c8e7eb34bf480ab2f18f74')

build()
{
	Fcd $origname
	autoconf || return 1
	Fsed '$(bindir)/fltk2-config --post' \
	     '$(DESTDIR)$(bindir)/fltk2-config --post' fluid/Makefile
	Fbuild --enable-threads --enable-xft \
	       --with-x --enable-cairo \
	       --with-optim="$CXXFLAGS" \
	       --enable-shared
	## lalala not - implemented  - heh
	## man pages missing as well but I don't write any :-P
	## themes broken 
	cd documentation
	doxygen || Fdie
	cd ..
	Fmkdir usr/share/doc/$pkgname-$pkgver
	cp -Ra documentation $Fdestdir/usr/share/doc/$pkgname-$pkgver/
}
