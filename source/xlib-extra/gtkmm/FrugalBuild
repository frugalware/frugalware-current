pkgname=gtkmm
pkgver=3.24.1
pkgrel=3
pkgdesc="C++ interface for GTK+3"
depends=('glibmm>=2.60.0' 'gtk+3>=3.24.7-2' 'cairomm>=1.12.0-4' 'pangomm>=2.40.1-5' \
	'atkmm>=2.24.2-7' 'libstdc++>=6.3.1-4')
groups=('xlib-extra')
archs=("x86_64")
_F_gnome_devel="n"
_F_gnome_ext=".tar.xz"
Finclude gnome
Fconfopts+=" --disable-examples --disable-demos"
sha1sums=('d1e822765a64b844fba438672b5288283195f62a')

CXXFLAGS+=" -fno-strict-aliasing"

subpkgs=("$pkgname-docs")
subdescs=("Gtkmm Documentation")
subdepends=()
subgroups=('docs-extra')
subarchs=("x86_64")

replaces=('gtkmm2')

build()
{
        Fbuild
        Fsplit $pkgname-docs usr/share/doc
}

# optimization OK
