pkgname=gtkmm
pkgver=4.6.1
pkgrel=1
pkgdesc="C++ interface for GTK+4"
depends=('glibmm>=2.68.1' 'gtk+4' 'cairomm>=1.12.0-4' 'pangomm>=2.40.1-5' \
	'atkmm>=2.24.2-7' 'libstdc++>=11.2' 'libxrandr')
makedepends=('doxygen' 'graphviz' 'libxslt' 'git')
groups=('xlib-extra')
archs=("x86_64")
_F_gnome_devel="n"
_F_gnome_ext=".tar.xz"
_F_meson_confopts="     -Dbuild-documentation=true"
Finclude gnome meson
sha1sums=('6e1078f1f74b5f553f40173a78b01daf91f08b39')

CXXFLAGS+=" -fno-strict-aliasing"

subpkgs=("$pkgname-docs")
subdescs=("Gtkmm Documentation")
subdepends=()
subgroups=('docs-extra')
subarchs=("x86_64")

replaces=('gtkmm2')

build()
{
        Meson_build
        Fsplit $pkgname-docs usr/share/doc
}

