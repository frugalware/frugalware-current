pkgname=hippo-canvas
pkgver=0.3.0
pkgrel=5
pkgdesc="Hippocanvas is a canvas library based on GTK+2.0"
depends=('gtk+2>=2.20.1' 'libcroco' 'freetype2' 'libxau' 'libxdmcp' 'libxdamage' \
	'libxext>=1.0.5-3' 'libffi' 'librsvg>=2.26.0-2')
makedepends=('perl-xml-parser' 'intltool' 'pygtk>=2.12.1-4')
options=('scriptlet')
groups=('xlib-extra')
archs=('i686' 'x86_64')
_F_gnome_devel="y"
Finclude gnome python
sha1sums=('840c8d1e45ee48a4804b80704d2639bf2eca9da1')
Fconfopts="${Fconfopts[@]} --enable-python"
subpkgs=("hippo-canvas-python")
subdescs=('python support hippo-canvas')
subdepends=("$pkgname=$pkgver pygtk")
subgroups=('xlib-extra')
subarchs=('i686 x86_64')

build() {
	Fbuild
	Fsplit hippo-canvas-python $_F_python_libdir
}

