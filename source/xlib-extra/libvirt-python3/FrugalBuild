_F_archive_name="libvirt-python"
pkgname=libvirt-python3
pkgver=9.0.0
pkgrel=1
pkgdesc="The libvirt python binding."
url="http://libvirt.org"
depends=("libvirt>=$pkgver" 'python3>=3.10')
makedepends=('python3-setuptools')
groups=('xlib-extra')
archs=('x86_64')
_F_python_version="python3"
up2date="Flasttar ftp://ftp.libvirt.org/libvirt/python/"
source=(ftp://ftp.libvirt.org/libvirt/python/$_F_archive_name-$pkgver.tar.gz)
sha1sums=('d84b47c633f3c21204dc44253563ac5a29b6818b')

build() {
	Fcd
	Fexec rm -rf Makefile || Fdie
	Fbuild
}

# optimization OK
