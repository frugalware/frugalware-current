options+=('asneeded')

pkgname=lightspark
pkgver=0.7.2.1
pkgrel=1
pkgdesc='High performance flash player designed from scratch to be efficient on modern hardware'
depends=('libboost>=1.50.0' 'ffmpeg>=1.0' 'curl' 'gtk+2-libs' 'ftgl' 'glew>=1.9.0' 'libxml++' 'gdk-pixbuf2' 'pulseaudio>=2.1' 'dbus' 'rtmpdump')
makedepends=('nasm' 'xulrunner' 'glproto' 'boost>=1.50.0' 'llvm>=3.4')
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
_F_github_author="mcirsta"
_F_github_tag="y"
Finclude cmake gnome-scriptlet github
groups=('xlib-extra')
archs=('i686' 'x86_64')
sha1sums=('c8d308a9e0b0d8d07ffe26dbf20d2ee486ff77ea')

build() {
    Funpack_github
    CMake_build -DCMAKE_INSTALL_PREFIX=/usr \
    -DCOMPILE_PLUGIN=1 \
    -DCMAKE_BUILD_TYPE=Release \
    -DGNASH_EXE_PATH=/usr/bin/gtk-gnash
    Fbuild_gnome_scriptlet
}

# optimization OK

