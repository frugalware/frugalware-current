# Compiling Time: 0.07 SBU
# Maintainer: Baste <baste@frugalware.org>

pkgname=m17n-lib
pkgver=1.8.0
pkgrel=1
pkgdesc="A multilingual text processing library."
url="http://www.m17n.org/"
depends=('libxml2>=2.7.8' 'anthy' 'libxaw>=1.0.5-1' 'gd>=2.1.1-4' 'libotf>=0.9.16' 'libxft>=2.1.13-2' \
	'fontconfig' 'm17n-db>=1.8.0')
makedepends=('aspell' 'x11-protos')
groups=('xlib-extra')
archs=('x86_64')
_F_archive_grepv="RC"
up2date="Flasttar http://download.savannah.gnu.org/releases/m17n/"
source=(http://download.savannah.gnu.org/releases/m17n/$pkgname-$pkgver.tar.gz)
sha1sums=('298923e2f7f6b8763769b74c8b2da8fe4d13ecce')
unset MAKEFLAGS

build()
{
	Fcd
	Fsed 'ispell' 'aspell' configure.ac
	Fautoreconf
	Fmake
	Fmakeinstall
}
# optimization OK
