Finclude python
_F_cmake_confopts="	-DCMAKE_INSTALL_PREFIX=/usr \
			-DUSE_OPENSSL=ON \
			-DUSE_PYTHON=ON \
			-DPYLIB_INSTALL_DIR=${_F_python_libdir#usr/} \
			-DOIIO_BUILD_TESTS=OFF \
			-DOIIO_BUILD_TOOLS=ON"
Finclude cmake
_F_archive_name="Release"
_F_archive_grepv="beta\|RC\|dev"
