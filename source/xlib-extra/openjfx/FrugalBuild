# Compiling Time: 1.00 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=openjfx
pkgver=8u111
pkgextraver=b14
pkgrel=1
pkgdesc='Java OpenJFX 8 client application platform (open-source implementation of JavaFX)'
archs=('x86_64')
groups=('xlib-extra')
url='https://wiki.openjdk.java.net/display/OpenJFX/Main'
depends=('openjre' 'gstreamer1' 'libxtst' 'webkit-gtk2' 'ffmpeg' 'qt5-base')
makedepends=('openjdk' 'mercurial' 'bison' 'gperf' 'libxtst' 'ffmpeg' 'python' 'qt5-base' 'ruby' 'gtk+2' 'x11-protos')
_F_github_name="openjfx-8u-dev-rt"
_F_github_author="teamfx"
_F_github_tag=y
_F_github_ver="$pkgver-$pkgextraver"
_F_cd_path="${_F_github_name}-$pkgver-$pkgextraver"
source+=(gradle.properties \
	https://services.gradle.org/distributions/gradle-1.8-bin.zip \
        SurfaceData.patch \
        gcc-compatibility.patch)
Finclude github
sha1sums=('95b2bc2900503256eea7656dd98fda23646db9f7' \
          'f14299582a1ab6c1293a43697ecda4b2673e34b1' \
          '0fb3dc2d6630ae3cf6079bb6b5ad505cfaea72a5' \
          '71d4ee4e04eb6f9bb1643ba06f5817d42409bf0a' \
          '417ddf081746be6399739ef7e9a624a511060544')


build() {
	Fpatchall
	Fcd

	Fsed qmake qmake-qt5 modules/web/src/main/native/Tools/Scripts/webkitdirs.pm
	ln -sf "${Fsrcdir}/gradle.properties" .
	export GRADLE_USER_HOME="${Fsrcdir}/gradle_home"
	mkdir -p ${GRADLE_USER_HOME}

	Fexec "${Fsrcdir}"/gradle-1.8/bin/gradle || Fdie

	Fmkdir usr/lib/jvm/java-8-openjdk/jre/lib/amd64
	Finstallrel 755 build/sdk/rt/lib/amd64/\* usr/lib/jvm/java-8-openjdk/jre/lib/amd64/

	Fmkdir usr/lib/jvm/java-8-openjdk/jre/lib/ext
	Finstallrel 644 build/sdk/rt/lib/ext/\* usr/lib/jvm/java-8-openjdk/jre/lib/ext/
	Finstallrel 644 build/sdk/rt/lib/javafx.properties usr/lib/jvm/java-8-openjdk/jre/lib/
	Finstallrel 644 build/sdk/rt/lib/jfxswt.jar usr/lib/jvm/java-8-openjdk/jre/lib/

	Fmkdir usr/lib/jvm/java-8-openjdk/lib
	Finstallrel 644 build/libs/\* usr/lib/jvm/java-8-openjdk/lib/

	Fmkdir usr/lib/jvm/java-8-openjdk/bin
	Fexerel build/sdk/bin/\* usr/lib/jvm/java-8-openjdk/bin/

	Fmkdir usr/share/man/man1
	Finstallrel 644 build/sdk/man/man1/javapackager.1 usr/share/man/man1/javapackager.1

	Fdocrel build/javadoc

	Finstallrel 644 build/javafx-src.zip usr/lib/jvm/java-8-openjdk/javafx-src.zip
}
