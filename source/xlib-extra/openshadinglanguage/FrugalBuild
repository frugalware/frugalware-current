pkgname=openshadinglanguage
pkgver=1.11.8.0
pkgrel=2
pkgdesc="Advanced shading language for production GI renderers"
archs=('x86_64')
groups=('xlib-extra')
depends=('libboost>=1.74.0' 'openimageio' 'openexr' 'intel-tbb' 'pugixml' 'clang-libs')
makedepends=('boost' 'clang' 'llvm' 'pybind11')
_F_github_author=imageworks
_F_github_grepv="RC2\|RC1\|beta1\|dev"
Finclude github cmake
up2date="$up2date | sed 's/Release-//g'"
source=("https://github.com/imageworks/OpenShadingLanguage/archive/Release-${pkgver}.tar.gz")
sha1sums=('5537f335a28928f9b1c717f4bc1291cba8b84466')
_F_cd_path="OpenShadingLanguage-Release-$pkgver"
options=('clang')
_F_cmake_confopts="	-DCMAKE_CXX_STANDARD=14 \
			-DLLVM_STATIC=0 \
			-DENABLERTTI=ON"

