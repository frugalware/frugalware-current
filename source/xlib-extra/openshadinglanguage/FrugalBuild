_F_cd_path="OpenShadingLanguage-Release-$pkgver"
options=('clang')
_F_cmake_confopts="	-DCMAKE_CXX_STANDARD=14 \
			-DLLVM_STATIC=0 \
			-DENABLERTTI=ON"

