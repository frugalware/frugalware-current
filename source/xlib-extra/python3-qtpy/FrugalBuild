pkgname=python3-qtpy
pkgver=2.4.1
pkgrel=4
pkgdesc="Provides an uniform layer to support PyQt5 and PySide2 with a single codebase"
archs=('x86_64')
groups=('xlib-extra')
_F_github_author="spyder-ide"
_F_github_name="qtpy"
_F_github_tag_v=y
Finclude github
depends=('python3-packaging')
makedepends=('python3-build' 'python3-installer' 'python3-setuptools' 'python3-wheel')
sha1sums=('87664661ccc5381ad8b6e6d7b161bb7617998f16')
_F_cd_path="qtpy-$pkgver"

build() {
	Fcd
  	Fexec python3 -m build --wheel --no-isolation || Fdie
	Fexec python3 -m installer --destdir="$Fdestdir" dist/*.whl || Fdie
}


# optimization OK
