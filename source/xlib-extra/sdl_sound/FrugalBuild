# Compiling Time: 0.16 SBU
# Maintainer: crazy <crazy@frugalware.org>
# Contributor: Laszlo Dvornik <dvornik@gnome.hu>

pkgname=sdl_sound
pkgver=1.0.1
pkgrel=3
pkgdesc="A library to decode several popular sound file formats"
url="http://icculus.org/SDL_sound/"
depends=('sdl' 'libmikmod' 'libvorbis' 'flac')
groups=('xlib-extra')
archs=('i686' 'x86_64')
_F_cd_path="SDL_sound-$pkgver"
up2date="lynx -dump 'http://icculus.org/SDL_sound/downloads/?M=D'|grep SDL_sound-[0-9\.]*.tar.gz$|sed -n 's/.*-\(.*\).t.*/\1/;1 p'"
source=(http://icculus.org/SDL_sound/downloads/SDL_sound-$pkgver.tar.gz \
	sdl_sound-1.0.1-flac113.patch)

build()
{
	Fpatchall
	autoconf || return 1
	Fmake
	Fmakeinstall
}

sha1sums=('9cb8550facf64f941179ba5767f763d1d52ddd6b'\
          '4d677e16b2c5fbbd6d612228e2d3adf995799e90')
# optimization OK
