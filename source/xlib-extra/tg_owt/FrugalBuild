build() {
	Funpack_scm
	Fcd
	Fexec git checkout 8198c4d8b91e22d68eb5c7327fd408e3b6abcc79 || Fdie
	Fexec git submodule init || Fdie
	Fexec git submodule update --recursive || Fdie
	CMake_build
}

