# Compiling Time: 0.01 SBU
# Maintainer: DeX77 <dex77@frugalware.org>

pkgname=tg_owt
pkgver=20201009.gc73a471
pkgrel=1
pkgdesc='WebRTC build for Telegram'
archs=('x86_64')
groups=('xlib-extra')
depends=('glibc')
makedepends=('libjpeg-turbo' 'ffmpeg' 'opus' 'yasm')
_F_github_author="desktop-app"
_F_github_devel=y
_F_scm_want_up2date=yes
_F_cmake_use_ninja=true
Finclude github cmake

options=('static')

build() {
	Funpack_scm
	CMake_make
	Finstallrel 755 usr/lib/libtg_owt.a
	Fmkdir usr/include/tg_owt
	Fcp tg_owt/src/* usr/include/tg_owt
	Fexec find $Fdestdir/usr/include -type f ! -name "*.h" -delete || Fdie
}

# optimization OK
