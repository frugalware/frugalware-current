build() {
	Funpack_scm
	Fcd
	Fexec git checkout e9d103e2480e0983bf464debc371b049cdd83648 || Fdie
	Fexec git submodule init || Fdie
	Fexec git submodule update --recursive || Fdie
	CMake_build
}

