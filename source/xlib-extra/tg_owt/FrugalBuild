build() {
	Funpack_scm
	Fcd
	Fexec git checkout 5098730b9eb6173f0b52068fe2555b7c1015123a || Fdie
	Fexec git submodule init || Fdie
	Fexec git submodule update --recursive || Fdie
	export PKG_CONFIG_PATH='/usr/lib/openssl-1.1/pkgconfig'
	CMake_build
}

