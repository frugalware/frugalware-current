build() {
	Funpack_scm
	Fcd
	Fexec git checkout 592b14d13bf9103226e90a83571e24c49f6bfdcd || Fdie
	Fexec git submodule init || Fdie
	Fexec git submodule update --recursive || Fdie
	CMake_build
}

