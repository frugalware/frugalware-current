# Compiling Time: 0.03 SBU
# Maintainer: Miklos Nemeth <desco@frugalware.org>

pkgname=wxsqlite3
pkgver=1.6.0
pkgrel=1
pkgdesc="wxSQLite3 is a C++ wrapper around the public domain SQLite 3.x database"
url="http://wxcode.sourceforge.net/components/wxsqlite3/"
depends=('sqlite3' 'wxgtk')
makedepends=('hd2u')
groups=('xlib-extra')
archs=('i686' 'x86_64')
_F_sourceforge_dirname=wxcode
_F_sourceforge_ext=.zip
Finclude sourceforge
up2date="lynx -dump http://wxcode.sourceforge.net/components/wxsqlite3/ | grep Latest | sed 's/.*n: \([0-9.]*\) B.*/\1/'"
sha1sums=('3f681e448399bfcc3d0058c89116c7583570b6b9')

build()
{
    cd wxsqlite3
    dos2unix build/*
    chmod 755 configure
    chmod 755 build/config.guess
    chmod 755 build/config.sub
    Fmake
    Fmakeinstall
}

# optimization OK
