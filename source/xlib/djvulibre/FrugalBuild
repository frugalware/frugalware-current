# Compiling Time: 0.20 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=djvulibre
pkgver=3.5.28
pkgrel=2
pkgdesc="DjVu is a web-centric format for distributing documents and images."
depends=('libtiff>=4.0.6-2' 'libjpeg-turbo' 'libstdc++>=9.1.0-3')
rodepends=('xdg-utils')
groups=('xlib')
archs=("x86_64")
_F_sourceforge_dirname="djvu"
Finclude sourceforge
url="http://djvulibre.djvuzone.org/"
sha1sums=('e74c23e5480535898a6549aec11e5cfa1228e1ea')


build()
{
	Fcd
	Fsed 'O3' 'O2' configure
	Fbuild \
		--enable-threads \
		--enable-desktopfiles \
		--enable-xmltools \
		--disable-djview
}

# optimization OK

