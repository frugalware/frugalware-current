pkgname=flashplugin
pkgver=7.0r25
pkgrel=1
pkgdesc="Macromedia flash plugin for Netscape/Mozilla (nonfree)"
install=flashplugin.install
depends=('zlib' 'x' 'gcc')
up2date=`lynx -dump 'http://www.macromedia.com/shockwave/download/download.cgi?P1_Prod_Version=ShockwaveFlash&P2_Platform=Linux&P3_Browser_Version=Netscape4'|grep Version|tr -s ' '|cut -d ' ' -f 3|sed -e 's/,/./' -e 's/,0//' -e 's/,/r/'`
source=(http://fpdownload.macromedia.com/pub/shockwave/flash/english/linux/$pkgver/install_flash_player_`echo $pkgver|cut -d . -f 1`_linux.tar.gz)
md5sums=('79c59a5ea29347e01c8e6575dd054cd1')

build() {
  mkdir -p $startdir/pkg/usr/lib/mozilla/plugins/
  cp $startdir/src/install_flash_player_`echo $pkgver|cut -d . -f 1`_linux/*.{so,xpt} $startdir/pkg/usr/lib/mozilla/plugins/
}
