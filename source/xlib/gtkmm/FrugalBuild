pkgname=gtkmm
pkgver=3.22.0
pkgrel=1
pkgdesc="C++ interface for GTK+3"
depends=('glibmm>=2.50.0' 'gtk+3>=3.23.1' 'cairomm>=1.12.0-3' 'pangomm>=2.40.1-2' \
	'atkmm>=2.24.2-4' 'libstdc++>=6.2.1-5')
groups=('xlib')
archs=('i686' 'x86_64')
_F_gnome_devel="n"
_F_gnome_ext=".tar.xz"
Finclude gnome
Fconfopts+=" --disable-examples --disable-demos"
sha1sums=('58220c1be2d11462fec259563ccebec28d6fa388')

CXXFLAGS+=" -fno-strict-aliasing"

subpkgs=("$pkgname-docs")
subdescs=("Gtkmm Documentation")
subdepends=()
subgroups=('docs-extra')
subarchs=('i686 x86_64')

build()
{
        Fbuild
        Fsplit $pkgname-docs usr/share/doc
}

# optimization OK
