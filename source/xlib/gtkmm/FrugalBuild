pkgname=gtkmm
pkgver=3.22.2
pkgrel=1
pkgdesc="C++ interface for GTK+3"
depends=('glibmm>=2.54.1' 'gtk+3>=3.22.21' 'cairomm>=1.12.0-3' 'pangomm>=2.40.1-5' \
	'atkmm>=2.24.2-7' 'libstdc++>=6.3.1-4')
groups=('xlib')
archs=("x86_64")
_F_gnome_devel="n"
_F_gnome_ext=".tar.xz"
Finclude gnome
Fconfopts+=" --disable-examples --disable-demos"
sha1sums=('fd91eb23b9283ac54d267c54a91742ec2c1a6d6c')

CXXFLAGS+=" -fno-strict-aliasing"

subpkgs=("$pkgname-docs")
subdescs=("Gtkmm Documentation")
subdepends=()
subgroups=('docs-extra')
subarchs=("x86_64")

build()
{
        Fbuild
        Fsplit $pkgname-docs usr/share/doc
}

# optimization OK
