pkgname=libquicktime
pkgver=1.1.3
pkgrel=3
pkgdesc="A library based on quicktime4linux with extensions"
depends=('lame' 'gtk+2>=2.16.2-2' 'alsa-lib' 'libdv' 'libvorbis' 'libavc1394' 'faac>=1.25' 'faad2>=2.7' 'ffmpeg>=20090403' 'libraw1394>=2.0.0')
makedepends=('cvs' 'doxygen')
groups=('xlib')
archs=('x86_64' 'i686' 'ppc')
options=('scriptlet')
Finclude sourceforge
url="http://libquicktime.sourceforge.net/"
sha1sums=('cd991e5d5fa8690fe22db27e169a9258d3664bfc')

build()
{
	Fcd
	Fpatchall
	Fautoreconf
	Fmake --enable-gpl --with-cpuflags=no
	Fmakeinstall
}

# optimization OK
