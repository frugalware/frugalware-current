# Compiling Time: 0.01 SBU
# Maintainer: Adam Zlehovszky <zleho@index.hu>

pkgname=openbox
pkgver=3.3.1
pkgrel=1
pkgdesc="A standards compliant, fast, light-weight, extensible window manager"
pkgdesc_localized=('hu_HU Egy szabványoknak megfelelõ, gyors, pehelysúlyú, kiterjeszthetõ ablakkezelõ.')
url="http://icculus.org/openbox"
depends=('fontconfig' 'libxml2' 'glib2' 'startup-notification' 'pango' 'libsm' 'libxinerama' 'libxrandr')
rodepends=('xorg-server' 'python')
groups=('xlib')
archs=('i686' 'x86_64')
backup=(etc/xdg/openbox/{menu.xml,rc.xml})
options=('scriptlet')
up2date="lynx -dump 'http://icculus.org/openbox/index.php/Openbox:Download'|grep -m1 'openbox-\(.*\).tar.gz'|Flasttar"
source=($url/releases/$pkgname-$pkgver.tar.gz xinitrc.$pkgname $pkgname.desktop)
sha1sums=('0524cbf2a396459d206915e6b1b688443cded89b' \
          'feaa5d80bbdb8b0bc335b7b02c17e245edc1c05b' \
          'f4b153fac2fb0c3887a3b7d79783b4857c1ac9c9')

build()
{
	Fbuild --enable-startup-notification
	Fexe /etc/X11/sessions/$pkgname.desktop
	Fexe /etc/X11/xinit/xinitrc.openbox
}

# optimization OK
