# Compiling time: 0.78 SBU
# Maintainer: Christian Hamar alias krix <krics@linuxforum.hu>

pkgname=pygtk
pkgver=2.22.0
pkgrel=3
pkgdesc="Python bindings for GTK+2"
depends=('libglade>=2.6.3-1' 'pycairo>=1.8.4' 'pygobject-cairo>=2.26.0-6' 'numpy' 'gtk+2>=2.22.0')
groups=('xlib')
archs=('i686' 'x86_64' 'ppc')
Finclude gnome
url="http://www.daa.com.au/~james/pygtk/"
sha1sums=('6a180d0c9ed19179662f51decb150b2c98cc9362')
export CFLAGS="$CFLAGS -fno-strict-aliasing -fgnu89-inline"

subpkgs=("$pkgname-docs")
subdescs=("Pygtk Documentation")
subdepends=()
subgroups=('docs-extra')
subarchs=('i686 x86_64')

build()
{
	Fbuild
	Fsplit $pkgname-docs usr/share/gtk-doc
}
# optimization OK
