## DO NOT remove -no-use-gold-linker

options+=('ofast')

subpkgs=("$pkgname-mysql")
subdescs=('Mysql support for qt5')
subdepends=("mariadb-libs>=10.3.14")
subrodepends=("$pkgname>=$pkgver $pkgname-sql-common")
subgroups=('xlib-extra')
