subprovides+=('')
subconflicts+=('')

subpkgs+=("$pkgname-platformtheme-gtk3")
subdescs+=('Qt5 GTK3 Theme support')
subdepends+=("gtk+3")
subrodepends+=("$pkgname>=$pkgver")
subgroups+=('xlib-extra')
subarchs+=('x86_64')
subreplaces+=('')
