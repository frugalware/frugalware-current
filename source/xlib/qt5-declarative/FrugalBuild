# Compiling Time: 64.56 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=qt5-declarative
pkgver=5.15.5
pkgrel=1
depends=("qt5-base>=5.15.5")
Finclude qt5
makedepends=('x11-protos' 'gperf' "qt5-base-static>=5.15.5")
sha1sums=('b8c9dd715d8d33ccef0a3419afa87d334ef22648')

subpkgs=("$pkgname-static")
subdescs=('Qt5 declarative static libs.')
subdepends=('')
subgroups=('devel-extra')
subarchs=('x86_64')

options+=('ofast')

build() {
	Fcd
	Fpatchall

	FQt_conf
	FQt_make
	FQt_install

	local i
	LIB_STATIC=(
		libQt5PacketProtocol
		libQt5QmlDebug
		libQt5QmlDevTools)

	for i in "${LIB_STATIC[@]}"
	do
		Fsplit $pkgname-static usr/lib/${i}.{a,la,prl}
	done

	FQt_symlink
	Ffix_la_files
}
# optimization OK

