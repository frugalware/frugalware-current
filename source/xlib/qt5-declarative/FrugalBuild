# Compiling Time: 64.56 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=qt5-declarative
pkgver=5.15.4
pkgrel=3
depends=("qt5-base>=5.15.4")
Finclude qt5
makedepends=('x11-protos' 'gperf' "qt5-base-static>=5.15.4")
source+=(0002-Add-missing-limits-include-to-fix-build-with-GCC-11.patch)
sha1sums=('2ac0e831a7ffdc0f8f72a8d29d8c6a4d36dcb169' \
          '93f98d12f04eae91b1e64a1cbe3e7cde7f79380e')

subpkgs=("$pkgname-static")
subdescs=('Qt5 declarative static libs.')
subdepends=('')
subgroups=('devel-extra')
subarchs=('x86_64')

options+=('ofast')

build() {
	Fcd
	Fpatchall

	FQt_conf
	FQt_make
	FQt_install

	local i
	LIB_STATIC=(
		libQt5PacketProtocol
		libQt5QmlDebug
		libQt5QmlDevTools)

	for i in "${LIB_STATIC[@]}"
	do
		Fsplit $pkgname-static usr/lib/${i}.{a,la,prl}
	done

	FQt_symlink
	Ffix_la_files
}
# optimization OK

