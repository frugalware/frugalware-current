# Compiling Time: 64.56 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=qt5-declarative
pkgver=5.12.3
pkgrel=3
depends=("qt5-xmlpatterns>=${pkgver}-4")
Finclude qt5
sha1sums=('be3bd9c8f8b70aa1e72d65e15556e6a076cfbf39')

subpkgs=("$pkgname-static")
subdescs=('Qt5 declarative static libs.')
subdepends=('')
subgroups=('devel-extra')
subarchs=('x86_64')

options+=('ofast')

build() {

	Fcd
	FQt_conf
	FQt_make
	FQt_install

	local i
	LIB_STATIC=(
		libQt5PacketProtocol
		libQt5QmlDebug
		libQt5QmlDevTools)

	for i in "${LIB_STATIC[@]}"
	do
		Fsplit $pkgname-static usr/lib/${i}.{a,la,prl}
	done

	FQt_symlink
	Ffix_la_files
}
# optimization OK

