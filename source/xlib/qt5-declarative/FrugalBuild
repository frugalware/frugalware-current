# Compiling Time: 64.56 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=qt5-declarative
pkgver=5.13.2
pkgrel=1
depends=("qt5-xmlpatterns>=${pkgver}")
Finclude qt5
sha1sums=('68d476c48193a81e7947cccd4e97efa07db2397b')

subpkgs=("$pkgname-static")
subdescs=('Qt5 declarative static libs.')
subdepends=('')
subgroups=('devel-extra')
subarchs=('x86_64')

options+=('ofast')

build() {

	Fcd
	FQt_conf
	FQt_make
	FQt_install

	local i
	LIB_STATIC=(
		libQt5PacketProtocol
		libQt5QmlDebug
		libQt5QmlDevTools)

	for i in "${LIB_STATIC[@]}"
	do
		Fsplit $pkgname-static usr/lib/${i}.{a,la,prl}
	done

	FQt_symlink
	Ffix_la_files
}
# optimization OK

