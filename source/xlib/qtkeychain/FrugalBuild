# Compiling Time: 0.06 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=qtkeychain
pkgver=0.15.0
pkgrel=1
pkgdesc="Provides support for secure credentials storage."
depends=('qt6-base>=6.8.0' 'libsecret')
makedepends+=('qt6-tools' 'qt5-tools')
groups=('xlib')
archs=('x86_64')
_F_github_author="frankosterfeld"
_F_github_tag="yes"
_F_cmake_type="Release"
Finclude cmake github
sha1sums=('58388b28ec0f6e2504e0c168c2fed9bd63dd7221')

subpkgs+=("$pkgname-qt5")
subdescs+=("$pkgname QT5")
subarchs+=('x86_64')
subgroups=('xlib')
subdepends+=('qt5-base libsecret')

build() {
        Fexec cd $Fsrcdir/$_F_cd_path || Fdie
        Fexec rm -rf $_F_cmake_build_dir || Fdie

        CMake_build
        Fsplit $pkgname-qt5 \*
        Fexec cd $Fsrcdir/$_F_cd_path || Fdie
        Fexec rm -rf $_F_cmake_build_dir || Fdie

        CMake_build  -DBUILD_WITH_QT6=ON
}

# optimization OK
