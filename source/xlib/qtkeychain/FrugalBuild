# Compiling Time: 0.06 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=qtkeychain
pkgver=0.14.2
pkgrel=6
pkgdesc="Provides support for secure credentials storage."
depends=('qt5-tools' 'qt6-base' 'libsecret')
makedepends+=('qt6-tools')
groups=('xlib')
archs=('x86_64')
_F_github_author="frankosterfeld"
_F_github_tag="yes"
_F_cmake_type="Release"
Finclude cmake github
sha1sums=('24dc93e80106f0db5694eadd522079026c76c4fd')

subpkgs+=("$pkgname-qt5")
subdescs+=("$pkgname QT5")
subarchs+=('x86_64')
subgroups=('xlib')
subdepends+=('qt5-base libsecret')

build() {
        Fexec cd $Fsrcdir/$_F_cd_path || Fdie
        Fexec rm -rf $_F_cmake_build_dir || Fdie

        CMake_build
        Fsplit $pkgname-qt5 \*
        Fexec cd $Fsrcdir/$_F_cd_path || Fdie
        Fexec rm -rf $_F_cmake_build_dir || Fdie

        CMake_build  -DBUILD_WITH_QT6=ON
}

# optimization OK
