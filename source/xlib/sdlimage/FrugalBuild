pkgname=sdlimage
pkgver=1.2.4
pkgrel=2
pkgdesc="Image loadung library for Simple DirectMedia Layer 1.2"
url="http://www.libsdl.org/"
depends=('sdl' 'libjpeg')
groups=('xlib')
archs=('i686' 'x86_64')
up2date="lynx -dump 'http://www.libsdl.org/projects/SDL_image/release/?sort=modified'|grep [0-9\.].tar.gz$|sed -ne 's/.*e-\(.*\)\.t.*/\1/;1 p'"
source=(http://www.libsdl.org/projects/SDL_image/release/SDL_image-$pkgver.tar.gz)
sha1sums=('64664c43a105ca6532f2b7d7f45d24f17388b5da')

build()
{
	Fcd SDL_image-$pkgver
	Fbuild || return 1
}

