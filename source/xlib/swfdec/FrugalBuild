pkgname=swfdec
pkgver=0.3.6
pkgrel=2
pkgdesc="Swfdec is a library for rendering Flash animations and games"
url="http://www.schleef.org/swfdec/"
depends=('libmad' 'glib2' 'gtk+2' 'liboil' 'sdl')
options=('scriptlet')
groups=('xlib')
archs=('i686' 'x86_64')
up2date="lynx -dump http://www.schleef.org/swfdec/download/ | Flasttar"
source=(http://www.schleef.org/swfdec/download/$pkgname-$pkgver.tar.gz)
sha1sums=('c85dad75fd0a7d47b6cc087abc404730bb00334e')
license="LGPL"

build()
{
	Fcd
	Fbuild

  	# Remove unnecessary files and dirs
	# priyank why you don't build the plugins as subpackages ?! and why you remove gtk* folder ?! -- crazy --
  	Frm usr/bin
  	Frm usr/lib/mozilla
  	Frm usr/lib/gtk-2.0
}

# optimization OK
