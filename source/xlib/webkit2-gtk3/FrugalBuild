pkgname=webkit2-gtk3
_F_archive_name=webkitgtk
pkgver=2.16.4
pkgrel=1
pkgdesc="Open source web browser engine gtk+3"
url="http://www.webkitgtk.org"
depends=('gtk+3>=3.22.12' 'libsoup>=2.56.0-3' 'gst1-plugins-base>=1.10.4-3' 'enchant>=1.6.0-3' 'libsecret>=0.18.5-2' 'libwebp>=0.6.0' \
	 'icu4c>=58.1' 'gnutls>=3.4.15-2' 'geoclue2>=2.4.5-3' 'libnotify>=0.7.6-2' 'hyphen' 'libxslt>=1.1.29-2' 'libxt>=1.1.5-3')
makedepends=('gperf>=3.0.4-4' 'ruby>=2.3.1-3' 'gtk+2>=2.24.31-2' 'gobject-introspection>=1.52.1' 'x11-protos>=0.1-3')
groups=('xlib')
archs=("x86_64")
source=(http://webkitgtk.org/releases/$_F_archive_name-$pkgver.tar.xz)
up2date="lynx --dump http://webkitgtk.org/releases/ | grep LATEST-STABLE | sort | sed 's/.*BLE-\(.*\).*/\1/' | head -n1"
Finclude cmake
_F_cmake_confopts="  -DPORT=GTK -DCMAKE_BUILD_TYPE=Release"
sha1sums=('5efaacb066bd140a0542af154784f4c6f8b25303')

build() {
	Fcd
	rm -r Source/ThirdParty/gtest/
	rm -r Source/ThirdParty/qunit/
	CXXFLAGS+=" -fno-delete-null-pointer-checks"
	CMake_build
}

