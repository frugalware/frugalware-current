# Compiling Time: 6.45 SBU
# Maintainer: crazy <crazy@frugalware.org>

pkgname=ffmpeg
pkgver=4.3.1
pkgrel=4
pkgdesc="FFMpeg is a complete and free Internet live audio and video broadcasting solution for Linux/Unix."
url="http://ffmpeg.sourceforge.net/"
depends=('alsa-lib>=1.1.2-2' 'a52dec>=0.7.4-6' 'faac>=1.28-5' 'lame>=3.99.5-5' \
	'libtheora>=1.1.1-5' 'libvorbis>=1.3.5-5' 'x264>=20201026.g4121277' 'xvidcore>=1.3.4-3' 'libdc1394>=2.2.6' \
	'imlib2>=1.4.7-3' 'sdl2>=2.0.5' 'faad2>=2.7-5' 'gsm>=1.0.18-2' 'opencore-amr>=0.1.3-2' 'libxfixes>=5.0.1-2' \
	'libvpx>=1.8.0' 'libva>=2.3' 'libvdpau>=1.1.1-2' 'libxcb>=1.11.1-3' 'libbluray>=1.1.1-2' 'speex>=1.2rc2-4' \
	'v4l-utils>=1.8.1-3' 'rtmpdump>=2.4-9' 'openjpeg>=2.2.0' 'libpulse>=12.2-8' 'x265>=3.2.1' 'libass>=0.13.6' \
	'libcaca>=0.99.beta19-5' 'libstdc++>=9.1.0-3' 'gnutls' 'dav1d>=0.8.0' 'libidn2' 'libmfx' 'rav1e')
makedepends=('freetype2>=2.10.0' 'yasm>=1.3.0-2' 'x11-protos' 'nv-codec-headers')
groups=('xmultimedia')
archs=("x86_64")
up2date="Flasttar http://www.ffmpeg.org/releases/"
source=(http://www.ffmpeg.org/releases/$pkgname-$pkgver.tar.bz2)
signatures=("${source[0]}.asc")

Fconfopts="	\
	--prefix='/usr' \
	--docdir="/usr/share/doc/ffmpeg-$pkgver" \
	--mandir='/usr/share/man' \
	--enable-gpl \
	--enable-nonfree \
	--enable-postproc \
	--enable-runtime-cpudetect \
	--enable-libmp3lame \
	--enable-libvorbis \
	--enable-libtheora \
	--enable-libvpx \
	--enable-libx264 \
	--enable-libx265 \
	--enable-libxvid \
	--enable-libdc1394 \
	--enable-libspeex \
	--enable-libopenjpeg \
	--enable-librtmp \
	--enable-libv4l2 \
	--enable-libpulse \
	--enable-version3 \
	--enable-shared \
	--disable-static \
	--disable-stripping \
	--disable-debug \
	--enable-pthreads \
	--enable-vaapi \
	--enable-vdpau \
	--enable-avresample \
	--enable-libass \
	--enable-libcaca \
	--enable-libbluray \
	--enable-libdrm \
	--enable-nvenc \
	--enable-gnutls"

_F_cross32_subdepends=('lib32-alsa-lib>=1.1.2-2' 'lib32-a52dec>=0.7.4-6' 'lib32-faac>=1.28-5' 'lib32-lame>=3.99.5-5' \
        'lib32-libtheora>=1.1.1-5' 'lib32-libvorbis>=1.3.5-5' 'lib32-x264>=2020429.g33f9e14' 'lib32-xvidcore>=1.3.4-3' 'lib32-libdc1394>=2.2.6' \
        'lib32-imlib2>=1.4.7-3' 'lib32-sdl2>=2.0.5' 'lib32-faad2>=2.7-5' 'lib32-libxfixes>=5.0.1-2' \
        'lib32-libvpx>=1.6.0-1' 'lib32-libva>=2.3' 'lib32-libvdpau>=1.1.1-2' 'lib32-libxcb>=1.11.1-3' 'lib32-libbluray>=1.0.0' 'lib32-speex>=1.2rc2-4' \
        'lib32-v4l-utils>=1.8.1-3' 'lib32-rtmpdump>=2.4-2' 'lib32-openjpeg>=2.2.0' 'lib32-libpulse>=9.0-2' 'lib32-x265>=2.4' 'lib32-libass>=0.13.6' \
        'lib32-libcaca>=0.99.beta19-5' 'lib32-gnutls' 'lib32-libidn2')
_F_cross32_simple=yes
F32confopts="	--libdir=/usr/lib32 \
		--shlibdir=/usr/lib32"
Finclude cross32
_F_conf_notry="build\|host\|enable-static"

options+=('nolto' 'ofast')

build() {

	Fcross32_prepare
	Fcross32_copy_source

	Fbuild $F32confopts --cc="gcc -m32"

	Fcross32_copy_back_source
	Fcross32_reset_and_fix
	Fcross32_delete_empty

	Fsplit "${subpkgs[0]}" /\* ## everything else ignored only first one

	Fpatchall
	Fmake \
		--libdir=/usr/lib \
		--shlibdir=/usr/lib \
		--bindir=/usr/bin \
		--incdir=/usr/include \
		--docdir="/usr/share/doc/ffmpeg-$pkgver" \
		--mandir='/usr/share/man' \
		--datadir='/usr/share/ffmpeg' \
		--enable-libgsm \
		--enable-libdav1d \
		--enable-libmfx \
		--enable-libopencore-amrnb \
		--enable-librav1e \
		--enable-libopencore-amrwb
	Fmakeinstall

}

# optimization OK
