pkgname=gst1-plugins-bad
_F_archive_name="gst-plugins-bad"
pkgver=1.22.0
pkgrel=2
pkgdesc="Plugins for GStreamer (Bad)"
url="http://gstreamer.freedesktop.org"
depends=('gst1-plugins-base>=1.22.0' 'x265>=3.5' 'libffi>=3.2.1-2' \
	'mjpegtools>=2.2.1' 'libgudev>=230-7' 'libpng>=1.6.27' 'nettle>=3.6' \
	'libjpeg-turbo' 'libass>=0.13.6' 'openjpeg>=2.2.0' 'openssl>=3.0.7' \
	'webrtc-audio-processing' 'ldacbt' 'libfreeaptx')
makedepends=('x11-protos' 'abseil-cpp')
groups=('xmultimedia')
options+=('scriptlet')
archs=("x86_64")
replaces=("$pkgname-swfdec" "$pkgname-nas" "$pkgname-opengl" "$pkgname-metadata")
source=($url/src/$_F_archive_name/$_F_archive_name-$pkgver.tar.xz)
_F_archive_grepv="1.21"
up2date="Flasttar $url/src/$_F_archive_name/"
sha1sums=('12f2a60f77e0003348199525d7e4af5721686898')


