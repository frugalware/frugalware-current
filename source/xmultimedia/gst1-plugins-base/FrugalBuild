	Fsplit $pkgname-vorbis usr/lib/gstreamer-1.0/libgstvorbis.*
	Fsplit $pkgname-gio usr/lib/gstreamer-1.0/libgstgio.*
	Fsplit $pkgname-opus usr/lib/gstreamer-1.0/libgstopus.*
