Finclude meson

build() {
	Meson_build

	Fsplit $pkgname-libvisual usr/lib/gstreamer-1.0/libgstlibvisual.*
	Fsplit $pkgname-cdparanoia usr/lib/gstreamer-1.0/libgstcdparanoia.*
	Fsplit $pkgname-pango usr/lib/gstreamer-1.0/libgstpango.*
