    subrodepends+=("$pkgname>=$pkgver $pkgname-gtk3")
    subarchs+=("x86_64")
    subgroups+=('kde5-extra')
    subinstall+=("")
    subreplaces+=("")
    subconflicts+=("")
fi

subpkgs+=("$pkgname-postgresql")
subdescs+=("$pkgname postgresql SDBC driver")
subdepends+=("libpq")
