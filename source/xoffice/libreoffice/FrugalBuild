	http://dev-www.libreoffice.org/extern/884ed41809687c3e168fc7c19b16585149ff058eca79acbf3ee784f6630704cc-opens___.ttf)
for i in ${ext_source[@]}
do
	source=(${source[@]} $i)
	signatures=("${signatures[@]}" '')
done
